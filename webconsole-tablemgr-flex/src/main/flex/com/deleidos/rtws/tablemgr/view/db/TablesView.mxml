<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
				 xmlns:s="library://ns.adobe.com/flex/spark" 
				 xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="100%"
				 xmlns:rtws="com.deleidos.rtws.commons.view.component.*">
	<s:layout>
		<s:VerticalLayout horizontalAlign="center" verticalAlign="top" />
	</s:layout>
	
	<s:states>
		<s:State id="normalState" name="normal" stateGroups="statusSupport" />
		<s:State id="statusOnlyState" name="statusOnly" stateGroups="statusSupport" />
	</s:states>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<rtws:StatusMessageDisplay statusMsg="{_currStatusMsg}" width="100%" dismissMode="{DismissMode.NONE.id}" /> 
	
	<s:VGroup width="100%" height="100%" includeIn="normal">
		<s:HGroup id="actionsToolbar" width="100%" clipAndEnableScrolling="true">
			<rtws:StyleableIconButton styleName="toolBarButton create" label="Add" toolTip="Add a Table ..." click="onCreateTableBtnClick();" />
			<rtws:StyleableIconButton styleName="toolBarButton update" toolTip="Edit the selected tables"
				enabled="{tablesDataGrid.selectedIndex >= 0}" click="onEditTableBtnClick();" />
			<rtws:StyleableIconButton styleName="toolBarButton delete" toolTip="Delete the selected tables"
				enabled="{tablesDataGrid.selectedIndex >= 0}" click="onDeleteTableBtnClick();" />
		</s:HGroup>
		<s:TextInput id="tableFilterTextInput" width="100%" prompt="Start typing to filter ..." change="onFilterTextChange(event);" />
		<s:DataGrid id="tablesDataGrid" width="100%" height="100%" dataProvider="{_tables}"
			keyUp="onTableKeyUp(event);"
			doubleClickEnabled="true" gridDoubleClick="onTableDoubleClick(event);">
			<s:columns>
				<s:ArrayList>
					<s:GridColumn dataField="schema" headerText="Schema" />
					<s:GridColumn dataField="name" headerText="Table Name" />
				</s:ArrayList>
			</s:columns>
		</s:DataGrid>
	</s:VGroup>
	
	<fx:Script>
		<![CDATA[
			import com.deleidos.rtws.commons.model.status.StatusMessage;
			import com.deleidos.rtws.commons.model.status.StatusType;
			import com.deleidos.rtws.commons.util.StringUtils;
			import com.deleidos.rtws.commons.view.component.statusMessageClasses.DismissMode;
			import com.deleidos.rtws.tablemgr.event.table.TableEvent;
			import com.deleidos.rtws.tablemgr.model.conn.DbConnConfig;
			import com.deleidos.rtws.tablemgr.model.db.Table;
			
			import mx.collections.ArrayCollection;
			
			import spark.events.GridEvent;
			
			[Bindable] private var _currStatusMsg:StatusMessage = null;
			private var _connConfig:DbConnConfig = null;
			[Bindable] private var _tables:ArrayCollection = new ArrayCollection();
			
			/* 
			* Extracts the simple string search text into a search context following the pattern:
			* [<schemaSearchText><separator>]<tableOrGeneralSearchText>
			* where separator is one or more of ., -, whitespace, /, or \.
			* 
			* If a separator is provided the search is assumed to include schema; otherwise
			* both the schema and table name can match a simple pattern.
			*/
			private static const FILTER_TEXT_EXTRACTION_PATTERN:RegExp = /^\s*([^\.\s-\/\\]+)[\.\s-\/\\]*(\S*)\s*$/;			
			private var _currTableFilterText:String = null;
			private var _currTableFilterPattern:RegExp = null;
			
			public function set statusMsg(statusMsg:StatusMessage):void
			{
				var newState:State = normalState;
				if(statusMsg != null && statusMsg.type != null && statusMsg.type == StatusType.ERROR)
				{
					newState = statusOnlyState;
				}
				
				setStatusMsg(statusMsg, newState);
			}
			
			public function get connConfig():DbConnConfig
			{
				return this._connConfig;
			}
			
			public function set connConfig(connConfig:DbConnConfig):void
			{
				if( (connConfig == null && _connConfig != null) ||
						(connConfig != null && _connConfig == null) ||
						(connConfig != null && _connConfig != null &&
						connConfig.equals(_connConfig) == false))
				{
					_connConfig = connConfig;
					
					if(_connConfig == null || _connConfig.isValid() == false)
					{
						setStatusMsg(new StatusMessage(StatusType.ERROR, "Invalid DB Connection"), statusOnlyState);
					}
					else
					{
						_tables = null;
						setStatusMsg(new StatusMessage(StatusType.PROGRESS, "Loading Tables ..."), statusOnlyState);
					}
				}
			}
			
			private function onCreateTableBtnClick():void
			{
				this.dispatchEvent(new TableEvent(TableEvent.CREATE_TABLE, this.connConfig, null));
			}
			
			private function onEditTableBtnClick():void
			{
				editSelectedTables();
			}
			
			private function onDeleteTableBtnClick():void
			{
				deleteSelectedTable();
			}
			
			private function onTableDoubleClick(event:GridEvent):void
			{
				if(!event.altKey && !event.shiftKey && !event.ctrlKey)
				{
					var targetTable:Table = (event.item as Table);
					if(targetTable != null)
					{
						editTables(new ArrayList([targetTable]));
					}
				}
			}
			
			private function onTableKeyUp(event:KeyboardEvent):void
			{
				if(event != null)
				{
					if(event.keyCode == Keyboard.ENTER)
					{
						editSelectedTables();
					}
					else if(event.keyCode == Keyboard.DELETE)
					{
						deleteSelectedTable();
					}
				}
			}
			
			private function editTables(tablesToEdit:ArrayList):void
			{
				var editTableEvent:TableEvent = new TableEvent(TableEvent.EDIT_TABLE, this._connConfig, tablesToEdit, null, true);
				this.dispatchEvent(editTableEvent);
			}
			
			private function setStatusMsg(statusMsg:StatusMessage, newState:State=null):void
			{
				_currStatusMsg = statusMsg;
				
				if(newState != null)
				{
					this.currentState = newState.name;
				}
			}
			
			private function editSelectedTables():void
			{
				var tablesToEdit:ArrayList = new ArrayList();
				
				var selectedItems:Vector.<Object> = tablesDataGrid.selectedItems;
				if(selectedItems != null)
				{
					var currTable:Table = null;
					for(var index:int=0; index < selectedItems.length; index++)
					{
						currTable = (selectedItems[index] as Table);
						if(currTable != null)
						{
							tablesToEdit.addItem(currTable);
						}
					}
				}
				
				if(tablesToEdit.length > 0)
				{
					editTables(tablesToEdit);
				}
			}
			
			private function deleteSelectedTable():void
			{
				var selectedItems:Vector.<Object> = tablesDataGrid.selectedItems;
				if(selectedItems != null && selectedItems.length == 1)
				{
					var tableToDelete:Table = (selectedItems[0] as Table);
					if(tableToDelete != null)
					{
						var deleteTableEvent:TableEvent = new TableEvent(TableEvent.DELETE_TABLE, this.connConfig, null);
						deleteTableEvent.table = tableToDelete;
						this.dispatchEvent(deleteTableEvent);
					}
				}
			}
			
			public function removeTables(tables:Array):void
			{
				if(tables == null || tables.length == 0)
				{
					return;
				}
				
				var origTableFilter:Function = null;
				
				if(_tables == null)
				{
					_tables = new ArrayCollection();
				}
				else
				{
					origTableFilter = disableTableFilter();
				}
				
				var indexesToRemove:Array = new Array();
				
				var currTable:Table = null;
				for(var index:int=0; index < tables.length; index++)
				{
					currTable = (tables[index] as Table);
					if(currTable != null)
					{
						for(var searchIndex:int=0; searchIndex < _tables.length; searchIndex++)
						{
							if(currTable.equals(_tables.getItemAt(searchIndex)))
							{
								indexesToRemove.push(searchIndex);
								break;
							}
						}
					}
				}
				
				indexesToRemove.sort((Array.DESCENDING | Array.NUMERIC));
				
				for(index=0; index < indexesToRemove.length; index++)
				{
					_tables.removeItemAt(indexesToRemove[index]);
				}
				
				restoreTableFilter(origTableFilter);
			}
			
			public function updateTables(tables:Array):void
			{
				if(tables == null || tables.length == 0)
				{
					return;
				}
				
				var origTableFilter:Function = null;
				
				if(_tables == null)
				{
					_tables = new ArrayCollection();
				}
				else
				{
					origTableFilter = disableTableFilter();
				}
				
				var validTables:Array = new Array();
				var updIndexes:Array = new Array();
				
				var currTable:Table = null;
				for(var index:int=0; index < tables.length; index++)
				{
					currTable = (tables[index] as Table);
					if(currTable != null)
					{
						validTables.push(currTable);
						
						var isUpdate:Boolean = false;
						for(var searchIndex:int=0; searchIndex < _tables.length; searchIndex++)
						{
							if(currTable.equals(_tables.getItemAt(searchIndex)))
							{
								isUpdate = true;
								updIndexes.push(searchIndex);
								break;
							}
						}
						
						if(isUpdate == false)
						{
							updIndexes.push(-1);
						}
					}
				}
				
				for(index=0; index < validTables.length; index++)
				{
					var currUpdIndex:int = updIndexes[index];
					if(currUpdIndex >= 0 && currUpdIndex < _tables.length)
					{
						_tables.setItemAt(validTables[index], currUpdIndex);
					}
					else
					{
						_tables.addItem(validTables[index]);
					}
				}
				
				restoreTableFilter(origTableFilter);
			}
			
			public function addTables(tables:Array):void
			{
				if(tables == null || tables.length == 0)
				{
					return;
				}
				
				var origTableFilter:Function = null;
				
				if(_tables == null)
				{
					_tables = new ArrayCollection();
				}
				else
				{
					origTableFilter = disableTableFilter();
				}
				
				var currTable:Table = null;
				for(var index:int=0; index < tables.length; index++)
				{
					currTable = (tables[index] as Table);
					if(currTable != null)
					{
						_tables.addItem(currTable);
					}
				}
				
				restoreTableFilter(origTableFilter);
			}
			
			public function set tables(tables:Array):void
			{
				var origTableFilter:Function = null;
				if(_tables != null)
				{
					origTableFilter = disableTableFilter();
					_tables.removeAll();
				}
				
				var isValidTableList:Boolean = true;
				
				if(tables == null)
				{
					isValidTableList = false;
					setStatusMsg(new StatusMessage(StatusType.ERROR, "Failed to load Tables"), statusOnlyState);
				}
				else
				{
					if(_tables == null)
					{
						_tables = new ArrayCollection();
					}
					
					var currTable:Table = null;
					for(var index:int=0; index < tables.length; index++)
					{
						currTable = (tables[index] as Table);
						if(currTable != null && StringUtils.isNotBlank(currTable.schema) && StringUtils.isNotBlank(currTable.name))
						{
							_tables.addItem(currTable);
						}
					}
				}
				
				restoreTableFilter(origTableFilter);
				
				if(isValidTableList)
				{
					setStatusMsg(null, normalState);
				}
			}
			
			private function disableTableFilter():Function
			{
				var result:Function = null;
				
				if(_tables != null)
				{
					result = _tables.filterFunction;
					if(result != null)
					{
						_tables.disableAutoUpdate();
						_tables.filterFunction = null;
						_tables.refresh();
					}
				}
				
				return result;
			}
			
			private function restoreTableFilter(filterFunction:Function):void
			{
				if(_tables != null)
				{
					_tables.filterFunction = filterFunction;
					_tables.enableAutoUpdate();
					_tables.refresh();
				}
			}
			
			private function onFilterTextChange(event:Event):void
			{
				setTableFilter(tableFilterTextInput.text);
			}
			
			private function setTableFilter(searchText:String):void
			{
				if(StringUtils.isBlank(searchText))
				{
					_currTableFilterText = null;
					_currTableFilterPattern = null;
					if(_tables.filterFunction != null)
					{
						_tables.filterFunction = null;
						_tables.refresh();
					}
				}
				else if(searchText != _currTableFilterText)
				{
					_currTableFilterText = searchText;
					var result:Object = FILTER_TEXT_EXTRACTION_PATTERN.exec(_currTableFilterText);
					var tmpFilterPatternStr:String = "^\\s*";
					if(result == null)
					{
						tmpFilterPatternStr += _currTableFilterText;
					}
					else
					{
						// Either a schema-specific query or simple string query
						tmpFilterPatternStr += ".*" + result[1] + ".*";
						
						if(result[2])
						{
							// schema<separator>table style query
							tmpFilterPatternStr += "\..*" + result[2] + ".*";
						}
					}
					tmpFilterPatternStr += "\\s*$";
					
					try
					{
						_currTableFilterPattern = new RegExp(tmpFilterPatternStr, "i");
					}
					catch(error:Error)
					{
						_currTableFilterPattern = null;
					}
					
					if(_tables.filterFunction == null)
					{
						_tables.filterFunction = acceptTable;
					}
					
					_tables.refresh();
				}
			}
			
			private function acceptTable(obj:Object):Boolean
			{
				var result:Boolean = false;
				var table:Table = (obj as Table);
				
				if(table != null)
				{
					var tableStr:String = (StringUtils.isNotBlank(table.schema) ? (table.schema + ".") : "");
					tableStr += table.name;
					
					if(_currTableFilterPattern != null)
					{
						result = (_currTableFilterPattern.exec(tableStr) != null);
					}
					else
					{
						var matches:Array = tableStr.match(_currTableFilterText);
						result = (matches != null && matches.length > 0);
					}
				}
				
				return result;
			}
		]]>
	</fx:Script>
</s:Group>
