<?xml version="1.0" encoding="utf-8"?>
<rtws:ResizableTitleWindow 
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:mx="library://ns.adobe.com/flex/mx"
	xmlns:rtws="com.deleidos.rtws.commons.view.component.*"
	width="375" height="225" 
	title="Information">
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<s:VGroup width="100%" height="100%" horizontalAlign="center">
		<s:Form id="infoForm">
			<s:FormItem label="Username">
				<s:Label id="usernameLabel" width="150" />
			</s:FormItem>
			<s:FormItem label="System Name">
				<s:Label id="systemNameLabel" width="150" />
			</s:FormItem>
		</s:Form>
	</s:VGroup>
	
	<rtws:controlBarContent>
		<s:Button id="okButton" width="100" label="OK" enabled="true" />
	</rtws:controlBarContent>

</rtws:ResizableTitleWindow>
