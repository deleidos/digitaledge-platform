public class RegistrationWorker implements Runnable {
	
	private Logger log = Logger.getLogger(getClass());

	private RegistrationForm form;

	private String executionId;
	
	private String vpcId;
	
	RegistrationService regService;

	public RegistrationWorker(RegistrationForm f) {
		form = f;
		this.executionId = f.getExecutionId();
	}

	public void run() {
		
		AWSEndpoint endpoint = AWSEndpoint.getEndpointByName(form.getRegion());
		form.setEndpoints(endpoint);

		if (tenantExists(form.getTenantId())) {
			// account name already exists. Throw exception back to form to
			// handle error
			setStatus(StatusEnum.ERROR,form.getTenantId(),form.getEmailAddress(),"ERROR: Account name is already in use");
			// early return for error case
			return;
		}

		setStatus(StatusEnum.REGISTER_TMS,form.getTenantId(),form.getEmailAddress(),"Creating TMS accounts...");
		try {
			
			
			determineAvZone();
			
			regService = RegistrationService.newInstance(form, this);
			try{
				createAndLinkAccounts();
			}catch(Exception e){
				setStatus(StatusEnum.ERROR,form.getTenantId(),form.getEmailAddress(),"Error creating accounts.  Contact Digital Edge Support.  Error was: "+e.getMessage());
				log.error("Exception creating account for tenant "+form.getTenantId()+".  Error was "+e.getMessage(),e);
				return;
			}
			setStatus(StatusEnum.REGISTER_TMS,form.getTenantId(),form.getEmailAddress(),"TMS accounts created.  Creating VPC networks if applicable...");
			
			if (form.getNetworkType()==NetworkType.VPC) {
				regService.createVPCNetworks();
			}
			
			setStatus(StatusEnum.REGISTER_TMS,form.getTenantId(),form.getEmailAddress(),"VPC networks created (If applicable).  Creating base security group rules...");
			try{
				regService.createBaseSecurityGroup();
			}catch(Exception e){
				setStatus(StatusEnum.ERROR,form.getTenantId(),form.getEmailAddress(),"Error creating Security group rules.");
				log.error("Error creating security group rules for tenant "+form.getTenantId()+".  Error was "+e.getMessage(),e);
				return;
			}
			setStatus(StatusEnum.REGISTER_TMS,form.getTenantId(),form.getEmailAddress(),"Security group rules created.  Creating AMI...");
			
			try {
				Thread.sleep(10000);
			} catch (InterruptedException ignore) {}
			
			if (!SystemEnvUtil.isMarketPlaceLaunched()) {
				String amiId = regService.createAMI();
			
				setStatus(StatusEnum.CREATE_AMI,form.getTenantId(),form.getEmailAddress(),"AMI created.  Launching gateway with created AMI..,.");
			
				regService.launchGateway(amiId);
			}

		} catch (RegistrationException e) {
			setStatus(StatusEnum.ERROR,form.getTenantId(),form.getEmailAddress(),"An exception occured while creating account.  Contact Digital Edge Support.  Error was: "+e.getMessage());
			log.error("Exception creating account for tenant "+form.getTenantId()+".  Error was "+e.getMessage(),e);
			return;
		}
	}
	
	private void determineAvZone() {
		AwsConnectionFactory factory = new AwsConnectionFactory(form.getAccessKey(), form.getSecretKey());
		factory.setServiceEndpoint(form.getEndpoints().getEC2Endpoint());
		
		AwsServiceInterface serviceInterface = new AwsServiceInterface();
		serviceInterface.setConnectionFactory(factory);
		
		List<String> avZones = serviceInterface.listAvailabilityZones();
		form.setAvailabilityZone(avZones.get(0));//use first one
		
		// TODO Auto-generated method stub
		
	}
	
	public void setVpcId(String vpcId){
		this.vpcId=vpcId;
	}

