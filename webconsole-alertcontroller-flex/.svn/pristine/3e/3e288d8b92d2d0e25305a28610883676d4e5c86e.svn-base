<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx">
	
	<fx:Declarations>
		<fx:Array id="validators">
			<mx:StringValidator id="fieldValidator" 
								source="{fieldTextInput}" 
								property="text"
								trigger="{addButton}"
								requiredFieldError="Field is required" />
			
			<mx:StringValidator id="valueValidator"
								source="{valueTextInput}"
								property="text"
								trigger="{addButton}"
								requiredFieldError="Value is required" />
			
			<mx:RegExpValidator id="numberValueValidator"
								source="{valueTextInput}"
								property="text"
								trigger="{addButton}"
								noMatchError="Number value is required"
								required="false"
								enabled="false"
								expression="-?[0-9]+(\.[0-9]+)?"
								/>
			
			<mx:RegExpValidator id="dateValueValidator"
								source="{valueTextInput}"
								property="text"
								trigger="{trigger}"
								required="false"
								enabled="false" 
								noMatchError="Does not match required format" 
								noExpressionError="Does not match required format" />
			
			<mx:RegExpValidator id="commaSeparatedValidator"
								source="{valueTextInput}"
								property="text"
								trigger="{addButton}"
								required="false"
								enabled="false"
								noMatchError="Must be comma separated list" />
		</fx:Array>
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[			
			import com.deleidos.rtws.alertcontroller.events.AlertCriteriaCommandEvent;
			import com.deleidos.rtws.alertcontroller.events.ManageViewsEvent;
			import com.deleidos.rtws.alertcontroller.models.AlertDefinition;
			
			import flash.globalization.DateTimeFormatter;
			import flash.globalization.LocaleID;
			
			import mx.events.ValidationResultEvent;
			import mx.validators.Validator;
			
			
			//used to dynamically create the dropdowns for the BETWEEN operator
			private var leftInclusive:ComboBox;
			private var rightInclusive:ComboBox;
			
			/**
			 * performs validation when the user types a character. also fixes the colors 
			 * surrounding the box so it is red if there is an error and blue if there is not.
			 */
			protected function valueValidate():void
			{
				if(numberValueValidator.enabled && valueTextInput.text.substring(0,1) != "@")
				{
					numberValueValidator.validate();
				}
				valueValidator.validate();
				valueTextInput.focusManager.hideFocus();
				valueTextInput.focusManager.showFocus();
			}
			
			protected function cancelButton_clickHandler(event:MouseEvent):void
			{
				dispatchEvent(new ManageViewsEvent(ManageViewsEvent.CLOSE_CREATE_ALERT_DEFINITION));
			}
			
			protected function addButton_clickHandler(event:MouseEvent):void 
			{
				var isFormValid:Boolean = true;
				var isDateValid:Boolean = true;
				
				//clear all of the validators
				for each (var validator:Validator in validators)
				{                     
					validator.dispatchEvent(new ValidationResultEvent(ValidationResultEvent.VALID));
				}
				
				//datestring validation
				if(dateValueValidator.enabled && operatorTextInput.text != "LIKE" && valueTextInput.text.substring(0,1) != "@" && event.type != "ignore")
				{				
					var dateResult:ValidationResultEvent = dateValueValidator.validate();
					isFormValid = isFormValid && (dateResult.type == ValidationResultEvent.VALID);
					isDateValid = (dateResult.type == ValidationResultEvent.VALID)
				}
				
				//number validation
				if(numberValueValidator.enabled && valueTextInput.text.substring(0,1) != "@")
				{
					var numResult:ValidationResultEvent = numberValueValidator.validate();
					isFormValid = isFormValid && (numResult.type == ValidationResultEvent.VALID);
				}
				
				//comma separation validation
				if(commaSeparatedValidator.enabled)
				{
					var commaResult:ValidationResultEvent = commaSeparatedValidator.validate();
					isFormValid = isFormValid && (commaResult.type == ValidationResultEvent.VALID);
				}
				
				//value validation
				var valResult:ValidationResultEvent = valueValidator.validate();
				isFormValid = isFormValid && (valResult.type == ValidationResultEvent.VALID);
				
				//field validation
				var fieldResult:ValidationResultEvent = fieldValidator.validate();
				isFormValid = isFormValid && (fieldResult.type == ValidationResultEvent.VALID);
				
				
				if (isFormValid) 
				{
					//create a new AlertDefinition to add to the DataGrid
					var entry:AlertDefinition = new AlertDefinition();
					entry.field = fieldTextInput.text;
					entry.operator = operatorTextInput.text;
					if(operatorTextInput.text == "BETWEEN")
					{
						entry.value = leftInclusive.text + valueTextInput.text + rightInclusive.text;
					}
					else
					{
						entry.value = valueTextInput.text;
					}
					entry.type = typeLabel.text;
					if(addButton.label == "EDIT")
					{
						entry.wasEdited = true;
					}
					entry.model = modelLabel.text;
					
					//send the AlertDefinition back to the DataGrid
					dispatchEvent(new AlertCriteriaCommandEvent(AlertCriteriaCommandEvent.ADD_DEF, entry));
				}
					
					//if the data is invalid, create the suggestion box
				else if (isDateValid == false)
				{
					dispatchEvent(new ManageViewsEvent(ManageViewsEvent.OPEN_ALERT_VALUE_SUGGESTION));
				}
			}
			
			public function handleSendDef(parameters:Object):void
			{
				fieldTextInput.text = parameters.field;
				
				for(var i:int = 0; i<array.length; i++)
				{
					if(array.getItemAt(i) == parameters.operator)
					{
						operatorTextInput.selectedIndex = i;
					}
				}
				
				//configure validators and settings for specific operators
				handleOperatorChange(new Event(Event.CHANGE));
				
				//sets the values of the BETWEEN drop down boxes
				if(operatorTextInput.text == "BETWEEN")
				{
					var value:String = parameters.value;
					valueTextInput.text = value.substring(1,value.length - 1);
					leftInclusive.selectedItem = value.substring(0,1);
					rightInclusive.selectedItem = value.substring(value.length - 1, value.length);
				}
				else
				{
					valueTextInput.text = parameters.value;
				}
				
				typeLabel.text = parameters.type;
				modelLabel.text = parameters.model;
				
				var entry:Object = new Object();
				entry.path = parameters.field;
				entry.type = parameters.type;
				
				//configure the validators
				handleSendPath(new AlertCriteriaCommandEvent("", entry));
				
				//change the ADD button to an EDIT button
				addButton.label = "EDIT";
				
				//closes the browse window that is automatically opened when this window is created
				dispatchEvent(new AlertCriteriaCommandEvent(AlertCriteriaCommandEvent.BROWSE_CANCEL, false));
				
			}
			
			/**
			 * handles when values are returned from other pop-up windows
			 */
			public function handlePopupReturnValues(parameters:Object):void
			{
				//this value is either sent from the test wildcard window or the date format suggestion window
				//happens when the user wants to use their wildcard expression or the suggested date
				if(parameters is String)
				{
					valueTextInput.text = parameters.toString();
				}
					
					//when a value is returned from the browse data model window
					//when the user wants to compare two fields
				else
				{
					var index:int = valueTextInput.selectionBeginIndex;
					
					//the user typed "@" and hit cancel button on browse window
					if(parameters is Boolean)
					{
						//fixes cursor position
						valueTextInput.selectionBeginIndex = index;
						valueTextInput.selectionEndIndex = index;
					}
						
						//the user typed "@" and accepted a datafield in the data model
					else
					{
						//inputs the datafield in the value input and fixes cursor position
						valueTextInput.text = valueTextInput.text.slice(0,index) + parameters.path + valueTextInput.text.slice(index);
						valueTextInput.selectionBeginIndex = index + parameters.path.length;
						valueTextInput.selectionEndIndex = index + parameters.path.length;
					}
				}
				
				//clears the date validator
				dateValueValidator.dispatchEvent(new ValidationResultEvent(ValidationResultEvent.VALID));
			}
			
			/**
			 * configures validators when operator is changed
			 * adds and removes dropdown boxes for BETWEEN operator
			 * enables/disables test wildcard button for LIKE operator
			 */
			private function handleOperatorChange(event:Event):void
			{
				//clear the validators
				for each (var validator:Validator in validators)
				{                     
					validator.dispatchEvent(new ValidationResultEvent(ValidationResultEvent.VALID));
				}
				
				//create the comboboxes if the operator was changed to BETWEEN
				//enables/disables/configures different validators
				if(operatorTextInput.text == "BETWEEN")
				{
					leftInclusive = new ComboBox();
					leftInclusive.dataProvider = new ArrayCollection(new Array("(","["));
					
					rightInclusive = new ComboBox();
					rightInclusive.dataProvider = new ArrayCollection(new Array(")","]"));
					
					valueBox.addChildAt(leftInclusive, 0);
					valueBox.addChild(rightInclusive);
					valueTextInput.width = 387;
					
					numberValueValidator.enabled = false;
					dateValueValidator.enabled = false;
					commaSeparatedValidator.enabled = true;
					if(typeLabel.text == "number")
					{
						commaSeparatedValidator.expression = "^\\s*(\\d+|@.+)\\s*,\\s*(\\d+|@.+)\\s*$";
						commaSeparatedValidator.noMatchError = "Must be two numbers separated by a comma";
					}
					if(typeLabel.text == "string")
					{
						commaSeparatedValidator.expression = "^\\s*.+[.\\s]*,\\s*.+[.\\s]*$";
						commaSeparatedValidator.noMatchError = "Must be two values separated by a comma";
					}
					else
					{
						var dateRegex:String = getDatestringRegex();
						commaSeparatedValidator.expression = "^\\s*(" + dateRegex + "|@.+)\\s*,\\s*(" + dateRegex + "|@.+)\\s*$";
						commaSeparatedValidator.noMatchError = "Must be two formatted dates separated by a comma";	
					}
				}
					
					//removes comboboxes (if they exist) if the operator is not BETWEEN
				else if(valueBox.numChildren == 3)
				{
					valueBox.removeChildAt(0);
					valueBox.removeChildAt(1);
					valueTextInput.width = 500;
				}
				
				//enables/disables/configures different validators
				if(operatorTextInput.text == "IN")
				{
					numberValueValidator.enabled = false;
					dateValueValidator.enabled = false;
					commaSeparatedValidator.enabled = true;
					if(typeLabel.text == "number")
					{
						commaSeparatedValidator.expression = "^\\s*(\\d+|@.+)\\s*(,\\s*(\\d+|@.+)\\s*)*$";
						commaSeparatedValidator.noMatchError = "Must be comma separated list of numbers";
					}
					if(typeLabel.text == "string")
					{
						commaSeparatedValidator.expression = "^\\s*.+[.\\s]*(,\\s*.+[.\\s]*)*$";
						commaSeparatedValidator.noMatchError = "Must be comma separated list";
					}
					else
					{
						var datesRegex:String = getDatestringRegex();
						commaSeparatedValidator.expression = "^\\s*(" + datesRegex + "|@.+)\\s*(,\\s*(" + datesRegex + "|@.+)\\s*)*$";
						commaSeparatedValidator.noMatchError = "Must be comma separated list of formatted dates";
					}
				}
				
				//enables/disables/configures different validators
				if(operatorTextInput.text != "IN" && operatorTextInput.text != "BETWEEN")
				{
					commaSeparatedValidator.enabled = false;
					var entry:Object = new Object();
					entry.path = fieldTextInput.text;
					entry.type = typeLabel.text;
					
					//configure validators
					handleSendPath(new AlertCriteriaCommandEvent("", entry));
				}
				
				//enable/disable the test wildcard button
				//				if(operatorTextInput.text == "LIKE")
				//				{
				//					testButton.visible = true;
				//				}
				//				else
				//				{
				//					testButton.visible = false;
				//				}
			}
			
			/**
			 * configures validators when the field is changed
			 */
			public function handleSendPath(parameters:Object):void
			{
				//clear all validators
				for each (var validator:Validator in validators)
				{                     
					validator.dispatchEvent(new ValidationResultEvent(ValidationResultEvent.VALID));
				}
				
				//if the field changed, clear the value
				if(fieldTextInput.text != parameters.path && fieldTextInput.text != "")
				{
					valueTextInput.text = "";
				}
				
				//change the field
				fieldTextInput.text = parameters.path;
				
				//validate the field and allow the value to be edited
				if(fieldTextInput.text != "")
				{
					fieldValidator.validate();
					valueTextInput.editable = true;
				}
				
				//set the type label. this is an invisible component
				var type:String = parameters.type;
				typeLabel.text = type;
				
				//configures validators for the string type
				if(type == "string")
				{
					currentState = "default";
					height = 215;
					numberValueValidator.enabled = false;
					dateValueValidator.enabled = false;
					if(operatorTextInput.text == "IN")
					{
						commaSeparatedValidator.expression = "^\\s*.+[.\\s]*(,\\s*.+[.\\s]*)*$";
						commaSeparatedValidator.noMatchError = "Must be comma separated list";
					}
					if(operatorTextInput.text == "BETWEEN")
					{
						commaSeparatedValidator.expression = "^\\s*.+[.\\s]*,\\s*.+[.\\s]*$";
						commaSeparatedValidator.noMatchError = "Must be two values separated by a comma";
					}
				}
				
				//configures validators for the number type
				if(type == "number")
				{
					currentState = "default";
					height = 215;
					if(operatorTextInput.text == "IN")
					{
						commaSeparatedValidator.expression = "^\\s*(\\d+|@.+)\\s*(,\\s*(\\d+|@.+)\\s*)*$";
						commaSeparatedValidator.noMatchError = "Must be comma separated list of numbers";
					}
					if(operatorTextInput.text == "BETWEEN")
					{
						commaSeparatedValidator.expression = "^\\s*(\\d+|@.+)\\s*,\\s*(\\d+|@.+)\\s*$";
						commaSeparatedValidator.noMatchError = "Must be two numbers separated by a comma";
					}
					if(operatorTextInput.text != "IN" && operatorTextInput.text != "BETWEEN")
					{
						numberValueValidator.enabled = true;
						dateValueValidator.enabled = false;
						if(valueTextInput.text != "")
						{
							numberValueValidator.validate();
						}
					}
				}
				
				//configures validators for datestring type
				if(type.indexOf("datestring") != -1)
				{
					currentState = "datestring";
					
					//gets the regex expression for the datestring
					dateValueValidator.expression = getDatestringRegex();
					
					if(operatorTextInput.text != "IN" && operatorTextInput.text != "BETWEEN")
					{
						numberValueValidator.enabled = false;
						dateValueValidator.enabled = true;
					}
					if(operatorTextInput.text == "IN")
					{
						var datesRegex:String = getDatestringRegex();
						commaSeparatedValidator.expression = "^\\s*(" + datesRegex + "|@.+)\\s*(,\\s*(" + datesRegex + "|@.+)\\s*)*$";
						commaSeparatedValidator.noMatchError = "Must be comma separated list of formatted dates";
					}
					if(operatorTextInput.text == "BETWEEN")
					{
						var dateRegex:String = getDatestringRegex();
						commaSeparatedValidator.expression = "^\\s*(" + dateRegex + "|@.+)\\s*,\\s*(" + dateRegex + "|@.+)\\s*$";
						commaSeparatedValidator.noMatchError = "Must be two formatted dates separated by a comma";
					}
					
					var dateString:Array = type.split(" ");
					var dateFormat:String = "";
					var formatter:DateTimeFormatter = new DateTimeFormatter(LocaleID.DEFAULT);
					
					for(var i:int = 1; i<dateString.length; i++)
					{
						dateFormat += dateString[i] + " ";
					}
					dateFormat = dateFormat.substring(0,dateFormat.length - 1);
					formatter.setDateTimePattern(dateFormat);
					formatLabel.htmlText = "<b>Format:</b> " + dateFormat + " | <b>Current Time Example:</b> " + formatter.format(new Date());
					height = 240;
				}
			}
			
			private function getDatestringRegex():String
			{
				//the datestring format
				var format:String = typeLabel.text.substring(11);
				
				//the reges to return
				var regex:String = "^";
				var lastChar:String = "";
				var count:int = 0;
				
				//specifies when the format is quoted and when it isn't
				var quoted:Boolean = false;
				
				//looks for repeated letters such as MM or DD or YYYY
				for(var i:int = 0; i<format.length; i++)
				{
					//enters the loop
					if(lastChar == "")
					{
						lastChar = format.charAt(i);
						count = 1;
					}
						
						//if the current character is different than the last character
					else if(format.charAt(i) != lastChar)
					{
						//if the character is  a single quote and the number of single quotes is odd,
						//then the "quoted" status needs to be reversed
						if(lastChar == "'" && count%2==1)
						{
							quoted = !quoted;
						}
						
						//add regex for the specific character and count
						regex += lookupRegex(lastChar, count, quoted);
						
						//get the new current character and set count
						lastChar = format.charAt(i);
						count = 1;
					}
						
						//if the current character matches the last character, add to the count
					else
					{
						count++;
					}
				}
				
				//lookup the regex for the last character and count
				regex += lookupRegex(lastChar, count, quoted);
				regex += "$"
				
				return regex;
			}
			
			/**
			 * looks up the regex for a specified character and count
			 * example: MM has the character M and count 2
			 * example: YYYY has the character Y and count 4
			 */
			private function lookupRegex(char:String, count:int, quoted:Boolean):String
			{
				//handes special characters
				switch(char)
				{
					case "'":
						for(var j:int = 1; j<Math.floor(count/2); j++)
						{
							char += char;
						}
						return char;
						
					case "[":
						return "\\[";
						
					case "\\":
						return "\\\\";
						
					case "^":
						return "\\^";
						
					case "$":
						return "\\$";
						
					case ".":
						return "\\.";
						
					case "|":
						return "\\|";
						
					case "?":
						return "\\?";
						
					case "*":
						return "\\*";
						
					case "+":
						return "\\+";
						
					case "(":
						return "\\(";
						
					case ")":
						return "\\)";
						
					case "{":
						return "\\{";
						
					case "}":
						return "\\}";
				}
				
				//handle unquoted characters
				if(quoted == false)
				{
					switch(char)
					{
						case "G":
							return "(.*)"
							
						case "y":
							if(count == 1)
								return "([0-9]+)";
							if(count == 2)
								return "([0-9]{2})";
							if(count == 4)
								return "([0-9]{4})";
							
						case "M":
							if(count == 1)
								return "([1-9]|1[0-2])";
							if(count == 2)
								return "(0[1-9]|1[0-2])";
							if(count == 3)
								return "(Jan|Feb|Mar|Apr|May|Jun|Jul|Aug|Sep|Oct|Nov|Dec)";
							if(count == 4)
								return "(January|February|March|April|May|June|July|August|September|October|November|December)";
							
						case "d":
							if(count == 1)
								return "([1-9]|[1-2][0-9]|3[0-1])";
							if(count == 2)
								return "(0[1-9]|[1-2][0-9]|3[0-1])";
							
						case "E":
							if(count < 4)
								return "(Mon|Tue|Wed|Thu|Fri|Sun|Sat)";
							if(count == 4)
								return "(Monday|Tuesday|Wednesday|Thursday|Friday|Saturday|Sunday)";
							
						case "w":
							if(count == 1)
								return "([1-9]|[1-4][0-9]|5[0-2])";
							if(count == 2)
								return "(0[1-9]|[1-4][0-9]|5[0-2])";
							
						case "W":
							return "([1-5])";
							
						case "D":
							if(count == 1)
								return "([1-9]|[1-9][0-9]|[1-2][0-9][0-9]|3[0-5][0-9]|36[0-6])";
							if(count == 2)
								return "(0[1-9]|[1-9][0-9]|[1-2][0-9][0-9]|3[0-5][0-9]|36[0-6])";
							if(count == 3)
								return "(00[1-9]|0[1-9][0-9]|[1-2][0-9][0-9]|3[0-5][0-9]|36[0-6])";
							
						case "F":
							return "([1-5])";
							
						case "a":
							return "(AM|PM)";
							
						case "h":
							if(count == 1)
								return "([1-9]|1[0-2])";
							if(count == 2)
								return "(0[1-9]|1[0-2])";
							
						case "H":
							if(count == 1)
								return "([0-9]|1[0-9]|2[0-3])";
							if(count == 2)
								return "(0[0-9]|1[0-9]|2[0-3])";
							
						case "K":
							if(count == 1)
								return "([0-9]|1[0-1])";
							if(count == 2)
								return "(0[0-9]|1[0-1])";
							
						case "k":
							if(count == 1)
								return "([1-9]|1[0-9]|2[0-4])";
							if(count == 2)
								return "(0[1-9]|1[0-9]|2[0-4])";
							
						case "m":
							if(count == 1)
								return "([0-9]|[1-5][0-9])";
							if(count == 2)
								return "(0[0-9]|[1-5][0-9])";
							
						case "s":
							if(count == 1)
								return "([0-9]|[1-5][0-9])";
							if(count == 2)
								return "(0[0-9]|[1-5][0-9])";
							
						case "S":
							if(count == 1)
								return "([0-9]+)";
							if(count == 2)
								return "([0-9]{2, })";
							if(count == 3)
								return "([0-9]{3, })";
							if(count == 4)
								return "([0-9]{4, })";
							if(count == 5)
								return "([0-9]{5, })";
							
						case "z":
							return "(.*)";
							
						case "Z":
							return "(.*)";
					}
				}
				
				//handle when characters are quoted
				for(var i:int = 1; i<count; i++)
				{
					char += char;
				}
				return char;
			}
			
			
			protected function formatHelpButton_clickHandler(event:MouseEvent):void
			{
				dispatchEvent(new ManageViewsEvent(ManageViewsEvent.OPEN_ALERT_DEF_FORMAT));
			}
			
			protected function helpButton_clickHandler(event:MouseEvent):void
			{
				dispatchEvent(new ManageViewsEvent(ManageViewsEvent.OPEN_ALERT_DEF_HELP));
			}
			
			protected function browseButton_clickHandler(event:MouseEvent):void
			{
				dispatchEvent(new ManageViewsEvent(ManageViewsEvent.OPEN_ALERT_DEF_BROWSE));
			}
			
		]]>
	</fx:Script>
	
