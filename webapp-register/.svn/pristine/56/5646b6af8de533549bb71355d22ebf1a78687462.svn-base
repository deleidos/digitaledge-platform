	public String requestReadPermissions(String swVersion, String tenantId) throws ClientException {
		
		Client client = getClient();
		
		Integer oldTimeout = (Integer) client.getProperties().get(ClientConfig.PROPERTY_READ_TIMEOUT);

		client.setReadTimeout(20000);
		
		try{
		WebResource resource = getClient().resource(buildBaseUrl(PATH));
		resource = resource.path("json/account/requestAccess/")
				.path(swVersion)
				.path(tenantId);
		
		
		int retries = 0;
		while (retries < MAX_RETRIES) {
			
			try {
				Thread.sleep(TimeUtil.FIVE_SECONDS);
			} catch (Exception ex) {
				logger.error(ex.getMessage(), ex);
			}

			
			String response =  resource.put(String.class);
			if (response != null)
				return response;
			
			retries++;
		}

		throw new ClientException("Failed to create user account, retries exhausted.");
		}finally{
			client.setReadTimeout(oldTimeout);
		}
	}
	
	public AvailabilityZone getAvailabilityZone(String azone) throws MalformedURLException {
		
		WebResource resource = getClient().resource(buildBaseUrl(PATH));
    	resource = resource.path("json/account/availability_zone/");
    	resource = resource.path(azone);
    	
    	String response = resource.get(String.class);
    	
    	JSONObject jsonObj = JSONObject.fromObject(response);
    	
    	AvailabilityZone result = new AvailabilityZone();
    	
    	result.setIaasRegion(jsonObj.getString("iaasRegion"));
    	result.setIaasAZone(jsonObj.getString("iaasAZone"));
    	result.setIaasServiceName(jsonObj.getString("iaasServiceName"));
    	
    	JSONObject serviceEndPoint = jsonObj.getJSONObject("serviceEndpoint");
    	result.setServiceEndpoint(new EndPointURL(serviceEndPoint.getString("urlstring")));
    	
    	JSONObject storageEndPoint = jsonObj.getJSONObject("storageEndpoint");
    	result.setStorageEndpoint(new EndPointURL(storageEndPoint.getString("urlstring")));
    	
    	return result;
		
	}
	
	public String getGatewayInstanceId(String tenantId, String uuid) {
		
		WebResource resource = getClient().resource(buildBaseUrl(PATH));
		resource = resource.path("json/account/gateway_instance_id/")
				.path(tenantId).queryParam("uuid", uuid);
		
		String response = resource.get(String.class);
		
		JSONObject json = JSONObject.fromObject(response);
		
		if (json.has("instanceId")) {
			return json.getString("instanceId");
		}
		
		return null;
		
	}
	
	public void validateGatewayInstance(String instanceId, String uuid) throws ClientException {
		
		Timestamp expiration = new Timestamp(System.currentTimeMillis() + TimeUtil.FIFTEEN_MINUTES);
		
		while (! TimeUtil.hasExpired(expiration)) {
			AccountStatus status = RestClientManager.getRegisterApiRestClient().getAccountStatus(uuid);
			
			if (status != null && status.getGatewayInstanceId() != null &&
				instanceId.equals(status.getGatewayInstanceId())) {
				return;
			}
			
			try { 
				Thread.sleep(TimeUtil.FIVE_SECONDS);
			} catch (Exception ex) {
				// ignore
			}
		}

		throw new ClientException("Failed to validate gateway instance.");
		
	}
	
	private boolean isSuccessResponse(String response) throws ClientException {
		
		JSONObject jsonObj = JSONObject.fromObject(response);
		JSONObject standardHeader = jsonObj.getJSONObject("standardHeader");

		if (standardHeader.getInt("code") == 200) {
			JSONObject responseBody = jsonObj.getJSONObject("responseBody");
			String status = responseBody.getString("Status");
    		return (status != null && status.equals("true"));
		} else {
			String message = jsonObj.containsKey("message") ? jsonObj.getString("message") : 
				"Error occurred while invoking a register api resource.";
			throw new ClientException(message);
		}
		
	}

	public void storeCreatedAmiId(AccountForm form, String amiId) throws ClientException {

		WebResource resource = getClient().resource(buildBaseUrl(PATH));
		resource = resource.path("json/account/update_current_instance_machine_image");

		Form f = new Form();		
		
		if (form instanceof AwsRegistrationForm) {
			AwsRegistrationForm awsForm = (AwsRegistrationForm) form;
			f.add("tenantId", awsForm.getTenantId());
		}
		
		if (form instanceof RegistrationForm) {			
			RegistrationForm rForm = (RegistrationForm) form;
			f.add("tenantId", rForm.getTenantId());
		}		
		
		f.add("region", form.getRegion());
		f.add("amiId", amiId);
		f.add("iaasServiceName", "AWS");
		f.add("swVersion", getCurrentSoftwareVersion());

		int retries = 0;
		while (retries < MAX_RETRIES) {
			String response = resource.type(MediaType.APPLICATION_FORM_URLENCODED_TYPE).post(String.class, f);

			if (response != null) {
				return;
			}

			try {
				Thread.sleep(TimeUtil.FIVE_SECONDS);
			} catch (Exception ex) {
				logger.error(ex.getMessage(), ex);
			}

			retries++;
		}

		throw new ClientException("Failed to create user account, retries exhausted.");
		
	}
	
