				DEFAULT_WEBAPPS_PORT = RtwsConfig.getInstance().getString("rtws.internal.webapp.port");
			} catch (ConversionException e) {
				logger.fatal("Load property [rtws.internal.webapp.port] failed. Message: " + e.getMessage());
			}
		}
	}

	/**
	 * Send a command to the gateway to start the specified instance id.
	 * 
	 * Invokes the gatewayapi REST service:
	 * 		http://<host>:<port>/json/instance/start?instanceId=<instance-id>
	 */
	public int startInstance(
			Integer accountId, 
			String region, 
			String instanceId) throws GatewayApiException {

		try {
			WebResource res = buildGatewayApiEndpoint(accountId, region);
			res = res.path("json").path("instance").path("start");
			res = res.queryParam("instanceId", instanceId);
			return res.get(Integer.class);
		} catch (Exception ex) {
			String message = String.format("Failed to start instance '%s'. Message: %s", instanceId, ex.getMessage());
			logger.error(message, ex);
			throw new GatewayApiException(message, ex);
		}

	}

