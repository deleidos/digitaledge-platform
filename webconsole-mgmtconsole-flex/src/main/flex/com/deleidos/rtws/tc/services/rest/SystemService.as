		public function retrieve(domain:String):void
		{
			var context:Object = new Object();
			context["event"] = new SystemEvent(SystemEvent.RETRIEVE, {"domain" : domain});
			
			var url:String = "/" + encodeURIComponent(userModel.tenantId) + 
				"/" + encodeURIComponent(parameterModel.selectedRegion) + 
				"/" + encodeURIComponent(domain);
			
			this.get(url, null, context);
		}
		
