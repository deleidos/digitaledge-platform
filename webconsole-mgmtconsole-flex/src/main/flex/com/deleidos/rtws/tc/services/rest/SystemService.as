		protected override function processResponse(context:Object, data:String):void
		{
			var items:Array = HttpUtilities.getJsonArrayResponse(data);
			
			if (context.event.type == SystemEvent.RETRIEVE) {
				processRetrieveResponse(context, items);
			}
			
			if (context.event.type == SystemEvent.BROADCAST_CMD) {
				processBroadcastCmdResponse(context, items);
			}
			
			if (context.event.type == SystemEvent.BROADCAST_CMD_STATUS) {
				processBroadcastCmdStatusResponse(context, items);
			}
			
			if (context.event.type == SystemEvent.CREATE) {
				processStandardResponse(items, new SystemEvent(SystemEvent.CREATE_SUCCESS), 
					new SystemEvent(SystemEvent.CREATE_ERROR, {context:context}));
			}
			
			if (context.event.type == SystemEvent.START) {
				processStandardResponse(items, new SystemEvent(SystemEvent.START_SUCCESS), 
					new SystemEvent(SystemEvent.START_ERROR, {context:context}));
			}
			
			if (context.event.type == SystemEvent.UPDATE_CONFIG) {
				processStandardResponse(items, new SystemEvent(SystemEvent.UPDATE_CONFIG_SUCCESS), 
					new SystemEvent(SystemEvent.UPDATE_CONFIG_ERROR, {context:context}));
			}
			
			if (context.event.type == SystemEvent.STOP) {
				processStandardResponse(items, new SystemEvent(SystemEvent.STOP_SUCCESS), 
					new SystemEvent(SystemEvent.STOP_ERROR, {context:context}));
			}
			
			if (context.event.type == SystemEvent.DELETE) {
				processStandardResponse(items, new SystemEvent(SystemEvent.DELETE_SUCCESS),
					new SystemEvent(SystemEvent.DELETE_ERROR, {context:context}));
			}
			
			if (context.event.type == SystemEvent.SYNC) {
				processSyncResponse(context, items);
			}
			
			if (context.event.type == SystemEvent.SYNC_STATUS) {
				processSyncStatusResponse(context, items);
			}
			
			if (context.event.type == SystemEvent.VALIDATE_SYS_CONFIG) {
				var version:String = context.event.parameters.cfgVersion;
				processStandardResponse(items, new SystemEvent(SystemEvent.VALIDATE_SYS_CONFIG_SUCCESS, {"cfgVersion":version}),
					new SystemEvent(SystemEvent.VALIDATE_SYS_CONFIG_ERROR, {context:context}));
			}
			
			if (context.event.type == SystemEvent.ADD_SCHEDULE) {
				processStandardResponse(items, new SystemEvent(SystemEvent.ADD_SCHEDULE_SUCCESS),
					new SystemEvent(SystemEvent.ADD_SCHEDULE_ERROR, {context:context}));
			}
			
			if (context.event.type == SystemEvent.RETRIEVE_ALL_SCHEDULES) {
				processRetrieveAllSchedulesResponse(context, items);
			}
			
			if (context.event.type == SystemEvent.ADD_SYSTEM_CHAIN) {
				processStandardResponse(items, new SystemEvent(SystemEvent.ADD_SYSTEM_CHAIN_SUCCESS),
					new SystemEvent(SystemEvent.ADD_SYSTEM_CHAIN_ERROR, {context:context}));
			}
			
			if (context.event.type == SystemEvent.RETRIEVE_SYSTEM_CHAINS) {
				processRetrieveSystemChainsResponse(context, items);
			}
			
			if (context.event.type == SystemEvent.DELETE_SYSTEM_CHAIN) {
				processStandardResponse(items, new SystemEvent(SystemEvent.DELETE_SYSTEM_CHAIN_SUCCESS),
					new SystemEvent(SystemEvent.DELETE_SYSTEM_CHAIN_ERROR, {context:context}));
			}
		}
		
		protected override function processError(context:Object, event:FaultEvent):void 
		{
			if (context.event.type == SystemEvent.RETRIEVE) {
				dispatch(new SystemEvent(SystemEvent.RETRIEVE_ERROR, {context:context, faultEvent:event}));	
			}
			
			if (context.event.type == SystemEvent.CREATE) {
				dispatch(new SystemEvent(SystemEvent.CREATE_ERROR, {context:context, faultEvent:event}));
			}
			
			if (context.event.type == SystemEvent.START) {
				dispatch(new SystemEvent(SystemEvent.START_ERROR, {context:context, faultEvent:event}));
			}
			
			if (context.event.type == SystemEvent.UPDATE_CONFIG) {
				dispatch(new SystemEvent(SystemEvent.UPDATE_CONFIG_ERROR, {context:context, faultEvent:event}));
			}
			
			if (context.event.type == SystemEvent.STOP) {
				dispatch(new SystemEvent(SystemEvent.STOP_ERROR, {context:context, faultEvent:event}));
			}
			
			if (context.event.type == SystemEvent.DELETE) {
				dispatch(new SystemEvent(SystemEvent.DELETE_ERROR, {context:context, faultEvent:event}));
			}
			
			if (context.event.type == SystemEvent.SYNC) {
				dispatch(new SystemEvent(SystemEvent.SYNC_ERROR, {context:context, faultEvent:event}));
			}
			
			if (context.event.type == SystemEvent.SYNC_STATUS) {
				dispatch(new SystemEvent(SystemEvent.SYNC_STATUS_ERROR, {context:context, faultEvent:event}));
			}
			
			if (context.event.type == SystemEvent.VALIDATE_SYS_CONFIG) {
				dispatch(new SystemEvent(SystemEvent.VALIDATE_SYS_CONFIG_ERROR, {context:context, faultEvent:event}));
			}
			
			if (context.event.type == SystemEvent.ADD_SCHEDULE) {
				dispatch(new SystemEvent(SystemEvent.ADD_SCHEDULE_ERROR, {context:context, faultEvent:event}));
			}
			
			if (context.event.type == SystemEvent.RETRIEVE_ALL_SCHEDULES) {
				dispatch(new SystemEvent(SystemEvent.RETRIEVE_ALL_SCHEDULES_ERROR, {context:context, faultEvent:event}));
			}
		}
		
		protected function processBroadcastCmdResponse(context:Object, items:Array):void
		{
			var header:Object = items[0].standardHeader;
			if (header == null || parseInt(header.code) != 200) {
				var errorEvent:SystemEvent = new SystemEvent(SystemEvent.BROADCAST_CMD_ERROR);
				
				if (items[0].responseBody != null) {
					errorEvent.parameters = new Object();
					errorEvent.parameters["message"] = items[0].responseBody;
				}
				
				dispatch(errorEvent);
			} else {
				var successEvent:SystemEvent = new SystemEvent(SystemEvent.BROADCAST_CMD_SUCCESS);
				
				if (items[0].responseBody != null && items[0].responseBody.token != null) {
					successEvent.parameters = new Object();
					successEvent.parameters["token"] = items[0].responseBody.token;
				}
				
				dispatch(successEvent);
			}
		}
		
		protected function processBroadcastCmdStatusResponse(context:Object, items:Array):void
		{
			var header:Object = items[0].standardHeader;
			if (header == null || parseInt(header.code) != 200) {
				var errorEvent:SystemEvent = new SystemEvent(SystemEvent.BROADCAST_CMD_STATUS_ERROR);
				
				if (items[0].responseBody != null) {
					errorEvent.parameters = new Object();
					errorEvent.parameters["message"] = items[0].responseBody;
				}
				
				dispatch(errorEvent);
			} else {
				var successEvent:SystemEvent = new SystemEvent(SystemEvent.BROADCAST_CMD_STATUS_SUCCESS);
				
				if (items[0].responseBody != null) {
					successEvent.parameters = new Object();
					if (items[0].responseBody.Status != null) successEvent.parameters["status"] = items[0].responseBody.Status;
				}
				
				dispatch(successEvent);
			}
		}

		protected function processSyncResponse(context:Object, items:Array):void
		{
			var header:Object = items[0].standardHeader;
			if (header == null || parseInt(header.code) != 200) {
				var errorEvent:SystemEvent = new SystemEvent(SystemEvent.SYNC_ERROR);
				
				if (items[0].responseBody != null) {
					errorEvent.parameters = new Object();
					
					if (StringUtils.contains(items[0].responseBody, "409")) {
						errorEvent.parameters["message"] = "Another sync request is already queued.";
					} else {
						errorEvent.parameters["message"] = items[0].responseBody;
					}
				}
				
				dispatch(errorEvent);
			} else {
				var successEvent:SystemEvent = new SystemEvent(SystemEvent.SYNC_SUCCESS);

				if (items[0].responseBody != null && items[0].responseBody.token != null) {
					successEvent.parameters = new Object();
					successEvent.parameters["token"] = items[0].responseBody.token;
				}

				dispatch(successEvent);
			}
		}
		
		protected function processSyncStatusResponse(context:Object, items:Array):void
		{
			var header:Object = items[0].standardHeader;
			if (header == null || parseInt(header.code) != 200) {
				var errorEvent:SystemEvent = new SystemEvent(SystemEvent.SYNC_STATUS_ERROR);
				
				if (items[0].responseBody != null) {
					errorEvent.parameters = new Object();
					
					if (StringUtils.contains(items[0].responseBody, "400")) {
						errorEvent.parameters["message"] = "Invalid token used to retrieve the sync status.";
					} else {
						errorEvent.parameters["message"] = items[0].responseBody;
					}
				}
				
				dispatch(errorEvent);
			} else {
				var successEvent:SystemEvent = new SystemEvent(SystemEvent.SYNC_STATUS_SUCCESS);
				
				if (items[0].responseBody != null) {
					successEvent.parameters = new Object();
					if (items[0].responseBody.token != null) successEvent.parameters["token"] = items[0].responseBody.token;
					if (items[0].responseBody.state != null) successEvent.parameters["state"] = items[0].responseBody.state;
					if (items[0].responseBody.message != null) successEvent.parameters["message"] = items[0].responseBody.message;
				}
				
				dispatch(successEvent);
			}
		}
		
		protected function processRetrieveResponse(context:Object, items:Array):void
		{
			if (items != null && items.length > 0) 
			{
				var system:Object = items[0];
				var status:Object = system.status;
				
				if (status != null && SystemUtilities.STATE_DOESNT_EXIST != status.state) 
				{
					var s:System = SystemBuilder.buildSystem(system, status);
					systemsModel.updateSystem(s);
				} 
				else if (status != null && SystemUtilities.STATE_DOESNT_EXIST == status.state) 
				{
					systemsModel.removeSystem(system.domain);
					dispatch(new SystemEvent(SystemEvent.DOESNT_EXIST, {"domain" : system.domain}));
				}
			}
			
			dispatch(new SystemEvent(SystemEvent.RETRIEVE_SUCCESS));
		}
		
		protected function processRetrieveAllSchedulesResponse(context:Object, items:Array):void
		{
			if (items != null && items.length > 0) 
			{
				var jsonResponse:Object = items[0];
				var tenantSchedules:Array = jsonResponse.schedules;
				
				// Reset the scheduleModel
				scheduleModel.configVersion = null;
				scheduleModel.startCron = null;
				scheduleModel.stopCron = null;
				
				for each (var systemSchedule:Object in tenantSchedules)
				{
					// Look for the matching domain to the system in context
					if(context.event.parameters.domain == systemSchedule.domain)
					{
						// The schedule array will contain 2 entries for the domain:
						// One for startup and one for shutdown. Process both differently.
						if(systemSchedule.startupSchedule != null)
						{
							scheduleModel.configVersion = systemSchedule.cfgVersion;
							scheduleModel.startCron = systemSchedule.startupSchedule;
						}
						else if(systemSchedule.shutdownSchedule != null)
						{
							scheduleModel.stopCron = systemSchedule.shutdownSchedule;
						}
					}
				}
			}
			
			dispatch(new SystemEvent(SystemEvent.RETRIEVE_ALL_SCHEDULES_SUCCESS));
		}

		protected function processRetrieveSystemChainsResponse(context:Object, items:Array):void
		{
			systemChainsModel.clear();
				
			if (items != null) 
			{
				var chains:Array = items;
		
				for(var i:int = 0; i < chains.length; i++)
				{
					var systemChainPart:Object = chains[i];

					if(!systemChainsModel.containsChain(systemChainPart.name))
					{	
						systemChainsModel.addSystemChain(new SystemChain(systemChainPart.name));
					}
					var systemChain:SystemChain = systemChainsModel.getSystemChain(systemChainPart.name);

					systemChain.addToChain(systemChainPart);
				}
				
			}
			
			dispatch(new SystemEvent(SystemEvent.RETRIEVE_SYSTEM_CHAINS_SUCCESS));
		}
	}
