{
	import com.adobe.serialization.json.JSON;
	import com.deleidos.rtws.commons.model.status.StatusMessage;
	import com.deleidos.rtws.tc.events.ApplicationEvent;
	import com.deleidos.rtws.tc.events.RepositoryEvent;
	import com.deleidos.rtws.tc.events.SystemEvent;
	import com.deleidos.rtws.tc.models.ParameterModel;
	import com.deleidos.rtws.tc.utils.HttpUtilities;
	import com.deleidos.rtws.tc.utils.NotificationEventBuilder;
	import com.deleidos.rtws.tc.utils.StatusMessageFactory;
	
	import flash.events.MouseEvent;
	import flash.utils.Dictionary;
	
	import mx.collections.ArrayCollection;
	import mx.collections.Sort;
	import mx.collections.SortField;
	import mx.managers.PopUpManager;
	
	import org.robotlegs.mvcs.Mediator;
	
	import spark.components.DataGrid;
	import spark.components.NavigatorContent;
	import spark.events.GridSelectionEvent;
	import spark.events.IndexChangeEvent;

	public class SelectSystemComponentViewMediator extends Mediator 
	{
		[Inject] public var parameterModel:ParameterModel;
		[Inject] public var view:SelectSystemComponentView;
		
		// Stores the data grid component that is currently in focus.
		private var selectedDataGrid:DataGrid;
		// Store sa list of system configurations and a flag indicating if they are in-use or not.
		private var configVersions:Dictionary = new Dictionary();
		// Stores a list of data models and a flag indicating if they are in-use or not.
		private var tenantDataModels:Dictionary = new Dictionary();
		// Stores a list of data model prefix, sales_v1.0 => sales.
		private var dataModelPrefix:Dictionary = new Dictionary();
		// Stores the content of the system configuration file.
		private var sysCfgFile:String;
		
		public override function onRegister():void
		{
			view.okButton.addEventListener(MouseEvent.CLICK, handleOkButton);
			view.cancelButton.addEventListener(MouseEvent.CLICK, handleCancelButton);
			view.closeButton.addEventListener(MouseEvent.CLICK, handleCloseButton);
			view.componentTabBar.addEventListener(IndexChangeEvent.CHANGE, handleComponentIndexChangeEvent);

			eventMap.mapListener(eventDispatcher, RepositoryEvent.RETRIEVE_SYSTEM_VERSIONS_FOR_VIEW_SUCCESS, handleRetrieveSystemVersionsSuccessEvent);
			eventMap.mapListener(eventDispatcher, RepositoryEvent.RETRIEVE_SYSTEM_VERSIONS_FOR_VIEW_ERROR, handleRetrieveSystemVersionsErrorEvent);
			eventMap.mapListener(eventDispatcher, RepositoryEvent.RETRIEVE_COMMON_DATA_MODELS_SUCCESS, handleRetrieveCommonDataModelsSuccess);
			eventMap.mapListener(eventDispatcher, RepositoryEvent.RETRIEVE_COMMON_DATA_MODELS_ERROR, handleRetrieveCommonDataModelsError);
			eventMap.mapListener(eventDispatcher, RepositoryEvent.RETRIEVE_TENANT_DATA_MODELS_SUCCESS, handleRetrieveTenantDataModelsSuccess);
			eventMap.mapListener(eventDispatcher, RepositoryEvent.RETRIEVE_TENANT_DATA_MODELS_ERROR, handleRetrieveTenantDataModelsError);
			eventMap.mapListener(eventDispatcher, RepositoryEvent.RETRIEVE_SYS_CONFIG_FILE_SUCCESS, handleRetrieveSysConfigFileSuccess);
			eventMap.mapListener(eventDispatcher, RepositoryEvent.RETRIEVE_SYS_CONFIG_FILE_ERROR, handleRetrieveSysConfigFileError);
			
			dispatch(new RepositoryEvent(RepositoryEvent.RETRIEVE_SYSTEM_VERSIONS_FOR_VIEW, {"domain" : view.system.name}));
			
			view.currentState = "loading";
		}
		
		public override function onRemove():void 
		{
			view.okButton.removeEventListener(MouseEvent.CLICK, handleOkButton);
			view.cancelButton.removeEventListener(MouseEvent.CLICK, handleCancelButton);
			view.closeButton.removeEventListener(MouseEvent.CLICK, handleCloseButton);
			
			eventMap.unmapListener(eventDispatcher, RepositoryEvent.RETRIEVE_SYSTEM_VERSIONS_FOR_VIEW_SUCCESS, handleRetrieveSystemVersionsSuccessEvent);
			eventMap.unmapListener(eventDispatcher, RepositoryEvent.RETRIEVE_SYSTEM_VERSIONS_FOR_VIEW_ERROR, handleRetrieveSystemVersionsErrorEvent);
			eventMap.unmapListener(eventDispatcher, RepositoryEvent.RETRIEVE_COMMON_DATA_MODELS_SUCCESS, handleRetrieveCommonDataModelsSuccess);
			eventMap.unmapListener(eventDispatcher, RepositoryEvent.RETRIEVE_COMMON_DATA_MODELS_ERROR, handleRetrieveCommonDataModelsError);
			eventMap.unmapListener(eventDispatcher, RepositoryEvent.RETRIEVE_TENANT_DATA_MODELS_SUCCESS, handleRetrieveTenantDataModelsSuccess);
			eventMap.unmapListener(eventDispatcher, RepositoryEvent.RETRIEVE_TENANT_DATA_MODELS_ERROR, handleRetrieveTenantDataModelsError);
			eventMap.unmapListener(eventDispatcher, RepositoryEvent.RETRIEVE_SYS_CONFIG_FILE_SUCCESS, handleRetrieveSysConfigFileSuccess);
			eventMap.unmapListener(eventDispatcher, RepositoryEvent.RETRIEVE_SYS_CONFIG_FILE_ERROR, handleRetrieveSysConfigFileError);
		}
		
		protected function handleRetrieveSystemVersionsSuccessEvent(event:RepositoryEvent):void
		{
			if (event.parameters.versions != null && event.parameters.versions.length > 0) {
				for (var i:int = 0; i < event.parameters.versions.length; i++) {
					var version:String = event.parameters.versions[i].version;
					if (version != view.configVersion) {
						this.configVersions[version] = false;
					} else {
						this.configVersions[version] = true;
					}
				}
				
				view.configDataProvider = buildSelectableSysConfigList();
				
				dispatch(new RepositoryEvent(RepositoryEvent.RETRIEVE_COMMON_DATA_MODELS));
			} else {
				dispatch(NotificationEventBuilder.buildErrorMessage("Sync System", "Failed to retrieve system configurations.", event));
				closeView();
			}
		}
		
		protected function handleRetrieveSystemVersionsErrorEvent(event:RepositoryEvent):void
		{
			makeViewReady();
			dispatch(NotificationEventBuilder.buildErrorMessage("Sync System", "Failed to retrieve system configurations.", event));
			closeView();
		}
		
		protected function handleRetrieveCommonDataModelsSuccess(event:RepositoryEvent):void 
		{
			processDataModels(event.parameters.dataModels);	
			dispatch(new RepositoryEvent(RepositoryEvent.RETRIEVE_TENANT_DATA_MODELS, {"vis" : "private"}));
		}
		
		protected function handleRetrieveCommonDataModelsError(event:RepositoryEvent):void
		{
			makeViewReady();
			dispatch(NotificationEventBuilder.buildErrorMessage("Sync System", "Failed to retrieve common data models.", event));
		}
		
		protected function handleRetrieveTenantDataModelsSuccess(event:RepositoryEvent):void 
		{
			processDataModels(event.parameters.dataModels);	
			dispatch(new RepositoryEvent(RepositoryEvent.RETRIEVE_SYS_CONFIG_FILE, {"domain" : view.system.name, 
				"cfgVersion" : view.configVersion, "filename" : "userConfig.json"}));
		}
		
		protected function handleRetrieveTenantDataModelsError(event:RepositoryEvent):void
		{
			makeViewReady();
			dispatch(NotificationEventBuilder.buildErrorMessage("Sync System", "Failed to retrieve tenant data models.", event));
		}
		
		protected function handleRetrieveSysConfigFileSuccess(event:RepositoryEvent):void
		{
			var displayError:Boolean = true;
			
			this.sysCfgFile = event.parameters.content;
			
			var sysCfgFileArr:Array = HttpUtilities.getJsonArrayResponse(this.sysCfgFile);
			if (sysCfgFileArr != null && sysCfgFileArr.length > 0 && "dataModels" in sysCfgFileArr[0]) {
				var sysCfgDataModelsArr:Array = (sysCfgFileArr[0])["dataModels"];
				
				var dataModels:Array = new Array();
				if (sysCfgDataModelsArr.length > 0) {
					buildDataModelAndPrefixCollections(sysCfgDataModelsArr);
					view.dataModelDataProvider = buildSelectableDataModelList();
					displayError = false;
				}
			} 

			if (displayError) {
				dispatch(NotificationEventBuilder.buildErrorMessage("Sync System", 
					"Failed to load data models from system configuration.", event));
				closeView();
			}
			
			makeViewReady();
		}
		
		protected function handleRetrieveSysConfigFileError(event:RepositoryEvent):void
		{
			makeViewReady();
			dispatch(NotificationEventBuilder.buildErrorMessage("Sync System", "Failed to retrieve system configuration file.", event));
		}
		
		protected function determineSystemConfigCommand():void
		{
			if (this.selectedDataGrid == view.selectDataModelsGrid) {
				buildNewSystemConfig();
			} else {
				updateSystemConfig();
			}
		}
		
		protected function handleOkButton(event:MouseEvent):void
		{
			if (this.selectedDataGrid.selectedItem != null) {
				view.okButton.enabled = false;
				view.selectConfigsGrid.enabled = false;
				view.selectDataModelsGrid.enabled = false;
				determineSystemConfigCommand();
			} else {
				dispatch(NotificationEventBuilder.buildErrorMessage("Sync System", "Please select a data model/system configuration to proceed."));
			}
		}
		
		protected function handleCancelButton(event:MouseEvent):void
		{
			closeView();
		}
		
		protected function handleCloseButton(event:MouseEvent):void
		{
			closeView();
		}
		
		protected function handleComponentIndexChangeEvent(event:IndexChangeEvent):void
		{
			if (view.currentState == "ready") {
				if (event.newIndex == 0) {
					this.selectedDataGrid = view.selectDataModelsGrid;
				} else {
					this.selectedDataGrid = view.selectConfigsGrid;
				}
			
				if (this.selectedDataGrid.selectedIndex == -1) {
					view.okButton.enabled = false;
				} else {
					view.okButton.enabled = true;
				}
			}
		}
		
		private function buildNewSystemConfig():void
		{
			var selectedItem:Object = view.selectDataModelsGrid.selectedItem;
			var selectedDataModelPrefix:String = getPrefix(selectedItem["dataModel"]);
			
			var sysCfgFileArr:Array = HttpUtilities.getJsonArrayResponse(this.sysCfgFile);
			var sysCfgFileDataModels:Array = (sysCfgFileArr[0])["dataModels"];
			
			for (var i:int = 0; i < sysCfgFileDataModels.length; i++) {
				var prefix:String = getPrefix(sysCfgFileDataModels[i]);
				if (prefix == selectedDataModelPrefix) {
					sysCfgFileDataModels[i] = selectedItem["dataModel"];
					break;
				}
			}
			
			var configVersion:String = (sysCfgFileArr[0])["configVersion"];
			var configPrefix:String = getPrefix(configVersion);
			var version:Number = new Number(getSuffix(configVersion));
			var nextConfigVersion:String = getNextSysConfigVersion(configPrefix + "_v", version);
			
			if (nextConfigVersion != null) {
				(sysCfgFileArr[0])["configVersion"] = nextConfigVersion;
				var jsonSysDef:String = JSON.encode(sysCfgFileArr[0]);
				
				var buildSysView:BuildSystemView = new BuildSystemView();
				buildSysView.system = view.system;
				buildSysView.version = (sysCfgFileArr[0])["configVersion"];
				buildSysView.jsonSysDef = jsonSysDef;
				
				PopUpManager.addPopUp(buildSysView, contextView, true);
				PopUpManager.centerPopUp(buildSysView);
				
				mediatorMap.createMediator(buildSysView);
				
				closeView();
			}
		}
		
		private function updateSystemConfig():void
		{
			var selectedItem:Object = Object(selectedDataGrid.selectedItem);
			dispatch(new SystemEvent(SystemEvent.SELECTED_SYSTEM, {"system" : view.system}));
			dispatch(new SystemEvent(SystemEvent.UPDATE_SYS_CONFIG_VERSION, {"system" : view.system, "cfgVersion" : selectedItem["sysConfig"]}));
			closeView();
		}
		
		private function getNextSysConfigVersion(prefix:String, version:Number):String
		{
			while(true) {
				version += 0.1;
				var configVersion:String = prefix + version.toFixed(1);
				if (this.configVersions[configVersion] == null) {
					return configVersion;
				}
			}
			
			return null;
		}
		
		private function handleGridSelectionEvent(event:GridSelectionEvent):void
		{
			if (this.selectedDataGrid.selectedItem != null) {				
				view.okButton.enabled = true;
			}
		}
		
		private function processDataModels(dataModels:ArrayCollection):void
		{
			for (var i:int = 0; i < dataModels.length; i++) {
				if (dataModels.getItemAt(i) is String) {
					var dataModel:String = String(dataModels.getItemAt(i));
					if (! (dataModel in this.tenantDataModels)) {
						this.tenantDataModels[dataModel] = false;
					}
				}
			}
		}
		
		private function getPrefix(value:String):String
		{
			var index:int = value.indexOf("_v");
			if (index != -1) {
				return value.substring(0, index);
			}
			
			return null;
		}
		
		private function getSuffix(value:String):String
		{
			var index:int = value.indexOf("_v");
			if (index != -1) {
				return value.substring(index + 2, value.length);
			}
			
			return null;
		}
		
		private function buildDataModelAndPrefixCollections(sysCfgDataModelsArr:Array):void
		{
			for (var i:int = 0; i < sysCfgDataModelsArr.length; i++) {
				// Get the data model in the userConfig.json file
				// and mark it as in use.
				
				var dataModel:String = sysCfgDataModelsArr[i];
				this.tenantDataModels[dataModel] = true;
				
				// Get the prefix of the data model, sales_v1.0 => sales.
				
				var prefix:String = getPrefix(dataModel);
				if (prefix != null) {
					this.dataModelPrefix[prefix] = 0;
				}
			}
		}
		
		private function buildSelectableDataModelList():ArrayCollection
		{
			// Create a list of data models the user can select
			// to update there system.
			
			var dmList:ArrayCollection = new ArrayCollection();
			for (var key:Object in this.tenantDataModels) {
				if (key is String && this.tenantDataModels[key] == false) {
					var dataModel:String = String(key);
					var prefix:String = getPrefix(dataModel);
					if (prefix != null && getPrefix(dataModel) in this.dataModelPrefix) {
						this.dataModelPrefix[prefix]++;
						dmList.addItem({"dataModel" : dataModel});
					}
				}
			}
			
			// Sort the list and return it to the caller.
			
			var sortField:SortField = new SortField(); 
			sortField.name = "dataModel"; 
			sortField.caseInsensitive = true;
			
			var dataSort:Sort = new Sort(); 
			dataSort.fields = [sortField]; 
			
			dmList.sort = dataSort;
			dmList.refresh();
			
			return dmList;
		}
		
		private function buildSelectableSysConfigList():ArrayCollection
		{
			// Create a list system configuration the user can select
			// to dynamically update there system.
			
			var configList:ArrayCollection = new ArrayCollection();
			for (var key:Object in this.configVersions) {
				if (key is String && this.configVersions[key] == false) {
					configList.addItem({"sysConfig" : String(key)});
				}
			}
			
			// Sort the list and return it to the caller.
			
			var sortField:SortField = new SortField(); 
			sortField.name = "sysConfig"; 
			sortField.caseInsensitive = true;
			
			var dataSort:Sort = new Sort(); 
			dataSort.fields = [sortField]; 
			
			configList.sort = dataSort;
			configList.refresh();
			
			return configList;
		}
		
		private function makeViewReady():void
		{
			view.currentState = "ready";
			
			view.selectDataModelsGrid.addEventListener(GridSelectionEvent.SELECTION_CHANGE, handleGridSelectionEvent);
			view.selectConfigsGrid.addEventListener(GridSelectionEvent.SELECTION_CHANGE, handleGridSelectionEvent);
			
			if (view.componentTabBar.selectedIndex == 0) {
				this.selectedDataGrid = view.selectDataModelsGrid;
			} else {
				this.selectedDataGrid = view.selectConfigsGrid;
			}
		}
		
		private function closeView():void 
		{			
			PopUpManager.removePopUp(view);
			mediatorMap.removeMediator(this);
		}
	}
}