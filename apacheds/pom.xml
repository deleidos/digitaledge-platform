<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>saic-rtws-apacheds</artifactId>
	<name>ApacheDS</name>
	<parent>
		<groupId>com.saic</groupId>
		<artifactId>parent</artifactId>
		<version>1.2.1</version>
		<relativePath>../parent/pom.xml</relativePath>
	</parent>
	<dependencies>
		<dependency>
			<groupId>com.saic</groupId>
			<artifactId>saic-rtws-commons-config</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>commons-codec</groupId>
			<artifactId>commons-codec</artifactId>
			<version>1.6</version>
		</dependency>
	</dependencies>
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>commons-codec</groupId>
				<artifactId>commons-codec</artifactId>
				<version>1.6</version>
			</dependency>
		</dependencies>
	</dependencyManagement>
	<build>
		<finalName>${rtws.final.name}</finalName>
		<plugins>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>extract-apacheds</id>
						<phase>process-sources</phase>
						<configuration>
							<target>								
								<mkdir dir="${basedir}/target/extracted/apacheds" />
								<gunzip src="${basedir}/src/resources/apacheds-1.5.7.tar.gz"
									dest="${basedir}/target/extracted/apacheds" />
								<untar src="${basedir}/target/extracted/apacheds/apacheds-1.5.7.tar"
									dest="${basedir}/target/extracted/apacheds" overwrite="true" />

								<mkdir dir="${basedir}/target/extracted/apacheds/data" />
								<mkdir dir="${basedir}/target/extracted/apacheds/logs" />

								<delete
									file="${basedir}/target/extracted/apacheds/apacheds-1.5.7.tar" />

								<move
									file="${basedir}/target/extracted/apacheds/apacheds-1.5.7"
									tofile="${basedir}/target/extracted/apacheds" />
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<executions>
					<execution>
						<configuration>
							<finalName>${rtws.final.name}</finalName>
							<appendAssemblyId>false</appendAssemblyId>
							<descriptors>
								<descriptor>src/main/assembly/dist.xml</descriptor>
							</descriptors>
						</configuration>
						<id>make-assembly-conf</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<archive>
						<manifest>
							<addDefaultImplementationEntries>true</addDefaultImplementationEntries>
							<addClasspath>true</addClasspath>
							<mainClass>com.saic.rtws.ldaputils.LdapModify</mainClass>
						</manifest>
						<manifestEntries>
							<Created-By>SAIC - RTWS</Created-By>
							<Built-By>SAIC - RTWS</Built-By>
							<Class-Path>../conf/ /usr/local/rtws/commons-core/conf/</Class-Path>
						</manifestEntries>
					</archive>
				</configuration>
			</plugin>
			<plugin>
				<groupId>${project.groupId}</groupId>
				<artifactId>plugins</artifactId>
				<version>${project.version}</version>
				<configuration>
					<baseDirectory>${basedir}</baseDirectory>
					<commonsSystemsDir>${storage.plugin.commonsSystemsDir}</commonsSystemsDir>
					<storageInterfaceConfig>${storage.plugin.storageInterfaceConfig}</storageInterfaceConfig>
					<releaseArtifact>${rtws.final.name}.tar.gz</releaseArtifact>
					<releaseStoragePath>${storage.plugin.releasePath}</releaseStoragePath>
					<configurationStoragePath>${storage.plugin.configPath}</configurationStoragePath>
					<bucketName>${storage.plugin.bucketName}</bucketName>
				</configuration>
				<executions>
					<execution>
						<phase>deploy</phase>
						<goals>
							<goal>storage-plugin</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<properties>
		<rtws.final.name>${project.artifactId}</rtws.final.name>
		<apacheds.version>1.5.7</apacheds.version>
	</properties>
</project>