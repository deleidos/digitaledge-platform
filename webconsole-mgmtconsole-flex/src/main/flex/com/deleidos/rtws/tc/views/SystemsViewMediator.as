		private var selectedSystem:System;
		private var currSort:Sort;
		private var timer:Timer;
		
		public override function onRegister():void 
		{
			eventMap.mapListener(eventDispatcher, SystemsEvent.RETRIEVE_SUCCESS, handleRetrieveSystemsSuccessEvent);
			eventMap.mapListener(eventDispatcher, SystemsEvent.RETRIEVE_ALL_SUCCESS, handleRetrieveAllSystemsSuccessEvent);
			eventMap.mapListener(eventDispatcher, RepositoryEvent.RETRIEVE_SYSTEM_VERSIONS_FOR_START_SUCCESS, handleRetrieveSystemVersionsSuccessEvent);
			eventMap.mapListener(eventDispatcher, RepositoryEvent.RETRIEVE_SYSTEM_VERSIONS_FOR_START_ERROR, handleRetrieveSystemVersionsErrorEvent);
			eventMap.mapListener(eventDispatcher, SystemEvent.SET_IN_PROGRESS, handleSetInProgressEvent);
			eventMap.mapListener(eventDispatcher, SystemEvent.DELETE_SYSTEM, handleDeleteSystemEvent);
			eventMap.mapListener(eventDispatcher, SystemEvent.UPDATE_SYS_CONFIG_VERSION, handleUpdateSystemDataModelEvent);
			
			view.addEventListener(ActionEvent.DELETE, handleDeleteAction);
			view.addEventListener(ActionEvent.LOGS, handleLogsAction);
			view.addEventListener(ActionEvent.MONITOR, handleMonitorAction);
			view.addEventListener(ActionEvent.START, handleStartAction);
			view.addEventListener(ActionEvent.STOP, handleStopAction);
			view.addEventListener(ActionEvent.SYNC, handleSyncAction);
			
			view.chainSystemsButton.addEventListener(MouseEvent.CLICK, handleChainSystemsMouseClick);
			view.refreshButton.addEventListener(MouseEvent.CLICK, handleRefreshMouseClick);
			view.systemsDataGrid.addEventListener(GridEvent.GRID_CLICK, handleSystemsGridClickEvent);

			timer = new Timer(10000);
			timer.addEventListener(TimerEvent.TIMER, handleTimerEvent);
			timer.start();			
			
			view.dataProvider = systemModel.systems;
		}
		
		protected function handleRetrieveSystemsSuccessEvent(event:SystemsEvent):void
		{
			refreshSystemsDataProvider();

			if (this.selectedSystem  == null) {
				return;
			}
			
			var found:Boolean = false;
			if (event.parameters != null && event.parameters.domains != null && event.parameters.domains is Array) {
				for (var i:int = 0; i < event.parameters.domains.length; i++) {
					if (this.selectedSystem.name == event.parameters.domains[i]) {
						found = true;
						break;
					}
				}
			}
			
			handleSelectedSystem(found);
		}
		
		protected function handleRetrieveAllSystemsSuccessEvent(event:SystemsEvent):void
		{	
			refreshSystemsDataProvider();
			handleSelectedSystem(true);
		}
		
		protected function handleRetrieveSystemVersionsSuccessEvent(event:RepositoryEvent):void
		{
			var system:System = System(view.systemsDataGrid.selectedItem);
			
			if (event.parameters.versions.length == 1) {
				var version:String = event.parameters.versions[0].version;
				
				var startView:StartSystemView = new StartSystemView();
				startView.system = system
				startView.cfgVersion = version;
				
				PopUpManager.addPopUp(startView, contextView, true);
				PopUpManager.centerPopUp(startView);
				
				mediatorMap.createMediator(startView);
			} else {
				var popup:SelectSystemVersionView = new SelectSystemVersionView();
			
				popup.dataProvider = event.parameters.versions;
				popup.system = system;
			
				PopUpManager.addPopUp(popup, contextView, true);
				PopUpManager.centerPopUp(popup);
				
				mediatorMap.createMediator(popup);
			}
		}
		
		protected function handleRetrieveSystemVersionsErrorEvent(event:RepositoryEvent):void
		{
			dispatch(NotificationEventBuilder.buildErrorMessage("Start System", "Failed to retrieve system versions", event));
		}
		
		protected function handleSetInProgressEvent(event:SystemEvent):void
		{
			var state:String = event.parameters.state;
			var system:System = event.parameters.system;
			
			if (system != null) {
				if (state == SystemUtilities.STATE_STARTING) {
					system.state = SystemUtilities.STATE_STARTING;
					system.statusMsg = "The system is starting up.";
				}
				
				if (state == SystemUtilities.STATE_UPDATING) {
					system.state = SystemUtilities.STATE_UPDATING;
					system.statusMsg = "The system is updating.";
				}
				
				if (state == SystemUtilities.STATE_STOPPING) {
					system.state = SystemUtilities.STATE_STOPPING;
					system.statusMsg = "The system is coming down.";
				}
				
				if (state == SystemUtilities.STATE_DELETING) {
					system.state = SystemUtilities.STATE_DELETING;
					system.statusMsg = "The system is currently being deleted.";
				}
			}
			
			view.dataProvider.refresh();
		}
		
		protected function handleStartAction(event:ActionEvent):void
		{
			var system:System = System(view.systemsDataGrid.selectedItem);
			dispatch(new RepositoryEvent(RepositoryEvent.RETRIEVE_SYSTEM_VERSIONS_FOR_START, {"domain" : system.name}));
		}
		
		protected function handleStopAction(event:ActionEvent):void 
		{
			var system:System = System(view.systemsDataGrid.selectedItem);
			
			var eventQueue:Array = new Array();
			eventQueue.push(new SystemEvent(SystemEvent.STOP, {domain : system.name}));
			
			var successEvents:Array = new Array();
			successEvents.push(SystemEvent.STOP_SUCCESS);
			
			var errorEvents:Array = new Array();
			errorEvents.push(SystemEvent.STOP_ERROR);

			var onCompleteEvent:SystemEvent =  new SystemEvent(SystemEvent.SET_IN_PROGRESS, {"state" : SystemUtilities.STATE_STOPPING , "system" : system});
			var onErrorEvent:ApplicationEvent = NotificationEventBuilder.buildErrorMessage("Stop System", 
				"Failed to perform stop operation on '" + system.name + "'.", event);
			
			ViewUtilities.dispatchProcessingView(mediatorMap, contextView, eventQueue, successEvents, errorEvents, true, onCompleteEvent, onErrorEvent);
		}
		
		protected function handleDeleteSystemEvent(event:SystemEvent):void
		{
			if (event.parameters.system != null) {
				var system:System = System(event.parameters.system);
				
				var eventQueue:Array = new Array();
				eventQueue.push(new SystemEvent(SystemEvent.DELETE, {"domain" : system.name}));
				
				var successEvents:Array = new Array();
				successEvents.push(SystemEvent.DELETE_SUCCESS);
				
				var errorEvents:Array = new Array();
				errorEvents.push(SystemEvent.DELETE_ERROR);
				
				var onCompleteEvent:SystemEvent =  new SystemEvent(SystemEvent.SET_IN_PROGRESS, {"state" : SystemUtilities.STATE_DELETING , "system" : system});
				var onErrorEvent:ApplicationEvent = NotificationEventBuilder.buildErrorMessage("Delete System", 
					"Failed to perform delete operation on '" + system.name + "'.", event);
				
				ViewUtilities.dispatchProcessingView(mediatorMap, contextView, eventQueue, successEvents, errorEvents, true, onCompleteEvent, onErrorEvent);
			}
		}
		
		protected function handleUpdateSystemDataModelEvent(event:SystemEvent):void
		{
			if (event.parameters.system != null && event.parameters.cfgVersion != null) {
				var system:System = System(event.parameters.system);
				var cfgVersion = event.parameters.cfgVersion;
				
				var eventQueue:Array = new Array();
				eventQueue.push(new SystemEvent(SystemEvent.UPDATE_CONFIG, {"domain" : system.name, "cfgVersion" : cfgVersion }));
				
				var successEvents:Array = new Array();
				successEvents.push(SystemEvent.UPDATE_CONFIG_SUCCESS);
				
				var errorEvents:Array = new Array();
				errorEvents.push(SystemEvent.UPDATE_CONFIG_ERROR);
				
				var onCompleteEvent:SystemEvent =  new SystemEvent(SystemEvent.SET_IN_PROGRESS, {"state" : SystemUtilities.STATE_UPDATING , "system" : system});
				var onErrorEvent:ApplicationEvent = NotificationEventBuilder.buildErrorMessage("Update System", 
					"Failed to perform update system operation on '" + system.name + "'.", event);
				
				ViewUtilities.dispatchProcessingView(mediatorMap, contextView, eventQueue, successEvents, errorEvents, true, onCompleteEvent, onErrorEvent);
			}
		}
		
		protected function handleDeleteAction(event:ActionEvent):void 
		{
			var system:System = System(view.systemsDataGrid.selectedItem);
			
			var eventQueue:Array = new Array();
			eventQueue.push(new SystemEvent(SystemEvent.DELETE, {domain : system.name}));
			
			var successEvents:Array = new Array();
			successEvents.push(SystemEvent.DELETE_SUCCESS);
			
			var errorEvents:Array = new Array();
			errorEvents.push(SystemEvent.DELETE_ERROR);

			var onCompleteEvent:SystemEvent =  new SystemEvent(SystemEvent.SET_IN_PROGRESS, {"state" : SystemUtilities.STATE_DELETING , "system" : system});
			var onErrorEvent:ApplicationEvent = NotificationEventBuilder.buildErrorMessage("Delete System", 
				"Failed to perform delete system operation on '" + system.name + "'.", event);			
			
			var popup:ConfirmationView = new ConfirmationView();
			
			popup.popup = ViewUtilities.buildProcessingView(eventQueue, successEvents, errorEvents, false, onCompleteEvent, onErrorEvent);
			popup.message = StatusMessageFactory.createWarnMessage("Are you sure you want to remove system '" + system.name + "'?");
			
			PopUpManager.addPopUp(popup, contextView, true);
			PopUpManager.centerPopUp(popup);
			
			mediatorMap.createMediator(popup);
		}
		
		protected function handleLogsAction(event:ActionEvent):void
		{
			var logViewer:LogViewer = new LogViewer();
		
			logViewer.system = System(view.systemsDataGrid.selectedItem);
			
			var prefSize:Rectangle = null;
			
			try {
				var minBounds:Rectangle = new Rectangle(0, 0, logViewer.minWidth, logViewer.minHeight);
				var maxBounds:Rectangle = new Rectangle(0, 0, 1200, 800);
				prefSize = LayoutUtils.calculateAppRelativeSize(75, NaN, minBounds, maxBounds, true, true);
			} catch (error:Error) {
				prefSize = null;
			}
			
			if (prefSize != null) {
				logViewer.width = prefSize.width;
				logViewer.height = prefSize.height;
			}
			
			PopUpManager.addPopUp(logViewer, contextView, true);
			PopUpManager.centerPopUp(logViewer);
			
			mediatorMap.createMediator(logViewer);
		}
		
		protected function handleSyncAction(event:ActionEvent):void 
		{
			var system:System = System(view.systemsDataGrid.selectedItem);
			
			var hostname:String = URLUtil.getServerName(FlexGlobals.topLevelApplication.url);
			
			if (StringUtils.contains(hostname, system.name)) {
				var syncView:SyncView = new SyncView();
				
				syncView.systemName = system.name;
				
				PopUpManager.addPopUp(syncView, contextView, true);
				PopUpManager.centerPopUp(syncView);
				
				mediatorMap.createMediator(syncView);
			} else {
				var selected:SelectSystemComponentView = new SelectSystemComponentView();
				selected.system = system;
				selected.configVersion = system.configVersion;
				
				PopUpManager.addPopUp(selected, contextView, true);
				PopUpManager.centerPopUp(selected);
				
				mediatorMap.createMediator(selected);
			}
		}
		
		protected function handleMonitorAction(event:ActionEvent):void
		{
			var system:System = System(view.systemsDataGrid.selectedItem);
			
			navigateToURL(SystemMonitor.buildMonitorSystemUrlRequest(system.name), '_blank');
		}
		
		protected function handleChainSystemsMouseClick(event:MouseEvent):void	
		{
			var popup:ChainSystemsView = new ChainSystemsView();		
		
			PopUpManager.addPopUp(popup, contextView, true);
			PopUpManager.centerPopUp(popup);
		
			mediatorMap.createMediator(popup);
		}
		
		protected function handleRefreshMouseClick(event:MouseEvent):void	
		{
			var eventQueue:Array = new Array();
			eventQueue.push(new InstanceEvent(InstanceEvent.RETRIEVE_GATEWAY, {"tenantId" : userModel.tenantId }));
			eventQueue.push(new SystemsEvent(SystemsEvent.RETRIEVE_ALL, {"region" : paramModel.selectedRegion}));
			
			var successEvents:Array = new Array();
			successEvents.push(InstanceEvent.RETRIEVE_GATEWAY_SUCCESS);
			successEvents.push(SystemsEvent.RETRIEVE_ALL_SUCCESS);
			
			var errorEvents:Array = new Array();
			errorEvents.push(InstanceEvent.RETRIEVE_GATEWAY_ERROR);
			errorEvents.push(SystemsEvent.RETRIEVE_ALL_ERROR);
			
			ViewUtilities.dispatchProcessingView(mediatorMap, contextView, eventQueue, successEvents, errorEvents, true);
		}
		
		protected function handleSystemsGridClickEvent(event:GridEvent):void
		{	
			if (view.systemsDataGrid.selectedItem != null) {
				var selected:System = System(view.systemsDataGrid.selectedItem);
				
				// The user clicked on a row and if the row is now the controls
				// row and is the current selection than we unselect it.
				
				if (event.columnIndex != 6 && this.selectedSystem != null && 
					this.selectedSystem.name == selected.name) {
					this.selectedSystem = null;
					view.systemsDataGrid.selectedIndex = -1;
				} else {
					this.selectedSystem = selected;
				}
				
				dispatchSelectedSystemEvent(true);
			}
		}
		
		protected function handleTimerEvent(event:TimerEvent):void 
		{
			var domains:Array = systemModel.getRefreshableSystems();
			var batchOfDomains:Array = new Array();
			
			// Batch up the domain names using the BATCH_SIZE as the batch limit.
			
			var batchCount:int = 0;
			var domainsStr:String = "";
			for (var i:int = 0; i < domains.length; i++) {
				domainsStr += domains[i] + ",";
				batchCount++; 
				
				if (i == (domains.length - 1) || batchCount >= BATCH_SIZE) {
					if (domainsStr.length > 0) {
						batchOfDomains.push(domainsStr.substring(0, domainsStr.length - 1));
					}
					
					batchCount = 0;
					domainsStr = "";
				}
			}
			
			// Take each batch domain and invoke the retrieve systems REST service. 
			
			for (var i:int = 0; i < batchOfDomains.length; i++) {
				dispatch(new SystemsEvent(SystemsEvent.RETRIEVE, {"domains" : batchOfDomains[i]}));
			}
		}
		
		private function refreshSystemsDataProvider():void 
		{
			// Store the previous sort function before we swap out the 
			// data provider array collection

			var vScrollPos:Number = view.systemsDataGrid.grid.verticalScrollPosition;
			var currSort:ISort = view.dataProvider.sort;
			
			view.dataProvider = systemModel.systems;
			view.dataProvider.sort = currSort;
			view.dataProvider.refresh();
			
			view.systemsDataGrid.grid.verticalScrollPosition = vScrollPos;
		}
		
		private function handleSelectedSystem(scrollToSelection:Boolean = false):void
		{			
			if (this.selectedSystem != null) {				
				var currSystem:System = null;
				var rowIdx:int = -1;
				
				for (var i:int = 0; i < view.systemsDataGrid.dataProvider.length; i++) {
					currSystem = System(view.systemsDataGrid.dataProvider.getItemAt(i));
					if (this.selectedSystem.name == currSystem.name) {
						rowIdx = i;
						break;
					}
				}
				
				if (currSystem != null && rowIdx != -1) {
					this.selectedSystem = currSystem;
					view.systemsDataGrid.validateNow();
					view.systemsDataGrid.setSelectedIndex(rowIdx);
					if (scrollToSelection) {
						view.systemsDataGrid.ensureCellIsVisible(rowIdx);
					}
				} else {
					this.selectedSystem = null;
				}
				
				dispatchSelectedSystemEvent();
			}
		}
		
		private function dispatchSelectedSystemEvent(userInitiated:Boolean = false):void
		{	
			if (this.selectedSystem == null) {
				dispatch(new SystemEvent(SystemEvent.SELECTED_SYSTEM, {"system" : null}));
			} else {			
				dispatch(new SystemEvent(SystemEvent.SELECTED_SYSTEM, {"system" : this.selectedSystem, "userInitiated" : userInitiated }));
			}
		}
	}
