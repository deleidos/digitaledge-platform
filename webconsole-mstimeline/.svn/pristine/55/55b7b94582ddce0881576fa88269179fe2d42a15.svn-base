<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<artifactId>webconsole-mst</artifactId>
	<packaging>war</packaging>
	
	<name>RTWS Mega Super Timeline</name>
	<description>A Forensics app designed to use log2timeline over multiple machines.</description>

	<parent>
		<groupId>com.deleidos</groupId>
		<artifactId>parent</artifactId>
		<version>1.0.4-SNAPSHOT</version>
		<relativePath>../parent/pom.xml</relativePath>
	</parent>
	
	<dependencies>
		<dependency>
			<groupId>com.jquery</groupId>
			<artifactId>jquery</artifactId>
			<version>1.7.2</version>
			<classifier>min</classifier>
			<type>zip</type>
		</dependency>
		<dependency>
			<groupId>com.jqueryui</groupId>
			<artifactId>jquery-ui</artifactId>
			<version>1.8.21</version>
			<classifier>redmond</classifier>
			<type>zip</type>
		</dependency>
		<dependency>
			<groupId>com.deleidos</groupId>
			<artifactId>commons-model</artifactId>
			<version>${project.version}</version>
			<scope>compile</scope>
			<exclusions>
				<exclusion>
					<artifactId>ojdbc6</artifactId>
					<groupId>com.oracle</groupId>
				</exclusion>
				<exclusion>
					<artifactId>jsr-275</artifactId>
					<groupId>javax</groupId>
				</exclusion>
				<exclusion>
					<artifactId>antlr</artifactId>
					<groupId>org.antlr</groupId>
				</exclusion>
				<exclusion>
					<artifactId>sigar</artifactId>
					<groupId>org.hyperic.sigar</groupId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>com.deleidos</groupId>
			<artifactId>commons-core</artifactId>
			<version>${project.version}</version>
			<scope>compile</scope>
			<exclusions>
				<exclusion>
					<artifactId>ojdbc6</artifactId>
					<groupId>com.oracle</groupId>
				</exclusion>
				<exclusion>
					<artifactId>jsr-275</artifactId>
					<groupId>javax</groupId>
				</exclusion>
				<exclusion>
					<artifactId>antlr</artifactId>
					<groupId>org.antlr</groupId>
				</exclusion>
				<exclusion>
					<artifactId>sigar</artifactId>
					<groupId>org.hyperic.sigar</groupId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>deleidos-rtws-commons-webauth</artifactId>
			<version>${project.version}</version>
			<scope>runtime</scope>
		</dependency>
	</dependencies>
	
	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
		      <artifactId>jslint-maven-plugin</artifactId>
		      <version>1.0.1</version>
				</plugin>
				<plugin>
					<groupId>org.mortbay.jetty</groupId>
			  	<artifactId>maven-jetty-plugin</artifactId>
			  	<version>6.1.26</version>
				</plugin>
			</plugins>
		</pluginManagement>
		
		<plugins>
			<plugin>
	      <groupId>org.codehaus.mojo</groupId>
	      <artifactId>jslint-maven-plugin</artifactId>
	     	<configuration>
	   			<allowOneVarStatementPerFunction>false</allowOneVarStatementPerFunction>
	     		<assumeABrowser>true</assumeABrowser>
	     		<assumeConsoleAlertEtc>true</assumeConsoleAlertEtc>
	     	</configuration>
	    </plugin>
			<plugin>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<overlays>
						<overlay>
							<groupId>com.jquery</groupId>
							<artifactId>jquery</artifactId>
							<classifier>min</classifier>
							<type>zip</type>
						</overlay>
						<overlay>
							<groupId>com.jqueryui</groupId>
							<artifactId>jquery-ui</artifactId>
							<classifier>redmond</classifier>
							<type>zip</type>
						</overlay>
					</overlays>
					<webResources>
            <resource>
              <!-- this is relative to the pom.xml directory -->
              <directory>src/main/html</directory>
            </resource>
            <resource>
              <!-- this is relative to the pom.xml directory -->
              <directory>src/main/js</directory>
              <targetPath>js</targetPath>
            </resource>
          </webResources>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.mortbay.jetty</groupId>
			  <artifactId>maven-jetty-plugin</artifactId>
			</plugin>
		</plugins>
	</build>
</project>