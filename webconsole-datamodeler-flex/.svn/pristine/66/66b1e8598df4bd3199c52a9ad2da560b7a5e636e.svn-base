	public class DataModelEditorMediator extends Mediator
	{
		[Inject] public var view:DataModelEditor;
		[Inject] public var appParameterModel:AppParameterModel;
		[Inject] public var userModel:IUser;
		[Inject] public var model:InputModel;
		[Inject] public var enrichModel:EnrichmentModel;
		[Inject] public var dmDirectory:DataModelDirectory;
		[Inject] public var dataModelDir:DataModelDirectory;
		[Inject] public var parserDir:ParserDirectory;
		[Inject] public var enrichDir:EnrichmentDirectory;
		[Inject] public var dataModelUsageModel:DataModelUsageModel;
		[Inject] public var dataModelUsagePolling:IDataModelUsagePollingService;
		
		private var openOrNewPopup:OpenOrNewPopup;
		private var saveIsSaveAs:Boolean = false;
		private var fileRef : FileReference;
		
		public function DataModelEditorMediator()
		{
			super();
		}
		
		// Safe to attach these listeners here ... context is initialized onCreationComplete of Application
		override public function onRegister():void
		{
			super.onRegister();
			
			// Startup Event Listeners
			eventMap.mapListener(eventDispatcher, BatchOperationStatusEvent.BATCH_OPERATION, onStartupBatchStatusEvent);

			// Progress Bar
			eventMap.mapListener(eventDispatcher, PopupEvent.PROGRESS_BAR_POPUP_BEGIN, handleProgressPopupBegin);
			eventMap.mapListener(eventDispatcher, PopupEvent.PROGRESS_BAR_POPUP_UPDATE, handleProgressPopupUpdate);
			eventMap.mapListener(eventDispatcher, PopupEvent.PROGRESS_BAR_POPUP_END, handleProgressPopupEnd);
			
			// View Event Listeners
			eventMap.mapListener(view.saveDataModelButton, MouseEvent.CLICK, onSaveDataModelClick);
			eventMap.mapListener(view.saveDataModelAsButton, MouseEvent.CLICK, onSaveDataModelAsClick);
			eventMap.mapListener(view.newDataModelButton, MouseEvent.CLICK, onNewDataModelClick);
			eventMap.mapListener(view.openDataModelButton, MouseEvent.CLICK, onOpenDataModelClick);
			eventMap.mapListener(view.uploadDataModelButton, MouseEvent.CLICK, onUploadDataModelClick);
			eventMap.mapListener(view.downloadDataModelButton, MouseEvent.CLICK, onDownloadDataModelClick);
			
			// Context Event Listeners
			eventMap.mapListener(eventDispatcher, ModelServiceEvent.MODEL_SAVED, onModelSaved);
			eventMap.mapListener(eventDispatcher, PopupEvent.SAVE_MODEL_AS, onModelSaveAsReady);
			eventMap.mapListener(eventDispatcher, ModelServiceEvent.NEW_MODEL_DONE, onNewDataModelReady);
			eventMap.mapListener(eventDispatcher, ModelServiceEvent.MODEL_LOADED, onModelLoaded);
			eventMap.mapListener(eventDispatcher, ModelServiceEvent.MODEL_WIZARD_LOADED, onModelLoaded);
			eventMap.mapListener(eventDispatcher, PopupEvent.MESSAGE_POPUP, handleMessageBegin);			
			eventMap.mapListener(eventDispatcher, ModelServiceEvent.DM_USAGE_UPDATED, onDmUsageUpdated);
		}
		
		override public function preRemove():void
		{
			super.preRemove();
			
			// Startup Event Listeners
			
			// View Event Listeners
			eventMap.unmapListener(view.saveDataModelButton, MouseEvent.CLICK, onSaveDataModelClick);
			eventMap.unmapListener(view.saveDataModelAsButton, MouseEvent.CLICK, onSaveDataModelAsClick);
			eventMap.unmapListener(view.newDataModelButton, MouseEvent.CLICK, onNewDataModelClick);
			eventMap.unmapListener(view.openDataModelButton, MouseEvent.CLICK, onOpenDataModelClick);
			
			// Context Event Listeners
			eventMap.unmapListener(eventDispatcher, ModelServiceEvent.MODEL_SAVED, onModelSaved);
			eventMap.unmapListener(eventDispatcher, PopupEvent.SAVE_MODEL_AS, onModelSaveAsReady);
			eventMap.unmapListener(eventDispatcher, ModelServiceEvent.NEW_MODEL_DONE, onNewDataModelReady);
			eventMap.unmapListener(eventDispatcher, ModelServiceEvent.MODEL_LOADED, onModelLoaded);
			eventMap.unmapListener(eventDispatcher, ModelServiceEvent.MODEL_WIZARD_LOADED, onModelLoaded);
			eventMap.unmapListener(eventDispatcher, PopupEvent.MESSAGE_POPUP, handleMessageBegin);
		}
		
		private function saveModel(nestedEvent:Event):void {
			var params:Object = { dataModelName:model.dataModelName };
			var errorMsg:StatusMessage;
			var saveModelEvent:ModelServiceEvent = new ModelServiceEvent(ModelServiceEvent.SAVE_MODEL, params, nestedEvent);
			if (dataModelUsageModel.usageStatus == DataModelUsageStatus.UNKNOWN) {
				errorMsg = new StatusMessage(StatusType.ERROR,
					"The usage status of data model '" + model.dataModelName + " is unknown. Please try again shortly."); 
				dispatch(new PopupEvent(PopupEvent.MESSAGE_POPUP, null, errorMsg));				
			}
			else if (dataModelUsageModel.usageStatus == DataModelUsageStatus.IN_USE) {
				errorMsg = new StatusMessage(StatusType.ERROR,
					"Data model '" + model.dataModelName + "' is in use. Please shutdown the systems referencing it or increment the version number using Save-As."); 
				dispatch(new PopupEvent(PopupEvent.MESSAGE_POPUP, null, errorMsg));								
			}
			else {
				SpinnerPopup.createSpinnerPopup(view.parent);
				eventDispatcher.dispatchEvent(saveModelEvent);
			}
		}
		
		/**
		 * User clicked the Save button.
		 */ 
		private function onSaveDataModelClick(event:MouseEvent):void
		{
			if (saveIsSaveAs) {
				onSaveDataModelAsClick(event);
			}
			else {
				saveModel(null);
			}
		}
		
		protected function onModelSaved(event:ModelServiceEvent):void
		{
			saveIsSaveAs = false;						
			setModelBasedControls();
			dispatch(new ModelServiceEvent(ModelServiceEvent.START_DM_USAGE_POLLING, model.dataModelName, null));
		}
		
		/**
		 * User clicked the Save As button. Here we have to popup a dialog so they can set the name.
		 */ 
		private function onSaveDataModelAsClick(event:MouseEvent):void
		{
			SpinnerPopup.createSpinnerPopup(view.parent);
			var dirParams:Object = {tenant:null, visibility:RepositoryConstants.PRIVATE};
			var nestedEvent:PopupEvent = new PopupEvent(PopupEvent.SAVE_MODEL_AS);
			eventDispatcher.dispatchEvent(new ModelServiceEvent(ModelServiceEvent.LOAD_MODEL_DIR, dirParams, nestedEvent));
		}
		
		protected var saveDataModelAsPopup:SaveDataModelAsPopup;
		
		protected function onModelSaveAsReady(event:PopupEvent):void {
			saveDataModelAsPopup = new SaveDataModelAsPopup();
			saveDataModelAsPopup.nestedEvent = event.nestedEvent;
			saveDataModelAsPopup.dataModelName = model.dataModelName;
			saveDataModelAsPopup.existingDataModelNames = dmDirectory.dataModelNames;
			saveDataModelAsPopup.usageStatus = dataModelUsageModel.usageStatus;
			saveDataModelAsPopup.addEventListener(PopupEvent.SAVE_MODEL_AS_DONE, handleSaveModelAsDone);
			saveDataModelAsPopup.addEventListener(CloseEvent.CLOSE, handleSaveModelAsClose );
			saveDataModelAsPopup.addEventListener(ModelServiceEvent.DM_USAGE_CHECK, handleSaveAsDmUsageCheck);
			dataModelUsagePolling.suspend();
			PopUpManager.addPopUp(saveDataModelAsPopup, contextView, true);
			PopUpManager.centerPopUp(saveDataModelAsPopup);
		}
		
		protected function handleSaveModelAsClose( event:CloseEvent):void {
			PopUpManager.removePopUp(saveDataModelAsPopup);
			handleSaveModelAsDone(null);
		}
		
		protected function handleSaveAsDmUsageCheck(event:ModelServiceEvent):void {
			dispatch(event);
		}
		
		protected function handleSaveModelAsDone(event:PopupEvent):void {
			saveDataModelAsPopup.removeEventListener(PopupEvent.SAVE_MODEL_AS_DONE, handleSaveModelAsDone);
			saveDataModelAsPopup.removeEventListener(CloseEvent.CLOSE, handleSaveModelAsClose );
			saveDataModelAsPopup.removeEventListener(ModelServiceEvent.DM_USAGE_CHECK, handleSaveAsDmUsageCheck);
			saveDataModelAsPopup = null;
			dataModelUsagePolling.resume();
			if ((event != null) && (event.parameters != null)) {
				var dataModelName:DataModelName = event.parameters as DataModelName;
				model.dataModelName = dataModelName; // Overwrite the data model name
				saveModel(event.nestedEvent);
			}
		}
		
		/**
		 * User clicked the New button.
		 */ 
		private function onNewDataModelClick(event:MouseEvent):void
		{
			eventDispatcher.dispatchEvent(new ModelServiceEvent(ModelServiceEvent.NEW_MODEL, null, null));
		}
		
		private function onNewDataModelReady(event:ModelServiceEvent):void
		{
			saveIsSaveAs = true;
			setModelBasedControls();
			dispatch(new ModelServiceEvent(ModelServiceEvent.RESET_DM_USAGE_POLLING, null, null));
		}
		
		/**
		 * User clicked the Open button.
		 */ 
		private function onOpenDataModelClick(event:MouseEvent):void
		{
			SpinnerPopup.createSpinnerPopup(view.parent);
			var dirParams:Object = {tenant:null, visibility:RepositoryConstants.PRIVATE};
			var nestedEvent:PopupEvent = new PopupEvent(PopupEvent.OPEN_MODEL, null, dirParams.visibility);
			this.eventDispatcher.dispatchEvent(new ModelServiceEvent(ModelServiceEvent.LOAD_MODEL_DIR, dirParams, nestedEvent));
		}
		
		private function onFileErrorEvent(event:Event):void
		{
			var statusMsg:StatusMessage;
			if (event is IOErrorEvent) {
				var ioErrorEvent:IOErrorEvent = event as IOErrorEvent;
				statusMsg = new StatusMessage(StatusType.ERROR,
					"IO Error: " + ioErrorEvent.text);
				dispatch(new PopupEvent(PopupEvent.MESSAGE_POPUP, null, statusMsg));				
			}
			else if (event is SecurityErrorEvent) {
				var securityErrorEvent:SecurityErrorEvent = event as SecurityErrorEvent;
				statusMsg = new StatusMessage(StatusType.ERROR,
					"Security Error: " + securityErrorEvent.text);
				dispatch(new PopupEvent(PopupEvent.MESSAGE_POPUP, null, statusMsg));				
			}
			fileRef.cancel();
			fileRef = null;
		}
		
		private function onFileLoadedEvent(event:Event):void {
			var statusMsg:StatusMessage;
			
			fileRef.removeEventListener(Event.COMPLETE, onFileLoadedEvent);
			fileRef.removeEventListener(IOErrorEvent.IO_ERROR, onFileErrorEvent);
			fileRef.removeEventListener(SecurityErrorEvent.SECURITY_ERROR, onFileErrorEvent);
			
			var dataModelName:DataModelName = new DataModelName(fileRef.name, RepositoryConstants.PRIVATE);
			
			try {
				var dmZipFile:DataModelZipFile = new DataModelZipFile(fileRef.data);
				
				var messages:Array = LoadSaveUtils.loadDataModelZip(
					dataModelName, model, enrichModel, parserDir, enrichDir, dmZipFile);
				
				if (messages.length > 0) {
					statusMsg = new StatusMessage(StatusType.WARN, LoadSaveUtils.buildErrorsAndWarnings(messages));
					dispatch(new PopupEvent(PopupEvent.MESSAGE_POPUP, null, statusMsg));
				}
			}
			catch (e:Error) {
				statusMsg = new StatusMessage(StatusType.ERROR, "Data model cannot be properly loaded: " + e.toString() );
				dispatch(new PopupEvent(PopupEvent.MESSAGE_POPUP, null, statusMsg));
			}			
			
			dispatch(new ModelServiceEvent(ModelServiceEvent.MODEL_LOADED, dataModelName, null));
		}
		
		private function onFileSelectHandler(event:Event):void
		{
			fileRef.removeEventListener(Event.SELECT, onFileSelectHandler);
			
			fileRef.addEventListener(Event.COMPLETE, onFileLoadedEvent);
			fileRef.addEventListener(IOErrorEvent.IO_ERROR, onFileErrorEvent);
			fileRef.addEventListener(SecurityErrorEvent.SECURITY_ERROR, onFileErrorEvent);
			fileRef.load();
		}			
		
		/**
		 * User clicked the upload data model button to load a data model file stored
		 * on thier local system into the editor.
		 */ 
		private function onUploadDataModelClick(event:MouseEvent):void
		{
			fileRef = new FileReference();
			fileRef.addEventListener(Event.SELECT, onFileSelectHandler);			
			var fileFilter:FileFilter = new FileFilter("Data Model Files: (*.zip)", "*.zip");
			fileRef.browse([fileFilter]);
		}

		private function onSaveComplete(event:Event):void {
			fileRef.removeEventListener(IOErrorEvent.IO_ERROR, onFileErrorEvent);
			fileRef.removeEventListener(SecurityErrorEvent.SECURITY_ERROR, onFileErrorEvent);
			fileRef.removeEventListener(Event.COMPLETE, onSaveComplete);
			fileRef = null;
		}
		
		/**
		 * User clicked the download data model button to save a copy of the data model to thier local system.
		 */ 
		private function onDownloadDataModelClick(event:MouseEvent):void
		{
			var zipFile:DataModelZipFile = LoadSaveUtils.makeDataModelZip(model, enrichModel);			
			var zipBytes:ByteArray = zipFile.getZipFileData();
			fileRef = new FileReference();
			var dataModelName:DataModelName = model.dataModelName;
			fileRef.addEventListener(IOErrorEvent.IO_ERROR, onFileErrorEvent);
			fileRef.addEventListener(SecurityErrorEvent.SECURITY_ERROR, onFileErrorEvent);
			fileRef.addEventListener(Event.COMPLETE, onSaveComplete);
			fileRef.save(zipBytes, dataModelName.getZipFilename());
		}
		
		private function onModelLoaded(event:ModelServiceEvent):void
		{
			saveIsSaveAs = false;
			setModelBasedControls();
			dataModelUsageModel.usageStatus = DataModelUsageStatus.UNKNOWN;
			dispatch(new ModelServiceEvent(ModelServiceEvent.START_DM_USAGE_POLLING, model.dataModelName, null));
			dispatch(new ModelServiceEvent(ModelServiceEvent.DM_USAGE_CHECK, model.dataModelName, null));
		}
		
		private function setModelBasedControls():void {
			view.currDocTitle.text = model.dataModelName.toString();
			view.currDocTitle.toolTip = model.dataModelName.toString();
			view.usageText = dataModelUsageModel.usageStatus.displayText;
			view.usageColor = dataModelUsageModel.usageStatus.color;
		}
		
		private function onDmUsageUpdated(event:ModelServiceEvent):void {
			var usageStatus:DataModelUsageStatus = dataModelUsageModel.usageStatus;
			if (saveDataModelAsPopup != null) {
				saveDataModelAsPopup.dmStatusUpdate(dataModelUsageModel.usageStatus);
			}
			else {
				view.usageText = usageStatus.displayText;
				view.usageColor = usageStatus.color;			
				view.systemList = dataModelUsageModel.systemReferences;
				view.dmStatus.visible = !dataModelUsageModel.updateInProgress;
			}
		}
		
		/********************** Message Popup ****************************/
		
		protected var messagePopup:MessagePopup;
		
		protected function handleMessageBegin(event:PopupEvent):void {
			messagePopup = new MessagePopup();
			
			var statusMsg:StatusMessage = event.parameters as StatusMessage;

			if ((statusMsg.type == StatusType.PROGRESS) || (statusMsg.type == StatusType.FATAL))
				messagePopup.currentState = "showNone";
			else if (event.nestedEvent != null)
				messagePopup.currentState = "showOkCancel";
			else
				messagePopup.currentState = "showOk";
			
			messagePopup.message = statusMsg;
			messagePopup.nestedEvent = event.nestedEvent;
			messagePopup.addEventListener(PopupEvent.MESSAGE_POPUP_DONE, handleMessageEnd);
			messagePopup.addEventListener(CloseEvent.CLOSE, handleMessageClose);
			trace("handleMessageBegin messagePopup.currentState = " + messagePopup.currentState );
			trace("handleMessageBegin messagePopup.message      = " + messagePopup.message );
			PopUpManager.addPopUp(messagePopup, contextView, true);
			PopUpManager.centerPopUp(messagePopup);
		}
		
		protected function handleMessageClose(event:CloseEvent):void {
			handleMessageEnd(null);
		}
		
		protected function handleMessageEnd(event:PopupEvent):void {
			trace("handleMessageEnd");
			messagePopup.removeEventListener(PopupEvent.MESSAGE_POPUP_DONE, handleMessageEnd);
			messagePopup.removeEventListener(CloseEvent.CLOSE, handleMessageClose);
			PopUpManager.removePopUp(messagePopup);
			if ((event != null) && (event.nestedEvent != null)) {
				dispatch(event.nestedEvent);
			}
		}
		
		/********************** Progress Bar ****************************/
		
		protected var progressPopup:ProgressPopup;
		
		protected function handleProgressPopupBegin(event:PopupEvent):void {
			progressPopup = new ProgressPopup();
			progressPopup.progressLabel = event.parameters as String;
			PopUpManager.addPopUp(progressPopup, contextView, true);
			PopUpManager.centerPopUp(progressPopup);
		}
		
		protected function handleProgressPopupUpdate(event:PopupEvent):void {
			if (progressPopup != null) {
				var value:Number = event.parameters as Number;
				progressPopup.setProgress(value);
			}
		}
		
		protected function handleProgressPopupEnd(event:PopupEvent):void {
			PopUpManager.removePopUp(progressPopup);
			progressPopup = null;
			if (event.nestedEvent != null) {
				dispatch(event.nestedEvent);
			}
		}
		
		/* ==============================================
		 * App Launch Support
		 * ============================================== */
		
		private function onStartupBatchStatusEvent(event:BatchOperationStatusEvent):void
		{
			if(event == null || StringUtil.stringHasValue(event.subType) == false || DataModelEditor.STARTUP_TRACKING_TOKEN !== event.trackingToken)
			{
				return;
			}
			
			var isStartupComplete:Boolean = false;
			
			if(OperationStatusEvent.SUB_TYPE_SUCCESS == event.subType)
			{
				isStartupComplete = true;
				view.loadingStatusText.text = "App Load Complete";
				
				if(userModel != null)
				{
					// Preserve previous services
					appParameterModel.username = userModel.tenantId;
					appParameterModel.password = userModel.tenantId;
					// Preserve previous services
				}
				
				view.currentState = "editing";
				
				openOrNewPopup = new OpenOrNewPopup();
				PopUpManager.addPopUp(openOrNewPopup, contextView, true);
				PopUpManager.centerPopUp(openOrNewPopup);
				mediatorMap.createMediator(openOrNewPopup);
			}
			else if(OperationStatusEvent.SUB_TYPE_FAILURE == event.subType)
			{
				isStartupComplete = true;
				view.currentState = "loading";
				view.loadingStatusText.text = "Load Failed. Please notify your system administrator";
			}
			else if(OperationStatusEvent.SUB_TYPE_PROGRESS == event.subType)
			{
				view.currentState = "loading";
				view.loadingStatusText.text = "Please wait. Loading Data Model Editor ...";
			}
			
			if(isStartupComplete)
			{
				this.eventMap.unmapListener(eventDispatcher, BatchOperationStatusEvent.BATCH_OPERATION, onStartupBatchStatusEvent);
			}
		}
	}
