{
	import com.deleidos.rtws.tc.events.LogEvent;
	import com.deleidos.rtws.tc.events.LogsEvent;
	import com.deleidos.rtws.tc.events.ParameterEvent;
	import com.deleidos.rtws.tc.models.Process;
	import com.deleidos.rtws.tc.models.ProcessGroup;
	import com.deleidos.rtws.tc.models.SystemModel;
	import com.deleidos.rtws.tc.utils.StatusMessageFactory;
	import com.deleidos.rtws.tc.utils.SystemUtilities;
	import com.deleidos.rtws.tc.utils.ViewUtilities;
	
	import flash.events.Event;
	import flash.events.FocusEvent;
	import flash.events.MouseEvent;
	import flash.utils.getTimer;
	
	import mx.collections.ArrayCollection;
	import mx.collections.Sort;
	import mx.collections.SortField;
	import mx.controls.Alert;
	import mx.controls.treeClasses.TreeItemRenderer;
	import mx.controls.treeClasses.TreeListData;
	import mx.events.CloseEvent;
	import mx.events.FlexEvent;
	import mx.events.ListEvent;
	import mx.managers.PopUpManager;
	import mx.rpc.events.FaultEvent;
	
	import org.robotlegs.mvcs.Mediator;
	
	import spark.components.VScrollBar;
	import spark.events.TextOperationEvent;
	import spark.formatters.NumberFormatter;

	public class LogViewerMediator extends Mediator
	{			
		[Inject] public var view:LogViewer;
		[Inject] public var systemModel:SystemModel;
		
		private const FORWARD:int = 0;
		private const BACKWARD:int = 1;
		
		private var selectedInstanceId:String;
		private var selectedParentPath:String;
		private var selectedFilePath:String;
		private var masterDns:String;
		private var instanceDns:String;
		private var treeSort:Sort;
		private var totalLines:int = -1;
		private var totalFiles:int = -1;
		private var retrieveDirection:int = -1;
		private var totalLinesRetrieved:int = 0;
		private var allLinesRetrieved:Boolean = false;
		private var lastSearchPosition:int = 0;
		
		private var startTime:int;
		
		private static const MAX_LINES :Number = 500;
		
		public override function onRegister():void
		{
			view.firstButton.addEventListener(MouseEvent.CLICK, handleFirstButton);
			view.lastButton.addEventListener(MouseEvent.CLICK, handleLastButton);
			view.closeButton.addEventListener(MouseEvent.CLICK, handleCloseButton);
			view.instanceListingTree.addEventListener(ListEvent.CHANGE, handleInstanceListingTreeChangeEvent);
			view.logListingTree.addEventListener(ListEvent.CHANGE, handleLogListingTreeChangeEvent);
			view.contentTextArea.scroller.verticalScrollBar.addEventListener(Event.CHANGE, handleVerticalScrollChangeEvent);
			view.findTextInput.addEventListener(TextOperationEvent.CHANGE, handleFindTextInputChangeEvent);
			view.findTextInput.addEventListener(FocusEvent.FOCUS_IN, handleFindTextFocusInEvent);
			view.findTextInput.addEventListener(FlexEvent.ENTER, handleFindTextEnterKeyEvent);
			view.searchForwardButton.addEventListener(MouseEvent.CLICK, handleSearchForwardButton);
			
			eventMap.mapListener(eventDispatcher, LogsEvent.RETRIEVE_LOG_FILES_LISTING_BY_PROXY_SUCCESS, handleRetrieveLogFilesListingByProxySuccess);
			eventMap.mapListener(eventDispatcher, LogsEvent.RETRIEVE_LOG_FILES_LISTING_BY_PROXY_ERROR, handleRetrieveLogFilesListingByProxyError);
			eventMap.mapListener(eventDispatcher, LogEvent.RETRIEVE_LOG_BY_PROXY_SUCCESS, handleRetrieveLogByProxySuccess);
			eventMap.mapListener(eventDispatcher, LogEvent.RETRIEVE_LOG_BY_PROXY_ERROR, handleRetrieveLogByProxyError);
			
			view.firstButton.enabled = false;
			view.lastButton.enabled = false;
			view.findTextInput.enabled = false;
			view.searchForwardButton.enabled = false;
			view.currentState = view.progressGroupOnly.name;
			
			this.treeSort = new Sort();
			treeSort.fields = [new SortField("label", true)];
			
			view.title = "Log Viewer for " + view.system.name;
			
			populateInstanceListingTree();
		}
		
		public override function onRemove():void
		{
			eventMap.unmapListener(eventDispatcher, LogsEvent.RETRIEVE_LOG_FILES_LISTING_BY_PROXY_SUCCESS, handleRetrieveLogFilesListingByProxySuccess);
			eventMap.unmapListener(eventDispatcher, LogsEvent.RETRIEVE_LOG_FILES_LISTING_BY_PROXY_ERROR, handleRetrieveLogFilesListingByProxyError);
			eventMap.unmapListener(eventDispatcher, LogEvent.RETRIEVE_LOG_BY_PROXY_SUCCESS, handleRetrieveLogByProxySuccess);
			eventMap.unmapListener(eventDispatcher, LogEvent.RETRIEVE_LOG_BY_PROXY_ERROR, handleRetrieveLogByProxyError);
			
			view.firstButton.removeEventListener(MouseEvent.CLICK, handleFirstButton);
			view.lastButton.removeEventListener(MouseEvent.CLICK, handleLastButton);
			view.closeButton.removeEventListener(MouseEvent.CLICK, handleCloseButton);
			view.instanceListingTree.removeEventListener(ListEvent.CHANGE, handleInstanceListingTreeChangeEvent);
			view.logListingTree.removeEventListener(ListEvent.CHANGE, handleLogListingTreeChangeEvent);
			view.contentTextArea.scroller.verticalScrollBar.removeEventListener(Event.CHANGE, handleVerticalScrollChangeEvent);
			view.findTextInput.removeEventListener(TextOperationEvent.CHANGE, handleFindTextInputChangeEvent);
			view.findTextInput.removeEventListener(FocusEvent.FOCUS_IN, handleFindTextFocusInEvent);
			view.findTextInput.removeEventListener(FlexEvent.ENTER, handleFindTextEnterKeyEvent);
			view.searchForwardButton.removeEventListener(MouseEvent.CLICK, handleSearchForwardButton);
		}
		
		protected function requestLogListingForCurrentInstance():void {
			
			view.firstButton.enabled = false;
			view.lastButton.enabled = false;
			view.findTextInput.enabled = false;
			view.searchForwardButton.enabled = false;				
			view.contentTextArea.text = "";
			view.logListingData = new ArrayCollection();
			
			var eventQueue:Array = new Array();
			eventQueue.push(new LogsEvent(LogsEvent.RETRIEVE_LOG_FILES_LISTING_BY_PROXY, 
				{"proxyhost" : this.masterDns, "targethost" : this.instanceDns}));
			
			var successEvents:Array = new Array();
			successEvents.push(LogsEvent.RETRIEVE_LOG_FILES_LISTING_BY_PROXY_SUCCESS);
			
			var errorEvents:Array = new Array();
			errorEvents.push(LogsEvent.RETRIEVE_LOG_FILES_LISTING_BY_PROXY_ERROR);
			
			ViewUtilities.dispatchProcessingView(mediatorMap, contextView, eventQueue, successEvents, errorEvents, false);			
		}

		/**
		 * Called when the user selects an instance.
		 */
		protected function handleInstanceListingTreeChangeEvent(event:ListEvent):void
		{
			var renderer:TreeItemRenderer = TreeItemRenderer(event.itemRenderer);
			var listData:TreeListData = TreeListData(renderer.listData);
			
			if (listData != null && ! listData.hasChildren) {
								
				var pg:String = String(view.instanceListingTree.getParentItem(listData));
				
				this.selectedInstanceId = listData.label;
				
				if (view.system.vpcId == null || view.system.vpcId == "-") {
					var master:Process = SystemUtilities.locateMasterNode(view.system);
					this.masterDns = master.privateIpAddress;
				} else {
					this.masterDns = view.system.name;
				}
				
				var process:Process = SystemUtilities.locateProcess(view.system, this.selectedInstanceId);
				this.instanceDns = process.privateIpAddress;
				
				requestLogListingForCurrentInstance();
			}
		}
		
		private function reset(direction:int):void {
			totalLines = -1;
			totalFiles = -1;
			totalLinesRetrieved = 0;
			retrieveDirection = direction;
			view.contentTextArea.text = "";
			allLinesRetrieved = false;
		}
		
		private function makeFaultString(faultEvent:FaultEvent):String {
			return faultEvent.fault.faultString + ", code=" + faultEvent.statusCode;
		}

		/**
		 * Called when the user selects a log file.
		 */
		protected function handleLogListingTreeChangeEvent(event:ListEvent):void
		{
			var renderer:TreeItemRenderer = TreeItemRenderer(event.itemRenderer);
			var listData:TreeListData = TreeListData(renderer.listData);

			if (! listData.hasChildren) {
				var parent:Object = view.logListingTree.getParentItem(listData);
				this.selectedParentPath = parent.label;
				this.selectedFilePath = parent.label + '/' + listData.label;

				reset(FORWARD);

				var start:Number = 1;
				var end:Number = MAX_LINES;

				view.retrievingLabel.visible = view.inlineSpinner.visible = false;
				
				var eventQueue:Array = new Array();
				eventQueue.push(new LogEvent(LogEvent.RETRIEVE_LOG_BY_PROXY, {"proxyhost" : this.masterDns, 
					"targethost" : this.instanceDns, "filepath" : this.selectedFilePath, "start" : start.toString(), "end" : end.toString()}));
				
				var successEvents:Array = new Array();
				successEvents.push(LogEvent.RETRIEVE_LOG_BY_PROXY_SUCCESS);
				
				var errorEvents:Array = new Array();
				errorEvents.push(LogEvent.RETRIEVE_LOG_BY_PROXY_ERROR);
				
				ViewUtilities.dispatchProcessingView(mediatorMap, contextView, eventQueue, successEvents, errorEvents, false);
			}
		}
		
		protected function handleRetrieveLogFilesListingByProxySuccess(event:LogsEvent):void
		{
			view.message = null;
			view.logListingData = event.parameters.logs;
			view.logListingData.sort = this.treeSort;
			
			for (var i:int = 0; i < view.logListingData.length; i++)
			{
				var directory:Object = view.logListingData.getItemAt(i);
				
				if (directory["children"] != null) 
				{
					var logs:ArrayCollection = ArrayCollection(directory["children"]);
					logs.sort = this.treeSort;
					logs.refresh();
				}
			}
			
			view.currentState = view.instanceSelected.name;
			
			view.logListingData.refresh();
		}
		
		protected function handleRetrieveLogFilesListingByProxyError(event:LogsEvent):void
		{
			var faultEvent:FaultEvent = event.parameters.faultEvent;
			view.message = StatusMessageFactory.createErrorMessage("Unable to retrieve log file listing from target host ("+ makeFaultString(faultEvent) + ").");
		}
		
		protected function fileCountChangedAlertHandler(event:CloseEvent):void {
			requestLogListingForCurrentInstance();			
		}
		
		protected function handleRetrieveLogByProxySuccess(event:LogEvent):void
		{
			view.message = null;
			
			var elapsed:int = getTimer() - startTime;
			// trace("Retrieval response time = " + elapsed);
			startTime = getTimer();
				
			var filepath:String = event.parameters.context.filepath;
			var startString:String = event.parameters.context.start;
			var endString:String = event.parameters.context.end;
			var vScrollBar:VScrollBar = view.contentTextArea.scroller.verticalScrollBar;
			var oldTotalLinesRetrieved:int = totalLinesRetrieved;
			var eventTotalFiles:int = totalFiles;

			// Re-enable controls
			view.retrievingLabel.visible = view.inlineSpinner.visible = false;
			view.instanceListingTree.enabled = true;
			view.logListingTree.enabled = true;
			
			// Get totalLines and totalFiles if the values make sense
			if (event.parameters.totalLines > 0) {
				totalLines = event.parameters.totalLines;				
			}
			if (event.parameters.totalFiles > 0) {
				eventTotalFiles = event.parameters.totalFiles;				
			}

			// Detect if the number of files has changed
			if ((totalFiles > 0) && (eventTotalFiles != totalFiles)) {
				Alert.show(
					"The number of files in " + selectedParentPath + " has changed, so the process group log list must be refreshed.",
					"Warning",
					Alert.OK,
					view,
					fileCountChangedAlertHandler);				
			}
			else {
				var retrievedLines:String = "";
				var originalContentLength:int = view.contentTextArea.text.length;
				var linesRetrieved:int = 0;
				var content:Object = event.parameters.content;
				var startKey:int = int.MAX_VALUE;
				var counter:int = 0;

				totalFiles = eventTotalFiles;

				// Get the lines, make sure we do it in order
				for (var key:String in content) {
					startKey = Math.min(parseInt(key), startKey);
					linesRetrieved++;
				}
				for (var i:int=0; i<linesRetrieved; i++) {
					retrievedLines += content[startKey++] + "\n";
				}
	
				// Total the lines retrieved, determine if there's no more file
				totalLinesRetrieved += linesRetrieved;
				allLinesRetrieved = ((totalLines > 0) && (totalLinesRetrieved >= totalLines)) || (linesRetrieved < MAX_LINES);

				// Markers
				var endOfFileMarker:String = "____________________ End of File ____________________\n";							
				if ((startString == "1") || ((startString=="-1") && allLinesRetrieved)) {
					retrievedLines = "____________________ Start of File ____________________\n" + retrievedLines;
				}
				
				if (retrieveDirection == FORWARD) {
					// Did we get to the end?
					if (allLinesRetrieved) {
						retrievedLines = retrievedLines + endOfFileMarker;
					}
					// Append to the end
					view.contentTextArea.text = view.contentTextArea.text + retrievedLines;
				}
				else {
					// When going in reverse the first time is EOF
					if (startString == "-1") {
						retrievedLines = retrievedLines + endOfFileMarker;
					}
					// Insert into the beginning
					view.contentTextArea.text = retrievedLines + view.contentTextArea.text;
				}
	
				// Determine the state of the log textarea and compute the percent complete
				if ((totalLinesRetrieved == 0) && (linesRetrieved == 0)) {
					view.currentState = view.logFileEmpty.name;
					view.percentInFileLabel.text = "100%";
				}
				else if (allLinesRetrieved) {
					view.percentInFileLabel.text = "100%";
					view.currentState = view.logFileSelected.name;					
				}
				else if (totalLines <= 0) {
					view.currentState = view.logFileSelected.name;
					view.percentInFileLabel.text = "";
				}
				else {
					view.currentState = view.logFileSelected.name;
					var percent:Number = ((totalLinesRetrieved as Number) / (totalLines as Number)) * 100.0;
					var numberFormatter:NumberFormatter = new NumberFormatter();
					numberFormatter.fractionalDigits = 0;
					view.percentInFileLabel.text = numberFormatter.format(percent) + "%"; 
				}
	
				view.contentTextArea.validateNow();
				
				if (startString == "-1") {
					// Scroll to the bottom if this is a "Last" request
					view.contentTextArea.scrollToRange(view.contentTextArea.text.length-1, view.contentTextArea.text.length);
				}
				else if (retrieveDirection == FORWARD) {
					// Scroll to around where the new text is
					view.contentTextArea.scrollToRange(originalContentLength-1, originalContentLength);
				}
				else if (retrieveDirection == BACKWARD) {
					// Scroll to ensure the new text is visible
					view.contentTextArea.scrollToRange(retrievedLines.length, retrievedLines.length+1);
				}
				
				view.firstButton.enabled = true;
				view.lastButton.enabled = true;			
				view.findTextInput.enabled = true;
				view.searchForwardButton.enabled = true;
			}
			
			elapsed = getTimer() - startTime;
			// trace("Refresh response time = " + elapsed);
		}
		
		protected function handleRetrieveLogByProxyError(event:LogEvent):void
		{
			var context:Object = event.parameters.context;
			var faultEvent:FaultEvent = event.parameters.faultEvent;
			view.contentTextArea.text = "";
			var msg:String = "Unable to retrieve log file from target host (" + makeFaultString(faultEvent) + ")"
			if ((faultEvent.statusCode == 500) && (retrieveDirection == BACKWARD)) {
				msg += ". Note that the Last button is only supported on systems running version 1.2 or greater";
			}
			msg += ".";
			view.message = StatusMessageFactory.createErrorMessage(msg);
			view.retrievingLabel.visible = view.inlineSpinner.visible = false;			
			view.firstButton.enabled = true;
			view.lastButton.enabled = true;
			view.instanceListingTree.enabled = true;
			view.logListingTree.enabled = true;
			view.findTextInput.enabled = true;
			view.searchForwardButton.enabled = true;
		}
		
		protected function handleFirstButton(event:MouseEvent):void
		{
			reset(FORWARD);
			
			var start:Number = 1;
			var end:Number = MAX_LINES;
			
			var eventQueue:Array = new Array();
			eventQueue.push(new LogEvent(LogEvent.RETRIEVE_LOG_BY_PROXY, {"proxyhost" : this.masterDns, 
				"targethost" : this.instanceDns, "filepath" : this.selectedFilePath, 
				"start" : start.toString(), "end" : end.toString()}));
			
			var successEvents:Array = new Array();
			successEvents.push(LogEvent.RETRIEVE_LOG_BY_PROXY_SUCCESS);
			
			var errorEvents:Array = new Array();
			errorEvents.push(LogEvent.RETRIEVE_LOG_BY_PROXY_ERROR);
			
			startTime = getTimer();
			
			ViewUtilities.dispatchProcessingView(mediatorMap, contextView, eventQueue, successEvents, errorEvents, false);
		}
		
		protected function handleLastButton(event:MouseEvent):void
		{
			reset(BACKWARD);
			
			var start:Number = -1;
			var end:Number = -1;
			
			var eventQueue:Array = new Array();
			eventQueue.push(new LogEvent(LogEvent.RETRIEVE_LOG_BY_PROXY, {"proxyhost" : this.masterDns, 
				"targethost" : this.instanceDns, "filepath" : this.selectedFilePath, 
