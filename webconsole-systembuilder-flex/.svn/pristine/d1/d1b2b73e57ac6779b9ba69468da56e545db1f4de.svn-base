		// Stores all the data models that exist from opening system configuration
		private var onSysCfgLoadedDatasinkDataModels:Dictionary = new Dictionary();
		
		override public function onRegister():void {
			eventMap.mapListener(view, EditEvent.SELECT_DATASINK_PARAMETERS, handleDatasinkSelected);
			eventMap.mapListener(view, EditEvent.SELECT_TRANSPORT_PARAMETERS, handleTransportSelected);
			eventMap.mapListener(view, PopupEvent.SELECT_PERSISTENT_IP_BEGIN, handlePersistentIpPopupBegin);
			eventMap.mapListener(view, PopupEvent.MESSAGE_BEGIN, dispatch);
				
			eventMap.mapListener(eventDispatcher, EditEvent.DATASINK_DATA_MODELS_CHANGED, handleDatasinkDataModelsChanged);
			eventMap.mapListener(eventDispatcher, EditEvent.REFRESH_PROCESS_GROUP_PARAMS, handleRefreshProcessGroupParams);
			eventMap.mapListener(eventDispatcher, EditEvent.SELECTED_DATASINKS_CHANGED, handleDatasinkChange);
			eventMap.mapListener(eventDispatcher, EditEvent.SELECTED_TRANSPORTS_CHANGED, handleTransportChange);
			
			eventMap.mapListener(eventDispatcher, EditEvent.TRANSPORT_UPDATED, handleTransportUpdate);
			eventMap.mapListener(eventDispatcher, EditEvent.DATASINK_UPDATED, handleDatasinkUpdate);
			
			eventMap.mapListener(eventDispatcher, EditEvent.ADD_DATAMODEL, handleAddDataModel);
			eventMap.mapListener(eventDispatcher, EditEvent.REMOVE_DATAMODEL, handleRemoveDataModel);
			eventMap.mapListener(eventDispatcher, EditEvent.SELECTED_DATA_MODELS_CHANGED, handleDataModelChange);
			
			eventMap.mapListener(eventDispatcher, PopupEvent.SELECT_PERSISTENT_IP_BEGIN, handlePersistentIpPopupBegin);
			eventMap.mapListener(eventDispatcher, SystemConfigServiceEvent.NEW_SYSTEM_CONFIG_DONE, handleNewSystemConfigDone);	
			eventMap.mapListener(eventDispatcher, SystemConfigServiceEvent.SYSTEM_CONFIG_LOADED, handleSystemConfigLoaded);
			eventMap.mapListener(eventDispatcher, SystemConfigServiceEvent.PERSISTENT_IP_ALLOCATED, handlePersistentIpAllocated);

			view.selectedDMGrid.addEventListener(GridSelectionEvent.SELECTION_CHANGE, handleDatasinkDataModelsSelectionChange);
			
			eventMap.mapListener(view, PopupEvent.PROCESS_GROUP_CONFIG_BEGIN, handleProcessGroupConfigBegin);
			eventMap.mapListener(eventDispatcher, PopupEvent.PROCESS_GROUP_CONFIG_BEGIN, handleProcessGroupConfigBegin);
			
			eventMap.mapListener(view, PopupEvent.PROCESS_GROUP_SELECT_BEGIN, handleProcessGroupSelectBegin);
			eventMap.mapListener(view, EditEvent.REMOVE_PROCESS_GROUP, handleRemoveProcessGroup);
			
			eventMap.mapListener(eventDispatcher, SystemConfigServiceEvent.CREATE_PROCESS_GROUP_DONE, handleCreateProcessGroupDone);
			eventMap.mapListener(eventDispatcher, SystemConfigServiceEvent.DELETE_PROCESS_GROUP_DONE, handleDeleteProcessGroupDone);
			eventMap.mapListener(eventDispatcher, SystemConfigServiceEvent.RELOAD_PROCESS_CONFIG_DONE, handleReloadProcessGroupsDone);
			
			bindModel();
			
			handleNewSystemConfigDone(null);
			sysPropModel.clear();
		}
		
		private function setDatasinkParams(datasink:Datasink):void {
			view.datasinkParameters = datasink.params;
			setSelectedDatasinkDataModels(datasink);
			view.datasinkParameters.refresh();			
		}
		
		private function setTransportParams(transport:Transport):void {
			view.transportParameters = transport.params;
			view.transportParameters.refresh();			
		}
		
		private function setupDefaultDatasinkSelection():void {
			var selectedDS:ArrayCollection = datasinkModel.selectedDatasinks;
			if (selectedDS.length > 0) {
				view.datasinkCombo.selectedIndex = 0;
				var ds:Datasink = selectedDS.getItemAt(0) as Datasink;
				setDatasinkParams(ds);
				populateAllDataModels();
				setSelectedDatasinkDataModels(ds);
			} else {
				view.datasinkCombo.selectedIndex = -1;
				view.datasinkParameters = new ArrayCollection();
				view.datasinkParameters.refresh();
				view.allDataModels = new ArrayCollection();
				view.allDataModels.refresh();
			}	
		}
		
		/**
		 * Takes a selected datasink and mark all the datasink
		 * data models as selected in the datagrid.
		 */ 
		private function setSelectedDatasinkDataModels(ds:Datasink):void {
			var selected:Vector.<Object> = new Vector.<Object>();
			for (var j:int = 0; j < ds.dataModels.length; j++) {
				for (var k:int = 0; k < view.allDataModels.length; k++) {
					if ((ds.dataModels.getItemAt(j))["model"] == (view.allDataModels.getItemAt(k))["model"]) {
						selected.push(view.allDataModels.getItemAt(k));
						break;
					}
				}
			}
			
			view.selectedDMGrid.selectedItems = selected;
			view.selectedDMGrid.validateNow();
		}
		
		/**
		 * Populate the datasink data models datagrid with all the
		 * data models in the seltected list.
		 */ 
		private function populateAllDataModels():void {
			var dataModels:ArrayCollection = new ArrayCollection();
			for each (var model:DataModelName in dataModelModel.selectedDataModelNames) {
				dataModels.addItem({"model" : model.zipFilename});
			}
			view.allDataModels = dataModels;
			view.allDataModels.refresh();
		}
		
		private function setupDefaultTransportSelection():void {
			var selectedTP:ArrayCollection = transportModel.selectedTransports;
			if (selectedTP.length > 0) {
				view.transportCombo.selectedIndex = 0;
				setTransportParams(selectedTP.getItemAt(0) as Transport);
			}
			else {
				view.transportCombo.selectedIndex = -1;
				view.transportParameters = new ArrayCollection();
				view.transportParameters.refresh();			
			}			
		}
		
		protected function handleDatasinkChange( event:EditEvent ):void {
			setupDefaultDatasinkSelection();
		}		
		
		protected function handleTransportChange( event:EditEvent ):void {
			setupDefaultTransportSelection();
		}
		
		/**
		 * Need to update the details view for transports if the params changed in the overview section
		 */
		protected function handleTransportUpdate( event:EditEvent ):void {
			var transportName:String = view.transportCombo.textInput.text;
			if (transportName!= null && transportName.length > 0) {
				for each (var ts:Transport in transportModel.selectedTransports.source) {
					if (ts.name == transportName) {
						view.transportParameters = event.parameters.paramData;
						view.transportParameters.refresh();	
						break;
					}
				}
			}
		}
		
		/**
		 * Need to update the details view for datasinks if the params changed in the overview section
		 */
		protected function handleDatasinkUpdate( event:EditEvent ):void {			
			var dsName:String = view.datasinkCombo.textInput.text;
			if (dsName!= null && dsName.length > 0) {
				for each (var ds:Datasink in datasinkModel.selectedDatasinks.source) {
					if (ds.name == dsName) {
						view.datasinkParameters = event.parameters.paramData;
						view.datasinkParameters.refresh();	
						break;
					}
				}
			}
		}
		
		protected function handleDatasinkDataModelsSelectionChange( event:GridSelectionEvent ):void {
			var dataModels:ArrayCollection = new ArrayCollection();
			if (view.selectedDMGrid.selectedItems != null) {
				for (var i:int = 0; i < view.selectedDMGrid.selectedItems.length; i++) {
					dataModels.addItem(view.selectedDMGrid.selectedItems[i]);
				}
			}
			for each (var ds:Datasink in datasinkModel.selectedDatasinks.source) {
				if (ds.name == view.datasinkCombo.textInput.text) {
					ds.dataModels = dataModels;
					break;
				}
			}
			updateDatasinkDataModels();
		}
		
		/**
		 * A data model was added to the selected data models lists.
		 * Go through each datasink data models selection and add it
		 * to the list. If a datasink data models list doesn't have
		 * all the items from the selected data models lists display a
		 * popup notifying the user.
		 */ 
		protected function handleAddDataModel( event:EditEvent ):void {
			if (event.parameters == null || event.parameters.dataModelName == null) {
				return;
			}
			
			var dmn:DataModelName = DataModelName(event.parameters.dataModelName);
			if (onSysCfgLoadedDatasinkDataModels.hasOwnProperty(dmn.zipFilename)) {
				delete onSysCfgLoadedDatasinkDataModels[dmn.zipFilename];
				return;
			}
			
			var userConfiguredList:Array = new Array();
			for each (var ds:Datasink in datasinkModel.selectedDatasinks.source) {
				var idx:int = findDatasinkDataModelIdx(ds, dmn);
				if (idx == -1) {
					// The data model doesn't exist in this list, add it.
					ds.dataModels.addItem({"model" : dmn.zipFilename});
				}
				if (dataModelModel.selectedDataModelNames.length != ds.dataModels.length) {
					// This list stores all the datasink that was manually configured by the user.
					userConfiguredList.push(ds.name);
				}
			}
			
			if (userConfiguredList.length > 0) {
				var msg:String = "The following datasinks doesn't include all data models [";
				for (var j:int = 0; j < userConfiguredList.length; j++) {
					msg += (j == 0) ? userConfiguredList[j] : "," + userConfiguredList[j];
				}
				msg += "].";
				popupStatusMessage(StatusType.INFO, msg);
			}
			updateDatasinkDataModels();
		}
		
		/**
		 * A data model was removed from the selected data models lists.
		 * Go through each datasink data models selection and remove it
		 * from the list. If a datasink data models list doesn't have
		 * all the items from the selected data models lists display a
		 * popup notifying the user.
		 */ 
		protected function handleRemoveDataModel( event:EditEvent ):void {
			if (event.parameters == null || event.parameters == null) {
				return;
			}
			
			var userConfiguredList:Array = new Array();
			var dmn:DataModelName = DataModelName(event.parameters);
			for each (var ds:Datasink in datasinkModel.selectedDatasinks.source) {
				var idx:int = findDatasinkDataModelIdx(ds, dmn);
				if (idx != -1) {
					// The data model exist in this list, remove it.
					ds.dataModels.removeItemAt(idx);
				}
				if (dataModelModel.selectedDataModelNames.length != ds.dataModels.length) {
					// This list stores all the datasink that was manually configured by the user.
					userConfiguredList.push(ds.name);
				}
			}
			
			if (userConfiguredList.length > 0) {
				var msg:String = "The following datasinks doesn't include all data models [";
				for (var j:int = 0; j < userConfiguredList.length; j++) {
					msg += (j == 0) ? userConfiguredList[j] : "," + userConfiguredList[j];
				}
				msg += "].";
				popupStatusMessage(StatusType.INFO, msg);
			}
			updateDatasinkDataModels();
		}
		
		private function findDatasinkDataModelIdx(ds:Datasink, dmn:DataModelName ):int {
			var idx:int = -1;
			for (var i:int = 0; i < ds.dataModels.length; i++) {
				var dm:Object = ds.dataModels.getItemAt(i);
				if (dm.model != null && dm.model == dmn.zipFilename) {
					idx = i;
					break;
				}
			}
			return idx;
		}
		
		private function popupStatusMessage(type:StatusType, msg:String):void {
			var sm:StatusMessage = new StatusMessage(type, msg);
			dispatch(new PopupEvent(PopupEvent.MESSAGE_BEGIN, sm, null));			
		}
		
		protected function handleDataModelChange( event:EditEvent ):void {
			var comboBoxEnabledFields:Array = new Array();
			comboBoxEnabledFields[TransportModel.INPUT_FORMAT_FIELD_NAME] = dataModelModel.dataSourceNames;
			comboBoxEnabledFields[TransportModel.RECORD_FORMAT_FIELD_NAME] = splitterModel.splitters;
			view.comboBoxEnabledFields = comboBoxEnabledFields;
			
			updateDatasinkDataModels();
		}
		
		/**
		 * The datasink data models selection was changed using the popup option.
		 * Sync the data models selection in the parameter view.
		 */ 
		protected function handleDatasinkDataModelsChanged( event:EditEvent ):void {
			updateDatasinkDataModels();
		}
		
		/**
		 * Takes the currently selected datasink in the parameter view and
		 * adjust the datasink data models datagrid selection to match what
		 * is stored in the datasink model object.
		 */  
		private function updateDatasinkDataModels():void {
			var dsName:String = view.datasinkCombo.textInput.text;
			if (dsName!= null && dsName.length > 0) {
				populateAllDataModels();
				for each (var ds:Datasink in datasinkModel.selectedDatasinks.source) {
					if (ds.name == dsName) {
						setSelectedDatasinkDataModels(ds);
						break;
					}
				}
			}
		}

		/** Switches the datasink parameters in when a change in selection occurs */
		protected function handleDatasinkSelected( event:EditEvent ):void {
			var datasink:Datasink = event.parameters as Datasink;
			setDatasinkParams(datasink);
		}		
		
		/** Switches the transport parameters in when a change in selection occurs */
		protected function handleTransportSelected( event:EditEvent ):void {
			var transport:Transport = event.parameters as Transport;
			setTransportParams(transport);
		}		
		
		protected function bindModel():void {
			view.datasinksList = datasinkModel.selectedDatasinks;
			view.transportsList = transportModel.selectedTransports
			view.processGroupParams = processGroupModel.processGroups;
			view.customProcessGroups = processGroupConfig.getTenantOwnedProcessGroupsNoDatasinks(userModel.tenantId); 
			view.instanceTypes = instanceTypesTable.getAllInstanceTypes();
			
			/*
			setupDefaultDatasinkSelection();
			setupDefaultTransportSelection();
			setEditPermissions();
			*/

			// Testing
