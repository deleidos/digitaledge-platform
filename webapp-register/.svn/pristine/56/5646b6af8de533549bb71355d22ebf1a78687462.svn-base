/**
 * There is no such thing as a register api at the tms system. Instead,
 * a register api proxy was setup to forward all rest calls to the tms
 * tenantapi so that we can lock down which rest call the register webapp
 * can call.
 */
public class RegisterApiRestClient extends AbstractProxyRestClient {

	private Logger logger = Logger.getLogger(this.getClass());
	
	private static final int MAX_RETRIES = 3;
	private static final String PATH = "/tenantapi";
	
	public RegisterApiRestClient() {
		super();
	}
	
	public AccountStatus getAccountStatus(String uuid) {
		
		WebResource resource = getClient().resource(buildBaseUrl(PATH));
		resource = resource.path("json/account/status").queryParam("uuid", uuid);
		
		String response = resource.get(String.class);
		
		JSONObject json = JSONObject.fromObject(response);
		
		AccountStatus status = new AccountStatus();
		
		status.setUUID(uuid);
		status.setDefaultDomainSuffix(getString(json, "defaultDomainSuffix"));
		status.setTenantId(getString(json, "tenantId"));
		status.setAccountId(getString(json, "accountId"));
		status.setAccountDomainSuffix(getString(json, "accountDomainSuffix"));
		
		String vpcId = getString(json, "vpcId");
		if (vpcId != null) {
			VpcNetwork vpcNetwork  = new VpcNetwork();
			vpcNetwork.setVpcId(vpcId);
			vpcNetwork.setState(VpcNetwork.State.Existing);
			vpcNetwork.setPublicSubnetId(getString(json, "publicSubnetId"));
			vpcNetwork.setInternetGatewayId(getString(json, "internetGatewayId"));
			status.setVpcNetwork(vpcNetwork);
		}

		status.setGatewayInstanceId(getString(json, "gatewayInstanceId"));
		status.setGatewayPublicDns(getString(json, "gatewayPublicDns"));
		
		return status;
		
	}
	
	public String getGatewayAvailabilityZone(String accountId, String region) throws RestClientException {
		if(accountId == null || region == null) {
			throw new RestClientException(String.format("Both Account ID [%s] and Region [%s] must be specified", accountId, region));
		}
				
		WebResource resource = getClient().resource(buildBaseUrl(PATH));
		resource = resource.path("json/database/availability_zone").path(accountId).path(region);
		
		return resource.get(String.class);
		
	}
	
	public void createTenantAccount(AccountForm form, String domainSuffix, String uuid) throws ClientException {
		
		RegistrationForm rForm = (RegistrationForm) form;

		WebResource resource = getClient().resource(buildBaseUrl(PATH));
		resource = resource.path("json/account/add");
		
		Form f = new Form();
		f.add("uuid", uuid);
		f.add("tenantId", rForm.getTenantId());
		f.add("accountName", rForm.getTenantId());
		f.add("description", rForm.getDescription());
		f.add("iaasServiceNumber", rForm.getIaasServiceNumber());
		f.add("keyPair", rForm.getKeyPair());
		f.add("domainNameSuffix", domainSuffix);
		
		AwsRegistrationForm awsForm = (AwsRegistrationForm) form;
			
		f.add("iaasServiceName", "AWS");
		f.add("cloudId", awsForm.getCanonicalId());
		
		Timestamp expiration = new Timestamp(System.currentTimeMillis() + TimeUtil.FIFTEEN_MINUTES);
		
		while (! TimeUtil.hasExpired(expiration)) {
			String response = resource.type(MediaType.APPLICATION_FORM_URLENCODED)
					.post(String.class, f);
			
			if (isSuccessResponse(response)) {
				return;
			}
			
			try { 
				Thread.sleep(TimeUtil.FIVE_SECONDS);
			} catch (Exception ex) {
				// ignore
			}
		}
		
		throw new ClientException("Failed to create tenant account, retries exhausted.");
		
	}
	
	public VpcNetwork getVpcNetwork(String tenantId, String uuid) {
		
		WebResource resource = getClient().resource(buildBaseUrl(PATH));
		resource = resource.path("json/account/vpc").path(tenantId).queryParam("uuid", uuid);
		
		String response = resource.get(String.class);

		JSONObject json = JSONObject.fromObject(response);
		
		VpcNetwork vpcNetwork = new VpcNetwork();
		
		if (json.has("vpcId")) {
			vpcNetwork.setVpcId(json.getString("vpcId"));
		}
		
		if (json.has("internetGatewayId")) {
			vpcNetwork.setInternetGatewayId(json.getString("internetGatewayId"));
		}
		
		if (json.has("publicSubnetId")) {
			vpcNetwork.setPublicSubnetId(json.getString("publicSubnetId"));
		}
		
		return vpcNetwork;
	}
	
	public void deleteVpcNetwork(String tenantId, String uuid) throws ClientException {
		
		WebResource resource = getClient().resource(buildBaseUrl(PATH));
		resource = resource.path("json/account/vpc").path(tenantId).queryParam("uuid", uuid);
		
		int retries = 0;
		while (retries < MAX_RETRIES) {
			String response = resource.delete(String.class);
			
			if (isSuccessResponse(response)) {
				return;
			}
			
			try { 
				Thread.sleep(TimeUtil.FIVE_SECONDS);
			} catch (Exception ex) {
				// ignore
			}
			
			retries++;
		}
		
		throw new ClientException("Failed to delete vpc network, retries exhausted.");
		
	}
	
