	}

	private class alterDropColumnTask extends LongRunningDBJob {
		String db;
		String type;
		String table;
		String column;

		public alterDropColumnTask(String d, String ty, String ta, String col) {
			db = d;
			type = ty;
			table = ta;
			column = col;
		}

		public void run() {
			try {
				setStatus(1);
				H2DBUtils.validateIdentifier(type);
				H2DBUtils.validateIdentifier(table);
				H2DBUtils.validateIdentifier(column);
				setStatus(10);
				AlterDao dao = new AlterDao(db);
				setStatus(15);
				dao.dropColumn(type, table, column);
				setStatus(100);
			} catch (Exception e) {
				log.error("Error altering table (drop column)", e);
				setErrorStatus("Error altering table (drop column): "
						+ e.getMessage());
			}
		}
	}

