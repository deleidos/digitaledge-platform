 * Implementation of System Service.
 */
@Path("/system")
public class SystemServiceImpl extends AbstractSystemService implements SystemService {

	private static final String MANIFEST_DIR = "/mnt/appfs/manifest/";
	private static final String MASTER_INSTANCE_NAME = "Master Instance";
	private static final String MASTER_GROUP_NAME = "master";
	private static final String MASTER_HOST_NAME = "master";
	private static final String DNS_ADDRESS = "127.0.0.1";

	private Logger logger = Logger.getLogger(SystemServiceImpl.class);

	private SystemStartupPrecondition systemStartCheck = null;
	
	private SystemChainDao systemChainDao = null;

	@Override
	public String getSystem(String tenantId, String region, String domain)
			throws SystemServiceException {

		try {
			AccountEntry entry = CacheManager.getTenantAccountCache().get(tenantId);
			Integer accountId = entry.getIAASAccount().getAccountId();
			String response = RestClientManager.getGatewayAPIClient().getCluster(accountId, region,
					domain);
			JSONObject jsonCluster = processClusterInTransitionalState(JSONObject
					.fromObject(response));
			return jsonCluster.toString();
		} catch (Exception ex) {
			String errorMessage = "Service failed to retrieve system information.";
			logger.error("Service failed to retrieve system information.", ex);
			throw new SystemServiceException(errorMessage, ex);
		}

	}

	@Override
	public String getNatInstance(String tenantId, String region, String domain)
			throws SystemServiceException {

		try {
			AccountEntry entry = CacheManager.getTenantAccountCache().get(tenantId);
			Integer accountId = entry.getIAASAccount().getAccountId();
			return RestClientManager.getGatewayAPIClient()
					.getNatInstance(accountId, region, domain);
		} catch (Exception ex) {
			String errorMessage = "Service failed to retrieve NAT information.";
			logger.error(errorMessage);
			throw new SystemServiceException(errorMessage, ex);
		}

	}

	@Override
	public StandardResponse<?> broadcast(String tenantId, String region, String domain,
			String jsonDef) {

		try {
			if (isMasterNodeTerminated(tenantId, region, domain)) {
				throw new SystemServiceException("System '" + domain + "' is currently terminated.");
			}

			AccountEntry entry = CacheManager.getTenantAccountCache().get(tenantId);
			Integer accountId = entry.getIAASAccount().getAccountId();

			String clusterStr = RestClientManager.getGatewayAPIClient().getCluster(accountId,
					region, domain);
			JSONObject cluster = JSONObject.fromObject(clusterStr);
			String state = cluster.getJSONObject("status").getString("state");

			// Only allow the broadcast of commands for system in the OK and
			// Warning state.

			if (ClusterState.valueOf(state) != ClusterState.OK
					&& ClusterState.valueOf(state) != ClusterState.Warning) {
				throw new SystemServiceException(
						String.format(
								"Failed to send broadcast command to system %s because cluster state is not OK or Warning.",
								domain));
			}

			String token = RestClientManager.getGatewayAPIClient().broadcast(accountId, region,
					domain, jsonDef);

			HashMap<String, String> props = new HashMap<String, String>();
			props.put("Status", "true");
			props.put("token", token);
			return buildPropertiesResponse(200, props);
		} catch (Exception ex) {
			logger.error("Service failed to broadcast command.", ex);
			return buildErrorResponse(500, ex.getMessage());
		}

	}

	@Override
	public StandardResponse<?> broadcastStatus(String tenantId, String region, String domain,
			String jsonDef) {

		try {
			AccountEntry entry = CacheManager.getTenantAccountCache().get(tenantId);
			Integer accountId = entry.getIAASAccount().getAccountId();
			String status = RestClientManager.getGatewayAPIClient().broadcastStatus(accountId,
					region, domain, jsonDef);
			return buildPropertiesResponse(200, "Status", status);
		} catch (Exception ex) {
			logger.error("Service failed to retrieve broadcast status.", ex);
			return buildErrorResponse(500, ex.getMessage());
		}

	}

	@Override
	public StandardResponse<?> create(String tenantId, String region, String domain,
			String cfgVersion) {

		try {
			if (isMasterNodeTerminated(tenantId, region, domain)) {
				AccountEntry entry = CacheManager.getTenantAccountCache().get(tenantId);
				AccountSystem system = CacheManager.getSystemsCache().get(
						entry.getIAASAccount().getAccountId(), domain);

				CloudProvider provider = CloudProviderUtil.getCloudProvider();

				AvailableCloudComputeResources tenantComputeResources = RestClientManager
						.getGatewayAPIClient().getTenantCloudComputeResources(
								entry.getIAASAccount().getAccountId(), provider);

				try {
					tenantComputeResources = RestClientManager.getIAASAccountLimitsClient()
							.upsert(entry.getIAASAccount().getAccountId(), tenantComputeResources,
									provider);
				} catch (RestClientException e) {
					logger.error(e);
				}
				
				// Check if software version still exists
				if (DownloadSystemConfigurationUtil.downloadSystemConfiguration(domain, cfgVersion)) {
					SystemConfig sysConfig = DownloadSystemConfigurationUtil.getSystemConfiguration(domain);
					String swVersion = sysConfig.getSoftwareVersion();
					
					SoftwareReleasesClient releaseClient = new SoftwareReleasesClient();
					Collection<String> swReleases = releaseClient.getAllSoftwareVersionIds();
					if (!swReleases.contains(swVersion)) {
						return buildErrorResponse(406, "Software version " + swVersion + " no longer exists.  " +
								"Please open your system, select an existing software version, save it, and try starting again.");
					}
				}

				if (logger.isDebugEnabled())
					logger.debug(String.format("Tenant {%s} available reosurces {%s}", tenantId,
							tenantComputeResources));

				// Check to see if the start pre-conditions are met
				initializeStartupPrecondition();
				int numStartingSystems = Integer.parseInt(RestClientManager
						.getTenantApiRestClient().getStartingSystems());
				if (!systemStartCheck.isStartable(numStartingSystems, tenantId, region, domain,
						cfgVersion, tenantComputeResources)) {
					logger.warn(String
							.format("Unable to start system due to insufficient resources: tenant -> {%s} region -> {%s} system name -> {%s} config version -> {%s}",
									tenantId, region, domain, cfgVersion));
					return buildErrorResponse(406, systemStartCheck.getReason());
				}

				ProcessGroupConfig config = RestClientManager.getProcessGroupConfigClient()
						.retrieveByProcessGroup(MASTER_GROUP_NAME);
				String instanceType = config.getDefaultInstanceType();
				String securityGroup = config.getSecurityGroup();

				String manifestFile = MANIFEST_DIR + domain + "/master.ini";
				String keyPair = entry.getIAASAccount().getKeypairName();

				CreateSystemRequest request = new CreateSystemRequest(tenantId, entry
						.getIAASAccount().getAccountEmail(), instanceType, region,
						system.getMasterAZone(), securityGroup, keyPair, "s3cmd", manifestFile,
						cfgVersion, DNS_ADDRESS, MASTER_INSTANCE_NAME, domain, MASTER_GROUP_NAME,
						MASTER_HOST_NAME, EndpointUtil.getStorageEndpoint());

				if (QueueManager.getSystemRequestQueue().addRequest(request)) {

					if (systemChainDao == null) {
						systemChainDao = new SystemChainDao();
						systemChainDao.setDataSource(H2DataSourceFactory.getInstance().getDataSource());
					}
					
					String chainName = systemChainDao.isPartOfChain(entry.getIAASAccount().getAccountId(), domain, region, cfgVersion);
					if (chainName != null) {
						Collection<SystemChain> chains = systemChainDao.getSystemChains(chainName, entry.getIAASAccount().getAccountId());
						for (SystemChain chain : chains) {
							if (chain.getDomain().equals(domain)) {
								logger.info(String.format("Updating chain {%s}, setting system: {%s} to chain position: {%d}",
										chainName, domain, chain.getPosition()));
								systemChainDao.setCurrentPosition(chainName, entry.getIAASAccount().getAccountId(), chain.getPosition());
							}
						}
					}
					return buildPropertiesResponse(200, "Status", "true");
				}

				throw new SystemServiceException("Create system '" + domain + "' is in progress.");
			}

			throw new SystemServiceException("System '" + domain + "' already exists.");
		} catch (Exception ex) {
			logger.error("Service failed to create system.", ex);
			return buildErrorResponse(500, ex.getMessage());
		}

	}

	@Override
	public StandardResponse<?> start(String tenantId, String region, String domain,
			String cfgVersion) {

		try {
			if (isMasterNodeTerminated(tenantId, region, domain)) {
				// master does not exist or is terminated, can't do regular
				// start, call create instead
				logger.debug("Master was terminated for domain:" + domain
						+ " calling create instead of start");
				return create(tenantId, region, domain, cfgVersion);
			}

			AccountEntry entry = CacheManager.getTenantAccountCache().get(tenantId);
			Integer accountId = entry.getIAASAccount().getAccountId();

			AccountSystem system = CacheManager.getSystemsCache().get(accountId, domain);

			String clusterStr = RestClientManager.getGatewayAPIClient().getCluster(accountId,
					region, domain);

			JSONObject cluster = JSONObject.fromObject(clusterStr);
			String state = cluster.getJSONObject("status").getString("state");

			if (ClusterState.valueOf(state) == ClusterState.Down) {

				CloudProvider provider = CloudProviderUtil.getCloudProvider();

				AvailableCloudComputeResources tenantComputeResources = RestClientManager
						.getGatewayAPIClient().getTenantCloudComputeResources(accountId, provider);

				if (logger.isDebugEnabled())
					logger.debug(String.format("Tenant {%s} available reosurces {%s}", tenantId,
							tenantComputeResources));

				try {
					tenantComputeResources = RestClientManager.getIAASAccountLimitsClient()
							.upsert(entry.getIAASAccount().getAccountId(), tenantComputeResources,
									provider);
				} catch (RestClientException e) {
					logger.error(e);
				}
				
				// Check if software version still exists
				if (DownloadSystemConfigurationUtil.downloadSystemConfiguration(domain, cfgVersion)) {
					SystemConfig sysConfig = DownloadSystemConfigurationUtil.getSystemConfiguration(domain);
					String swVersion = sysConfig.getSoftwareVersion();
					
					SoftwareReleasesClient releaseClient = new SoftwareReleasesClient();
					Collection<String> swReleases = releaseClient.getAllSoftwareVersionIds();
					if (!swReleases.contains(swVersion)) {
						return buildErrorResponse(406, "Software version " + swVersion + " no longer exists!  " +
								"Please open your system, select an existing software version, save it, and try starting again.");
					}
				}

				// Check to see if the start pre-conditions are met
				initializeStartupPrecondition();
				int numStartingSystems = Integer.parseInt(RestClientManager
						.getTenantApiRestClient().getStartingSystems());
				if (!systemStartCheck.isStartable(numStartingSystems, tenantId, region, domain,
						cfgVersion, tenantComputeResources)) {
					logger.warn(String
							.format("Unable to start system due to insufficient resources: tenant -> {%s} region -> {%s} system name -> {%s} config version -> {%s}",
									tenantId, region, domain, cfgVersion));
					return buildErrorResponse(406, systemStartCheck.getReason());
				}

				String masterId = RestClientManager.getGatewayAPIClient().getMasterNodeInstanceId(
						accountId, region, domain);
				StartSystemRequest request = new StartSystemRequest(tenantId, region, domain, entry
						.getIAASAccount().getAccountEmail(), masterId, cfgVersion, entry
						.getIAASAccount().getKeypairName(), system.getMasterAZone());

				if (!QueueManager.getSystemRequestQueue().addRequest(request)) {
					throw new SystemServiceException("Start system '" + domain
							+ "' is in progress.");
				}
			}
			
			if (systemChainDao == null) {
				systemChainDao = new SystemChainDao();
				systemChainDao.setDataSource(H2DataSourceFactory.getInstance().getDataSource());
			}
			
			String chainName = systemChainDao.isPartOfChain(accountId, domain, region, cfgVersion);
			if (chainName != null) {
				Collection<SystemChain> chains = systemChainDao.getSystemChains(chainName, accountId);
				for (SystemChain chain : chains) {
					if (chain.getDomain().equals(domain)) {
						logger.info(String.format("Updating chain {%s}, setting system: {%s} to chain position: {%d}",
								chainName, domain, chain.getPosition()));
						systemChainDao.setCurrentPosition(chainName, accountId, chain.getPosition());
					}
				}
			}
			return buildPropertiesResponse(200, "Status", "true");
		} catch (Exception ex) {
			logger.error("Service failed to start system.", ex);
			return buildErrorResponse(500, ex.getMessage());
		}

	}

	@Override
	public StandardResponse<?> updateConfig(String tenantId, String region, String domain,
			String cfgVersion) {

		Lock lock = new ReentrantLock();

		try {
			if (lock.tryLock()) {

				if (isMasterNodeTerminated(tenantId, region, domain)) {
					throw new SystemServiceException("System '" + domain
							+ "' is currently terminated.");
				}

				AccountEntry entry = CacheManager.getTenantAccountCache().get(tenantId);
				Integer accountId = entry.getIAASAccount().getAccountId();

				AccountSystem system = CacheManager.getSystemsCache().get(accountId, domain);

				String clusterStr = RestClientManager.getGatewayAPIClient().getCluster(accountId,
						region, domain);

				JSONObject cluster = JSONObject.fromObject(clusterStr);
				String state = cluster.getJSONObject("status").getString("state");

				if (ClusterState.valueOf(state) != ClusterState.OK) {
					throw new SystemServiceException("System '" + domain
							+ "' is not in an 'OK' state.");
				}

				String currentVersion = cluster.getString("configVersion");
				ConfigValidator validator = new ConfigValidator();
				if (!validator.compareVersions(currentVersion, cfgVersion, domain)) {
					throw new SystemServiceException("Invalid config version: " + cfgVersion);
				}

				UpdateSystemConfigRequest request = new UpdateSystemConfigRequest(tenantId, region,
						domain, entry.getIAASAccount().getAccountEmail(), cfgVersion,
						system.getMasterAZone());

				if (QueueManager.getSystemRequestQueue().addRequest(request)) {
					return buildPropertiesResponse(200, "Status", "true");
				}

				throw new SystemServiceException("Update system '" + domain + "' is in progress.");
			} else {
				throw new SystemServiceException("Update system '" + domain
						+ "' command was unable to aquire a lock");
			}

		} catch (Exception ex) {
			logger.error("Service failed to update system configuration.", ex);
			return buildErrorResponse(500, ex.getMessage());
		} finally {
			lock.unlock();
		}

	}

