	/**
	 * Returns a list of tables in the database that backs alertsapi
	 */
	@SuppressWarnings("rawtypes")
	public List<SchemaDefinition> existingTables() {

		List<SchemaDefinition> results = new ArrayList<SchemaDefinition>();

		try {
			WebResource resource = getClient().resource(DBAPI_BASE_URL);
			resource = resource.path("json/select/showTables")
					.path(DB_HOST); // database
			String response = resource.get(String.class);

			JSONObject json = JSONObject.fromObject(response);

			if (json.has("Operation Status")) {
				if ("FAILED".equals(json.getString("Operation Status"))) {
					throw new RestClientException("showTables failed - " + json.getString("Message"));
				}
			}

			Iterator rowit = json.getJSONArray("tables").iterator();
			while (rowit.hasNext()) {
				JSONObject row = (JSONObject) rowit.next();

				SchemaDefinition def = new SchemaDefinition();
				def.setType(SchemaDefinition.TABLE_TYPE);
				if (row.has("schema")) {
					def.setSchema(row.getString("schema"));
				}
				if (row.has("name")) {
					def.setValue(row.getString("name"));
				}

				results.add(def);
			}
		}
		catch (UniformInterfaceException uie) {
			ClientResponse cr = uie.getResponse();
			logger.warn("Received [" + cr.getStatus() + "] response from DB - " + uie.getMessage());
		}
		catch (JSONException je) {
			logger.warn("Malformed JSON from DB - " + je.toString());
		}
		catch (Throwable e) {
			logger.error(e);
		}

		return results;
	}

