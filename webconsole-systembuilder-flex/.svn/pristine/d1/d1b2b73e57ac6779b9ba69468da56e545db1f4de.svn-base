		protected function handleCreateProcessGroupDone(event:SystemConfigServiceEvent):void {
			var params:Object = event.parameters;
			var message:String = "Custom Process Group Created";
			var creatingDatasink:Boolean = (params.datasink != null);
			if (creatingDatasink) {
				// Add the datasink to the in memory version
				
				var row:Object = DatasinkConfig.createRow(params.datasink.datasinkFqn,
														  params.datasink.autoScale,
														  params.datasink.usesBlockStorage,
														  params.datasink.scaleUpFactor,
														  params.datasink.pgDependencies,
														  params.datasink.threadsPerInstance);
				
				datasinkConfig.addRow(row);				
				datasinkModel.clear();
				datasinkModel.setup();
				datasinkModel.removeFromUnconfiguredList(params.datasink.datasinkFqn);
				
				message = "Custom Datasink and Process Group created";
			}
			
			var sm:StatusMessage = new StatusMessage(StatusType.INFO, message);
			var messagePopupEvent:PopupEvent = new PopupEvent(PopupEvent.MESSAGE_BEGIN, sm, null);			
			var reloadProcessGroupsDone:SystemConfigServiceEvent =
				new SystemConfigServiceEvent(SystemConfigServiceEvent.RELOAD_PROCESS_CONFIG_DONE, null, messagePopupEvent);
			dispatch(new SystemConfigServiceEvent(SystemConfigServiceEvent.RELOAD_PROCESS_CONFIG, null, reloadProcessGroupsDone));
		}
		
		protected function handleDeleteProcessGroupDone(event:SystemConfigServiceEvent):void {
			var params:Object = event.parameters;
			var message:String = "Custom Process Group deleted";
			var deletingDatasink:Boolean = (params.datasinkFqn != null);
			if (deletingDatasink) {
				var dsConfig:Object = datasinkConfig.lookupByFqn(params.datasinkFqn);
				if (dsConfig != null) {
					datasinkConfig.deleteRow(dsConfig);
					datasinkModel.clear();
					datasinkModel.setup();
				}
				message = "Custom Datasink and Process Group deleted";
			}
			var sm:StatusMessage = new StatusMessage(StatusType.INFO, message);
			var messagePopupEvent:PopupEvent = new PopupEvent(PopupEvent.MESSAGE_BEGIN, sm, null);			
			var reloadProcessGroupsDone:SystemConfigServiceEvent =
				new SystemConfigServiceEvent(SystemConfigServiceEvent.RELOAD_PROCESS_CONFIG_DONE, null, messagePopupEvent);
			dispatch(new SystemConfigServiceEvent(SystemConfigServiceEvent.RELOAD_PROCESS_CONFIG, null, reloadProcessGroupsDone));
		}
		
		protected function handleReloadProcessGroupsDone(event:SystemConfigServiceEvent):void {
			view.customProcessGroups = processGroupConfig.getTenantOwnedProcessGroupsNoDatasinks(userModel.tenantId);
			if (event.nestedEvent != null) {
				dispatch(event.nestedEvent);
			}
		}
		
		/************************ Process Group Configuration Popup *************************/
		
		protected var processGroupParametersPopup:ProcessGroupParametersPopup;
		
		protected function handleProcessGroupConfigBegin(event:PopupEvent):void {
			
			processGroupParametersPopup = new ProcessGroupParametersPopup();
			
			var paramSet:Object = event.parameters;
			if (paramSet == null) {
				paramSet = new Object();
			}
			paramSet.processGroup = null;
			processGroupParametersPopup.paramSet = paramSet;
			
			processGroupParametersPopup.addEventListener(
				PopupEvent.PROCESS_GROUP_CONFIG_END, handleProcessGroupConfigEnd);
			processGroupParametersPopup.addEventListener(
				CloseEvent.CLOSE, handleProcessGroupConfigClose );
			processGroupParametersPopup.addEventListener(
				PopupEvent.MESSAGE_BEGIN, dispatch );
			
			// Allows the processGroupParametersPopup to use the injector
			injector.injectInto(processGroupParametersPopup);
			
			PopUpManager.addPopUp(processGroupParametersPopup, contextView, true);
			PopUpManager.centerPopUp(processGroupParametersPopup);
		}
		
		protected function handleProcessGroupConfigClose(event:CloseEvent):void {
			PopUpManager.removePopUp(processGroupParametersPopup);
			handleProcessGroupConfigEnd(null);
		}
		
		protected function handleProcessGroupConfigEnd(event:PopupEvent):void {
			processGroupParametersPopup.removeEventListener(PopupEvent.PROCESS_GROUP_CONFIG_END, handleProcessGroupConfigEnd);
			processGroupParametersPopup.removeEventListener(CloseEvent.CLOSE, handleProcessGroupConfigClose );
			processGroupParametersPopup.removeEventListener(PopupEvent.MESSAGE_BEGIN, dispatch);
			if ((event != null) && (event.parameters != null)) {
				
				var params:Object = event.parameters;
				
				var createProcessGroupEvent:SystemConfigServiceEvent =
					new SystemConfigServiceEvent(SystemConfigServiceEvent.CREATE_PROCESS_GROUP, params.processGroup, null );
				
				var createProcessGroupDone:SystemConfigServiceEvent =
					new SystemConfigServiceEvent(SystemConfigServiceEvent.CREATE_PROCESS_GROUP_DONE, params, null );
								
				SpinnerPopup.createSpinnerPopup(contextView);
							
				var firstEvent:SystemConfigServiceEvent = createProcessGroupEvent;
				if (processGroupConfig.lookupByProcessGroupName(params.processGroup.pgName) != null) {
					// This process group already exists - it will need to be deleted and re-created
					
					var deleteProcessGroupEvent:SystemConfigServiceEvent =
						new SystemConfigServiceEvent(SystemConfigServiceEvent.DELETE_PROCESS_GROUP, params.processGroup, null);
					
					firstEvent = deleteProcessGroupEvent;
					
					deleteProcessGroupEvent.nestedEvent = createProcessGroupEvent;
				}
				
				var creatingJustProcessGroup:Boolean = (params.datasink == null);				
				if (creatingJustProcessGroup) {
					// Only creating a custom process group, no datasink
					
					params.processGroup.pgType = "CUSTOM";
					params.processGroup.canScale = "false";
					
					createProcessGroupEvent.nestedEvent = createProcessGroupDone;
				}
				else {
					// Creating a datasink plus a process group

					// Add the new process group as a dependency for the new datasink
					params.datasink.pgDependencies = StringUtils.trim(
						params.processGroup.pgName + ", " + params.datasink.pgDependencies);

					// If volumes are created for the process group, then this datasink uses block storage
					params.datasink.usesBlockStorage = (params.processGroup.numVolumes != "0");
					
					var createDatasinkEvent:SystemConfigServiceEvent =
						new SystemConfigServiceEvent(SystemConfigServiceEvent.CREATE_DATASINK, params.datasink, null );
					
					params.processGroup.pgType = "DATASINK";
					params.processGroup.canScale = (params.datasink.autoScale) ? "true" : "false";
						
					createProcessGroupEvent.nestedEvent = createDatasinkEvent;
					createDatasinkEvent.nestedEvent = createProcessGroupDone;
				}
				
				dispatch(firstEvent);
			}			
		}
		
		/************************ Process Group Selection (and Add) Popup *************************/
		
		protected var processGroupSelectorPopup:ProcessGroupSelectorPopup;
		
		protected function handleProcessGroupSelectBegin(event:PopupEvent):void {
			
			processGroupSelectorPopup = new ProcessGroupSelectorPopup();
			
			var operation:String = event.parameters as String;
			processGroupSelectorPopup.operation = operation;
			if (operation == view.ADD_PROCESS_GROUP) {
				processGroupSelectorPopup.title = "Select process group to add";
				processGroupSelectorPopup.dataProvider =
					processGroupConfig.getTenantOwnedProcessGroupsNoDatasinks(userModel.tenantId);				
			}
			else if (processGroupSelectorPopup.operation == view.DELETE_PROCESS_GROUP) {
				processGroupSelectorPopup.title = "Select process group to delete";
				processGroupSelectorPopup.dataProvider =
					processGroupConfig.getAllTenantOwnedProcessGroups(userModel.tenantId);				
			}
			
			processGroupSelectorPopup.addEventListener(
				PopupEvent.PROCESS_GROUP_SELECT_END, handleProcessGroupSelectEnd);
			processGroupSelectorPopup.addEventListener(
				CloseEvent.CLOSE, handleProcessGroupSelectClose );
			
			PopUpManager.addPopUp(processGroupSelectorPopup, contextView, true);
			PopUpManager.centerPopUp(processGroupSelectorPopup);
		}
		
		protected function handleProcessGroupSelectClose(event:CloseEvent):void {
			PopUpManager.removePopUp(processGroupSelectorPopup);
			handleProcessGroupSelectEnd(null);
		}
		
		protected function handleProcessGroupSelectEnd(event:PopupEvent):void {
			processGroupSelectorPopup.removeEventListener(PopupEvent.PROCESS_GROUP_CONFIG_END, handleProcessGroupSelectEnd);
			processGroupSelectorPopup.removeEventListener(CloseEvent.CLOSE, handleProcessGroupSelectClose );
			if ((event != null) && (event.parameters != null)) {
				var pgName:String = event.parameters as String;
				
				if (processGroupSelectorPopup.operation == view.ADD_PROCESS_GROUP) {
					processGroupModel.addProcessGroupWithErrorPopup(
						pgName, ProcessGroupTypes.CUSTOM, sysPropModel.selectedSize, sysPropModel.autoScale);
				}
				else if (processGroupSelectorPopup.operation == view.DELETE_PROCESS_GROUP) {
					SpinnerPopup.createSpinnerPopup(contextView);
					
					var params:Object = new Object();
					params.pgType = StringUtils.beforeFirst(pgName,".").toUpperCase();
					params.name = StringUtils.afterFirst(pgName,".");
					params.datasinkFqn = null;
					
					var deletePgDoneEvent:SystemConfigServiceEvent =
						new SystemConfigServiceEvent(SystemConfigServiceEvent.DELETE_PROCESS_GROUP_DONE, params, null);
					
					var nextEvent:SystemConfigServiceEvent = deletePgDoneEvent; 
					
					if (params.pgType == "DATASINK") {
						// Must delete the datasink row associated with this process group as well
						var datasinkConfig:Object = datasinkConfig.lookupByProcessGroupname(pgName);
						if (datasinkConfig != null) {
							var fqn:String = datasinkConfig[DatasinkConfig.FQN];
							var deleteDatasinkEvent:SystemConfigServiceEvent =
								new SystemConfigServiceEvent(SystemConfigServiceEvent.DELETE_DATASINK, fqn, deletePgDoneEvent);
							params.datasinkFqn = fqn;
							nextEvent = deleteDatasinkEvent;
						}
					}

					dispatch(new SystemConfigServiceEvent(SystemConfigServiceEvent.DELETE_PROCESS_GROUP, params, nextEvent));
				}
			}			
		}
	}
