		public function listCommonContents(queryDto:RepoQueryDto, opTrackingToken:Object=null):void
		{
			if(queryDto == null || queryDto.path == null || queryDto.path.length == 0)
			{
				throw new ArgumentError("path is required");
			}
			
			var ctx:RepoServiceOpContext = new RepoServiceOpContext();
			ctx.opType = RepoServiceOpContext.LIST_COMMON_CONTENTS;
			ctx.opTrackingToken = opTrackingToken;
			ctx.origDto = queryDto;
			
			var url:String = "/json/common/list";
			
			var currPathSegment:String = null;
			for(var index:int=0; index < queryDto.path.length; index++)
			{
				currPathSegment = (queryDto.path.getItemAt(index) as String);
				if(StringUtils.isBlank(currPathSegment))
				{
					throw new ArgumentError("path is invalid");
				}
				url += "/" + encodeURIComponent(StringUtil.trim(currPathSegment));
			}
			
			this.get(url, null, ctx);
		}
		
		public function listTenantContents(queryDto:TenantRepoQueryDto, opTrackingToken:Object=null):void
		{
			if(queryDto == null || queryDto.path == null || queryDto.path.length == 0)
			{
				throw new ArgumentError("path is required");
			}
			
			var ctx:RepoServiceOpContext = new RepoServiceOpContext();
			ctx.opType = RepoServiceOpContext.LIST_TENANT_CONTENTS;
			ctx.opTrackingToken = opTrackingToken;
			ctx.origDto = queryDto;
			
			var url:String = "/json/content/list";
			url += "/" + encodeURIComponent(StringUtils.isNotBlank(queryDto.tenantId) ? queryDto.tenantId : userModel.tenantId);
			url += "/" + (queryDto.privateStorage ? "private" : "public");
			
			var currPathSegment:String = null;
			for(var index:int=0; index < queryDto.path.length; index++)
			{
				currPathSegment = (queryDto.path.getItemAt(index) as String);
				if(StringUtils.isBlank(currPathSegment))
				{
					throw new ArgumentError("path is invalid");
				}
				url += "/" + encodeURIComponent(StringUtil.trim(currPathSegment));
			}
			
			var params:Object = null;
			if(queryDto.usernameOverride != null)
			{
				params = {
					userId: queryDto.usernameOverride
				}
			}
						
			this.get(url, params, ctx);
		}
		
