	@Override
	public void run() {
		
		AccountEntry entry = null;
		Integer accountId = null;
		
		try {
			log.info("Starting system build task.");
			
			entry = CacheManager.getTenantAccountCache().get(tenantID);
			
			log.info("Got account cache entry...");
			
			accountId = entry.getIAASAccount().getAccountId();
			
			log.info("Got accountID ("+accountId+")");
			
			mapper = new JsonMapper();
			RtwsConfig.getInstance().getConfiguration().setProperty("sysbuilder.template.basedir", "/templates");

			log.info("Got template base directory...");
			
			List<DefinitionComposer> composers = getComposerList();
			
			log.info("Got composer list - "+composers.size()+" composers.");

			//setup progress constants
			//each composer has 6 operations - assume they all take the same quantity of time (probably wrong, but easy for now)
			double progressPerAction = 90.0/(composers.size()*6);//reserve 10% for output handling
			double totalProgress=0;

			config = (SystemConfig) mapper.fromJson(jsondef, SystemConfig.class);
			
			log.info("Got config from input definition...");
			
			//sanity check version
			if(!config.getConfigVersion().equalsIgnoreCase(version)){
				//ERROR!
				throw new SystemBuildException("version number in config file does not match version number passed in through call");
			}
			
			if (!config.getSshKey().equals(entry.getIAASAccount().getKeypairName())) {
				log.info(String.format("Overriding ssh key with latest key.  Old: %s    New: %s", config.getSshKey(),entry.getIAASAccount().getKeypairName()));
				config.setSshKey(entry.getIAASAccount().getKeypairName());
			}

			tokens = config.getSystemDomain().split("\\.",2);
			if(!tokens[1].equals(entry.getIAASAccount().getDomainNameSuffix())){
				//The domain in the database does not match the domain for the system being built
				//So create the correct domain and store it in the config
				config.setSystemDomain(tokens[0] + "." + entry.getIAASAccount().getDomainNameSuffix());
			}
			
			log.info("performed sanity checking, domain name adjustment");
			
			if (config.getApplianceEnabled()) {
				if (config.getSystemSize().equals("xsmall") || config.getSystemSize().equals("small"))
						throw new SystemBuildException("Appliance system size needs to be medium or larger for proper jms configuration creation.");
				
				if (config.getApplianceDomain() == null)
						throw new SystemBuildException("Appliance domain is invalid.");
				
				log.info(String.format("Using new domain for appliance: {%s}",config.getApplianceDomain()));
				config.setSystemDomain(config.getApplianceDomain());
				
			}
			
			if (config.getStartupSchedule() != null) {
				if (config.getApplianceEnabled())
					throw new SystemBuildException("Automatic startup is not supported for appliance systems.");
				
				try {
					CronExpression.validateExpression(config.getStartupSchedule());
				} catch (ParseException e){
					log.error(e.getMessage());
					throw new SystemBuildException("The schedule to automatically start this system is invalid.");
				} finally {}
			}

			if (config.getShutdownSchedule() != null) {
				if (config.getApplianceEnabled())
					throw new SystemBuildException("Automatic shutdown is not supported for appliance systems.");
				
				try {
					CronExpression.validateExpression(config.getShutdownSchedule());
				} catch (ParseException e){
					log.error(e.getMessage());
					throw new SystemBuildException("The schedule to automatically stop this system is invalid.");
				} finally {}
			}

			SystemContext systemContext = makeSystemContext();

			log.info("Build task is for system "+config.getSystemDomain());			
			
			setupOutputDir();

			systemProperties = null;
			
			if (config.getVpcEnabled()) {
				String subnetId = RestClientManager.getGatewayAPIClient().assignSubnet(accountId, 
						config.getSystemDomain(), config.getRegion(), config.getAvailZone());
				
				if (subnetId == null) {
					throw new NullPointerException("Subnet id cannot be null.");
				}
				
				config.setSubnetId(subnetId);
			}

			for(int i=0;i<composers.size();i++){
				//totalProgress = i*progressPerComposer;
				BuildManager.SINGLETON.setStatus(token, (int)totalProgress);
				DefinitionComposer composer = composers.get(i);
				composer.initialize();

				totalProgress+=progressPerAction;
				BuildManager.SINGLETON.setStatus(token, (int)totalProgress);
				composer.loadDefaults(null, config, systemContext,(RtwsProperties) systemProperties);

				totalProgress+=progressPerAction;
				BuildManager.SINGLETON.setStatus(token, (int)totalProgress);
				ComposerStatus stat = composer.compose(config, systemContext);
				if(stat!=ComposerStatus.done){
					BuildManager.SINGLETON.setErrorStatus(token, "Return from composer was "+stat+".  Processing will stop.  Composer was of type "+composer.getClass()+".");
					return;
				}
				else
					log.debug("successfully finished composer: "+composer.getClass()+ " for build of system: "+this.config.getSystemDomain());

				totalProgress+=progressPerAction;
				BuildManager.SINGLETON.setStatus(token, (int)totalProgress);
				composer.writeFile(null, null);

				totalProgress+=progressPerAction;
				BuildManager.SINGLETON.setStatus(token, (int)totalProgress);
				composer.dispose();

				totalProgress+=progressPerAction;
				BuildManager.SINGLETON.setStatus(token, (int)totalProgress);
				systemProperties = composer.getProperties();
				totalProgress+=progressPerAction;
			}
		}
		catch(Exception e){
			try {
				if (config.getSubnetId() != null) {
					RestClientManager.getGatewayAPIClient().unassignSubnet(accountId, config.getSystemDomain(), config.getRegion());
				}
			} catch (Exception ex) {
				log.error("fail to unassign subnet id for domain '" + config.getSystemDomain() + "'.", ex);
			}
			
			Writer result = new StringWriter();
			PrintWriter printWriter = new PrintWriter(result);
			e.printStackTrace(printWriter);
			
			try {
				BuildManager.SINGLETON.setErrorStatus(token,e.getMessage()+" Exception info: "+result.toString());
			} catch (SystemBuildException e1) {
				log.error("error setting error status for token "+token+".",e);
			}
			
			return;
		}
		
		try {
			BuildManager.SINGLETON.setStatus(token, 90);
			processOutputFiles();
			uploadOutputFiles();
			BuildManager.SINGLETON.setStatus(token, 98);
			
			GatewayAccount gateway = RestClientManager.getGatewayAccountsClient().retrieve(accountId);

			String count = RestClientManager.getGatewayAPIClient().countAccountSystems(accountId, gateway.getRegion(), config.getSystemDomain());

			JSONObject response = JSONObject.fromObject(count);
			JSONObject respBody = response.getJSONObject("responseBody");
			
			boolean sysExists = (Integer.parseInt(respBody.getString("Count")))>0;
			if(! sysExists) {				
				RestClientManager.getGatewayAPIClient().addAccountSystems(accountId, gateway.getRegion(), config.getSystemDomain(), config.getSoftwareVersion(), config.getConfigVersion(),config.getAvailZone());
			}
			
			
			// If building for appliance mode, trigger the preparation of the system configs to s3
			if (config.getApplianceEnabled()) {
				BuildManager.SINGLETON.setStatus(token, 99);
				CreateSystemRequest request = new CreateSystemRequest(tenantID, entry
					.getIAASAccount().getAccountEmail(), "m1.small", "none",
					config.getAvailZone(), "none", config.getSshKey(), "s3cmd", "none",
					config.getConfigVersion(), "none", "none", config.getSystemDomain(), "none",
					"none", EndpointUtil.getStorageEndpoint());

				if (!QueueManager.getSystemRequestQueue().addRequest(request)) {
					throw new SystemBuildException("Unable to add request to create process system configuration for this appliance system.");
				}
				
				log.info("Finished building System for domain " + config.getSystemDomain() + ".  However, the creation of the container image and copy of supporting files is still in progress.  Please check S3 for the corresponding artifacts or the logs if there was an error during that process.");
			} else {
				log.info("Finished building System for domain " + config.getSystemDomain());
			}
			
			BuildManager.SINGLETON.setStatus(token, 100);

		}
		catch(Exception e){
			Writer result = new StringWriter();
			PrintWriter printWriter = new PrintWriter(result);
			e.printStackTrace(printWriter);
			log.error(e.getMessage(),e);
			
			try {
				BuildManager.SINGLETON.setErrorStatus(token,"exception while uploading output files.  Exception info: "+result.toString());
			} catch (SystemBuildException e1) {
				log.error("error setting error status for token "+token+".",e);
			}
			return;
		}
	}

	private void setupOutputDir() {
		String outputDir = "/tmp" + "/" + config.getSystemDomain();
		log.info("will output this build to "+outputDir);
		config.setOutputConfDir(outputDir);

		File tmp = new File(config.getOutputConfDir() + "/test.txt");
		tmp.getParentFile().mkdirs();
		tmp.getParentFile().mkdir();
		tmp.delete();

	}

	private void processOutputFiles() throws Exception {
		//go to output directory, then run tar_configs.sh from that directory.  It will create the .tar.gz group in /output
		//and then upload the resulting files to the repository.
		log.info("processing files that were created");
		
		((RtwsProperties)systemProperties).saveToFile(config.getOutputConfDir()+"/"+propFileName);
		
		OutputStream os = new FileOutputStream(new File(config.getOutputConfDir()+"/"+userConfigFileName));
		mapper.toJson(config, os);
		os.close();
		
		File outputDir = new File(config.getOutputConfDir());
		tarConfigFiles(outputDir);
		
		log.info("tar bundle created");

	}
	
	private void tarConfigFiles(File tarConfigsDir) {
		// tarConfigsDir layout:
		//	/tarConifgsDir
		//		/output
		//		/basetars
		//			/unchangedtars
		//		/jms
		//		/conf
		//		/master
		//		/transport
		//		/ingest
		//		/jms-router
		//		userConfig.json
		//		assortedPropertiesFiles(output from system builder)...
		// The following directories added & removed during this method:
		//		/prop-temp
		//		/conf-temp
		//		/master-temp
		//		/transport-temp
		//		/ingest-temp
		//		/jms-router-temp
		
		final String JMS_TAR_FILE_NAME = "deleidos-rtws-activemq-conf.tar.gz";
		final String PROP_TAR_FILE_NAME = "deleidos-rtws-common-properties-conf.tar.gz";
		final String CONFIGURATION_TAR_FILE_NAME = "deleidos-rtws-common-conf-conf.tar.gz";
		final String MASTER_TAR_FILE_NAME = "deleidos-rtws-master-conf.tar.gz";
		final String TRANSPORT_TAR_FILE_NAME = "deleidos-rtws-transport-conf.tar.gz";
		final String INGEST_TAR_FILE_NAME = "deleidos-rtws-ingest-conf.tar.gz";
		final String JMS_ROUTER_TAR_FILE_NAME = "deleidos-rtws-jms-router-conf.tar.gz";

		// Clean up any old output and basetars/unchangedtars directories
		File outputDir = new File(FileUtil.buildPath(tarConfigsDir.getAbsolutePath(), "output"));
		File baseTarsDir = new File(FileUtil.buildPath(tarConfigsDir.getAbsolutePath(), "basetars"));
		File unchangedTarsDir = new File(FileUtil.buildPath(baseTarsDir.getAbsolutePath(), "unchangedtars"));
		FileUtil.deleteQuietly(outputDir);
		FileUtil.deleteQuietly(baseTarsDir);
		outputDir.mkdirs();
		baseTarsDir.mkdirs();
		unchangedTarsDir.mkdirs();
		
		// List all the files output from system builder
		String[] tarConfigsDirFiles = tarConfigsDir.list();

		// Copy over the unchanged Tars
		String mountMode = UserDataProperties.getInstance().getString(UserDataProperties.RTWS_MOUNT_MODE);
		if(mountMode.equals("s3cmd")) {
			String mountDevice = UserDataProperties.getInstance().getString(UserDataProperties.RTWS_MOUNT_DEVICE);
			String buildRelease = UserDataProperties.getInstance().getString(UserDataProperties.RTWS_SW_VERSION);
			String filesPrefix = String.format("%s/configuration/template-system.rtws.deleidos.com/", buildRelease);
			
			// Retrieve the files from S3
			String accessKey = UserDataProperties.getInstance().getString(UserDataProperties.RTWS_ACCESS_KEY);
			String secretKey = UserDataProperties.getInstance().getString(UserDataProperties.RTWS_SECRET_KEY);
			try {
				StorageServiceClient.create(accessKey, secretKey).getStorageInterface().getFiles(mountDevice, unchangedTarsDir.getAbsolutePath(), filesPrefix);
			} catch (StorageException e) {
				log.error("Failed to retrieve template system config from bucket [" + mountDevice + "]", e);
			}
		}
		else {
			// Copy the files from the mounted directory
			String mountedDirPath = FileUtil.buildPath("/", "mnt", "appfs", "configuration", "template-system.rtws.deleidos.com");
			File mountedDir = new File(mountedDirPath);
			
			FileUtil.copyDirectory(mountedDir, unchangedTarsDir);
		}

		// Move all the modifiable tars from the unchangedtars directory to the basetars directory
		String[] modTars = new String[] { PROP_TAR_FILE_NAME, TRANSPORT_TAR_FILE_NAME, INGEST_TAR_FILE_NAME, MASTER_TAR_FILE_NAME, CONFIGURATION_TAR_FILE_NAME, JMS_ROUTER_TAR_FILE_NAME };
		for(String modTar : modTars) {
			File sourceFile = new File(FileUtil.buildPath(unchangedTarsDir.getAbsolutePath(), modTar));
			File destFile = new File(FileUtil.buildPath(baseTarsDir.getAbsolutePath(), modTar));
			FileUtil.moveFile(sourceFile, destFile);
		}

		//---------------------------------------------------------------------------------------------------------

		File unchangedDirJmsTarFile = new File(FileUtil.buildPath(unchangedTarsDir.getAbsolutePath(), JMS_TAR_FILE_NAME));
		if(unchangedDirJmsTarFile.exists()) {
			log.info("Compiling " + JMS_TAR_FILE_NAME);
			
			// Extract the webconsole-embedded.xml file from the unchanged JMS Tar to the JMS directory
			File jmsDir = new File(FileUtil.buildPath(tarConfigsDir.getAbsolutePath(), "jms"));
			try {
				FileUtil.extractFileFromTarGzip(unchangedDirJmsTarFile, "webconsole-embedded.xml", jmsDir);
			} catch (IOException e) {
				log.error("Failed to extract file [webconsole-embedded.xml] from  tar file [" +
								unchangedDirJmsTarFile.getAbsolutePath() + "]", e);
			}
			
			// Remove the no longer needed unchanged JMS Tar file
			FileUtil.deleteQuietly(unchangedDirJmsTarFile);
			
			// Compress the contents of the JMS directory to a file in the Output directory
			File outputDirJmsTarFile = new File(FileUtil.buildPath(outputDir.getAbsolutePath(), JMS_TAR_FILE_NAME));
			FileUtil.compressDirToTarGZip(jmsDir, outputDirJmsTarFile);
			
			log.info(JMS_TAR_FILE_NAME + " finished compiling");
		}
		else {
			log.info(unchangedDirJmsTarFile.getAbsolutePath() + " does not exist, skipping compiling " + JMS_TAR_FILE_NAME);
		}
		
		//---------------------------------------------------------------------------------------------------------

		File basetarDirPropTarFile = new File(FileUtil.buildPath(baseTarsDir.getAbsolutePath(), PROP_TAR_FILE_NAME));
		if(basetarDirPropTarFile.exists()) {
			log.info("Compiling " + PROP_TAR_FILE_NAME);
			
			File propTempDir = new File(FileUtil.buildPath(tarConfigsDir.getAbsolutePath(), "prop-temp"));
			if(!propTempDir.exists()) {
				propTempDir.mkdirs();
			}
			
			// Extract the basetars properties tar file to the prop-temp directory
			FileUtil.extractTarGZip(basetarDirPropTarFile, propTempDir);
			
			// Copy all the properties files output from system builder to the prop-temp directory
			for(String fileName : tarConfigsDirFiles) {
				if(fileName.endsWith(".properties")) {
					File sourceFile = new File(tarConfigsDir, fileName);
					File destFile = new File(FileUtil.buildPath(propTempDir.getAbsolutePath(), fileName));
					FileUtil.copyFile(sourceFile, destFile);
				}
			}
			
			// Compress the contents of the prop-temp directory to a file in the Output directory
			File outputDirPropTarFile = new File(FileUtil.buildPath(outputDir.getAbsolutePath(), PROP_TAR_FILE_NAME));
			FileUtil.compressDirToTarGZip(propTempDir, outputDirPropTarFile);
			
			// Remove the prop-temp directory
			FileUtil.deleteQuietly(propTempDir);
			
			log.info(PROP_TAR_FILE_NAME + " finished compiling");
		}
		else {
			log.info(basetarDirPropTarFile.getAbsolutePath() + " does not exist, skipping compiling " + PROP_TAR_FILE_NAME);
		}
		
		//---------------------------------------------------------------------------------------------------------

		File basetarDirConfTarFile = new File(FileUtil.buildPath(baseTarsDir.getAbsolutePath(), CONFIGURATION_TAR_FILE_NAME));
		if(basetarDirConfTarFile.exists()) {
			log.info("Compiling " + CONFIGURATION_TAR_FILE_NAME);
			
			File confTempDir = new File(FileUtil.buildPath(tarConfigsDir.getAbsolutePath(), "conf-temp"));
			if(!confTempDir.exists()) {
				confTempDir.mkdirs();
			}
			
			// Extract the basetars conf tar file to the conf-temp directory
			FileUtil.extractTarGZip(basetarDirConfTarFile, confTempDir);
			
			// Copy the contents of the conf directory to the conf-temp directory
			File confDir = new File(FileUtil.buildPath(tarConfigsDir.getAbsolutePath(), "conf"));
			FileUtil.copyDirectory(confDir, confTempDir);
			
			// Compress the contents of the conf-temp directory to a file in the Output directory
			File outputDirConfTarFile = new File(FileUtil.buildPath(outputDir.getAbsolutePath(), CONFIGURATION_TAR_FILE_NAME));
			FileUtil.compressDirToTarGZip(confTempDir, outputDirConfTarFile);
			
			// Remove the conf-temp directory
			FileUtil.deleteQuietly(confTempDir);
			
			log.info(CONFIGURATION_TAR_FILE_NAME + " finished compiling");
		}
		else {
			log.info(basetarDirConfTarFile.getAbsolutePath() + " does not exist, skipping compiling " + CONFIGURATION_TAR_FILE_NAME);
		}

		//---------------------------------------------------------------------------------------------------------

		File basetarDirMasterTarFile = new File(FileUtil.buildPath(baseTarsDir.getAbsolutePath(), MASTER_TAR_FILE_NAME));
		if(basetarDirMasterTarFile.exists()) {
			log.info("Compiling " + MASTER_TAR_FILE_NAME);
			
			File masterTempDir = new File(FileUtil.buildPath(tarConfigsDir.getAbsolutePath(), "master-temp"));
			if(!masterTempDir.exists()) {
				masterTempDir.mkdirs();
			}
	
			// Extract the basetars master tar file to the master-temp directory
			FileUtil.extractTarGZip(basetarDirMasterTarFile, masterTempDir);
	
			// Copy the contents of the master directory to the master-temp directory
			File masterDir = new File(FileUtil.buildPath(tarConfigsDir.getAbsolutePath(), "master"));
			FileUtil.copyDirectory(masterDir, masterTempDir);
	
			// Compress the contents of the master-temp directory to a file in the Output directory
			File outputDirMasterTarFile = new File(FileUtil.buildPath(outputDir.getAbsolutePath(), MASTER_TAR_FILE_NAME));
			FileUtil.compressDirToTarGZip(masterTempDir, outputDirMasterTarFile);
	
			// Remove the master-temp directory
			FileUtil.deleteQuietly(masterTempDir);
			
			log.info(MASTER_TAR_FILE_NAME + " finished compiling");
		}
		else {
			log.info(basetarDirMasterTarFile.getAbsolutePath() + " does not exist, skipping compiling " + MASTER_TAR_FILE_NAME);
		}
		
		//---------------------------------------------------------------------------------------------------------

		File basetarDirTransportTarFile = new File(FileUtil.buildPath(baseTarsDir.getAbsolutePath(), TRANSPORT_TAR_FILE_NAME));
		if(basetarDirTransportTarFile.exists()) {
			log.info("Compiling " + TRANSPORT_TAR_FILE_NAME);
			
			File transportTempDir = new File(FileUtil.buildPath(tarConfigsDir.getAbsolutePath(), "transport-temp"));
			if(!transportTempDir.exists()) {
				transportTempDir.mkdirs();
			}
	
			// Extract the basetars transport tar file to the transport-temp directory
			FileUtil.extractTarGZip(basetarDirTransportTarFile, transportTempDir);
	
			// Copy the contents of the transport directory to the transport-temp directory
			File transportDir = new File(FileUtil.buildPath(tarConfigsDir.getAbsolutePath(), "transport"));
			FileUtil.copyDirectory(transportDir, transportTempDir);
	
			// Compress the contents of the transport-temp directory to a file in the Output directory
			File outputDirTransportTarFile = new File(FileUtil.buildPath(outputDir.getAbsolutePath(), TRANSPORT_TAR_FILE_NAME));
			FileUtil.compressDirToTarGZip(transportTempDir, outputDirTransportTarFile);
	
			// Remove the transport-temp directory
			FileUtil.deleteQuietly(transportTempDir);
			
			log.info(TRANSPORT_TAR_FILE_NAME + " finished compiling");
		}
		else {
			log.info(basetarDirTransportTarFile.getAbsolutePath() + " does not exist, skipping compiling " + TRANSPORT_TAR_FILE_NAME);
		}

		//---------------------------------------------------------------------------------------------------------

		File basetarDirIngestTarFile = new File(FileUtil.buildPath(baseTarsDir.getAbsolutePath(), INGEST_TAR_FILE_NAME));
		if(basetarDirIngestTarFile.exists()) {
			log.info("Compiling " + INGEST_TAR_FILE_NAME);
			
			File ingestTempDir = new File(FileUtil.buildPath(tarConfigsDir.getAbsolutePath(), "ingest-temp"));
			if(!ingestTempDir.exists()) {
				ingestTempDir.mkdirs();
			}
	
			// Extract the basetars ingest tar file to the ingest-temp directory
			FileUtil.extractTarGZip(basetarDirIngestTarFile, ingestTempDir);
	
			// Copy the contents of the ingest directory to the ingest-temp directory
			File ingestDir = new File(FileUtil.buildPath(tarConfigsDir.getAbsolutePath(), "ingest"));
			FileUtil.copyDirectory(ingestDir, ingestTempDir);
	
			// Compress the contents of the ingest-temp directory to a file in the Output directory
			File outputDirIngestTarFile = new File(FileUtil.buildPath(outputDir.getAbsolutePath(), INGEST_TAR_FILE_NAME));
			FileUtil.compressDirToTarGZip(ingestTempDir, outputDirIngestTarFile);
	
			// Remove the ingest-temp directory
			FileUtil.deleteQuietly(ingestTempDir);
			
			log.info(INGEST_TAR_FILE_NAME + " finished compiling");
		}
		else {
			log.info(basetarDirIngestTarFile.getAbsolutePath() + " does not exist, skipping compiling " + INGEST_TAR_FILE_NAME);
		}

		//---------------------------------------------------------------------------------------------------------

		File basetarDirJmsRouterTarFile = new File(FileUtil.buildPath(baseTarsDir.getAbsolutePath(), JMS_ROUTER_TAR_FILE_NAME));
		if(basetarDirJmsRouterTarFile.exists()) {		
			log.info("Compiling " + JMS_ROUTER_TAR_FILE_NAME);
	
			File jmsRouterTempDir = new File(FileUtil.buildPath(tarConfigsDir.getAbsolutePath(), "jms-router-temp"));
			if(!jmsRouterTempDir.exists()) {
				jmsRouterTempDir.mkdirs();
			}
	
			// Extract the basetars jms-router tar file to the jms-router-temp directory
			FileUtil.extractTarGZip(basetarDirJmsRouterTarFile, jmsRouterTempDir);
	
			// Copy the contents of the jms-router directory to the jms-router-temp directory
			File jmsRouterDir = new File(FileUtil.buildPath(tarConfigsDir.getAbsolutePath(), "jms-router"));
			FileUtil.copyDirectory(jmsRouterDir, jmsRouterTempDir);
	
			// Compress the contents of the jms-router-temp directory to a file in the Output directory
			File outputDirJmsRouterTarFile = new File(FileUtil.buildPath(outputDir.getAbsolutePath(), JMS_ROUTER_TAR_FILE_NAME));
			FileUtil.compressDirToTarGZip(jmsRouterTempDir, outputDirJmsRouterTarFile);
	
			// Remove the jms-router-temp directory
			FileUtil.deleteQuietly(jmsRouterTempDir);
			
			log.info(JMS_ROUTER_TAR_FILE_NAME + " finished compiling");
		}
		else {
			log.info(basetarDirJmsRouterTarFile.getAbsolutePath() + " does not exist, skipping compiling " + JMS_ROUTER_TAR_FILE_NAME);
		}

		//---------------------------------------------------------------------------------------------------------
		
		log.info("Compiling all other required configuration files");

		FileUtil.copyDirectory(unchangedTarsDir, outputDir);

		File tarConfigsDirUserConfigFile = new File(FileUtil.buildPath(tarConfigsDir.getAbsolutePath(), "userConfig.json"));
		File outputDirUserConfigFile = new File(FileUtil.buildPath(outputDir.getAbsolutePath(), "userConfig.json"));
		FileUtil.copyFile(tarConfigsDirUserConfigFile, outputDirUserConfigFile);
		
		log.info("Other required configuration files finished compiling");
	}
	
	private void uploadOutputFiles() {
		
		String domain = config.getSystemDomain();
		String userId = RtwsConfig.getInstance().getString("webapp.repository.admin.userid");
		String password = RtwsConfig.getInstance().getString("webapp.repository.admin.password");
		
		File outputDir = new File(FileUtil.buildPath(config.getOutputConfDir(), "output"));

		// Check if the system exists
		boolean systemDomainExists = RestClientManager.getRespositoryApiRestClient().doesSystemDomainExist(userId, password, domain);
		if(!systemDomainExists) {
			// The system doesn't exist, create it
			RestClientManager.getRespositoryApiRestClient().createSystemDomain(userId, password, domain);
		}
		
		// Upload all the files to the repo
		for(String fileName : outputDir.list()) {
			File uploadFile = new File(outputDir, fileName);
			
			RestClientManager.getRespositoryApiRestClient().addSystemContent(userId, password, domain, version, uploadFile.getName(), uploadFile);
		}
		
		log.info("tar bundle uploaded");
		
	}

	private SystemContext makeSystemContext() {
		DataSource ds = H2DataSourceFactory.getInstance().getDataSource();

		//setup dao objects
		availabilityZoneDAO = new AvailabilityZoneDao();
		availabilityZoneDAO.setDataSource(ds);
		
		iaasConfigDAO = new IAASConfigurationDao();
		iaasConfigDAO.setDataSource(ds);

		processGroupDAO = new ProcessGroupConfigDao();
		processGroupDAO.setDataSource(ds);

		sizeDAO = new SystemSizingDao();
		sizeDAO.setDataSource(ds);

		imageDAO = new MachineImageDao();
		imageDAO.setDataSource(ds);

		instanceDAO = new InstanceTypeDao();
		instanceDAO.setDataSource(ds);

		dataSinkDAO = new DataSinkConfigDao();
		dataSinkDAO.setDataSource(ds);


		SystemContext systemContext = new SystemContext();
		systemContext.setAvailabilityZone(availabilityZoneDAO.getAvailabilityZoneByZone(config.getAvailZone()));
		systemContext.setIaasConfiguration(iaasConfigDAO.getIAASConfigurationByName(config.getServiceProvider()));
		systemContext.setProcessGroupConfigs(new ArrayList<ProcessGroupConfig>(processGroupDAO.getProcessGroupConfigs()));
		systemContext.setSystemSize(sizeDAO.getSystemBySize(config.getSystemSize()));
		systemContext.setMachineImages(new ArrayList<MachineImage>(imageDAO.getMachineImages()));
		systemContext.setInstanceTypes(new ArrayList<InstanceType>(instanceDAO.getInstanceTypes()));
		systemContext.setDataSinkConfigs((ArrayList<DataSinkConfig>) new ArrayList<DataSinkConfig>(dataSinkDAO.getDataSinkConfigs()));
		return systemContext;
	}
	
