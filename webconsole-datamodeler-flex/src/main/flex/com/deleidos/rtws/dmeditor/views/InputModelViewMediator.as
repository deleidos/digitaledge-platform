		/**
		 * Validates the selection. Right now that means determining if the field exists in all data mappings.
		 * @param selectedIndex
		 * @param selectedItem
		 * @return null on successful validation, otherwise an error message to display to the user
		 * 
		 */
		protected function validateSelection(selectedIndex:int, selectedItem:XML):String {
			var message:String = null;
			var selectionPath:String = selectedItem.@path;
			
			// Don't check paths with array references, they don't always make sense and this
			// check is not an absolute
			if (selectionPath.indexOf("[") < 0) {
				var result:Array = model.computeMappingReferences(selectedItem);
				var total:int = 0;
				var noReference:int = 0;
				var dmList:String = null;
	
				for (var dmName:String in result) {
					total++;
					if (result[dmName] == 0) {
						dmList = (dmList==null) ? dmName : (dmList+", "+dmName);
						noReference++;
					}
				}
				
				if ((selectedItem != null) && (dmList != null)) {
					if (total == noReference) {
						message = "Warning: Insertion point (" + selectedItem.@path + ") does not exist in ANY data input mappings."
					}
					else {
						message = "Warning: Insertion point (" + selectedItem.@path + ") does not exist in all data input mappings.";
					}
					
					message =
						message +
						"This means a new field cannot be inserted or deleted in the following data input mappings: " + dmList + ". " +
						"Cancel and select a common insertion point if you want the field to appear in all data input mappings. " +
						"Click OK if you want to continue with a partial insertion/deletion.";
				}
			}
			
			return message;
		}
		
		private function setViewState():void {
			if (model.canonicalModel.length > 0) {
				view.currentState = view.noEditableFieldSelectedState.name;
			}
			else {
				view.currentState = view.editableFieldSelectedState.name;				
			}
			view.modelEmpty = (model.canonicalModel.length == 0);
		}
		
		protected function updateViewState(event:Event):void {
			setViewState();
		}
		
		protected function handleItemDeleted(event:InputModelEditEvent):void {
			view.modelGrid.selectedItem = null;
			setViewState();
			view.dataProvider.itemUpdated(event.currentItem);
			view.invalidateDisplayList();
			view.validateNow();
		}
		
		protected function handleItemUpdated(event:InputModelEditEvent):void {
			view.dataProvider.itemUpdated(event.currentItem);
		}
		
		protected function handleItemDoubleClick(event:AppNavigationEvent):void {
			var selectedItem:XML = event.params.selectedItem as XML;
			var selectedIndex:int = event.params.selectedIndex;
			if (selectedItem != null) {
				// Popup for editing the field name, nest a model edit event
				
				var editEvent:InputModelEditEvent =
					new InputModelEditEvent(InputModelEditEvent.MODEL_UPDATE_FIELD, selectedItem, selectedIndex, event.params);
				
				var fieldName:String = selectedItem.@fieldname;
				var fieldType:String = selectedItem.@type + " ";
				event.params.type = StringUtils.beforeFirst(fieldType, " ");
				
				dispatch(new PopupEvent(PopupEvent.GET_FIELD_NAME, editEvent, fieldName));				
			}
		}
		
		protected function handleNewModelDone( event:ModelServiceEvent ):void {
			var hd : HierarchicalData = new HierarchicalData(model.canonicalModel);
			view.dataProvider = new HierarchicalCollectionView2(hd);
			view.selectionValidator = validateSelection;
			view.currentState = view.editableFieldSelectedState.name;		
			view.modelEmpty = true;
			view.modelGrid.selectedItem = null;
			view.dataProvider.disableAutoUpdate();
		}
		
		protected function handleModelLoaded( event:ModelServiceEvent ):void {
			var hd : HierarchicalData = new HierarchicalData(model.canonicalModel);
			view.dataProvider = new HierarchicalCollectionView2(hd);
			view.selectionValidator = validateSelection;
			
			view.modelEmpty = (model.canonicalModel.length == 0);
			if (model.canonicalModel.length > 0)
				view.currentState = view.noEditableFieldSelectedState.name;
			else
				view.currentState = view.editableFieldSelectedState.name;
			
			view.modelGrid.selectedItem = null;
			view.dataProvider.disableAutoUpdate();
		}
		
		protected function handleFieldInserted( event:InputModelEditEvent ):void {
			var newItem:XML = event.currentItem;
			view.modelGrid.expandChildrenOf(newItem, true);
			view.modelGrid.selectedItem = newItem;
			view.dataProvider.itemUpdated(event.currentItem);			
			view.modelEmpty = (model.canonicalModel.length == 0);
		}

		// Checks to ensure the data field to delete is not referenced in the enrichment model
		protected function handleDeleteField(event:InputModelEditEvent):void {
			var itemToDelete:XML = event.currentItem as XML;
			var inEnrichModel:Boolean = enrichModel.fieldPathReferenced(itemToDelete.@path);
			// trace("Item = " + itemToDelete.@path + ", inModel = " + inEnrichModel.toString());
			if (inEnrichModel) {
				var statusMsg:StatusMessage = new StatusMessage(StatusType.ERROR, "Cannot delete field '" + itemToDelete.@path + "'; it is referenced in an enrichment");
				dispatch(new PopupEvent(PopupEvent.MESSAGE_POPUP, null, statusMsg));				
			}
			else {
				dispatch(event);				
			}
		}
		
