	public static void validateIdentifiers(Collection<String> identifiers)
			throws SQLException {
		if (identifiers != null && identifiers.size() > 0) {
			for (String currIdentifier : identifiers) {
				validateIdentifier(currIdentifier);
			}
		}
	}

	public static void validateIdentifier(String id) throws SQLException {
		if (StringUtils.isBlank(id)) {
			throw new SQLException("Invalid identifier: Empty Value Provided");
		} else {
			String trimmed = id.trim().toLowerCase().replaceAll("\\.", "");
			if (NON_WORD_CHAR_SEARCH_PATTERN.matcher(trimmed).find()) {
				throw new SQLException("Invalid identifier " + trimmed + ".");
			}
		}
	}

