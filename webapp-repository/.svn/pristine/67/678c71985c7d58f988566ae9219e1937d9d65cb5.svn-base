	private static final Logger log = LoggerFactory.getLogger(ContentManagementDao.class);
	
	/** The jcr repository */
	private Repository repository;
	
	/** Constants */
	private static long ONE_GB = 1073741824;
	
	/**
	 * Constructor.
	 */
	public ContentManagementDao() {
		super();
	}
	
	/**
	 * Set the jcr repository.
	 */
	public void setRepository(Repository repository) {
		this.repository = repository;
	}
	
	/**
	 * Given a path to a tenant's area, list the contents that exists in the jcr repository. 
	 */
	public ContentListBean listContentByTenant(String visibility, String tenant, String path, String userId, String password) {
		
		long start = System.currentTimeMillis();
		
		RepositoryCredentials credentials = new RepositoryCredentials(userId, password);
		JcrSystemRepository jcr = new JcrSystemRepository();
		jcr.setRepository(repository);
		jcr.setCredentials(credentials);
		
		// TODO Remove this migration hook when all previously created tenants have the corresponding paths created
		if (SystemEnvUtil.isTmsSystem()) {
			if (!Boolean.getBoolean("RTWS_BYPASS_MIGRATION_ACTIONS"))
				MissingPathMigrationUtil.ensureTenantPrivatePathsExist(jcr, tenant);
		}
		
		long end = System.currentTimeMillis();
		long duration = end - start;
		
		log.debug("The content dao listContentByTenant completed in " + duration + " milliseconds");
		
		return ContentListBean.build(jcr.listFiles(AbstractSystemRepository.Visibility.get(visibility), path, null, tenant));
	}
	
	/**
	 * Retrieve a content from the jcr repository.
	 */
	public InputStream retrieveContentByTenant(String visibility, String tenant, String filename, String path, String userId, String password) {
		
		long start = System.currentTimeMillis();
		
		RepositoryCredentials credentials = new RepositoryCredentials(userId, password);
		JcrSystemRepository jcr = new JcrSystemRepository();
		jcr.setRepository(repository);
		jcr.setCredentials(credentials);
		
		long end = System.currentTimeMillis();
		long duration = end - start;
		
		log.debug("The content dao retrieveContentByTenant completed in " + duration + " milliseconds");
		
		return jcr.retrieve(AbstractSystemRepository.Visibility.get(visibility), path, filename, tenant);
		
	}
	
	protected long retrieveContentSizeByTenant(String visibility, String tenant, String filename, String path, String userId, String password) throws ContentManagementException {
		RepositoryCredentials credentials = new RepositoryCredentials(userId, password);
		JcrSystemRepository jcr = new JcrSystemRepository();
		jcr.setRepository(repository);
		jcr.setCredentials(credentials);
		
		long size = 0;

		size = jcr.retrieveNodeSize(AbstractSystemRepository.Visibility.get(visibility), path, filename, tenant);
		
		return size;
	}
	
	/**
	 * Retrieve a content from the jcr repository into a directory.
	 */
	protected void retrieveContentByTenantToLocalDir(String visibility, String tenant, String filename, String path, String userId, String password, String destFilePath) throws ContentManagementException {
		
		RepositoryCredentials credentials = new RepositoryCredentials(userId, password);
		JcrSystemRepository jcr = new JcrSystemRepository();
		jcr.setRepository(repository);
		jcr.setCredentials(credentials);
		
		InputStream is = null;
		FileOutputStream fos = null;
		
		try {
			// Create the local file system directory to store the retrieved content
			
			FileUtil.makeFileParentDir(destFilePath);
			
			if (AbstractSystemRepository.Common.equalsIgnoreCase(visibility)) {
				is = jcr.retrieveFromCommon(path, filename);
			}
			else {
				is = jcr.retrieve(AbstractSystemRepository.Visibility.get(visibility), path, filename, tenant);
			}
		
			fos = new FileOutputStream(destFilePath);
		
			IOUtils.copy(is, fos);
		} catch(SystemRepositoryException sre) {
			throw new ContentManagementException("Fail to retrieve " + filename + " from the repository", sre);
		} catch (FileNotFoundException fnfe) {
			throw new ContentManagementException("Destination " + destFilePath + " cannot be located", fnfe);
		} catch (IOException ioe) {
			throw new ContentManagementException("Fail to copy " + filename + " from the repository to destination " + destFilePath, ioe);
		} finally {
			if (is != null) {
				try { is.close(); } catch (IOException e) { }
			}
			
			if (fos != null) {
				try { fos.close(); } catch (IOException e) { }
			}
		}
		
	}
	
	
	/**
	 * Given the user's credentials, download the repo and determine the space (in bytes) used by the tenant
	 */
	public synchronized long getRepoSizeForTenant(String userId, String password) {
		
		long repoSizeForTenant = ONE_GB;; // start out at 1GB so that if calculations fail, the user will not break the repo 

		// load the paths from the repo
		ArrayList<String> paths = (ArrayList<String>) loadPaths(userId, password);
		repoSizeForTenant = calculateTotalRepoSizeForTenant(userId, password, paths);

		return repoSizeForTenant;
	}
	
	private long calculateTotalRepoSizeForTenant(String userId, String password, ArrayList<String> paths) {

		long total = 0;
		
		for (String path : paths) {
			String [] parameters = extractRetrieveContentParameters(path);
			if (parameters == null) {
				continue;
			}
			
			try {
				total += retrieveContentSizeByTenant(parameters[1], parameters[2], parameters[0], parameters[3], userId, password);
			} catch(Exception ex) {
				log.debug("Fail to retrieve content size " + parameters[0] + " from userId=" + parameters[2] + " visibility=" + parameters[1] + " path=" + parameters[3]);
			}
		}

		return total;
	}
	
	/**
	 * Given the user's credentials, load all the paths from its own public and private areas and also
	 * from the common area
	 */
	private ArrayList<String> loadPaths(String userId, String password) {
		
		RepositoryCredentials credentials = new RepositoryCredentials(userId, password);
		JcrSystemRepository jcr = new JcrSystemRepository();
		jcr.setRepository(repository);
		jcr.setCredentials(credentials);
		
		ArrayList<String> paths = new ArrayList<String>();

		// Look in the common area for shared content
		
		try {
			paths.addAll(jcr.greedyListFilesInCommon(null, "jcr:content"));
		}
		catch (Exception ex){
			log.debug("Fail to greedy list files from common area");
		}
		
		// Look in the user's private and public area for content
		
		for (AbstractSystemRepository.Visibility visibility : AbstractSystemRepository.Visibility.values()) {
			try {
				paths.addAll(jcr.greedyListFilesWithPath(visibility, null, "jcr:content", userId));
			} catch (Exception ex){
				log.debug("Fail to greedy list files from " + visibility.toString() + " area");
			}
		}
		
		return paths;
	}
	
	/**
	 * Build the temp directory given the paths of the common / public / private areas
	 */
	private ArrayList<String> buildTmpDirPath(String userId, String password, String snapshotPath, ArrayList<String> paths) {
		
		ArrayList<String> retrievedDest = new ArrayList<String>();
		
		for (String path : paths) {
			String [] parameters = extractRetrieveContentParameters(path);
			if (parameters == null) {
				continue;
			}

			StringBuffer destFilePath = new StringBuffer(snapshotPath);
			if (parameters[1] != null) {
				destFilePath.append(File.separator + parameters[1]); // public or private or common
			}
			if (parameters[2] != null) {
				destFilePath.append(File.separator + parameters[2]); // tenant
			}
			/* 
			 * Append the path to the dest location
			 * [Note:] You cannot use String.replaceAll with the Windows separator, "\"
			 * "\" has a special meaning in String.replaceAll.  Therfore, we've got this
			 * splitting action.
			 */
			String[] dirs = null;
			if(StringUtils.isNotBlank(parameters[3]))
			{
				dirs = parameters[3].split("/");
			}
			if(dirs != null && dirs.length > 0)
			{
				for(String currDir : dirs)
				{
					destFilePath.append(File.separator);
					destFilePath.append(currDir);
				}
			}
			destFilePath.append(File.separator + parameters[0]); // filename
			
			try {
				retrieveContentByTenantToLocalDir(parameters[1], parameters[2], parameters[0], parameters[3], userId, password, destFilePath.toString());
				retrievedDest.add(destFilePath.toString());
			} catch(Exception ex) {
				log.debug("Fail to retrieve content " + parameters[0] + " from userId=" + parameters[2] + " visibility=" + parameters[1] + " path=" + parameters[3]);
			}
		}

		return retrievedDest;
	}
	
	/**
	 * Given the user's credentials, retrieve all the content from its own public and private areas and also
	 * from the common area.
	 */
	public InputStream retrieveAll(String userId, String password) throws LoginException, RepositoryException, ContentManagementException, FileNotFoundException {
		
		long start = System.currentTimeMillis();
		
		if (RepositoryRetrievalLock.instance.isInProgress())
			throw new RepositoryException("Repository retrieval is in progress.  Please retry your request again.");
		
		try {
			RepositoryRetrievalLock.instance.lock();

			// load the paths from the repo
			ArrayList<String> paths = loadPaths(userId, password);

			// Build the temp directory path. This is where we will dump the
			// repository contents before compressing it.

			String tempDirPath = RtwsConfig.getInstance().getString(RtwsPropertiesConstants.TEMP_DIR);
			String uniqueName = userId + "-snapshot-" + Calendar.getInstance().getTime().getTime();
			String snapshotPath = tempDirPath + File.separator + uniqueName;

			// Now its time to retrieve the content from the repository.
			List<String> retrievedDest = buildTmpDirPath(userId, password, snapshotPath, paths);

			// Compress the temp directory into a zip file and create an input
			// stream. If the temp directory contains
			// no content than skip the compression skip.

			InputStream is = null;

			if (retrievedDest.size() > 0) {
				String zipFilePath = tempDirPath + File.separator + uniqueName + ".zip";
				ZipUtil.pack(zipFilePath, uniqueName, retrievedDest);

				is = new FileInputStream(new File(zipFilePath));

				FileCleanupQueue.getInstance().enqueue(snapshotPath);
				FileCleanupQueue.getInstance().enqueue(zipFilePath);
				// do not wait/enqueue snapshot directory, remove directory, tar
				// ball still exists
				File tmp = new File(snapshotPath);
				if (tmp.exists()) {
					delete(tmp);
				}
			}

			long end = System.currentTimeMillis();
			long duration = end - start;

			log.debug("The content dao retrieveAll completed in " + duration + " milliseconds");
		
			return is;
		} finally {
			RepositoryRetrievalLock.instance.unlock();
		}
	}
	
	/**
	 * Add a content into the jcr repository.
	 */
	public void addContent(String userId, String password, String filename, InputStream is, String visibility, String path) {
		
		long start = System.currentTimeMillis();
		
		RepositoryCredentials credentials = new RepositoryCredentials(userId, password);
		JcrSystemRepository jcr = new JcrSystemRepository();
		jcr.setRepository(repository);
		jcr.setCredentials(credentials);
		
		jcr.store(AbstractSystemRepository.Visibility.get(visibility), path, filename, is);
		
		long end = System.currentTimeMillis();
		long duration = end - start;
		
		log.debug("The content dao addContent completed in " + duration + " milliseconds");
		
	}
	
