	private static Logger log = Logger.getLogger(AlterServiceImpl.class);

	private static RtwsConfig RTWS_CONFIG = RtwsConfig.getInstance();
	private static final String RTWS_DB_DIM_SCHEMA_NAME;
	private static final String RTWS_DB_DIM_USER_NAME;
	private static final String RTWS_DB_APP_SCHEMA_NAME;
	private static final String RTWS_DB_APP_USER_NAME;
	
	private static final String DEFAULT_DB_CONN_URL;
	private static String DEFAULT_DB_HOST;
	private static int DEFAULT_DB_PORT;

	static {
		RTWS_DB_DIM_SCHEMA_NAME = RTWS_CONFIG.getString("h2.dim.schema",
				"DIMENSIONS");
		RTWS_DB_DIM_USER_NAME = RTWS_CONFIG.getString("h2.dim.connection.user",
				null);
		RTWS_DB_APP_SCHEMA_NAME = RTWS_CONFIG.getString("h2.app.schema",
				"APPLICATION");
		RTWS_DB_APP_USER_NAME = RTWS_CONFIG.getString("h2.app.connection.user",
				null);
		
		DEFAULT_DB_CONN_URL = RTWS_CONFIG.getString("h2.connection.url", null);
		boolean isDefaultDbConnUrlProcessed = false;
		if(DEFAULT_DB_CONN_URL != null)
		{
			// Trim off an nested protocols
			String simpleUrl = DEFAULT_DB_CONN_URL;
			
			int protocolIndex = simpleUrl.indexOf("://");
			if(protocolIndex > 0)
			{
				int colonIndex = simpleUrl.indexOf(":");
			
				while(colonIndex >= 0 && colonIndex < protocolIndex)
				{
					simpleUrl = simpleUrl.substring(colonIndex + 1);
					protocolIndex = simpleUrl.indexOf("://");
					colonIndex = simpleUrl.indexOf(":");
				}
			}
			
			try
			{
				URI url = new URI(simpleUrl);
				DEFAULT_DB_HOST = url.getHost();
				DEFAULT_DB_PORT = url.getPort();
				isDefaultDbConnUrlProcessed = true;
			}
			catch(URISyntaxException uriSyntaxException)
			{
				log.error("Failed to parse '" + DEFAULT_DB_CONN_URL + "' into a valid URI", uriSyntaxException);
			}
		}
		
		if(isDefaultDbConnUrlProcessed == false)
		{
			DEFAULT_DB_HOST = null;
			DEFAULT_DB_PORT = -1;
		}
		
		if(StringUtils.isBlank(DEFAULT_DB_HOST) || DEFAULT_DB_PORT == -1)
		{
			log.warn("Could not fetch the Default DB information from the properties.  Services requesting data from the default (Adjacent H2 DB) will fail"); 
		}
	}

	/*
	 * (non-Javadoc)
	 * 
	 * @see
	 * com.deleidos.rtws.webapp.dbapi.servlet.enunciate.AlterService#createTable
	 * (java.lang.String, java.lang.String)
	 */
	@Override
	public JSONObject createTable(String db, String type, String table,
			String jsonDef) {
		AlterDao dao = null;
		try {
			H2DBUtils.validateIdentifier(type);
			H2DBUtils.validateIdentifier(table);
			JSONObject def = JSONObject.fromObject(jsonDef);
			JSONArray cols = def.getJSONArray("columns");
			for (int i = 0; i < cols.size(); i++)
				H2DBUtils.validateColJSON(cols.getJSONObject(i));
			dao = new AlterDao(db);
		} catch (Exception e) {
			log.error("Invalid Create Table request", e);
			throw new WebApplicationException(Response.Status.BAD_REQUEST);
		}

		try {
			dao.createTable(type, table, jsonDef);
		} catch (Exception e) {
			String simpleErrorMsg = "Error creating table"
					+ (table != null ? (" '" + table + "'") : "");
			log.error(simpleErrorMsg, e);
			ResponseBuilder responseBuilder = Response
					.status(Response.Status.INTERNAL_SERVER_ERROR);
			responseBuilder.entity(simpleErrorMsg);
			throw new WebApplicationException(responseBuilder.build());
		}

		String defaultOwner = getDefaultOwner(db, type, table);
		if (StringUtils.isNotBlank(defaultOwner)) {
			try {
				dao.grantTablePermissions(type, table, defaultOwner,
						new HashSet<String>(H2DBUtils.TABLE_PERMISSIONS));
			} catch (Exception e) {
				try {
					log.error("Automatic table grants failed.  Rolling back creation of table '"
							+ table + "'");
					dao.dropTable(type, table);
				} catch (Exception dropTableException) {
					log.error("Table creation rollback failed.  Failed to delete table '"
							+ table + "'");
				}

				ResponseBuilder responseBuilder = Response
						.status(Response.Status.INTERNAL_SERVER_ERROR);
				responseBuilder.entity("Error creating table"
						+ (table != null ? (" '" + table + "'") : ""));
				throw new WebApplicationException(responseBuilder.build());
			}
		}

		return H2DBUtils.createStringResult("Table '" + table
				+ "' Created Successfully");
	}

	/*
	 * (non-Javadoc)
	 * 
	 * @see
	 * com.deleidos.rtws.webapp.dbapi.servlet.enunciate.AlterService#dropTable(java
	 * .lang.String, java.lang.String)
	 */
	@Override
	public JSONObject dropTable(String db, String type, String table) {
		AlterDao dao = null;

		try {
			H2DBUtils.validateIdentifier(type);
			H2DBUtils.validateIdentifier(table);
			dao = new AlterDao(db);
		} catch (Exception e) {
			log.error("Invalid Drop Table request", e);
			throw new WebApplicationException(Response.Status.BAD_REQUEST);
		}

		try {
			int retValue = dao.dropTable(type, table);
			return H2DBUtils.createResult(retValue);
		} catch (Exception e) {
			String simpleErrorMsg = "Error dropping table"
					+ (table != null ? (" '" + table + "'") : "");
			log.error(simpleErrorMsg, e);
			ResponseBuilder responseBuilder = Response
					.status(Response.Status.INTERNAL_SERVER_ERROR);
			responseBuilder.entity(simpleErrorMsg);
			throw new WebApplicationException(responseBuilder.build());
		}
	}

	@Override
	public JSONObject grantTablePermissions(String db, String type,
			String table, String grantee, Set<String> permissions) {

		if (StringUtils.isBlank(grantee)) {
			grantee = getDefaultOwner(db, type, table);
		}

		if (StringUtils.isBlank(grantee)) {
			log.info("No grantee provided for Table Permission grant request");
			throw new WebApplicationException(Status.BAD_REQUEST);
		}

		Set<String> vettedPermissions = H2DBUtils.parseTablePermissions(
				permissions, true);
		if (vettedPermissions == null || vettedPermissions.size() == 0) {
			log.warn("Invalid permissions provided for Table Permission grant request");
			throw new WebApplicationException(Status.BAD_REQUEST);
		}

		AlterDao dao = null;
		try {
			H2DBUtils.validateIdentifier(type);
			H2DBUtils.validateIdentifier(table);
			H2DBUtils.validateIdentifier(grantee);
			dao = new AlterDao(db);
		} catch (Exception e) {
			log.warn(
					"Invalid identifiers provided to Table Permission grant request",
					e);
			throw new WebApplicationException(Status.BAD_REQUEST);
		}

		try {
			dao.grantTablePermissions(type, table, grantee, vettedPermissions);
			return H2DBUtils
					.createStringResult("Table permissions granted successfully.");
		} catch (Exception e) {
			String simpleErrorMsg = "Error granting permissions on table"
					+ (table != null ? (" '" + table + "'") : "");
			log.error(simpleErrorMsg, e);
			ResponseBuilder responseBuilder = Response
					.status(Response.Status.INTERNAL_SERVER_ERROR);
			responseBuilder.entity(simpleErrorMsg);
			throw new WebApplicationException(responseBuilder.build());
		}
	}

	@Override
	public JSONObject revokeTablePermissions(String db, String type,
			String table, String revokeSubject, Set<String> permissions) {

		if (StringUtils.isBlank(revokeSubject)) {
			revokeSubject = getDefaultOwner(db, type, table);
		}

		if (StringUtils.isBlank(revokeSubject)) {
			log.info("No subject provided for Table Permission revocation request");
			throw new WebApplicationException(Status.BAD_REQUEST);
		}

		Set<String> vettedPermissions = H2DBUtils.parseTablePermissions(
				permissions, true);
		if (vettedPermissions == null || vettedPermissions.size() == 0) {
			log.warn("Invalid permissions provided for Table Permission revocation request");
			throw new WebApplicationException(Status.BAD_REQUEST);
		}

		AlterDao dao = null;

		try {
			H2DBUtils.validateIdentifier(type);
			H2DBUtils.validateIdentifier(table);
			H2DBUtils.validateIdentifier(revokeSubject);
			dao = new AlterDao(db);
		} catch (Exception e) {
			log.warn(
					"Invalid identifiers provided to Table Permission revocation request",
					e);
			throw new WebApplicationException(Status.BAD_REQUEST);
		}

		try {
			dao.revokeTablePermissions(type, table, revokeSubject,
					vettedPermissions);
			return H2DBUtils
					.createStringResult("Table permissions revoked successfully");
		} catch (Exception e) {
			String simpleErrorMsg = "Error revoking permissions on table"
					+ (table != null ? (" '" + table + "'") : "");
			log.error(simpleErrorMsg, e);
			ResponseBuilder responseBuilder = Response
					.status(Response.Status.INTERNAL_SERVER_ERROR);
			responseBuilder.entity(simpleErrorMsg);
			throw new WebApplicationException(responseBuilder.build());
		}
	}

	/*
	 * (non-Javadoc)
	 * 
	 * @see
	 * com.deleidos.rtws.webapp.dbapi.servlet.enunciate.AlterService#alterTableAddColumn
	 * (java.lang.String, java.lang.String, java.lang.String)
	 */
	@Override
	public Response alterTableAddColumn(String db, String type, String table,
			String jsondef) {
		alterAddColumnTask task = new alterAddColumnTask(db, type, table,
				jsondef);
		
		String token = StatusManager.INSTANCE.executeJob(task);
		return new StatusServiceImpl().status(token);
	}

	private class alterAddColumnTask extends LongRunningDBJob {

		String db;
		String type;
		String table;
		String jsondef;

		public alterAddColumnTask(String d, String ty, String ta, String jd) {
			db = d;
			type = ty;
			table = ta;
			jsondef = jd;
		}

		public void run() {
			try {
				setStatus(1);
				H2DBUtils.validateIdentifier(type);
				H2DBUtils.validateIdentifier(table);
				JSONObject colObj = JSONObject.fromObject(jsondef);
				H2DBUtils.validateColJSON(colObj);
				setStatus(10);
				AlterDao dao = new AlterDao(db);
				dao.addColumn(type, table, jsondef);
				setStatus(100);
			} catch (Exception e) {
				log.error("Error altering table (add column)", e);
				setErrorStatus("Error altering table (add column) "
						+ e.getMessage());
			}
		}
	}

