	import com.deleidos.rtws.commons.util.StringUtils;
	import com.deleidos.rtws.commons.util.ViewUtils;
	
	import flash.geom.Rectangle;
	
	import mx.collections.ArrayList;
	import mx.core.FlexGlobals;
	import mx.managers.PopUpManager;
	import mx.utils.UIDUtil;
	
	import org.robotlegs.mvcs.Command;
	
	import spark.components.Application;
	
	public class FilterEditCommand extends Command
	{
		[Inject] public var requestingEvent:FilterEditEvent;
		[Inject] public var filtersModel:AlertCriteriaFilterModel;
		[Inject] public var dataModelsModel:DataModelsModel;
		
		// Save Op Management Variables
		private var _existingFilter:Filter = null;
		private var _editFilter:Filter = null;
		private var _isCreateOp:Boolean = false;
		private var _serviceTrackingToken:String = null;
		private var _savedFilter:Filter = null;
		
		public function FilterEditCommand()
		{
			super();
		}
		
		override public function execute():void
		{
			if(requestingEvent.type == FilterEditEvent.CANCEL)
			{
				if(isNaN(requestingEvent.filterKey))
				{
					throw new ArgumentError("Must provide a valid filterKey to cancel");
				}
				
				var eventToDispatch:FilterEditEvent = null;
				var origFilter:Filter = filtersModel.cancelEditFilter(requestingEvent.filterKey);
				if(requestingEvent.filterKey < 0 && origFilter == null)
				{
					// Cancelled an edit for a filter that doesn't exist
					eventToDispatch = new FilterEditEvent(FilterEditEvent.CANCELLED, OperationStatusEvent.SUB_TYPE_SUCCESS, requestingEvent.trackingToken);
					eventToDispatch.userMsg = "Unknown Filter Key";
				}
				else
				{
					eventToDispatch = new FilterEditEvent(FilterEditEvent.CANCELLED, OperationStatusEvent.SUB_TYPE_SUCCESS, requestingEvent.trackingToken);
				}
				eventToDispatch.filterKey = requestingEvent.filterKey;
				eventToDispatch.filter = origFilter;
				
				eventDispatcher.dispatchEvent(eventToDispatch);
			}
			else if(requestingEvent.type == FilterEditEvent.SAVE)
			{
				handleSaveRequest();
			}
		}
		
		private function handleSaveRequest():void
		{
			var notifications:ArrayList = null;
			if(requestingEvent.notificationsConfirmed == false)
			{
				notifications = calculateSaveNotifications();
			}
			
			if(notifications == null || notifications.length == 0)
			{
				startFilterSaveRequest();
			}
			else
			{
				// Report notifications
				
				var confirmationDialog:FilterSaveConfirmationDialog = new FilterSaveConfirmationDialog();
				confirmationDialog.filterKey = requestingEvent.filterKey;
				confirmationDialog.notifications = notifications;
				
				var prefSize:Rectangle = null;
				
				try {
					var minBounds:Rectangle = new Rectangle(0, 0, confirmationDialog.minWidth, confirmationDialog.minHeight);
					var maxBounds:Rectangle = new Rectangle(0, 0, 1200, 800);
					prefSize = LayoutUtils.calculateAppRelativeSize(45, NaN, minBounds, maxBounds, true, true);
				} catch (error:Error) {
					prefSize = null;
				}
				
				if (prefSize != null) {
					confirmationDialog.width = prefSize.width;
					confirmationDialog.height = prefSize.height;
				}
				
				var rootApp:Application = (FlexGlobals.topLevelApplication as Application);
				if(rootApp == null)
				{
					rootApp = (ViewUtils.findFirstAncestorByType(contextView, Application) as Application);
				}
				
				PopUpManager.addPopUp(confirmationDialog, (rootApp != null ? rootApp : contextView), true);
				PopUpManager.centerPopUp(confirmationDialog);
				
				mediatorMap.createMediator(confirmationDialog);
			}
		}
		
		private function startFilterSaveRequest():void
		{
			_existingFilter = filtersModel.getFilter(requestingEvent.filterKey);
			_isCreateOp = (_existingFilter == null);
			_editFilter = filtersModel.getEditFilter(requestingEvent.filterKey);
			
			commandMap.detain(this);
			
			if(_isCreateOp)
			{
				saveFilterDetails();
			}
			else
			{
				// Update to the lates subscriptions before merging and saving
				updSubscriptionInfo();
			}
		}
		
		private function updSubscriptionInfo():void
		{
			_serviceTrackingToken = UIDUtil.createUID();
			
			var refreshSubsRequestEvent:FilterDataRequestEvent =
				new FilterDataRequestEvent(FilterDataRequestEvent.LOAD_SUBSCRIBERS,
					null, _serviceTrackingToken);
			refreshSubsRequestEvent.filterKey = requestingEvent.filterKey;
			
			eventDispatcher.addEventListener(FilterDataRequestEvent.LOAD_SUBSCRIBERS_STATUS, onSubscriberUpdStatus);
			dispatch(refreshSubsRequestEvent);
		}
		
		private function onSubscriberUpdStatus(serviceStatusEvent:FilterDataRequestEvent):void
		{
			if(serviceStatusEvent != null && serviceStatusEvent.trackingToken === _serviceTrackingToken && serviceStatusEvent.isComplete())
			{
				eventDispatcher.removeEventListener(FilterDataRequestEvent.LOAD_SUBSCRIBERS_STATUS, onSubscriberUpdStatus);
				_serviceTrackingToken = null;
				
				if(serviceStatusEvent.isUnsuccessful())
				{
					handleSaveError("Failed to Save Alert Definition: Setup work did not complete"); 
				}
				else
				{
					saveFilterDetails();
				}
			}
		}
		
		private function saveFilterDetails():void
		{
			_serviceTrackingToken = UIDUtil.createUID();
			
			var saveFilterRequestEventType:String = null;
			if(_isCreateOp)
			{
				saveFilterRequestEventType = FilterPersistenceEvent.CREATE_FILTER;
				eventDispatcher.addEventListener(FilterPersistenceEvent.FILTER_CREATED, onFilterSaveStatus);
			}
			else
			{
				saveFilterRequestEventType = FilterPersistenceEvent.UPDATE_FILTER;
				eventDispatcher.addEventListener(FilterPersistenceEvent.FILTER_UPDATED, onFilterSaveStatus);
			}
			var saveFilterRequestEvent:FilterPersistenceEvent =
				new FilterPersistenceEvent(saveFilterRequestEventType, null, _serviceTrackingToken);
			saveFilterRequestEvent.filter = _editFilter;
			
			dispatch(saveFilterRequestEvent);
		}
		
		private function onFilterSaveStatus(serviceStatusEvent:FilterPersistenceEvent):void
		{
			if(serviceStatusEvent != null && serviceStatusEvent.trackingToken === _serviceTrackingToken && serviceStatusEvent.isComplete())
			{
				if(_isCreateOp)
				{
					eventDispatcher.removeEventListener(FilterPersistenceEvent.FILTER_CREATED, onFilterSaveStatus);
				}
				else
				{
					eventDispatcher.removeEventListener(FilterPersistenceEvent.FILTER_UPDATED, onFilterSaveStatus);
				}
				_serviceTrackingToken = null;
				
				if(serviceStatusEvent.isUnsuccessful())
				{
					handleSaveError("Failed to Save Alert Definition: Could not save Alert Defintion Details"); 
				}
				else
				{
					_savedFilter = serviceStatusEvent.filter;
					saveSubscriptions();
				}
			}
		}
		
		private function saveSubscriptions():void
		{
			_serviceTrackingToken = UIDUtil.createUID();
			
			var saveSubsRequestEvent:FilterSubscriptionsPersistenceEvent =
				new FilterSubscriptionsPersistenceEvent(FilterSubscriptionsPersistenceEvent.MERGE_EDITS,
					null, _serviceTrackingToken);
			saveSubsRequestEvent.editFilterKey = requestingEvent.filterKey;
			if(_isCreateOp)
			{
				// Specify the target filter key
				saveSubsRequestEvent.destFilterKey = _savedFilter.key;
			}
			
			eventDispatcher.addEventListener(FilterSubscriptionsPersistenceEvent.MERGE_EDITS_STATUS, onSubscriptionsSaveStatus);
			dispatch(saveSubsRequestEvent);
		}
		
		private function onSubscriptionsSaveStatus(serviceStatusEvent:FilterSubscriptionsPersistenceEvent):void
		{
			if(serviceStatusEvent != null && serviceStatusEvent.trackingToken === _serviceTrackingToken && serviceStatusEvent.isComplete())
			{
				eventDispatcher.removeEventListener(FilterSubscriptionsPersistenceEvent.MERGE_EDITS_STATUS, onSubscriptionsSaveStatus);
				_serviceTrackingToken = null;
				
				if(serviceStatusEvent.isUnsuccessful())
				{
					handleSaveError("Incomplete Save Alert Definition: Alert Defintion Details saved successfully, but the Alert Subscriptions could not be saved."); 
				}
				else
				{
					_savedFilter.subscriptions = serviceStatusEvent.subscriptions;
					finalizeFilterSaveRequest();
				}
			}
		}
		
		private function finalizeFilterSaveRequest():void
		{
			var successEvent:FilterEditEvent = new FilterEditEvent(FilterEditEvent.SAVED, OperationStatusEvent.SUB_TYPE_SUCCESS, requestingEvent.trackingToken);
			successEvent.filterKey = requestingEvent.filterKey;
			successEvent.filter = _savedFilter;
			
			// Dispatch success event first so the update event doesn't cause the views to merge changes
			dispatch(successEvent);
			
			filtersModel.cancelEditFilter(requestingEvent.filterKey);
			
			if(_isCreateOp)
			{
				filtersModel.addFilter(_savedFilter);
			}
			else
			{
				filtersModel.updateFilter(_savedFilter);
			}
			
			commandMap.release(this);
		}
		
		private function handleSaveError(userMsg:String):void
		{
			var failureEvent:FilterEditEvent = new FilterEditEvent(FilterEditEvent.SAVED, OperationStatusEvent.SUB_TYPE_FAILURE, requestingEvent.trackingToken);
			failureEvent.userMsg = userMsg;
			failureEvent.filterKey = requestingEvent.filterKey;
			failureEvent.filter = null;
			
			dispatch(failureEvent);
			
			commandMap.release(this);
		}
		
		private function calculateSaveNotifications():ArrayList
		{
			var result:ArrayList = new ArrayList();
			
			var existingFilter:Filter = filtersModel.getFilter(requestingEvent.filterKey);
			var isCreate:Boolean = (existingFilter == null);
			var filterToSave:Filter = filtersModel.getEditFilter(requestingEvent.filterKey);
			
			if(filterToSave == null)
			{
				result.addItem(new StatusMessage(StatusType.ERROR, "No Alert Definition Data to Save"));
			}
			else
			{
				if(StringUtils.isBlank(filterToSave.name))
				{
					result.addItem(new StatusMessage(StatusType.ERROR, "You must provide a Name"));
				}
				else if(filterToSave.name.length > 125)
				{
					result.addItem(new StatusMessage(StatusType.ERROR, "Name cannot be longer than 125 characters"));
				}
				
				if(StringUtils.isBlank(filterToSave.model))
				{
					result.addItem(new StatusMessage(StatusType.ERROR, "You must select a Data Model"));
				}
				else if(filterToSave.model.length > 100)
				{
					result.addItem(new StatusMessage(StatusType.ERROR, "Data Model cannot be longer than 100 characters"));
				}
				else
				{
					var availModelNames:ArrayList = dataModelsModel.tenantVersionlessDataModelNames;
					
					if(availModelNames == null || availModelNames.getItemIndex(filterToSave.model) == -1)
					{
						var warningMsg:String = "The Data Model you have selected could not be found." + //
							"  If you feel this data model should exist, you can save this alert definition and" + //
							" attempt to refresh the AlertController application or re-start your system." + //
							"  This rule will not produce alerts if the Data Model cannot be found by the system."; //
						result.addItem(new StatusMessage(StatusType.WARN, warningMsg));
					}
				}
				
				if(StringUtils.isBlank(filterToSave.criteriaJson))
				{
					result.addItem(new StatusMessage(StatusType.ERROR, "You must provide Alert Criteria for triggering the alert"));
				}
				else if(filterToSave.criteriaJson.length > 4000)
				{
					result.addItem(new StatusMessage(StatusType.ERROR, "Alert Criteria cannot be longer than 4000 characters"));
				}
				else
				{
					try
					{
						JSON.decode(filterToSave.criteriaJson, true);
					}
					catch(error:Error)
					{
						result.addItem(new StatusMessage(StatusType.ERROR, "The specified Alert Criteria is invalid.  Please use the validate feature to test for valid syntax."));
					}
				}
				
				if(StringUtils.isNotBlank(filterToSave.emailSubject) && filterToSave.emailSubject.length > 100)
				{
					result.addItem(new StatusMessage(StatusType.ERROR, "Email Subject cannot be longer than 100 characters"));
				}
				
				if(StringUtils.isNotBlank(filterToSave.emailMessage) && filterToSave.emailMessage.length > 4000)
				{
					result.addItem(new StatusMessage(StatusType.ERROR, "Email Message cannot be longer than 4000 characters"));
				}
				
				var isEmailUpdate:Boolean = (!isCreate &&
					(filterToSave.emailSubject != existingFilter.emailSubject ||
						filterToSave.emailMessage != existingFilter.emailMessage));
				
				if(isCreate || isEmailUpdate)
				{
					if(StringUtils.isBlank(filterToSave.emailSubject) && StringUtils.isNotBlank(filterToSave.emailMessage))
					{
						result.addItem(new StatusMessage(StatusType.WARN, "No Subject was provided for alert emails."));
					}
					else if(StringUtils.isNotBlank(filterToSave.emailSubject) && StringUtils.isBlank(filterToSave.emailMessage))
					{
						result.addItem(new StatusMessage(StatusType.WARN, "No Message Body was provided for alert emails."));
					}
				}
				
				if(isEmailUpdate && StringUtils.isBlank(filterToSave.emailSubject) && StringUtils.isBlank(filterToSave.emailMessage))
				{
					var emailRecipientClearMsg:String = "You have removed the email template from this alert definition." + //
						"  If you continue, you and any other previously subscribed users will no longer receive email messages" + //
						" when this alert criteria is met."; //
					result.addItem(new StatusMessage(StatusType.WARN, emailRecipientClearMsg));
				}
			}
			
			return result;
		}
	}
}