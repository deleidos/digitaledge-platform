	/**
	 * Takes the absolute path to a content in the repository and extract the parameters
	 * needed to retrieve it from the repository.
	 * 
	 * Path Example: /public/deleidos/services/deleidos-ingest-ext.jar/jcr:content
	 * Another Example: /common/services/deleidos-ingest-ext.jar/jcr:content
	 * 
	 * results[0] = the filename "deleidos-ingest-ext.jar"
	 * results[1] = visibility (public, private, common)
	 * results[2] = tenant name (null for common visibility)
	 * results[3] = the rest of the path to the file
	 */
	private String [] extractRetrieveContentParameters(String nodePath) {
	
		String [] parameters = null;
		
		String [] tokens = nodePath.split("/");
		
		// After splitting the path we should expect the following:
		//  [0]           - blank string from the split
		//  [1]           - space (public / private)
		//  [2]           - tenant
		//  [3 ... n - 2] - paths to the content in the repository, expect at least 1
		//  [n - 1]       - filename
		//  [n]           - jcr:content string
		//
		//  OR
		//
		//  [0]        - blank string from the split
		//  [1]        - (common)
		//  [2 .. n-2] - paths to the content in the repository, expect at least 1
		//  [n-1]      - filename
		//  [n]        - jcr:content string
		
		if (tokens.length >= 6 &&
				(tokens[1].equalsIgnoreCase(AbstractSystemRepository.Visibility.Public.toString()) ||
					tokens[1].equalsIgnoreCase(AbstractSystemRepository.Visibility.Private.toString())) ) {
			String vis = tokens[1];
			String tenant = tokens[2];
			
			StringBuilder path = new StringBuilder();
			
			for (int i = 3; i <= tokens.length - 3; i++) {
				path.append(tokens[i]);
				path.append('/');
			}
			
			path.deleteCharAt(path.length() - 1);
			
			String filename = tokens[tokens.length - 2];	
			
			parameters = new String[4];
			parameters[0] = filename;
			parameters[1] = vis;
			parameters[2] = tenant;
			parameters[3] = path.toString();
		}
		else if (tokens.length >= 5 &&
				tokens[1].equalsIgnoreCase(AbstractSystemRepository.Common)) {
			StringBuilder path = new StringBuilder();
			for (int i = 2; i <= tokens.length - 3; i++) {
				path.append(tokens[i]);
				path.append('/');
			}
			path.deleteCharAt(path.length() - 1);

			parameters = new String[4];
			parameters[0] = tokens[tokens.length - 2];//filename
			parameters[1] = tokens[1];//common
			parameters[2] = null;//tenant
			parameters[3] = path.toString();
		}
		
		return parameters;
		
	}
	
	private void delete(File f) {
        if(f.isDirectory()){
            for(File c : f.listFiles()){
            	delete(c);
            }
        }
        else if(f.delete() == false){
            log.info(String.format("Failed to delete file %s.", f.getAbsolutePath()));
        }
        else{
        	//nothing
        }
    }   
	
}