	/**
	 * Send a command to the gateway for which we want to broadcast
	 * to the specified nodes in the json definition.
	 * 
	 * Invokes the gatewayapi REST service:
	 * 		http://<host>:<port>/json/system/broadcast
	 */
	public String broadcast(
			Integer accountId, 
			String region, 
			String domain, 
			String jsonDef) throws GatewayApiException {
		
		try {
			WebResource res = buildGatewayApiEndpoint(accountId, region);
			res = res.path("json").path("system").path("broadcast");
		
			Form f = new Form();
			f.add("domain", domain);
			f.add("jsonDef", jsonDef);

			String response = res.post(String.class, f);
			JSONObject jsonObj = JSONObject.fromObject(response);
			
			if (jsonObj.has("standardHeader")) {
				JSONObject jsonHeader = jsonObj.getJSONObject("standardHeader");
				if (jsonHeader.has("code")) {
					int code = jsonHeader.getInt("code");
					if (code != 200) {
						if (jsonObj.has("responseBody") && jsonObj.getJSONObject("responseBody").has("message")) {
							throw new GatewayApiException(jsonObj.getJSONObject("responseBody").getString("message"));
						}
						
						throw new GatewayApiException(String.format("Gateway returned error code %d.", code));
					}
				}
			}
			
			return jsonObj.getJSONObject("responseBody").getString("Token");
		} catch (Exception ex) {
			String message = String.format("Failed to broadcast command for region '%s' and domain '%s'. Message: %s", region, domain, ex.getMessage());
			logger.error(message, ex);
			throw new GatewayApiException(message, ex);
		}
		
	}
	
