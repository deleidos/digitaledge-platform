	import com.deleidos.rtws.dmeditor.models.ScriptDirectory;
	import com.deleidos.rtws.dmeditor.views.AddDataSourcePopup;
	import com.deleidos.rtws.dmeditor.views.MapCallScriptPopup;
	import com.deleidos.rtws.dmeditor.views.MapConvertDatePopup;
	import com.deleidos.rtws.dmeditor.views.MapGetFieldPopup;
	import com.deleidos.rtws.dmeditor.views.MapUseConstantPopup;
	import com.deleidos.rtws.dmeditor.views.SpinnerPopup;
	import com.deleidos.rtws.dmeditor.wizards.WizardController;
	import com.deleidos.rtws.dmeditor.wizards.WizardStepDisplayObject;
	import com.deleidos.rtws.dmeditor.wizards.addds.*;
	import com.deleidos.rtws.dmeditor.components.HierarchicalCollectionView2;
	
	import flash.events.Event;
	
	import mx.collections.ArrayCollection;
	import mx.collections.HierarchicalData;
	import mx.collections.XMLListCollection;
	import mx.events.CloseEvent;
	import mx.managers.PopUpManager;
	
	import org.robotlegs.mvcs.Mediator;
	
	import spark.components.TitleWindow;
	
	public class DataSourceMapViewMediator extends Mediator
	{
		[Inject] public var view:DataSourceMapView;
		[Inject] public var model:InputModel;
		[Inject] public var parserDir:ParserDirectory;
		[Inject] public var scriptDir:ScriptDirectory;
		
		private var popupMappingTable:Array;
		
		override public function onRegister():void {
			eventMap.mapListener(eventDispatcher, ModelServiceEvent.MODEL_LOADED, handleModelLoaded);
			eventMap.mapListener(eventDispatcher, ModelServiceEvent.MODEL_WIZARD_LOADED, handleModelLoaded);
			eventMap.mapListener(eventDispatcher, AppNavigationEvent.TAB_SELECTION, handleTabSelection);
			eventMap.mapListener(eventDispatcher, InputModelEditEvent.MODEL_SELECT_DATASRC, handleModelSelectDataSource);
			eventMap.mapListener(eventDispatcher, ModelServiceEvent.PARSER_DIR_LOADED, handleAddDataSourcePopupBegin);
			eventMap.mapListener(eventDispatcher, InputModelEditEvent.MODEL_DEL_DATASRC_FIELD_DELETE, handleDeleteDataSrcField);			
			
			eventMap.mapListener(eventDispatcher, InputModelEditEvent.MODEL_FIELD_INSERTED, handleFieldInserted);
			eventMap.mapListener(eventDispatcher, InputModelEditEvent.MODEL_FIELD_DELETED, handleFieldDeleted);
			
			eventMap.mapListener(eventDispatcher, ModelServiceEvent.NEW_MODEL_DONE, handleNewModelDone);
			
			eventMap.mapListener(view, AppNavigationEvent.DATASRC_MAP_DBLCLICK, handleItemDoubleClick);
			eventMap.mapListener(view, PopupEvent.ADD_DATA_SOURCE,  handleAddDataSource);
			eventMap.mapListener(view, PopupEvent.EDIT_DATA_SOURCE, handleEditDataSource);
			eventMap.mapListener(view, InputModelEditEvent.MODEL_REMOVE_DATASRC, dispatch);
			eventMap.mapListener(view, InputModelEditEvent.MODEL_SELECT_DATASRC, handleViewSelectDataSource);
			eventMap.mapListener(view, PopupEvent.MESSAGE_POPUP, dispatch);
			
			eventMap.mapListener(eventDispatcher, PopupEvent.MAP_GET_FIELD,    handleGetFieldPopupBegin);
			eventMap.mapListener(eventDispatcher, PopupEvent.MAP_GET_ARRAY,    handleGetArrayPopupBegin);
			eventMap.mapListener(eventDispatcher, PopupEvent.MAP_USE_CONSTANT, handleUseConstPopupBegin);
			eventMap.mapListener(eventDispatcher, PopupEvent.MAP_CONVERT_DATE, handleConvertDatePopupBegin);
			eventMap.mapListener(eventDispatcher, PopupEvent.MAP_CALL_SCRIPT,  handleCallScriptPopupBegin);
			eventMap.mapListener(view, PopupEvent.MAP_GET_FIELD,    handleGetFieldPopupBegin);
			eventMap.mapListener(view, PopupEvent.MAP_GET_ARRAY,    handleGetArrayPopupBegin);
			eventMap.mapListener(view, PopupEvent.MAP_USE_CONSTANT, handleUseConstPopupBegin);
			eventMap.mapListener(view, PopupEvent.MAP_CONVERT_DATE, handleConvertDatePopupBegin);
			eventMap.mapListener(view, PopupEvent.MAP_CALL_SCRIPT,  handleCallScriptPopupBegin);
			
			eventMap.mapListener(eventDispatcher, InputModelEditEvent.MODEL_MAP_CHANGED, handleMapChanged);

			eventMap.mapListener(view, InputModelEditEvent.MODEL_MAP_ADD_ELEMENT, dispatch);
			eventMap.mapListener(view, InputModelEditEvent.MODEL_MAP_DEL_ELEMENT, dispatch);
			
			popupMappingTable = new Array();
			popupMappingTable[InputModel.XLATE_CONSTANT] = { popupEventName:PopupEvent.MAP_USE_CONSTANT,
				                                             modelEventName:InputModelEditEvent.MODEL_MAP_USE_CONST };
			popupMappingTable[InputModel.XLATE_GET]      = { popupEventName:PopupEvent.MAP_GET_FIELD,
				                                             modelEventName:InputModelEditEvent.MODEL_MAP_GET_FIELD };
			popupMappingTable[InputModel.XLATE_GET_ARRAY]= { popupEventName:PopupEvent.MAP_GET_ARRAY,
															 modelEventName:InputModelEditEvent.MODEL_MAP_GET_ARRAY };
			popupMappingTable[InputModel.XLATE_CONVERT]  = { popupEventName:PopupEvent.MAP_CONVERT_DATE,
				                                             modelEventName:InputModelEditEvent.MODEL_MAP_CONV_DATE };
			popupMappingTable[InputModel.XLATE_SCRIPT]   = { popupEventName:PopupEvent.MAP_CALL_SCRIPT,
				                                             modelEventName:InputModelEditEvent.MODEL_MAP_USE_SCRIPT };
		}
		
		protected function handleNewModelDone( event:ModelServiceEvent ):void {
			view.dataSourceNames = model.dataSourceNameList;
			view.selectedDataSource = null;
			var hd : HierarchicalData = new HierarchicalData(new XMLListCollection());
			view.xlateDataProvider = new HierarchicalCollectionView2(hd);
			view.dataSourcesLocked = isInvalidMappingState();
		}
		
		protected function handleModelLoaded( event:ModelServiceEvent ):void {
			view.dataSourceNames = model.dataSourceNameList;
			view.selectedDataSource = null;
			if (model.dataSourceNameList.length > 0) {
				model.selectDataSource(0);
			}
			else {
				var hd : HierarchicalData = new HierarchicalData(new XMLListCollection());
				view.xlateDataProvider = new HierarchicalCollectionView2(hd);				
			}
			view.dataSourcesLocked = isInvalidMappingState();
		}
		
		protected function handleItemDoubleClick(event:AppNavigationEvent):void {
			var selectedItem:XML = event.params.selectedItem as XML;
			var selectedIndex:int = event.params.selectedIndex;
			if (selectedItem != null) {
				var xlate:String = selectedItem.@xlate;
				var keyword:String = model.xlateKeyword(xlate);
				if (keyword != null) {
					// Lookup the popup and input model event names and dispatch the event					
					var mapEntry:Object = popupMappingTable[keyword];
					
					var editEvent:InputModelEditEvent =
						new InputModelEditEvent(
							mapEntry.modelEventName,
							selectedItem,
							selectedIndex,
							null );
					
					dispatch(new PopupEvent(mapEntry.popupEventName, editEvent));													
				}
			}
		}
		
		protected function handleTabSelection( event:AppNavigationEvent):void {
			var label:String = event.params as String;
			if (label == AppNavigationEvent.TAB_LABEL_DATA_SOURCE) {
				// Called when switching to this view
				// view.newButtonEnabled = (model.canonicalModel.length > 0);
				// view.xlateGrid.expandAll();
			}
		}
		
		protected function handleFieldInserted( event:InputModelEditEvent ):void {
			// view.xlateGrid.expandAll();
			view.dataSourcesLocked = isInvalidMappingState();
		}
		
		private function handleFieldDeleted(event:InputModelEditEvent):void {
			view.dataSourcesLocked = isInvalidMappingState();
		}
		
		private function isInvalidMappingState():Boolean
		{
			return (model == null || model.canonicalModel == null || model.canonicalModel.length == 0);
		}
		
		// Handler for when the view (user) selects a data source
		protected function handleViewSelectDataSource( event:InputModelEditEvent):void {
			model.selectDataSource(event.selectedIndex);
		}
		
		// Handler for when the model selected the data source and now it must
		// be reflected on the display
		protected function handleModelSelectDataSource( event:InputModelEditEvent):void {
			var dataSource:Object = event.parameters;
			view.selectedDataSource = dataSource;
			// var obj:Object = dataSource.mapping;
			// trace("handleSelectDataSource() - dataSource.mapping = " + obj);
			var hd:HierarchicalData;
			if (dataSource == null) {
				hd = new HierarchicalData();
			}
			else {
				hd = new HierarchicalData(dataSource.mapping);
			}
			view.xlateDataProvider = new HierarchicalCollectionView2(hd);
			view.currentState = view.unmappableItemSelectedState.name;
		}
		
		/***************** Popups *********************/
		
		private var xlatePopup:TitleWindow;
		private var xlatePopupDoneEventName:String;
		
		// Convienience function for the final steps in creating the popup
		private function createPopup(popup:TitleWindow, popupDoneEventName:String, doneFunc:Function, closeFunc:Function):void {
			popup.addEventListener(popupDoneEventName, doneFunc);
			popup.addEventListener(CloseEvent.CLOSE, closeFunc);
			PopUpManager.addPopUp(popup, contextView, true);
			PopUpManager.centerPopUp(popup);
			xlatePopup = popup;
			xlatePopupDoneEventName = popupDoneEventName;
		}

		// Given a popup event that has a nested InputModelEditEvent, return the
		// fieldname of the currently selected item.
		private function makePopupTitle(prefix:String, event:PopupEvent):String {
			var nestedEvent:InputModelEditEvent = event.nestedEvent as InputModelEditEvent;
			return prefix + " for " + nestedEvent.currentItem.@fieldname;
		}
		
		private function getXlateObject(event:PopupEvent):Object {
			var nestedEvent:InputModelEditEvent = event.nestedEvent as InputModelEditEvent;
			var currentItem:XML = nestedEvent.currentItem;
			return model.xlateParse(currentItem.@xlate);
		}
		
		// Get Field
		protected function handleGetFieldPopupBegin(event:PopupEvent):void {			
			var dataSource:Object = model.selectedDataSource;
			if (dataSource != null) {
				var getFieldPopup:MapGetFieldPopup = new MapGetFieldPopup();
				getFieldPopup.title = makePopupTitle("Get Field", event);
				getFieldPopup.fieldList = dataSource.inputFields;
				getFieldPopup.nestedEvent = event.nestedEvent;
				var xlateObj:Object = getXlateObject(event);
				if (xlateObj != null) {
					// fieldName, defaultValue
					getFieldPopup.initialField = xlateObj.fieldName;
					getFieldPopup.initialDefault = xlateObj.defaultValue;
				}
				eventMap.mapListener(getFieldPopup, PopupEvent.MESSAGE_POPUP, dispatch);
				createPopup(getFieldPopup, PopupEvent.MAP_GET_FIELD_DONE, handleXlateDonePopup, handleXlateDoneClose);
			}
		}

		private function getArrayAllowed(item:XML):Boolean {
			var result:Boolean = false;
			var children:XMLList = item.children();
			if (children.length() == 0) {
				result = true;
			}
			else {
				var child:XML = children[0];
				result = (child.@fieldname == InputModel.XLATE_ARRAY_MARKER);
			}
			return result;
		}
		
		// Get Array
		protected function handleGetArrayPopupBegin(event:PopupEvent):void {			
			var dataSource:Object = model.selectedDataSource;
			if (dataSource != null) {
				var nestedEvent:InputModelEditEvent = event.nestedEvent as InputModelEditEvent;
				var selectedItem:XML = nestedEvent.currentItem;
				if (getArrayAllowed(selectedItem)) {
					var getArrayPopup:MapGetArrayPopup = new MapGetArrayPopup();
					getArrayPopup.title = makePopupTitle("Get Array", event);
					getArrayPopup.fieldList = dataSource.inputFields;
					getArrayPopup.nestedEvent = event.nestedEvent;
					var xlateObj:Object = getXlateObject(event);
					if (xlateObj != null) {
						// fieldName
						getArrayPopup.initialField = xlateObj.fieldName;
					}
					eventMap.mapListener(getArrayPopup, PopupEvent.MESSAGE_POPUP, dispatch);
					createPopup(getArrayPopup, PopupEvent.MAP_GET_ARRAY_DONE, handleXlateDonePopup, handleXlateDoneClose);
				}
				else {
					var statusMsg:StatusMessage =
						new StatusMessage(StatusType.ERROR, "To use Get Array, the data source mapping must have no array elements mapped.");
					dispatch(new PopupEvent(PopupEvent.MESSAGE_POPUP, null, statusMsg));					
				}
			}
		}
		
		// Use Constant
		protected function handleUseConstPopupBegin(event:PopupEvent):void {
			var dataSource:Object = model.selectedDataSource;
			if (dataSource != null) {
				var useConstantPopup:MapUseConstantPopup = new MapUseConstantPopup();
				var nestedEvent:InputModelEditEvent = event.nestedEvent as InputModelEditEvent;
				useConstantPopup.title = makePopupTitle("Use constant", event);
				useConstantPopup.dataTypeString = nestedEvent.currentItem.@type; 
				useConstantPopup.nestedEvent = event.nestedEvent;
				var xlateObj:Object = getXlateObject(event);
				if (xlateObj != null) {
					// constant
					useConstantPopup.initialConstant = xlateObj.constant;
				}
				eventMap.mapListener(useConstantPopup, PopupEvent.MESSAGE_POPUP, dispatch);
				createPopup(useConstantPopup, PopupEvent.MAP_USE_CONSTANT_DONE, handleXlateDonePopup, handleXlateDoneClose);
			}
		}			
		
		// Convert Date
		protected function handleConvertDatePopupBegin(event:PopupEvent):void {
			var dataSource:Object = model.selectedDataSource;
			if (dataSource != null) {
				var convertDatePopup:MapConvertDatePopup = new MapConvertDatePopup();
				convertDatePopup.title = makePopupTitle("Convert date", event);
				convertDatePopup.fieldList = dataSource.inputFields;
				convertDatePopup.nestedEvent = event.nestedEvent;
				var xlateObj:Object = getXlateObject(event);
				if (xlateObj != null) {
					// fieldNames, dateFormat
					convertDatePopup.initialFieldNames = xlateObj.fieldNames;
					convertDatePopup.initialFormatString = xlateObj.dateFormat;
				}
				eventMap.mapListener(convertDatePopup, PopupEvent.MESSAGE_POPUP, dispatch);
				createPopup(convertDatePopup, PopupEvent.MAP_CONVERT_DATE_DONE, handleXlateDonePopup, handleXlateDoneClose);
			}			
		}			
		
		// Call Script
		protected function handleCallScriptPopupBegin(event:PopupEvent):void {
			var dataSource:Object = model.selectedDataSource;
			if (dataSource != null) {
				var callScriptPopup:MapCallScriptPopup = new MapCallScriptPopup();
				callScriptPopup.title = makePopupTitle("Call script", event);
				callScriptPopup.fieldList = dataSource.inputFields
				// callScriptPopup.scriptList = new ArrayCollection(new Array("foo","bar")); // TODO: Fill in a real list of script names
				callScriptPopup.scriptList = scriptDir.scriptNames();
				callScriptPopup.scriptDir = scriptDir;
				callScriptPopup.nestedEvent = event.nestedEvent;
				var xlateObj:Object = getXlateObject(event);
				if (xlateObj != null) {
					// scriptName, arguments
					callScriptPopup.initialScriptName = xlateObj.scriptName;
					callScriptPopup.initialFieldNames = xlateObj.arguments;
				}
				eventMap.mapListener(callScriptPopup, PopupEvent.MESSAGE_POPUP, dispatch);
				createPopup(callScriptPopup, PopupEvent.MAP_CALL_SCRIPT_DONE, handleXlateDonePopup, handleXlateDoneClose);
			}
		}
		
		// Mapping changed
		protected function handleMapChanged(event:InputModelEditEvent):void {
			view.updateSelection();
			// view.xlateGrid.expandAll();
		}
		
		// Add data source
		protected function handleAddDataSource(event:PopupEvent):void {
			SpinnerPopup.createSpinnerPopup(contextView); // Show Wait Spinner - its removed by the service
			dispatch(new ModelServiceEvent(ModelServiceEvent.PARSER_DIR_LOAD, null, event.nestedEvent)); 			
		}
		
		// Edit data source
		protected function handleEditDataSource(event:PopupEvent):void {
			SpinnerPopup.createSpinnerPopup(contextView); // Show Wait Spinner - its removed by the service
			dispatch(new ModelServiceEvent(ModelServiceEvent.PARSER_DIR_LOAD, model.copyDataSource(model.selectedDataSource), event.nestedEvent)); 			
		}
		
		private var addDataSourceWizard:WizardController;
		
		// Add Data Source Popup, after parser directory is loaded
		protected function handleAddDataSourcePopupBegin(event:ModelServiceEvent):void {
			
			SpinnerPopup.destroySpinnerPopup();
			
			// Create and setup each step of the wizard
			var nameFormatStep:NameFormatStep = new NameFormatStep();
			nameFormatStep.parserList = parserDir.parserNames;
			nameFormatStep.parserDir  = parserDir;
			nameFormatStep.dataSrcNameList = model.dataSourceNameList;
			
			var getInputFieldNamesStep:GetInputFieldNamesStep = new GetInputFieldNamesStep();
			
			var parserParametersStep:ParserParametersStep = new ParserParametersStep();
			parserParametersStep.parserDir = parserDir;
			
			addDataSourceWizard = new WizardController();
			addDataSourceWizard.addStep(nameFormatStep);
			addDataSourceWizard.addStep(getInputFieldNamesStep);
			addDataSourceWizard.addStep(parserParametersStep);
			
			eventMap.mapListener(nameFormatStep, PopupEvent.MESSAGE_POPUP, dispatch);
			eventMap.mapListener(getInputFieldNamesStep, PopupEvent.MESSAGE_POPUP, dispatch);
			eventMap.mapListener(getInputFieldNamesStep, InputModelEditEvent.MODEL_DEL_DATASRC_FIELD_CHECK, handleDeleteDataSrcFieldCheck);			
			eventMap.mapListener(parserParametersStep, PopupEvent.MESSAGE_POPUP, dispatch);
			
			var data:Object = new Object();
			if (event.parameters != null) {
				var dataSource:Object = event.parameters;
				data.dataSourceName   = dataSource.name;
				data.dataSourceParser = dataSource.parser;
				data.inputFields      = dataSource.inputFields;
				data.parserParams     = dataSource.parserParams;
				data.origDataSourceParser = dataSource.parser;
			}
			
			addDataSourceWizard.start(contextView, event.nestedEvent, PopupEvent.DATA_SOURCE_DONE, handleAddDataSourceDone, data);
		}
		
		// For when the add data source wizard finishes
		protected function handleAddDataSourceDone(event:PopupEvent):void {
			addDataSourceWizard.cleanup(handleAddDataSourceDone);
			for each (var step:WizardStepDisplayObject in addDataSourceWizard.allSteps) {
				eventMap.unmapListener(step, PopupEvent.MESSAGE_POPUP, dispatch);
				if (step is GetInputFieldNamesStep) {
					eventMap.unmapListener(step, InputModelEditEvent.MODEL_DEL_DATASRC_FIELD_CHECK, handleDeleteDataSrcFieldCheck);
				}
			}
			if ((event.parameters != null) && (event.nestedEvent != null)) {
				var nestedEvent:InputModelEditEvent = event.nestedEvent as InputModelEditEvent;
				nestedEvent.parameters = event.parameters;
				dispatch(nestedEvent);
			}
		}
		
		protected function handleDeleteDataSrcField(event:InputModelEditEvent):void {
			var selectedIndex:int = event.selectedIndex;			
			var inputFields:ArrayCollection = event.parameters as ArrayCollection;
			if (selectedIndex >= 0) {
				inputFields.removeItemAt(selectedIndex);				
			}
		}
		
		// Deletes a data source field name, checks to see if that field was referenced in the data source mapping
		protected function handleDeleteDataSrcFieldCheck(event:InputModelEditEvent):void {
			var selectedIndex:int = event.selectedIndex;
			var dataSrcName:String = event.parameters.dataSourceName;
			var inputFields:ArrayCollection = event.parameters.inputFields;
			if (selectedIndex >= 0) {
				var deleteEvent:InputModelEditEvent =
					new InputModelEditEvent(InputModelEditEvent.MODEL_DEL_DATASRC_FIELD_DELETE, null, selectedIndex, inputFields);
				var fieldName:String = inputFields.getItemAt(selectedIndex) as String;
				var references:Array = model.findDataSourceFieldReference(dataSrcName, fieldName);				
				if (references.length > 0) {
					var paths:String = "";
					for each (var field:XML in references) {
						paths = field.@path + "\n";
					}
					var statusMsg:StatusMessage = new StatusMessage(StatusType.WARN,
						"'" + fieldName + "' is referenced in the data source mapping at these locations:\n\n" +
						paths + "\nAre you sure you want to remove it?");
					dispatch(new PopupEvent(PopupEvent.MESSAGE_POPUP, deleteEvent, statusMsg));
				}
				else {
					dispatch(deleteEvent);
				}
			}
		}
		
		// Common callback for when the popup finsishes via a close button press		
		protected function handleXlateDoneClose(event:CloseEvent):void {
			PopUpManager.removePopUp(xlatePopup);
			handleXlateDonePopup(new PopupEvent(xlatePopupDoneEventName));
		}
		
		// Commmon callback for when the popup finishes
		protected function handleXlateDonePopup(event:PopupEvent):void {
			xlatePopup.removeEventListener(event.type, handleXlateDonePopup);
			xlatePopup.removeEventListener(CloseEvent.CLOSE, handleXlateDoneClose );
			eventMap.unmapListener(xlatePopup, PopupEvent.MESSAGE_POPUP, dispatch);
			if ((event.parameters != null) && (event.nestedEvent != null)) {
				var nestedEvent:InputModelEditEvent = event.nestedEvent as InputModelEditEvent;
				nestedEvent.parameters = event.parameters;
				dispatch(nestedEvent);
			}
		}
	}
}
