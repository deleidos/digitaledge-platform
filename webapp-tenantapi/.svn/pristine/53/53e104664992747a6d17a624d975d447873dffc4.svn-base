	/**
	 * Send a command ot the gateway to retrieve the available compute resources.
	 *
	 * Invokes the gatewayapi REST service:
	 * 		http://<host>:<port>/json/cloud/<cloud-provider>/resources
	 */
	public AvailableCloudComputeResources getTenantCloudComputeResources(
			Integer accountId, 
			CloudProvider provider) throws GatewayApiException {
		
		AvailableCloudComputeResources resources = new AvailableCloudComputeResources();
		
		try {
			AccountEntry entry = CacheManager.getTenantAccountCache().get(accountId);
			GatewayAccount gateway = entry.getGatewayAccount();
			
			if (gateway != null) {
				WebResource res = buildGatewayApiEndpoint(gateway.getPublicDns());
				res = res.path("json").path("cloud").path(provider.toString()).path("resources");
				String rs = res.get(String.class);
				
				if (logger.isDebugEnabled())
					logger.debug("rs: " + rs);
				
				resources = mapper.readValue(rs, AvailableCloudComputeResources.class);
			} else {
				logger.warn(String.format("{%s} is missing a valid gateway.", accountId));
			}
		} catch (Exception ex) {
			String message = String.format("Failed to fetch available compute resources. Message: %s", ex.getMessage());
			logger.error(message, ex);
			throw new GatewayApiException(message, ex);
		}
		
		return resources;
		
	}
	
	/**
	 * Constructs a web resource that points to the endpoint given the account id and cloud region.
	 * 		http://<host>:<port>/gatewayapi
	 */
	private WebResource buildGatewayApiEndpoint(
			Integer accountId, 
			String region) throws RestClientException, GatewayApiException {

		// Locate the gateway information for this account.
		
		AccountEntry entry = CacheManager.getTenantAccountCache().get(accountId);
		GatewayAccount gateway = entry.getGatewayAccount();
		
		// Ensure there is a gateway associated with this account.

		if (gateway == null || ! gateway.getRegion().equals(region) || gateway.getPublicDns() == null) {
			throw new GatewayApiException(String.format("No gateway is associated to account %s and region %s.", accountId, region));
		}

		return buildGatewayApiEndpoint(gateway.getPublicDns());

	}

	/**
	 * Constructs a web resource that points to the endpoint
	 * 		http://<host>:<port>/gatewayapi
	 */
	private WebResource buildGatewayApiEndpoint(String gatewayPublicDns) {

		StringBuilder url = new StringBuilder();
		url.append(DEFAULT_WEBAPPS_SCHEME)
		   .append("://")
		   .append(gatewayPublicDns)
		   .append(String.format(":%s", DEFAULT_WEBAPPS_PORT))
		   .append("/gatewayapi");

		return getClient().resource(url.toString());

	}
	
