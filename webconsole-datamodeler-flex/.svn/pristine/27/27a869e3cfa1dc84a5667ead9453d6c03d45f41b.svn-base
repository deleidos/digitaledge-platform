	public class LoadSaveUtils
	{
		private static function descriptionCheck(desc:String):String {
			if ((desc == null) || (desc.length == 0)) {
				return "n/a";
			}
			return desc;
		}
			
		/**
		 * Given the JSON string from the parser service, populate the parser directory.
		 */
		public static function populateParserDirectory(parserDir:ParserDirectory, json:String):void {
			var parserList:Array = JSON.decode(json);
			parserDir.clearDirectory();
			for each (var parserItem:Object in parserList) {
				var fqn:String = parserItem.fqn;
				var desc:String = parserItem.description;
				var paramObjects:Object = parserItem.inputParameters;

				// To make the parser name, the class path is removed and
				// the string "Configurable" is removed
				var name:String = StringUtils.afterLast(fqn,".");
				var regex:RegExp = /^Configurable/;
				name = name.replace(regex,"");
				regex = /^SimpleConfigurable/;
				name = name.replace(regex,"");
				
				var parameterArray:Array = new Array();
				for (var paramName:String in paramObjects) {
					var item:Object = paramObjects[paramName];
					var description:String = descriptionCheck(item["description"]);
					var paramType:String = item["type"];
					var paramDefault:String = item["default"];
					var validatorSpec:String = (item["flexValidator"] == null) ? "" : item["flexValidator"];  
					parameterArray.push(parserDir.makeParameter(paramName,paramType,paramDefault,description,validatorSpec));
				}
				
				parserDir.addParserDefinition(name, desc, parameterArray);
			}
		}

		/** Enumerates properites that are shared by all processors */
		private static const predefinedProperties:Object =
			{ removeParameters:"", override:"", extractPath:"", parameters:"" };  
		
		/**
		 * Given the JSON string from the enrichment service, populate the enrichment directory.
		 */
		public static function populateEnrichmentDirectory(enrichDir:EnrichmentDirectory, json:String):void {
			var enrichList:Array = JSON.decode(json);
			enrichDir.clearDirectory();
			for each (var enrichItem:Object in enrichList) {
				var enrichDef:Object = enrichItem.enrichmentDefinition;
				var properties:Object = enrichDef.properties;
				var types:Array = enrichDef.type as Array;
				
				var description:String = "(MISSING)";
				if (enrichDef.description != null) {
					description = enrichDef.description;
				}
				
				if (types.length == 1) {
					// Get the custom paramters, if any
					var customParamsArray:Array = new Array;
					for (var propertyName:String in properties) {
						var predefined:String = predefinedProperties[propertyName];
						if (predefined == null) {
							var nvPair:Object = new Object();
							nvPair.name = properties[propertyName].name;
							nvPair.description = descriptionCheck(properties[propertyName].description);
							nvPair.type = properties[propertyName].type;
							nvPair.value = "";
							nvPair.validatorSpec = (properties[propertyName].flexValidator == null) ? "" : properties[propertyName].flexValidator;  
							customParamsArray.push(nvPair);
						}
					}

					var inputFieldDesc:String = "";
					if (properties.parameters != null) {
						inputFieldDesc = properties.parameters.description;
					}
				
 					enrichDir.addEnrichmentDefinition(types[0], description, inputFieldDesc, customParamsArray );
				}
			}
		}

		/**
		 * Load the enrichments from the json string into the enrichment model.
		 */
		public static function populateChosenEnrichments(enrichModel:EnrichmentModel, enrichDir:EnrichmentDirectory, json:String):Array {
			var messages:Array = new Array();
			var missingEnrichments:Array = new Array();
			
			enrichModel.clear();
			var enrichList:Array = JSON.decode(json);
			for each (var enrichObj:Object in enrichList) {
				var enrichment:Object = new Object();
				for each (var fieldName:String in EnrichmentModel.fieldNames) {
					var value:Object = enrichObj[fieldName];
					if (value != null) {
						enrichment[fieldName] = value;
					}
				}

				if ((enrichDir.enrichmentList.length > 0) &&
					(enrichDir.findEnrichmentDefinition(enrichment[EnrichmentDirectory.ENRICH_NAME]) == null) &&
					(missingEnrichments[enrichment[EnrichmentDirectory.ENRICH_NAME]] == null)) {
					
					messages.push("Enrichment '" + enrichment[EnrichmentDirectory.ENRICH_NAME] + "' does not exist.");
					
					missingEnrichments[enrichment[EnrichmentDirectory.ENRICH_NAME]] = true;
				}
				
				enrichModel.addEnrichment(enrichment);
			}
			
			
			return messages;
		}
		
		/**
		 * Load the data models from the xml string into the data model directory. 
		 */
		public static function populateDataModelDirectory(dmDir:DataModelDirectory, xmlString:String, visibility:String):void {

			var xml:XML = new XML(xmlString);
			
			// Structure of the response has a list of files that contains all the
			// data model filesnames.
			var fileList:XMLList = xml.descendants("file");
			var dataModelNames:Array = new Array();
			var dataModelVersions:Array = new Array();
			for each (var entry:XML in fileList) {
				// Parse each filename into its name and version,
				// and then organize the data into a list of names pointing
				// to a list of versions.
				var dmFilename:String = entry.toString();
				var dmName:DataModelName = new DataModelName(dmFilename, visibility);
				var versionList:Array = dataModelVersions[dmName.name];
				if (versionList == null) {
					dataModelVersions[dmName.name] = versionList = new Array();
					dataModelNames.push(dmName.name);
				}
				versionList.push(dmName.version);
			}
			
			dataModelNames.sort();
			
			// Now add all this to the data model directory
			dmDir.clear();
			for (var key:String in dataModelNames) {
				var name:String = dataModelNames[key];
				dmDir.addDataModelEntry(name, visibility, dataModelVersions[name]);
			}
		}

		/**
		 * Convert an array of objects (deserialized from the json) to an array of ParserParameters.
		 */
		private static function convertParserParameters(
			parserDir:ParserDirectory, mapping:Object, customConfigText:String, messages:Array):Array {
			
			var result:Array = new Array();
			var parserEntry:Object = parserDir.getParserDirEntry(mapping.parser);
			var paramsObject:Object;
			
			if (parserEntry == null) {
				// The parser entry could not be found. This could mean the parser has been deleted, or it
				// could mean the ingestapi isn't working right. Warn the user and copy in the parameters
				// from the data model. Hopefully this will be good enough.
				messages.push("Warning: Information about parser " + mapping.parser + " could not be found.");
				for each (paramsObject in mapping.parserParams) {
					result.push(parserDir.makeParameter(paramsObject.name, paramsObject.type, paramsObject.value, "(parser not found)"));
				}
			}
			else {
				// Go through the parameters defined for the parser, and match them up with the parameters
				// stored in the data model. Identify a new ones.
				for each (var parserParam:ParserParameter in parserEntry[ParserDirectory.PARSER_PARAMS]) {
					var paramFound:Boolean = false;
					for each (paramsObject in mapping.parserParams) {
						if (parserParam.name == paramsObject.name) {
							result.push(parserDir.makeParameter(
								paramsObject.name, paramsObject.type, paramsObject.value, parserParam.description, parserParam.validatorSpec));
							paramFound = true;
						}
					}
					
					if (!paramFound) {
						if (parserParam.hasCustomEditor) {
							result.push(parserDir.makeParameter(
								parserParam.name, parserParam.type, customConfigText, parserParam.description, parserParam.validatorSpec));
						}
						else {
							messages.push("Warning: Found a new parameter, '" + parserParam.name + "', for parser " + parserEntry.parserName);
							result.push(parserParam.clone());
						}
					}
				}
			}
			
			return result;
		}
		
		/**
		 * Loads the data model from the data model zip file (dmZipFile).
		 * Loads the input model, translations, data source parameters, and enrichments.
		 * Returns an array of messages.
		 */
		public static function loadDataModelZip(
									dataModelName:DataModelName,
									inputModel   :InputModel,
									enrichModel  :EnrichmentModel,
									parserDir    :ParserDirectory,
									enrichDir    :EnrichmentDirectory,
									dmZipFile    :DataModelZipFile):Array
		{
			var messages:Array = new Array();
			
			// Clear whatever is there now
			inputModel.clear();
			enrichModel.clear();
			
			// Get the canonical JSON and convert it to an XML list, then load it 
			var canonicalJSON:String = dmZipFile.getCanonicalModel();
			if (canonicalJSON == null) {
				messages.push("Input model json file is missing.");
				return messages;
			}
			
			var obj : Object = OrderedJson.decode(canonicalJSON);
			var inputModelXMLList:XMLList = JsonXMLConversions.canonicalJSONtoXML(obj);
			inputModel.loadCanonicalModel(dataModelName, inputModelXMLList);
			inputModel.dataModelIsNew = false;
			// var s:String = JsonXMLConversions.canonicalXMLtoJSON(inputModelXMLList);
			
			// Convert data source params json to an array
			var dataSrcJsonText:String = dmZipFile.getDataSourceParams();
			var mappingArray:Array = new Array();
			if (dataSrcJsonText == null) {
				messages.push("Data source parameter file missing.");
			}
			else {
				mappingArray = (JSON.decode(dataSrcJsonText) as Array);
			}
				
			// Convert json text to an object then to an xmllist
			var translations:Array = dmZipFile.getAllTranslationNames();
			for each (var name:String in translations) {
				// Find data source parameters for this translation
				var xlateJson:String = dmZipFile.getTranslationMapping(name);
				var xlateObj:Object = OrderedJson.decode(xlateJson);
				var mappingXMLList:XMLList = JsonXMLConversions.mappingJSONtoXML(xlateObj, inputModelXMLList);
				var notFound:Boolean = true;
				
				// s = JsonXMLConversions.mappingXMLtoJSON(mappingXMLList);
				for each (var mapping:Object in mappingArray) {
					if (name == mapping.name) {
						notFound = false;
						
						var customConfigText:String =
							dmZipFile.getCustomConfig(mapping.parser, name);
							
						var parserParams:Array =
							convertParserParameters(parserDir, mapping, customConfigText, messages);
						
						inputModel.loadNextDataSource(
							mapping.name,
							mapping.parser,
							mapping.inputFields,
							parserParams,
							mappingXMLList);
						
						break;
					}
				}
				
				if (notFound) {
					//if (dataSrcJsonText != null) {
						messages.push("No data source parameters found for " + name + ".");
					//}
					inputModel.loadNextDataSource(
						name,
						"UnknownParser",
						new Array(),
						new Array(),
						mappingXMLList);
				}
			}
			
			// Load enrichments
			var enrichJson:String = dmZipFile.getEnrichmentConfig();
			if (enrichJson == null) {
				messages.push("Enrichment configuration file missing.");
			}
			else {
				messages = messages.concat(LoadSaveUtils.populateChosenEnrichments(enrichModel, enrichDir, enrichJson));
			}
			return messages;
		}

		/**
		 * Finds the parameter (if any) providing a custom configuration.
		 * Returns the custom configuration text, or null.
		 */
		private static function getCustomConfig(dataSource:Object):String {
			for each (var param:ParserParameter in dataSource.parserParams) {
				if (param.hasCustomEditor) {
					return (param.rawValue);
				}
			}
			return null;
		}

		/**
		 * Creates and returns the data model zip file for the current data model, translations, data source
		 * parameters, and enrichments. 
		 */
		public static function makeDataModelZip(inputModel:InputModel, enrichModel:EnrichmentModel):DataModelZipFile {
			
			var zipFile:DataModelZipFile = new DataModelZipFile();

			// Put in the canonical or input model
			zipFile.putCanonicalModel(JsonXMLConversions.canonicalXMLtoJSON(inputModel.canonicalModel.source));
			
			// Put in the enrichment model
			zipFile.putEnrichmentConfig(JsonXMLConversions.buildEnrichmentJSON(enrichModel.chosenEnrichments.source));
			
			// Put in the data source parameters
			var dataSourcesList:Array = inputModel.dataSourcesList;
			zipFile.putDataSourceParams(JsonXMLConversions.buildDataSourcesJSON(dataSourcesList));
			
			// Put in each translation
			for each (var dataSource:Object in dataSourcesList) {
				var name:String = dataSource.name;
				var mapping:XMLListCollection = dataSource.mapping;
				zipFile.putTranslationMapping(name, JsonXMLConversions.mappingXMLtoJSON(mapping.source));

				// Insert the custom configuration file if it exists
				var configText:String = getCustomConfig(dataSource);
				if (configText != null) {
				    zipFile.putCustomConfig(dataSource.parser, dataSource.name, configText);
				}
			}

			// Done
			zipFile.finishZip();
			
			return zipFile;
		}
		
		/** Used to arrange an array of error messages into an enumerated list as a text message. */
		public static function buildErrorsAndWarnings(messages:Array):String {
			var oneMsg:String = "";
			var index:int = 1;
			for each (var msg:String in messages) {
				oneMsg += (index + ". " + msg + "\n");
				index++;
			}
			oneMsg = oneMsg.replace(/\n$/,"");
			return oneMsg;
		}
	}
