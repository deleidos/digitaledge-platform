	/**
	 * List the Subscriptions for the specified filter.
	 * 
	 * @param filterId the id of the filter
	 * @return a List of Subscription instances
	 */
	public List<Subscription> listFilterSubscriptions(Long filterId) throws RestClientException
	{
		try {
			String whereClause = "FILTER_KEY = " + filterId;

			WebResource resource = getClient().resource(DBAPI_BASE_URL);
			resource = resource.path("json/select/all")
					.path(DB_HOST) // database
					.path(FILTERWATCHLIST_DB_SCHEMA) // schema
					.path(FILTERWATCHLIST_DB_TABLE) // table
					.path(whereClause); // where clause

			String response = resource.type(MediaType.APPLICATION_FORM_URLENCODED_TYPE).get(String.class);

			// Check response and build appropriate return value
			JSONObject jsonResp = JSONObject.fromObject(response);
			if (jsonResp.has("Operation Status")) {
				if ("FAILED".equals(jsonResp.getString("Operation Status"))) {
					throw new RestClientException("Create failed - " + jsonResp.getString("Message"));
				}
			}
			
			List<Subscription> result = new ArrayList<Subscription>();
			
			Iterator rowit = jsonResp.getJSONArray("result").iterator();
			while (rowit.hasNext()) {
				JSONObject row = (JSONObject)rowit.next();

				Subscription currSubscription = new Subscription();
				if(row.has("USER_KEY")) {
					currSubscription.setSubscriberId(row.getLong("USER_KEY"));
				}
				if(row.has("FILTER_KEY")) {
					currSubscription.setFilterId(row.getLong("FILTER_KEY"));
				}
				currSubscription.setRtwsAppSubscriber(true);
				if (row.has("COLOR")) {
					try
					{
						currSubscription.setColor(row.getLong("COLOR"));
					}
					catch(JSONException jsonException)
					{
						currSubscription.setColor(null);
					}
				}
				if (row.has("EMAIL")) {
					Object emailValue = row.opt("EMAIL");
					if(emailValue != null && emailValue instanceof String)
					{
						currSubscription.setEmailSubscriber(parseBooleanText((String)emailValue));
					}
				}

				result.add(currSubscription);
			}

			return result;
		}
		catch (UniformInterfaceException uie) {
			ClientResponse cr = uie.getResponse();
			String errorMsg = "Fetch filter subscriptions data fetch failed";
			logger.warn(errorMsg, uie);
			logger.warn("Received [" + cr.getStatus() + "] response from DB - ");
			throw new RestClientException(errorMsg);
		}
		catch (JSONException je) {
			String errorMsg = "Fetch filter subscriptions data parse failed: Malformed JSON from DB";
			logger.warn(errorMsg, je);
			throw new RestClientException(errorMsg);
		}
		catch (Throwable e) {
			logger.error(e);
			throw new RestClientException("Fetch filter subscriptions failed");
		}
	}
	
	/**
	 * List the Subscriptions for the specified filter.
	 * 
	 * @param filterId the id of the filter
	 * @return a List of Subscription instances
	 */
	public void updateFilterSubscriptions(Long filterId, List<Subscription> subscriptions) throws RestClientException
	{
		clearFilterSubscriptions(filterId);
		if(subscriptions != null && subscriptions.size() > 0)
		{
			addFilterSubscriptions(filterId, subscriptions);
		}
	}
	
	/**
	 * Adds all the specified subscribers to the specified filter.
	 * 
	 * @param filterId the id of the filter
	 * @param a List of Subscription instances to add
	 */
	public void addFilterSubscriptions(Long filterId, List<Subscription> subscriptions) throws RestClientException {
		if(filterId == null)
		{
			throw new RestClientException("filterId is required");
		}
		
		if(subscriptions == null && subscriptions.size() == 0)
		{
			throw new RestClientException("No subscriptions specified to update");
		}
		
		try {
			JSONArray rowsToAdd = new JSONArray();
			
			JSONArray currRowToAdd = null;
			for(Subscription currSub : subscriptions)
			{
				if(currSub.getSubscriberId() == null)
				{
					throw new RestClientException("Invalid subscriber specified");
				}
				
				currRowToAdd = new JSONArray();
				currRowToAdd.add(new JSONObject().element("USER_KEY", currSub.getSubscriberId()));
				currRowToAdd.add(new JSONObject().element("FILTER_KEY", filterId));
				currRowToAdd.add(new JSONObject().element("COLOR", (currSub.getColor() == null ? new JSONObject(true) : currSub.getColor())));
				currRowToAdd.add(new JSONObject().element("EMAIL", ((currSub.isEmailSubscriber() != null && currSub.isEmailSubscriber()) ? "Y" : "N")));

				rowsToAdd.add(currRowToAdd);
			}
			
			// Send POST to DB API
			WebResource resource = getClient().resource(DBAPI_BASE_URL);
			resource = resource.path("json/update/insert")
					.path(DB_HOST) // database
					.path(FILTERWATCHLIST_DB_SCHEMA) // schema
					.path(FILTERWATCHLIST_DB_TABLE); // table

			Form f = new Form();
			f.add("jsondef", new JSONObject().element("insert", rowsToAdd.toString()).toString());
			String response = resource.type(MediaType.APPLICATION_FORM_URLENCODED_TYPE)
					.post(String.class, f);

			// Check response and build appropriate return value
			JSONObject jsonResp = JSONObject.fromObject(response);
			if (jsonResp.has("Operation Status")) {
				if ("FAILED".equals(jsonResp.getString("Operation Status"))) {
					throw new RestClientException("Add filter subscription(s) Failed - " + jsonResp.getString("Message"));
				}
				if ("Completed".equals(jsonResp.getString("Operation Status"))) {
					if (jsonResp.has("Rows Modified")) {
						if (jsonResp.getInt("Rows Modified") != subscriptions.size()) {
							throw new RestClientException("Add filter subscription(s) Failed - Incorrect number of subscriptions added");
						}
					}
				}
			}
		}
		catch (UniformInterfaceException uie) {
			ClientResponse cr = uie.getResponse();
			String errorMsg = "Add filter subscription(s) Failed";
			logger.warn(errorMsg, uie);
			logger.warn("Received [" + cr.getStatus() + "] response from DB");
			throw new RestClientException(errorMsg);
		}
		catch (Throwable e) {
			logger.error(e);
			throw new RestClientException("Add filter subscription(s) Failed");
		}
	}
	
	
	/**
	 * Removes all subscribers from the specified filter.
	 * 
	 * @param filterId the id of the filter
	 */
	public void clearFilterSubscriptions(Long filterId) throws RestClientException {
		if(filterId == null)
		{
			throw new RestClientException("filterId is required");
		}
		
		try {
			String whereClause = "FILTER_KEY = " + filterId;
	
			WebResource resource = getClient().resource(DBAPI_BASE_URL);
			resource = resource.path("json/update/delete")
					.path(DB_HOST) // database
					.path(FILTERWATCHLIST_DB_SCHEMA) // schema
					.path(FILTERWATCHLIST_DB_TABLE) // table
					.path(whereClause); // where clause
	
			String response = resource.delete(String.class);
	
			// Check response and build appropriate return value
			JSONObject jsonResp = JSONObject.fromObject(response);
			if (jsonResp.has("Operation Status")) {
				if ("FAILED".equals(jsonResp.getString("Operation Status"))) {
					throw new RestClientException("Clear Filter Subscriptions failed - " + jsonResp.getString("Message"));
				}
			}
		}
		catch (UniformInterfaceException uie) {
			ClientResponse cr = uie.getResponse();
			String errorMsg = "Clear Filter Subscriptions failed";
			logger.warn(errorMsg, uie);
			logger.warn("Received [" + cr.getStatus() + "] response from DB");
			throw new RestClientException(errorMsg);
		}
		catch (Throwable e) {
			logger.error(e);
			throw new RestClientException("Clear Filter Subscriptions failed");
		}
	}
	
	private boolean parseBooleanText(String booleanText)
	{
		if(StringUtils.isBlank(booleanText))
		{
			return false;
		}
		
		String toCheck = booleanText.trim().toUpperCase();
		
		try {
			return BooleanUtils.toBoolean(toCheck, "Y", "N"); 
		}
		catch(IllegalArgumentException ignored) {}
		
		try {
			return BooleanUtils.toBoolean(toCheck, "T", "F"); 
		}
		catch(IllegalArgumentException ignored) {}
		
		return BooleanUtils.toBoolean(toCheck);
	}
