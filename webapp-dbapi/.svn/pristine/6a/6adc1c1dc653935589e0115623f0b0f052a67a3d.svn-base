	private String extractStreamServiceLocation(HttpServletRequest context) {
		//http://localhost:8080/dbapi/rest/alter/import/DIMENSIONS/FOO
		//becomes
		//http://localhost:8080/dbapi
		String url = context.getRequestURL().toString();
		String contextPath = context.getContextPath();
		
		String out = url.substring(0,url.indexOf(contextPath)+contextPath.length());
		return out;
	}

	/**
	 * Builds the string &lt;host&gt;:&lt;port&gt; using the target values or the defaults if unspecified
	 * 
	 * @param targetDbHost The target host; provide null to use default
	 * @param targetDbPort The target port; provide null or -1 to use default
	 * 
	 * @throws WebApplicationException if a default is requested or unavailable or if an invalid target value is provided
	 * @return A &lt;host&gt;:&lt;port&gt; formated string using the provided or default values as applicable
	 */
	private String buildDbConnInfo(String targetDbHost, Integer targetDbPort)
	{
		String dbHost = targetDbHost;
		if(dbHost == null)
		{
			if(StringUtils.isBlank(DEFAULT_DB_HOST))
			{
				log.error("Default DB Host requested but misconfigured.");
				throw new WebApplicationException(Response.status(Status.INTERNAL_SERVER_ERROR).entity("Server is Mis-configured").build());
			}
			dbHost = DEFAULT_DB_HOST;
		}
		
		if(StringUtils.isBlank(dbHost))
		{
			throw new WebApplicationException(Response.status(Status.BAD_REQUEST).entity("Specified DB Host is invalid").build());
		}
		
		int dbPort = -1;
		if(targetDbPort == null || targetDbPort == -1)
		{
			if(DEFAULT_DB_PORT == -1)
			{
				log.error("Default DB Port requested but misconfigured.");
				throw new WebApplicationException(Response.status(Status.INTERNAL_SERVER_ERROR).entity("Server is Mis-configured").build());
			}
			dbPort = DEFAULT_DB_PORT;
		}
		else
		{
			dbPort = targetDbPort;
		}
		
		if(dbPort == -1)
		{
			throw new WebApplicationException(Response.status(Status.BAD_REQUEST).entity("Specified DB Port is invalid").build());
		}
		
		return dbHost + ":" + dbPort;
	}
