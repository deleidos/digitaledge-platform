	public void createGateway(AccountForm form, String domainSuffix, AvailabilityZone azone) throws ClientException {
		WebResource resource = getClient().resource(buildBaseUrl(PATH));
		resource = resource.path("json/build/create_gateway/")
				.path(form.getTenantId())
				.path(domainSuffix)
				.path(azone.getIaasRegion())
				.path(azone.getIaasAZone());
		
		Form f = new Form();
		
		String statusToken = resource.type(MediaType.APPLICATION_FORM_URLENCODED_TYPE)
				.post(String.class, f);
		
		WebResource resourceStatus = getClient().resource(buildBaseUrl(PATH));
		resourceStatus = resourceStatus.path("rest/build/status")
				.queryParam("statusToken", statusToken);
//				.queryParam("uuid", uuid);
			
		Timestamp expiration = new Timestamp(System.currentTimeMillis() + TimeUtil.FIFTEEN_MINUTES);
		
		while (! TimeUtil.hasExpired(expiration)) {
			String statusMessage = resourceStatus.type(MediaType.APPLICATION_FORM_URLENCODED_TYPE)
					.get(String.class);
			
			if (statusMessage != null) {
				// Build statusMessages contain the percent completed, "100" is complete
				if (statusMessage.contains("100")) {
					return;
				}
				
				if (statusMessage.contains("ERROR")) {
					throw new ClientException(statusMessage);
				}
			}
			
			try { 
				Thread.sleep(TimeUtil.FIVE_SECONDS);
			} catch (Exception ex) {
				// ignore
			}
		}
		
		throw new ClientException("Failed to create gateway bucket, retries exhausted.");
		
	}
	
	public UserData buildGatewayUserData(AccountForm form, String domainSuffix, String swVersion, AvailabilityZone azone) {
		
		WebResource resource = getClient().resource(buildBaseUrl(PATH));
		resource = resource.path("json/account/gateway_user_data/")
				.path(form.getTenantId())
				.path(domainSuffix)
				.path(swVersion)
				.path(azone.getIaasAZone());
				//.queryParam("uuid", uuid);
		
		String baseUserData = resource.get(String.class);
		
		UserData userData = new UserData(baseUserData);
		
		userData.addProperty(RtwsrcProperties.RTWS_ACCESS_KEY, form.getAccessKey());
		userData.addProperty(RtwsrcProperties.RTWS_SECRET_KEY, form.getSecretKey());
		userData.addProperty(RtwsrcProperties.RTWS_IAAS_REGION, form.getRegion().toLowerCase());
		userData.addProperty(RtwsrcProperties.RTWS_TMS_DNS, RtwsrcProperties.getInstance().getString(RtwsrcProperties.RTWS_FQDN));
		//correct entry for dns is the default node, which is the node that this process will run on.

		if (form.getNetworkType() == NetworkType.VPC) {
			userData.addProperty(RtwsrcProperties.RTWS_VPC_ENABLED, Boolean.TRUE.toString());
		}
		
		if (form instanceof AwsRegistrationForm) {
			AwsRegistrationForm awsForm = (AwsRegistrationForm) form;
			//TODO: make supplied domains work
			/*
			if (awsForm.getDomainName() != null) {
				userData.addProperty(RtwsrcProperties.RTWS_HOSTED_ZONE, awsForm.getDomainName());
			}
			*/
		}
		
		return userData;
		
	}
	
