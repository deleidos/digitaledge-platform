			}
			else {
				var statusMsg:StatusMessage =
					new StatusMessage(StatusType.WARN, "Upload already in progress." );
				dispatch(new PopupEvent(PopupEvent.MESSAGE_POPUP, null, statusMsg));				
			}
		}
		
		/** Internal function to start an upload */
		private function startUpload(url:String, vars:URLVariables):void {
			var req:URLRequest = new URLRequestBuilder(vars).build();
			req.method = URLRequestMethod.POST;
			req.url = url;
			
			_uploadTimer = new Timer(10*60*1000);
			_uploadTimer.addEventListener(TimerEvent.TIMER, onUploadTimeout);
			
			_uploadStream = new URLStream();
			_uploadStream.addEventListener(Event.COMPLETE, onUploadComplete);
			_uploadStream.addEventListener(IOErrorEvent.IO_ERROR, onUploadError);
			_uploadStream.addEventListener(SecurityErrorEvent.SECURITY_ERROR, onUploadError);
			
			_uploadStream.load(req);
			_uploadTimer.start();			
		}

		/** Called when the upload completes successfully */
		private function onUploadComplete(event:Event):void
		{
			if(dispatchClientSessionTimerEvents)
			{
				this.dispatch(new ClientSessionTimerEvent(ClientSessionTimerEvent.RESTART_SESSION_TIMER));
			}
			
			var responseBytes:ByteArray = new ByteArray();
			_uploadStream.readBytes(responseBytes);
			var responseString:String = responseBytes.toString();

			// trace("DataModelWizard.onUploadComplete, response=" + responseString);
			dispatch(new ModelServiceEvent(ModelServiceEvent.MODEL_WIZARD_STARTED, responseString, null));
			
			cleanUpUploadOp();			
		}
		
		/** Called when the upload times out. */
		private function onUploadTimeout(event:Event):void
		{
			var statusMsg:StatusMessage =
				new StatusMessage(StatusType.ERROR, _uploadContext.errorPrefix + "Timeout waiting for the server." );
			dispatch(new PopupEvent(PopupEvent.MESSAGE_POPUP, null, statusMsg));				
			cleanUpUploadOp(true);
		}
		
		/** Called on upload error. */
		private function onUploadError(event:TextEvent):void
		{
			var statusMsg:StatusMessage =
				new StatusMessage(StatusType.ERROR, _uploadContext.errorPrefix + event.text );
			dispatch(new PopupEvent(PopupEvent.MESSAGE_POPUP, null, statusMsg));				
			cleanUpUploadOp();			
		}
		
		/** Clean up the current upload and reset for another upload. */
		private function cleanUpUploadOp(isCancellation:Boolean=false):void
		{
			SpinnerPopup.destroySpinnerPopup();
			
			if(_uploadTimer != null)
			{
				_uploadTimer.reset();
				_uploadTimer.removeEventListener(TimerEvent.TIMER, onUploadTimeout);
			}
			
			if(_uploadStream != null)
			{
				_uploadStream.removeEventListener(Event.COMPLETE, onUploadComplete);
				_uploadStream.removeEventListener(IOErrorEvent.IO_ERROR, onUploadError); 
				_uploadStream.removeEventListener(SecurityErrorEvent.SECURITY_ERROR, onUploadError);
				
				if(isCancellation)
				{
					_uploadStream.close();
				}
			}

			_uploadContext = null;
			_uploadTimer = null;
			_uploadStream = null;
		}
		
		/**
		 * Get the data model that was created by the wizard.
		 */
		public function createModelLoad(token:String):void
		{
			// trace("DataModelWizard.createModelLoad, token=" + token);
			if (_downloadContext == null) {
				_downloadContext = new Object();
				_downloadContext.operation = LOAD_MODEL;
				_downloadContext.errorPrefix = "Data Model Wizard: Error downloading the data model: ";
				
				var url:String = ServiceConstants.CONTEXT_REL_INGEST_API_PROXY_PATH + "/rest/model/zip/" + encodeURIComponent(token);;
				startDownload(url);
			}
			else {
				var statusMsg:StatusMessage =
					new StatusMessage(StatusType.WARN, "Data Model Wizard: Data model download already in progress." );
				dispatch(new PopupEvent(PopupEvent.MESSAGE_POPUP, null, statusMsg));				
			}
		}
		
		/** Internal function to start a download */
		private function startDownload(url:String):void {
			var urlRequest:URLRequest = new URLRequest(url);
			
			_urlLoader = new URLLoader(urlRequest);
			_urlLoader.addEventListener(Event.COMPLETE, onDownloadComplete);
			_urlLoader.addEventListener(IOErrorEvent.IO_ERROR, onDownloadError); 
			_urlLoader.addEventListener(SecurityErrorEvent.SECURITY_ERROR, onDownloadError);
			_urlLoader.dataFormat = URLLoaderDataFormat.BINARY;
			
			_downloadTimer = new Timer(appParams.serverTimeout*1000);
			_downloadTimer.addEventListener(TimerEvent.TIMER, onDownloadTimeout);
			
			_urlLoader.load(urlRequest);
			_downloadTimer.start();						
		}

		/** Called when the data model download finishes successfully */
		private function onDownloadComplete(event:Event):void
		{
			// trace("DataModelWizard.onDownloadComplete");
			if(dispatchClientSessionTimerEvents)
			{
				this.dispatch(new ClientSessionTimerEvent(ClientSessionTimerEvent.RESTART_SESSION_TIMER));
			}
			
			//
			// The data bytes retrieved from the server should be a zip file.
			//
			var zipBytes:ByteArray = _urlLoader.data as ByteArray;
			var dmZipFile:DataModelZipFile = new DataModelZipFile(zipBytes);
			var statusMsg:StatusMessage;
			
			try {
				inputModel.clear();
				
				var messages:Array = LoadSaveUtils.loadDataModelZip(
					inputModel.dataModelName, inputModel, enrichModel, parserDir, enrichDir, dmZipFile);
				
				if (messages.length > 0) {
					statusMsg = new StatusMessage(StatusType.WARN, LoadSaveUtils.buildErrorsAndWarnings(messages));
					dispatch(new PopupEvent(PopupEvent.MESSAGE_POPUP, null, statusMsg));
				}
			}
			catch (e:Error) {
				statusMsg = new StatusMessage(StatusType.ERROR, "Data Model Wizard: Data model cannot be properly loaded: " + e.toString() );
				dispatch(new PopupEvent(PopupEvent.MESSAGE_POPUP, null, statusMsg));
			}
			
			cleanUpDownloadOp();
			
			dispatch(new ModelServiceEvent(ModelServiceEvent.MODEL_WIZARD_LOADED, null, null));
		}
		
		/** Called when the download times out. */
		private function onDownloadTimeout(event:Event):void
		{
			var statusMsg:StatusMessage =
				new StatusMessage(StatusType.ERROR, _downloadContext.errorPrefix + "Timeout waiting for the server." );
			dispatch(new PopupEvent(PopupEvent.MESSAGE_POPUP, null, statusMsg));				
			cleanUpDownloadOp(true);
		}

		/** Called when an error occurs during a download */
		private function onDownloadError(event:TextEvent):void
		{
			var statusMsg:StatusMessage =
				new StatusMessage(StatusType.ERROR, _downloadContext.errorPrefix + event.text );
			dispatch(new PopupEvent(PopupEvent.MESSAGE_POPUP, null, statusMsg));				
			cleanUpDownloadOp();
		}
		
		/** Clean up the current download and reset for another download. */
		private function cleanUpDownloadOp(isCancellation:Boolean=false):void
		{
			SpinnerPopup.destroySpinnerPopup();
			
			if(_downloadTimer != null)
			{
				_downloadTimer.reset();
				_downloadTimer.removeEventListener(TimerEvent.TIMER, onDownloadTimeout);
			}
			
			if(_urlLoader != null)
			{
				_urlLoader.removeEventListener(Event.COMPLETE, onDownloadComplete);
				_urlLoader.removeEventListener(IOErrorEvent.IO_ERROR, onDownloadError); 
				_urlLoader.removeEventListener(SecurityErrorEvent.SECURITY_ERROR, onDownloadError);
				
				if(isCancellation)
				{
					_urlLoader.close();
				}
			}
			
			_urlLoader = null;
			_downloadTimer = null;
			_downloadContext = null;
		}
		
		private const POLL_INTERVAL:int = 2; // in seconds 
		private const POLL_ITERATIONS:Number = (450/POLL_INTERVAL);
		private var tokenToPoll:String;
		private var pollTimer:Timer
		private var pollCountdown:int;
		private var pollInProgress:Boolean;
		
		private function pollProgress():void {
			if (!pollInProgress) {
				var url:String = "/json/model/status/" + encodeURIComponent(tokenToPoll);
				var context:Object = new Object();
				context.operation = CHECK_PROGRESS;
				context.errorMsg = "Data Model Wizard: Error polling for status.";			
				this.get(url, null, context, ((appParams != null && appParams.serverTimeout >= 0) ? appParams.serverTimeout : NaN));
				pollInProgress = true;
			}
		}
		
		private function pollTimerEvent(event:TimerEvent):void {
			// trace("DataModelWizard.pollTimerEvent");
			pollCountdown--;
			if (pollCountdown <= 0) {
				pollTimer.stop();
				var statusMsg:StatusMessage = new StatusMessage(StatusType.ERROR, "Data Model Wizard: Failed due to timeout." );
				var errorEvent:PopupEvent = new PopupEvent(PopupEvent.MESSAGE_POPUP, null, statusMsg);				
				dispatch(new PopupEvent(PopupEvent.PROGRESS_BAR_POPUP_END, errorEvent, null));				
			}
			else {
				pollProgress();
			}
		}
		
		/**
		 * Start polling for progress, and update the progress bar as necessary.
		 */
		public function createModelPollProgress(token:String):void
		{
			// trace("DataModelWizard.createModelPollProgress");
			tokenToPoll = token;
			pollTimer = new Timer(POLL_INTERVAL*1000);
			pollTimer.addEventListener(TimerEvent.TIMER, pollTimerEvent);
			pollCountdown = POLL_ITERATIONS;
			pollTimer.start();
			pollInProgress = false;
			pollProgress();
		}
		
		/**
		 * Get the detailed field information that describes what was found during data model creation.
		 */
		public function createModelGetDetail(token:String):void
		{
			// trace("DataModelWizard.CreateModelGetDetail");
			var url:String = "/json/model/information/" + encodeURIComponent(token);
			var context:Object = new Object();
			context.operation = GET_DETAIL;
			context.token = token;
			context.errorMsg = "Data Model Wizard: Error retrieving model information.";
			this.get(url, null, context, ((appParams != null && appParams.serverTimeout >= 0) ? appParams.serverTimeout : NaN));
		}
		
		override protected function handleSuccess(event:ResultEvent, context:Object):void
		{
			var response:String = event.message.body.toString();
			
			// trace("DataModelWizard.handleSuccess, response=" + response);
			
			if (context.operation == CHECK_PROGRESS) {
				pollInProgress = false;
				if (StringUtils.beginsWith(response,FINISHED_INDICATOR)) {
					pollTimer.stop();
					var wizardDone:ModelServiceEvent = new ModelServiceEvent(ModelServiceEvent.MODEL_WIZARD_DONE, tokenToPoll, null);
					dispatch(new PopupEvent(PopupEvent.PROGRESS_BAR_POPUP_END, wizardDone, null));
				}
				else if (StringUtils.beginsWith(response,PROGRESS_INDICATOR)) {
					// Progress indicator, extract out the progress value (0 to 100)
					var parts:Array = response.split(/\s*:\s*/);
					if (parts.length >= 1) {
						var progress:Number = parseFloat(parts[1]);
						dispatch(new PopupEvent(PopupEvent.PROGRESS_BAR_POPUP_UPDATE, null, progress));							
					}
				}
				else if (StringUtils.beginsWith(response,ERROR_INDICATOR)) {
					// Error indicator, parse the error message
					pollTimer.stop();
					var message:String = response.substr(ERROR_INDICATOR.length+1);
					var index:int = response.indexOf("Exception info:");
					if (index >= 0) {
						message = response.substring(ERROR_INDICATOR.length+1, index);
					}
					message = "Data Model Wizard: Failed due to: " + message;
					var statusMsg:StatusMessage = new StatusMessage(StatusType.ERROR, message );
					var errorEvent:PopupEvent = new PopupEvent(PopupEvent.MESSAGE_POPUP, null, statusMsg);				
					dispatch(new PopupEvent(PopupEvent.PROGRESS_BAR_POPUP_END, errorEvent, null));
				}
			}
			else if (context.operation == GET_DETAIL) {
				SpinnerPopup.destroySpinnerPopup();
				var result:Object = new Object();
				result.token = context.token;
				result.response = response;
				dispatch(new ModelServiceEvent(ModelServiceEvent.MODEL_WIZARD_DETAIL_GOT, result, null));
			}
		}
		
		override protected function handleFailure(event:FaultEvent, context:Object):void
		{
			if (pollTimer != null) {
				pollTimer.stop();
			}
			SpinnerPopup.destroySpinnerPopup();
			var statusMsg:StatusMessage =
				new StatusMessage(StatusType.ERROR, context.errorMsg + " " + event.fault.faultString + "." );
			dispatch(new PopupEvent(PopupEvent.MESSAGE_POPUP, null, statusMsg));
		}
		
	}
