			PopUpManager.removePopUp(getObjectNamePopup);
			handleGetObjectNameEnd(null);
		}
		
		protected function handleGetObjectNameEnd(event:PopupEvent):void {
			getObjectNamePopup.removeEventListener(PopupEvent.GET_OBJECT_NAME_DONE, handleGetObjectNameEnd);
			getObjectNamePopup.removeEventListener(CloseEvent.CLOSE, handleGetObjectNameClose );
			if ((event != null) && (event.parameters != null) && (event.nestedEvent != null)) {
				var editEvent:InputModelEditEvent = event.nestedEvent as InputModelEditEvent;
				editEvent.parameters.name = event.parameters.objName;
				editEvent.parameters.childName = event.parameters.childName;
				dispatch(editEvent);				
			}
		}
		
