	/**
	 * Send a command to the gateway to retrieve information about a instance.
	 * 
	 * Invokes the gatewayapi REST service:
	 * 		http://<host>:<port>/json/instance/getNode/<instance-id>
	 */
	public Node getNode(
			Integer accountId, 
			String instanceId)throws GatewayApiException {

		AccountEntry entry;
		GatewayAccount gateway;
		
		try {
			entry = CacheManager.getTenantAccountCache().get(accountId);
			gateway = entry.getGatewayAccount();
		} catch (Exception ex) {
			String message = String.format("Failed to locate gateway. Message: %s", ex.getMessage());
			logger.error(message, ex);
			throw new GatewayApiException(message, ex);
		}
		
		try {
			if (gateway == null || gateway.getPublicDns() == null || gateway.getPublicDns().isEmpty()) {
				// This means the GW node has not registered yet and populated the GatewayAccount table.
				return null;
			} else {

				WebResource res = buildGatewayApiEndpoint(gateway.getPublicDns());
				res = res.path("json").path("instance").path("getNode").path(instanceId);

				String nodeInf = null;
				
				try {
					nodeInf = res.get(String.class);
				} catch (UniformInterfaceException uie) {
					if (uie.getResponse().getClientResponseStatus() == Status.NO_CONTENT) {
						logger.debug("GatewayAPI getNode call returned no content (204) for instanceId: " + instanceId);
						return null;
					}
				}
				
				JSONObject nodeObj = JSONObject.fromObject(nodeInf);

				Node n = new Node();
				n.setId(nodeObj.getString("id"));
				n.setType(nodeObj.getString("type"));
				n.setImageId(nodeObj.getString("imageId"));
				n.setState(State.fromValue(nodeObj.getString("state")));
				n.setPublicDnsName(nodeObj.getString("publicDnsName"));
				n.setPublicIpAddress(nodeObj.getString("publicIpAddress"));
				n.setPrivateDnsName(nodeObj.getString("privateDnsName"));
				n.setPrivateIpAddress(nodeObj.getString("privateIpAddress"));
				n.setPersistentIpAddress(nodeObj.getString("persistentIpAddress"));
				n.setRootDeviceType(nodeObj.getString("rootDeviceType"));

				List<Volume> volumes = new ArrayList<Volume>();

				try {
					JSONArray vols = nodeObj.getJSONArray("volumes");
					if (vols != null && !JSONNull.getInstance().equals(vols)) {
						for (int i = 0; i < vols.size(); i++) {
							Volume v = new Volume();
							JSONObject volObj = vols.getJSONObject(i);
							// SET
							v.setDevice(volObj.getString("device"));
							v.setId(volObj.getString("id"));
							v.setState(volObj.getString("state"));

							volumes.add(v);
						}
					}
				} catch (Exception e) {
					// json array not found for volume, not a problem.
				}
				
				n.setVolumes(volumes.toArray(new Volume[0]));

				return n;

			}
		} catch (Exception ex) {
			String message = String.format("Failed to retrieve node. Message: %s", ex.getMessage());
			logger.error(message, ex);
			throw new GatewayApiException(message, ex);
		}
		
	}
	
	/**
	 * Send a command to the gateway to assign a subnet to a system.
	 * 
	 * Invokes the gatewayapi REST service:
	 * 		http://<host>:<port>/json/system/assign/subnet
	 */
	public String assignSubnet(
			Integer accountId, 
			String domain, 
			String region, 
			String azone) throws GatewayApiException {
		
		try {
			WebResource res = buildGatewayApiEndpoint(accountId, region);
			res = res.path("json").path("system").path("assign").path("subnet");
			
			Form f = new Form();
			f.add("domain", domain);
			f.add("azone", azone);

			String response = res.post(String.class, f);
			
			JSONObject jsonObj = JSONObject.fromObject(response);
			JSONObject standardHeader = jsonObj.getJSONObject("standardHeader");

			if (standardHeader.getInt("code") == 200) {
				JSONObject responseBody = jsonObj.getJSONObject("responseBody");
				return responseBody.getString("SubnetId");
			} else {
				String message = "Fail to invoke gatewayapi to assign subnet for domain '" + domain + "'.";
				
				if (jsonObj.has("responseBody")) {
					message = jsonObj.getString("responseBody");
				} else if (jsonObj.has("message")) {
					message = jsonObj.getString("message");
				}

				throw new RestClientException(message);
			}

		} catch (Exception ex) {
			String message = String.format("Failed to assign subnet for domain '%s'. Message: %s", domain, ex.getMessage());
			logger.error(message, ex);
			throw new GatewayApiException(message, ex);
		}
		
	}
	
