		private static const BATCH_SIZE:int = 5;
		
		[Inject] public var view:SystemsView;
		[Inject] public var paramModel:ParameterModel;
		[Inject] public var userModel:IUser;
		[Inject] public var auxModel:AuxiliaryModel;
