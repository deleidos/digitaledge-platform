	@Override
	public StandardResponse<?> delete(String tenantId, String region, String domain) {
		
		try {
			AccountEntry entry = CacheManager.getTenantAccountCache().get(tenantId);
			Integer accountId = entry.getIAASAccount().getAccountId();
			
			if (systemChainDao == null) {
				systemChainDao = new SystemChainDao();
				systemChainDao.setDataSource(H2DataSourceFactory.getInstance().getDataSource());
			}
			
			String chainName = systemChainDao.isPartOfChain(accountId, domain);
			if (chainName != null) {
				return buildErrorResponse(406, 
						"System " + domain + " is part of a chain. Please remove system from chain before deleting.");
			}
			
			AccountSystem system = CacheManager.getSystemsCache().get(accountId, domain);
			String mountDevice = RestClientManager.getAvailabilityZonesClient()
					.getBucketForAvailabilityZone(system.getMasterAZone());
			DeleteSystemRequest request = new DeleteSystemRequest(tenantId, Integer.toString(entry
					.getIAASAccount().getAccountId()), region, domain, mountDevice);

			if (QueueManager.getSystemRequestQueue().addRequest(request)) {
				return buildPropertiesResponse(200, "Status", "true");
			}

			throw new SystemServiceException("Delete system '" + domain + "' is in progress.");
		} catch (Exception ex) {
			logger.error("Service failed to delete system.", ex);
			return buildErrorResponse(500, ex.getMessage());
		}

