		private function zeroFill(num:int, places:int, trailing:Boolean):String {
			
			// Convert the number to a string.
			var filledVal:String = String(num);
			
			// Get the length of the string.
			var len:int = filledVal.length;
			
			// Use a for statement to add the necessary number of characters.
			for (var i:int = 0; i < (places - len); i++) {
				// If trailing is true, append the zeros; otherwise, prepend them.
				if (trailing) {
					filledVal += "0";
				} else {
					filledVal = "0" + filledVal;
				}
			}
			// Return the string.
			return filledVal;
		};
		
