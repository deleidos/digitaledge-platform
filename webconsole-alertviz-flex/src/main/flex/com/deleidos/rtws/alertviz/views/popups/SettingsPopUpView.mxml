<?xml version="1.0" encoding="utf-8"?>
<rtws:ResizableTitleWindow 
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:mx="library://ns.adobe.com/flex/mx"
	xmlns:rtws="com.deleidos.rtws.commons.view.component.*"
	width="375" height="225" 
	title="Settings">
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>

	<s:VGroup width="100%" height="100%" horizontalAlign="center">
		<s:Form id="settingsForm">
			<s:FormItem label="Alert Queue Limit">
				<s:TextInput id="alertQueueLimitTextInput" />
			</s:FormItem>
			<s:FormItem label="Timeline Autopan">
				<s:CheckBox id="timelineAutopanCheckBox" />
			</s:FormItem>
		</s:Form>
	</s:VGroup>
	
	<rtws:controlBarContent>
		<s:Button id="updateButton" label="UPDATE" enabled="true" />
		<s:Button id="cancelButton" label="CANCEL" enabled="true" />
	</rtws:controlBarContent>

</rtws:ResizableTitleWindow>
