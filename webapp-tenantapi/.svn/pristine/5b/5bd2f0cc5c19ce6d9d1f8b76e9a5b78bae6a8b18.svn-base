				systemStartCheck = new AwsTenantAccountMaxRunningInstancesSystemStartupPrecondition();
			if (CloudProviderUtil.getCloudProvider() == CloudProvider.EUCA)
				systemStartCheck = new EucaTenantAccountSystemStartupPrecondition();
		}

	}

	@Override
	public StandardResponse<?> scheduleStartOrStop(String tenantId,
			String region,
			String domain,
			String cfgVersion,
			String startSchedule,
			String stopSchedule) {
		try {

			if (logger.isDebugEnabled())
				logger.debug(String.format("{%s} {%s} {%s} {%s} {%s} {%s}",
						tenantId, region,
						domain,	 cfgVersion,
						startSchedule, 	stopSchedule));

			if (tenantId == null || region == null || domain == null || cfgVersion == null)
				return buildErrorResponse(406, "One or more required params are invalid.");

			// Hook for flex, if schedule is invalid or null, delete all schedules for this system
			if (startSchedule == null) {
				SystemScheduleManager.deleteSchedule(domain, tenantId, region, cfgVersion);				
			} else {
				try {
					CronExpression.validateExpression(startSchedule);					
				} catch (ParseException e){
					SystemScheduleManager.deleteSchedule(domain, tenantId, region, cfgVersion);
				} finally {}
			}

			if (stopSchedule == null) {
				SystemScheduleManager.deleteSchedule(domain, tenantId, region, cfgVersion);				
			} else {
				try {
					CronExpression.validateExpression(stopSchedule);					
				} catch (ParseException e){
					SystemScheduleManager.deleteSchedule(domain, tenantId, region, cfgVersion);
				} finally {}
			}

			// valid schedule
			if (startSchedule != null)
				SystemScheduleManager.scheduleStartup(domain,
						tenantId,
						region,
						cfgVersion,
						startSchedule);

			if (stopSchedule != null)
				SystemScheduleManager.scheduleShutdown(domain, 
						tenantId, 
						region, 
						stopSchedule);
			
			return buildPropertiesResponse(200, "Status", "true");
		} catch (Exception e) {
			return buildErrorResponse(500, "Unknown error occurred.");
		}	
	}

	@Override
	public StandardResponse<?> chainSystems(String jsondef) {

		if (systemChainDao == null) {
			systemChainDao = new SystemChainDao();
			systemChainDao.setDataSource(H2DataSourceFactory.getInstance().getDataSource());
		}

		try {
			
			if (logger.isDebugEnabled())
				logger.debug(String.format("{%s}", jsondef));
			
			JSONObject json = JSONObject.fromObject(jsondef);
			String tenantId = json.getString("tenantId");

			AccountEntry entry = CacheManager.getTenantAccountCache().get(tenantId);
			Integer accountId = entry.getIAASAccount().getAccountId();


			String name = json.getString("name");
			JSONArray chain = json.getJSONArray("chain");
			if (chain.isEmpty())
				return buildErrorResponse(400, "Chain information is incorrect.");
			
			for (Object ord : chain) {
				JSONObject systemDef = JSONObject.fromObject(ord);				
				String region = systemDef.getString("region");
				String domain = systemDef.getString("domain");
				String cfgVersion = systemDef.getString("cfgVersion");	
				int position = systemDef.getInt("position");

				systemChainDao.addChain(name, accountId, domain, region, cfgVersion, position);
			}
			return buildPropertiesResponse(200, "Status", "true");
		} catch (Exception e) {
			return buildErrorResponse(500, "Unknown error occurred.");
		}	
	}

	@Override
	public String getChains(String tenantId) {
		
		if (systemChainDao == null) {
			systemChainDao = new SystemChainDao();
			systemChainDao.setDataSource(H2DataSourceFactory.getInstance().getDataSource());
		}

		try {
			
			if (logger.isDebugEnabled())
				logger.debug(String.format("{%s}", tenantId));
			
			AccountEntry entry = CacheManager.getTenantAccountCache().get(tenantId);
			Integer accountId = entry.getIAASAccount().getAccountId();
			
			JSONArray json = new JSONArray();
			Collection<SystemChain> chainNames = systemChainDao.getSystemChainNames(accountId);
			for (SystemChain systemChain : chainNames) {
				
				Collection<SystemChain> chains = systemChainDao.getSystemChains(systemChain.getName(), accountId);
				
				for (SystemChain chns : chains) {
					JSONObject chainJson = new JSONObject();
					chainJson.accumulate("name", chns.getName());
					chainJson.accumulate("domain", chns.getDomain());
					chainJson.accumulate("cfgVersion", chns.getCfgVersion());
					chainJson.accumulate("position", chns.getPosition());
					json.add(chainJson );					
				}
			}
			
			return json.toString();
		} catch (Exception e) {
			return "{}";
		}	
	}

