		/**
		 * Upload the sample data as CSV for data model creation. Only one upload can run at a time.
		 * If the upload completes successfully, a token is returned that can be used to track progress
		 * of the data model creation.
		 */
		public function createModelStartCsv(numHeaders:int, numRows:int, threshold:Number, separator:String, sampleData:ByteArray):void
		{
			if (_uploadContext == null) {
				_uploadContext = new Object();
				_uploadContext.operation = START_CSV;
				_uploadContext.errorPrefix = "Error uploading CSV: ";
				
				var vars:URLVariables = new URLVariables();
				vars.numHeaders = numHeaders;
				vars.numRows = numRows;
				vars.decisionThreshold = threshold;
				vars.columnSeparator = separator;			
				vars.file = new URLFileVariable(sampleData, "file");

				var url:String = ServiceConstants.CONTEXT_REL_INGEST_API_PROXY_PATH + "/json/model/create/csv";
				
				startUpload(url,vars);
			}
			else {
				var statusMsg:StatusMessage =
					new StatusMessage(StatusType.WARN, "Upload already in progress." );
				dispatch(new PopupEvent(PopupEvent.MESSAGE_POPUP, null, statusMsg));				
			}
		}

		/**
		 * Upload the sample data as JSON for data model creation. Only one upload can run at a time.
		 * If the upload completes successfully, a token is returned that can be used to track progress
		 * of the data model creation.
		 */
		public function createModelStartJson(numRows:int, threshold:Number, sampleData:ByteArray):void
		{
			if (_uploadContext == null) {
				_uploadContext = new Object();
				_uploadContext.operation = START_JSON;
				_uploadContext.errorPrefix = "Error uploading JSON: ";
				
