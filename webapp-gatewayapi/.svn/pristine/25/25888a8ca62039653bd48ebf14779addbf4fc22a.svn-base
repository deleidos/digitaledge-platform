public class SystemServiceClient extends InstanceServiceClient {

	private Logger logger = Logger.getLogger(SystemServiceClient.class);
	
	public SystemServiceClient() {
		super();
	}
	
	public Cluster getCluster(String domain) throws RestClientException, SystemServiceClientException {
		
		AccountSystemDao dao = new AccountSystemDao(EmbeddedH2DataAccessUtility.getInstance());
		AccountSystem system = dao.getAccountSystem(domain);
		
		Cluster cluster = null;
		if (system != null) {
			Map<String, ProcessGroupConfig> configs = ProcessGroupCache.getInstance().getProcessGroupConfigMap();

			cluster = assembleCluster(system, configs);
			
			if (cluster != null) {
				checkQueueAndSetClusterInTransitionalState(cluster);
				return cluster;
			}
		}
		
		cluster = new Cluster(domain, null);
		cluster.setStatus(ClusterStatus.createDoesntExistStatus());
		
		return cluster;
		
	}

	public String createSystem(
			String tenantId, 
			String imageId, 
			String type, 
			String zone, 
			String security, 
			String securityId, 
			String keyPair, 
			String domain, 
			String subnetId, 
			Properties userdataProps) throws SystemServiceClientException {
		
		AccountSystemDao dao = new AccountSystemDao(EmbeddedH2DataAccessUtility.getInstance());
		AccountSystem system = dao.getAccountSystem(domain);
		
		if (system == null) {
			throw new SystemServiceClientException("System '" + domain + "' isn't configured!");
		}
		
		boolean exists = true;
		if (EndpointUtil.inAmazon() && system.getMasterAddress() == null && system.getMasterUserData() == null) {
			exists = false;
		} else if (EndpointUtil.inEuca() && system.getMasterAddress() == null && system.getMasterInstanceId() == null) {
			exists = false;
		} else if ( !isMasterRunning(system.getMasterInstanceId(), system.getMasterAddress()) ){
			exists = false;

			// database record for the domain shows that master is running but it actually does not
			logger.warn("Master instance to launch is not null in the database but the instance is not running.");
			
			// call stopSystem that clears database and cache for the domain
			try {
				AccountSystemDao accountDao = new AccountSystemDao(EmbeddedH2DataAccessUtility.getInstance());
				accountDao.stopSystem(domain);
			} catch (Exception ex) {
				logger.warn("Update master database entry [" + domain + "] failed. Message: " + ex.getMessage());
			}
		}
		
		if (! exists) {
			return createInstance(subnetId, imageId, type, zone, security, securityId, keyPair, userdataProps);
		}
		
		throw new SystemServiceClientException("System '" + domain + "' already exist!");
	}
	
	// verify that master instance from the database cache is actually running 
	private boolean isMasterRunning(
			String masterInstanceId, 
			String masterAddress) {	
		boolean isRunning = false;
		
		try {
			if ( StringUtils.isNotBlank(masterInstanceId) ) {
				
				Process process = RestClientManager.getServiceInterface().listProcessWithoutVolumes(masterInstanceId);
				if ( process != null )
					isRunning = true;
				
			} else if ( StringUtils.isNotBlank(masterAddress) ) {
				
				InetAddress addr = InetAddress.getByName(masterAddress);
				if ( addr != null && addr.isReachable(3000) )
					isRunning = true;
			}
		} catch (Exception ex) {
		}

		return isRunning;
	}
	
	/**
	 * Forcibly delete all volumes from this system.
	 */
	public void forciblyDeleteVolumes(Volume [] volumes) throws InvalidParameterException {
		
		if (volumes == null || volumes.length == 0) {
			return;
		}
		
		forceVolumesDetach(listVolumesInUse(volumes, true));
		
		waitForVolumesToBeAvailable(volumes, true);
		
		deleteVolumes(volumes);
		
	}
	
	/**
	 * Delete all volumes from this system.
	 */
	public void deleteVolumes(Volume [] volumes) throws InvalidParameterException {
		
		if (volumes == null || volumes.length == 0) {
			return;
		}
		
		for (Volume volume : volumes) {
			try {
				RestClientManager.getServiceInterface().deleteVolume(volume);
			} catch (Exception ex) {
				logger.error("Fail to delete volume '" + volume.getId() + "'. Message: " + ex.getMessage());
			}
		}
		
	}
	
	/**
	 * Return a list of volumes that are in use.
	 */
	protected Volume [] listVolumesInUse(
			Volume [] volumes, 
			boolean breakOnNullVolume) throws InvalidParameterException {
		
		if (volumes == null || volumes.length == 0) {
			throw new InvalidParameterException("Parameter volumes cannot be null/empty.");
		}

		ArrayList<Volume> volumesInUse = new ArrayList<Volume>();
		for (Volume volume : volumes) {
			int retry = 3;
			while (retry > 0) {
				try {
					Volume checkVolume = RestClientManager.getServiceInterface().listVolume(volume.getId());
					if (checkVolume == null && breakOnNullVolume) {
						logger.warn("Expected available volume " + volume.getId() + " no longer exists!");
						break;
					}
					if (checkVolume.getState().equals("in-use")) {
						volumesInUse.add(checkVolume);
						break;
					}
				} catch (Exception ex) {
					logger.error("Check volume '" + volume.getId() + "' in-use failed. Message: " + ex.getMessage());
				}
				
				retry--;
			
				try {
					Thread.sleep(5000);
				} catch (InterruptedException e) {
					// ignore exception
				}
			}

			try {
				Thread.sleep(5000);
			} catch (InterruptedException e) {
				// ignore exception
			}
		}
		
		return volumesInUse.toArray(new Volume[volumesInUse.size()]);
		
	}
	
	/**
	 * Forcibly detach all volumes from this system.
	 */
	protected void forceVolumesDetach(Volume [] volumes) throws InvalidParameterException {
		
		if (volumes == null || volumes.length == 0) {
			return;
		}
		
		for (Volume volume : volumes) {
			try {
				RestClientManager.getServiceInterface().forceVolumeDetach(volume);
			} catch (Exception ex) {
				logger.error("Fail to forcibly detach '" + volume.getId() + "'. Message: " + ex.getMessage());
			}
		}
		
	}
	
	/**
	 * Wait for the given list of volumes to be available.
	 */
	protected void waitForVolumesToBeAvailable(
			Volume [] volumes, 
			boolean breakOnNullVolume) throws InvalidParameterException {
		
		if (volumes == null || volumes.length == 0) {
			return;
		}
		
		for (Volume volume : volumes) {
			int retry = 20;
			while (retry > 0) {
				try {
					Volume checkVolume = RestClientManager.getServiceInterface().listVolume(volume.getId());
					if (checkVolume == null && breakOnNullVolume) {
						logger.warn("Expected available volume " + volume.getId() + " no longer exists!  Breaking out of availability check.");
						break;
					}
					if (checkVolume.getState().equals("available")) {
						break;
					}
				} catch (Exception ex) {
					logger.error("Wait for volume '" + volume.getId() + "' to be available failed. Message: " + ex.getMessage());
				} 
				
				retry--;
			
				try {
					Thread.sleep(5000);
				} catch (InterruptedException e) {
					// ignore exception
				}
			}
			
			try {
				Thread.sleep(5000);
			} catch (InterruptedException e) {
				// ignore exception
			}
		}
		
	}
	
	/**
	 * Builds the cluster model given information about the domain and a list of processes
	 * that exist for a particular account.
	 * 
	 * @param system The current system we are interested in assembling
	 * @param processes A map of instance id and process bean that exists in the cloud environment
	 * @throws RestClientException 
	 */
	protected Cluster assembleCluster(
			AccountSystem system, 
			Map<String, 
			ProcessGroupConfig> processGroupConfigs) {
		
		Cluster cluster = new Cluster(system.getSystemDomain(), system.getConfigVersionId());
		
		SystemSubnetMappingDao dao = new SystemSubnetMappingDao(EmbeddedH2DataAccessUtility.getInstance());
		AccountSystemDao accountDao = new AccountSystemDao(EmbeddedH2DataAccessUtility.getInstance());
		SystemSubnetMapping mapping = dao.get(system.getSystemDomain());
		
		if (mapping != null) {
			cluster.setVpcId(mapping.getVpcId());
			cluster.setPrivateSubnetId(mapping.getPrivateSubnetId());
		}
		
		if (system.getMasterInstanceId() == null &&
			system.getMasterAddress() == null &&
			system.getMasterUserData() == null) {
			cluster.setStatus(ClusterStatus.createNewStatus(null));
			return cluster;
		}
		
		if (system.getMasterInstanceId() == null &&
			system.getMasterAddress() == null &&
			StringUtils.isNotBlank(system.getMasterUserData())) {
			cluster.setStatus(ClusterStatus.createDownStatus());
			return cluster;
		}
		
		Process masterProcess = null;
		try {
			masterProcess = RestClientManager.getServiceInterface().listProcessWithoutVolumes(system.getMasterInstanceId());
		} catch (  AmazonServiceException ignore ) {
			// we get this exception for AWS Error Code: InvalidInstanceID.NotFound
			// in which case we just fall through to set cluster status to DOWN
		} catch ( Exception ex ) { 
			logger.error(String.format("Unexpected exception %s: %s\n", ex.getClass().getName(), ex.toString()));
		}
		
		// The master instance id stored in the database doesn't exist
		// in the cloud environment. Was it terminated by accident?
		if (masterProcess == null) {
			ClusterStatus status = ClusterStatus.createDownStatus();
			cluster.setStatus(status);
			return cluster;
		}
		
		// Check the master instance to see if its in some transitional state.
		
		if (masterProcess.getState() == State.Pending) {
			cluster.setStatus(ClusterStatus.createStartingStatus());
			
			// Retrieve the start time of this system
			AccountSystem info = accountDao.getAccountSystem(cluster.getDomain());
			cluster.setDomainStarted(info.getSystemDomainStarted());
			return cluster;
		}

		if (masterProcess.getState() == State.Stopping ||
			masterProcess.getState() == State.ShuttingDown) {
			cluster.setStatus(ClusterStatus.createStoppingStatus());
			
			AccountSystem info = accountDao.getAccountSystem(cluster.getDomain());
			if (info.getSystemDomainStarted() != null)
				cluster.setDomainStarted(info.getSystemDomainStarted());
			return cluster;
		}
		
		// The master instance id is stored in the database and its not currently being deleted 
		// but the instance is currently terminated in the cloud environment.
		// In this scenario we now set the database status to stopped and return a "down" status.
		
		if (masterProcess.getState() == State.Terminated) {
			try {
				if (!accountDao.isSystemStopped(system.getSystemDomain())) {
					logger.warn("InstanceId: " + system.getMasterInstanceId() + " is terminated, setting system: " + system.getSystemDomain() + " to stopped");
					accountDao.stopSystem(system.getSystemDomain());
				}
			} catch (RestClientException e) {
				//log an error, but there is not much else we can do
				logger.error("Failed to stop the system: " + system.getSystemDomain(), e);
			}
			cluster.setStatus(ClusterStatus.createDownStatus());
			return cluster;
		}
		
		if (masterProcess.getState() == State.Stopped) {
			cluster.setStatus(ClusterStatus.createDownStatus());
			return cluster;
		}
		
		AccountSystem info = accountDao.getAccountSystem(cluster.getDomain());
		if (info.getSystemDomainStarted() != null)
			cluster.setDomainStarted(info.getSystemDomainStarted());
		
		Map<String, ProcessItem> processFileItems = 
				SystemArtifactsCache.getInstance().getProcessItems(system.getSystemDomain());
		
		Map<String, AllocationPolicy> allocationPolicies = 
				SystemArtifactsCache.getInstance().getAllocationPolicies(system.getSystemDomain());
		
		// Can't retrieve the processes.xml and services.xml files for this system. Check the
		// tenant's security group rules and check if the repository functioning properly.
		
		if (masterProcess.getState() == State.Running && (processFileItems == null || allocationPolicies == null)) {
			ClusterStatus status = ClusterStatus.createWarningStatus();
			status.setMessage("Unable to retrieve system artifacts to generate detail information about the system.");
			cluster.setStatus(status);
			return cluster;
		}
		
		if (masterProcess.getState() == State.Running && processFileItems != null && allocationPolicies != null) {
			ArrayList<Process> sysProcesses = new ArrayList<Process>();
			for (Entry<String, ProcessItem> entry : processFileItems.entrySet()) {
				String instanceId = entry.getValue().getInstanceId();
				
				try {
					Process process = RestClientManager.getServiceInterface().listProcess(instanceId);
					if (process != null) {
						sysProcesses.add(process);
					}
				} catch (Exception ex) {
					logger.error("Fail to retrieve process for system '" + system.getSystemDomain() + "' and instance '" + instanceId + "'.");
				}
			}
			
			for (Process process : sysProcesses) {
				if (process.getState() == State.Terminated ||
					process.getState() == State.ShuttingDown) {
					continue;
				}
				
				// Get the processes.xml file that is associated with this instance.
				
				ProcessItem processFileItem = processFileItems.get(process.getId());
		
				if (processFileItem != null) {
					assembleGroup(cluster, processGroupConfigs, process, processFileItem, allocationPolicies);
				} 
			}
			
			// If this system is running in a vpc environment, we'll include the nat instance 
			// in the cluster in a separate self made group.
			
			if (mapping != null && mapping.getNatInstanceId() != null) {
				Node nat = RestClientManager.getInstanceServiceClient().getNodeWithoutVolumes(mapping.getNatInstanceId());
				nat.setPersistentDnsName(system.getSystemDomain());
				nat.setPersistentIpAddress(nat.getPublicIpAddress());
				
				Group natGroup = new Group("nat");
				natGroup.setSecurityGroup("vpc.nat.default");
				natGroup.addNode(nat);
				
				cluster.addGroup(natGroup);
			}
			
			// Contact the system status monitor to see if there are any errors.
			
			cluster.setStatus(checkSystemStatusMonitor(cluster.getDomain()));
			
			if (cluster.getStatus().getState() == ClusterState.OK) {
				ClusterCache.getInstance().clearErrorReport(cluster.getDomain());
			}
			
			return cluster;
		}
		
		// If we haven't returned yet than we just don't know the state of the system.
		
		cluster.setStatus(ClusterStatus.createUnknownStatus());
		
		return cluster;
		
	}
	
	protected Cluster checkQueueAndSetClusterInTransitionalState(Cluster cluster) {
		
		String domain = cluster.getDomain();
		
		DelaySystemRequestQueue queue = QueueManager.getSystemRequestQueue();
		
		if (queue.isRequestAlreadyOnQueue(domain, SystemAction.Create, SystemAction.CheckMasterProcessStatus, SystemAction.CreateNat, SystemAction.Start)) {
			cluster.setStatus(ClusterStatus.createStartingStatus());
		} else if (queue.isRequestAlreadyOnQueue(domain, SystemAction.UpdateSystemConfig, SystemAction.Sync)) {
			cluster.setStatus(ClusterStatus.createUpdatingStatus());
		} else if (queue.isRequestAlreadyOnQueue(domain, SystemAction.DeleteNat, SystemAction.Stop)) {
			cluster.setStatus(ClusterStatus.createStoppingStatus());
		} else if (queue.isRequestAlreadyOnQueue(domain, SystemAction.Delete)) {
			cluster.setStatus(ClusterStatus.createDeletingStatus());
		}
		
		return cluster;
		
	}
	
	protected void assembleGroup(
			Cluster cluster, 
			Map<String, ProcessGroupConfig> processGroupConfigs,
			Process process, 
			ProcessItem processFileItem, 
			Map<String, AllocationPolicy> allocationPolicies) {
		
		Group group = cluster.findGroup(processFileItem.getGroup());
		
		if (group == null) {
			group = new Group(processFileItem.getGroup());

			if (processGroupConfigs.containsKey(processFileItem.getGroup())) {
				ProcessGroupConfig config = processGroupConfigs.get(processFileItem.getGroup());
				group.setSecurityGroup(config.getSecurityGroup());
			}
			
			cluster.addGroup(group);
		}
		
		if (processFileItem.getVolumeIds() != null) {
			try {
				Collection<Volume> volumes = RestClientManager.getServiceInterface().listVolumes(processFileItem.getVolumeIds());
				process.setVolumes(volumes.toArray(new Volume[volumes.size()]));
			} catch (Exception ex) {
				logger.error("Fail to list volumes for system '" + cluster.getDomain() + "' and group '" + group.getName() + "'.", ex);
			}
		}

		calculateGroupVolumeCountAndSize(group, process, processFileItem);
		
		setGroupAutoScaleProperty(group, allocationPolicies);
		
	}
	
	protected void calculateGroupVolumeCountAndSize(
			Group group, 
			Process process, 
			ProcessItem processFileItem) {
		
		int count = group.getVolumeCount();
		float size = group.getVolumeSize();

		if (process.getVolumes() != null) {
			for (Volume volume : process.getVolumes()) {
				count++;
				size += volume.getSize();
			}

			group.setVolumeCount(count);
			group.setVolumeSize(size);
		}
		
		Node node = buildNode(process, processFileItem);
		
		if (processFileItem.getPermanentIP() != null) {
			node.setPersistentIpAddress(processFileItem.getPermanentIP());
		}

		group.addNode(node);
		
	}
	
	protected void setGroupAutoScaleProperty(
			Group group, 
			Map<String, AllocationPolicy> allocationPolicies) {
		
		String groupName = group.getName();
		
		if (allocationPolicies.containsKey(groupName)) {
			AllocationPolicy policy = allocationPolicies.get(groupName);
			if (policy.getAutoScale()) {
				group.setAutoScale();
			} 
		}
		
	}

	private Node buildNode(
			Process process, 
			ProcessItem processFileItem) {
		
		Node node = new Node();
		
		node.setId(process.getId());
		node.setState(process.getState());
		node.setImageId(process.getImageId());
		node.setType(process.getType());
		node.setPublicDnsName(process.getPublicDnsName());
		node.setPublicIpAddress(process.getPublicIpAddress());
		node.setPrivateDnsName(process.getPrivateDnsName());
		node.setPrivateIpAddress(process.getPrivateIpAddress());
		node.setPersistentDnsName(processFileItem.getDnsName());
		node.setPersistentIpAddress(process.getPersistentIpAddress());
		node.setRootDeviceType(process.getRootDeviceType());
		node.setVolumes(process.getVolumesWithSizes());
		node.setLaunchTime(process.getLaunchTime());
		
		return node;
		
	}
	
	private ClusterStatus checkSystemStatusMonitor(String domain) {
		ClusterStatus returnStatus = null;
		
		String masterDns = MasterUtil.getDns(domain);
		String portString = System.getProperty("com.deleidos.rtws.management.commandListener.rmiPort", "1098");
		int rmiPort = Integer.parseInt(portString);
		
		JmxMBeanServerConnection connection = null;
		try {
			connection = getJmxConnection(masterDns, rmiPort);
			
			ObjectName systemMonitorBean = getSystemMonitorBean(connection);
			if(systemMonitorBean != null) {
				MonitorStatus systemMonitorStatus = MonitorStatus.fromString((String)connection.getAttribute(systemMonitorBean, "Status"));
				if( systemMonitorStatus != MonitorStatus.OK &&
					systemMonitorStatus != MonitorStatus.STARTING ) {
					String[] errorMessages = (String[])connection.getAttribute(systemMonitorBean, "ErrorMessages");
					String statusMessage;
					if (errorMessages.length > 0) {
						StringBuilder statusMessageBuilder = new StringBuilder("The system is reporting following errors:\n");
						for(int i = 0; i < errorMessages.length; i++) {
							String error = errorMessages[i];
							statusMessageBuilder.append(error);
							if(i < errorMessages.length-1) {
								statusMessageBuilder.append("\n");
							}
						}
						
						statusMessage = statusMessageBuilder.toString();
					}
					else {
						statusMessage = "Invalid State - System in ERROR status without error messages.";
					}
					
					returnStatus = ClusterStatus.createWarningStatus();
					returnStatus.setMessage(statusMessage);
				}
			}
			else {
				// There was no system status monitor bean found
				returnStatus = ClusterStatus.createWarningStatus();
				returnStatus.setMessage("No system status monitor found on master instance.");
			}
		} catch(IOException ioe) {
			logger.error("Unable to connect to system status monitor.", ioe);
			returnStatus = ClusterStatus.createWarningStatus();
			returnStatus.setMessage("Unable to connect to system status monitor.");
		} catch (Exception e) {
			logger.error("Error determining system status monitor's status.", e);
			returnStatus = ClusterStatus.createWarningStatus();
			returnStatus.setMessage("Error determining system status monitor's status.");
		} finally {
			if(connection != null)  try {connection.close();} catch (Exception ignore) { }
		}
		
		if(returnStatus == null) {
			// We did not set any errors or warnings, the status must be OK
			returnStatus = ClusterStatus.createOkStatus();
		}
		
		return returnStatus;
	}
	
	private ObjectName getSystemMonitorBean(JmxMBeanServerConnection connection)
			throws IOException, MalformedObjectNameException, NullPointerException {
		ObjectName pattern = ObjectName.getInstance("rtws.deleidos.com:type=SystemStatusMonitor");
		
		// Get the beans available on the connection
		Set<ObjectName> beans = connection.queryNames(pattern, null);
		if(beans.size() == 0) {
			return null;
		}
		else {
			ObjectName[] beanArray = beans.toArray(new ObjectName[beans.size()]);
			return beanArray[0];
		}
	}

	private JmxMBeanServerConnection getJmxConnection(
			String host, 
			int port) throws IOException {
		JmxConnectionFactoryImpl connectionFactory = new JmxConnectionFactoryImpl();
		connectionFactory.setHost(host);
		connectionFactory.setPort(port);
		
		logger.debug(String.format("Connecting to JMX for host [%s] on port [%d]", host, port));
		return connectionFactory.getConnection();
	}
	
