	// shortcut method
	public void setStatus(StatusEnum enumStatus, String tenantId, String email, String stringStatus) {
		try {
			JSONObject json = new JSONObject();
			json.put("STATUS", stringStatus);
			json.put("EMAIL", email);
			json.put("ID",tenantId);
			json.put("STEP", enumStatus);
			
			RegistrationStatus.INSTANCE.setStatus(executionId, json);
			RestClientManager.getDBApiClient().updateRegistrationStatusEntry(
					executionId, json.toString());
			log.debug("STATUS: {"+executionId+"}: "+json);
		} catch (Exception e) {
			log.debug("ERROR SETTING STATUS: {"+executionId+"}: "+stringStatus);
		}
	}

