			if ((event != null) && (event.parameters != null) && (event.nestedEvent != null)) {
				var editEvent:InputModelEditEvent = event.nestedEvent as InputModelEditEvent;
				editEvent.parameters.formatString = event.parameters as String;
				dispatch(editEvent);
			}
		}
		
		/**** AddObjectPopup Begin and End handling ****/
		
		protected var addObjectPopup : AddObjectPopup;
		
		protected function handleAddObjectPopupBegin(event:PopupEvent):void {
			addObjectPopup = new AddObjectPopup();
			addObjectPopup.nestedEvent = event.nestedEvent;
			addObjectPopup.objName = "";
			addObjectPopup.data = new ArrayCollection();
			addObjectPopup.addEventListener(PopupEvent.ADD_OBJECT_POPUP_DONE, handleAddObjectPopupDone);
			addObjectPopup.addEventListener(CloseEvent.CLOSE, handleAddObjectPopupClose);
			addObjectPopup.allowName = true;
			addObjectPopup.allowCancel = true;
			PopUpManager.addPopUp(addObjectPopup, contextView, true);
			PopUpManager.centerPopUp(addObjectPopup);							
		}
		
		protected function handleAddObjectPopupDone(event:PopupEvent):void {
			PopUpManager.removePopUp(addObjectPopup);
			addObjectPopup.removeEventListener(PopupEvent.ADD_OBJECT_POPUP_DONE, handleAddObjectPopupDone);
			addObjectPopup.removeEventListener(CloseEvent.CLOSE, handleAddObjectPopupClose);
			/*
			[Bindable] public var objName:String;
			[Bindable] public var data:ArrayCollection;
			*/
			var editEvent:InputModelEditEvent = event.nestedEvent as InputModelEditEvent;
			editEvent.parameters = event.parameters; // Copy the data field object
			dispatch(editEvent);
		}
		
		protected function handleAddObjectPopupClose(event:CloseEvent):void {
			PopUpManager.removePopUp(addObjectPopup);
			addObjectPopup.removeEventListener(PopupEvent.ADD_OBJECT_POPUP_DONE, handleAddObjectPopupDone);
			addObjectPopup.removeEventListener(CloseEvent.CLOSE, handleAddObjectPopupClose);				
		}
		
		/**** DataModel Creation Wizard ****/
		
		private var dataModelWizard:WizardController;
		
		protected function handleDataModelCreationWizard(event:PopupEvent):void
		{			
			var startDataModelStep:StartDataModelWizard = new StartDataModelWizard();
			eventMap.mapListener(startDataModelStep, PopupEvent.MESSAGE_POPUP, dispatch);
			eventMap.mapListener(startDataModelStep, PopupEvent.PROGRESS_BAR_POPUP_BEGIN, dispatch);
			eventMap.mapListener(startDataModelStep, PopupEvent.PROGRESS_BAR_POPUP_UPDATE, dispatch);
			eventMap.mapListener(startDataModelStep, PopupEvent.PROGRESS_BAR_POPUP_END, dispatch);
			
			var reviewDataStep:ReviewDataStep = new ReviewDataStep();
			eventMap.mapListener(startDataModelStep, PopupEvent.MESSAGE_POPUP, dispatch);
			eventMap.mapListener(startDataModelStep, PopupEvent.PROGRESS_BAR_POPUP_BEGIN, dispatch);
			eventMap.mapListener(startDataModelStep, PopupEvent.PROGRESS_BAR_POPUP_UPDATE, dispatch);
			eventMap.mapListener(startDataModelStep, PopupEvent.PROGRESS_BAR_POPUP_END, dispatch);
			
			var confirmUploadStep:ConfirmUploadStep = new ConfirmUploadStep();
			eventMap.mapListener(confirmUploadStep, PopupEvent.MESSAGE_POPUP, dispatch);
			eventMap.mapListener(confirmUploadStep, PopupEvent.PROGRESS_BAR_POPUP_BEGIN, dispatch);
			eventMap.mapListener(confirmUploadStep, PopupEvent.PROGRESS_BAR_POPUP_UPDATE, dispatch);
			eventMap.mapListener(confirmUploadStep, PopupEvent.PROGRESS_BAR_POPUP_END, dispatch);
						
			dataModelWizard = new WizardController();
			dataModelWizard.addStep(startDataModelStep);
			dataModelWizard.addStep(reviewDataStep);
			dataModelWizard.addStep(confirmUploadStep);
			
			var data:Object = new Object();
			var startEvent:ModelServiceEvent = new ModelServiceEvent(ModelServiceEvent.MODEL_WIZARD_START, data, null);
			dataModelWizard.start(contextView, startEvent, PopupEvent.DATA_MODEL_WIZARD_DONE, handleDataModelCreationWizardDone, data);
		}
		
		protected function handleDataModelCreationWizardDone(event:PopupEvent):void {
			dataModelWizard.cleanup(handleDataModelCreationWizardDone);
			for each (var step:WizardStepDisplayObject in dataModelWizard.allSteps) {
				eventMap.unmapListener(step, PopupEvent.MESSAGE_POPUP, dispatch);
				eventMap.unmapListener(step, PopupEvent.PROGRESS_BAR_POPUP_BEGIN, dispatch);
				eventMap.unmapListener(step, PopupEvent.PROGRESS_BAR_POPUP_UPDATE, dispatch);
				eventMap.unmapListener(step, PopupEvent.PROGRESS_BAR_POPUP_END, dispatch);
			}
			if ((event.parameters != null) && (event.nestedEvent != null)) {
				SpinnerPopup.createSpinnerPopup(view.parent, "Uploading data, please wait...");
				dispatch(event.nestedEvent);
			}
		}
		
		protected function handleDataModelWizardStarted( event:ModelServiceEvent ):void {
			// trace("InputModelViewMediator.handleDataModelWizardStarted");
			SpinnerPopup.destroySpinnerPopup();
			dispatch(new PopupEvent(PopupEvent.PROGRESS_BAR_POPUP_BEGIN, null, "Analyzing data..."));
			var token:String = event.parameters as String;
			dispatch(new ModelServiceEvent(ModelServiceEvent.MODEL_WIZARD_POLL, token, null));
		}
		
		protected function handleDataModelWizardDone(event:ModelServiceEvent):void {
			// trace("InputModelViewMediator.handleDataModelWizardDone");
			SpinnerPopup.createSpinnerPopup(contextView);
			var token:String = event.parameters as String;
			// dispatch(new ModelServiceEvent(ModelServiceEvent.MODEL_WIZARD_LOAD, token, null));
			dispatch(new ModelServiceEvent(ModelServiceEvent.MODEL_WIZARD_GET_DETAIL, token, null));
		}
		
		protected var typeDecisionPopup:TypeDescisionPopup;
		
		protected function loadDataModel(token:String):void {
			SpinnerPopup.createSpinnerPopup(contextView);
			dispatch(new ModelServiceEvent(ModelServiceEvent.MODEL_WIZARD_LOAD, token, null));			
		}
		
		protected function handleDataModelProcessDetail(event:ModelServiceEvent):void {
			// trace("InputModelViewMediator.handleDataModelProcessDetail");
			var token:String = event.parameters.token;
			var response:String = event.parameters.response;
			var model:DmWizardTypeDecisionModel = new DmWizardTypeDecisionModel();
			model.loadFromJson(response);
			var wizardData:Object = dataModelWizard.wizardData;
			var threshold:Number = wizardData.threshold as Number;
			model.evaluate(threshold, 0.95); // TODO: Put these in a better place
			if (model.evaluation.length > 0) {
				typeDecisionPopup = new TypeDescisionPopup();
				typeDecisionPopup.addEventListener(PopupEvent.TYPE_DECISION_DONE, handleTypeDecisionPopupDone);
				typeDecisionPopup.addEventListener(CloseEvent.CLOSE, handleTypeDecisionPopupClose);
				typeDecisionPopup.decisionInfo = model.evaluation;
				typeDecisionPopup.token = token;
				PopUpManager.addPopUp(typeDecisionPopup, contextView, true);
				PopUpManager.centerPopUp(typeDecisionPopup);				
			}
			else {
				loadDataModel(token);
			}
		}		
		
		protected function handleTypeDecisionPopupClose( event:CloseEvent):void {
			PopUpManager.removePopUp(typeDecisionPopup);
			handleTypeDecisionPopupDone(null);
		}
		
		protected function handleTypeDecisionPopupDone(event:PopupEvent):void {
			typeDecisionPopup.removeEventListener(PopupEvent.TYPE_DECISION_DONE, handleAddObjectPopupDone);
			typeDecisionPopup.removeEventListener(CloseEvent.CLOSE, handleTypeDecisionPopupClose);
			if (event != null) {
				var token:String = event.parameters as String;
				loadDataModel(token);
			}
		}
	}
