	@Override
	public StandardResponse<?> validateSystemConfig(String tenantId, String sysDomain,
			String cfgFilename) {

		try {
			ClusterDimTableDependencies currClusterDimDeps = getSystemDimTableDependencies(
					tenantId, sysDomain, cfgFilename);
			
			RepositoryApiRestClient client = RestClientManager.getRespositoryApiRestClient();
			SystemConfig sysCfg = client.fetchUserSystemConfig(sysDomain, cfgFilename);
			
			if(sysCfg == null) {
				throw new SystemServiceException("Failed to retrieve the system configuration for validation.");
			}

			if (currClusterDimDeps != null) {
				if (currClusterDimDeps.getSystemConfigFilename() == null) {
					throw new SystemServiceException(
							"Missing system configuration file for system '" + sysDomain + "'.");
				}

				if (sysCfg.getDataSinks().size() >= 1 && currClusterDimDeps.getDataModels().size() == 0) {
					throw new SystemServiceException("Missing data model(s) for system '"
							+ sysDomain + "'.");
				}

				Set<String> dimTables = currClusterDimDeps.getDimTables();
				if (dimTables != null && dimTables.size() > 0) {
					AccountEntry entry = CacheManager.getTenantAccountCache().get(tenantId);
					String gatewayDns = entry.getGatewayAccount().getPublicDns();
					String dbHost = RestClientManager.getTenantRDMSConnectionsClient().getDbHost(
							tenantId);

					Set<String> dbTables = RestClientManager.getSystemTableClient()
							.retrieveDimensionTableNames(gatewayDns, dbHost);

					for (String dimTable : dimTables) {
						if (!dbTables.contains(dimTable)) {
							throw new SystemServiceException(
									"Missing dimension table in database for system '" + sysDomain
											+ "'.");
						}
					}
				}

				return buildPropertiesResponse(200, "Status", "true");
			}

			throw new SystemServiceException("Unable to validate system configuration for system '"
					+ sysDomain + "'.");
		} catch (Exception ex) {
			logger.error("Service failed to validate system configuration.", ex);
			return buildErrorResponse(500, ex.getMessage());
		}

	}

	private boolean isMasterNodeTerminated(String tenantId, String region, String domain) {

		Node node = null;

		try {
			AccountEntry entry = CacheManager.getTenantAccountCache().get(tenantId);
			Integer accountId = entry.getIAASAccount().getAccountId();

			String instanceId = RestClientManager.getGatewayAPIClient().getMasterNodeInstanceId(
					accountId, region, domain);
			node = RestClientManager.getGatewayAPIClient().getNode(accountId, instanceId);
		} catch (Exception ex) {
			// ignore exception
		}

		return (node == null || node.getState() == State.Terminated);

	}

