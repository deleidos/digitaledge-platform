		}
		
		protected var persistentIpAddressPopup:PersistentIpAddressPopup;
		
		protected function handlePersistentIpPopupBegin(event:PopupEvent):void {
			persistentIpAddressPopup = new PersistentIpAddressPopup();
			persistentIpAddressPopup.parameters = event.parameters;
			persistentIpAddressPopup.addEventListener(PopupEvent.SELECT_PERSISTENT_IP_END, handlePersistentIpPopupEnd);
			persistentIpAddressPopup.addEventListener(PopupEvent.MESSAGE_BEGIN, dispatch);
			persistentIpAddressPopup.addEventListener(CloseEvent.CLOSE, handlePersistentIpPopupClose);
			persistentIpAddressPopup.addEventListener(SystemConfigServiceEvent.ALLOCATE_PERSISTENT_IP, dispatch);
			PopUpManager.addPopUp(persistentIpAddressPopup, contextView, true);
			PopUpManager.centerPopUp(persistentIpAddressPopup);			
		}
		
		protected function handlePersistentIpPopupClose(event:CloseEvent):void {
			PopUpManager.removePopUp(persistentIpAddressPopup);
			handlePersistentIpPopupEnd(null);			
		}
		
		protected function handlePersistentIpPopupEnd(event:PopupEvent):void {
			persistentIpAddressPopup.removeEventListener(PopupEvent.SELECT_PERSISTENT_IP_END, handlePersistentIpPopupEnd);
			persistentIpAddressPopup.removeEventListener(PopupEvent.MESSAGE_BEGIN, dispatch);
			persistentIpAddressPopup.removeEventListener(CloseEvent.CLOSE, handlePersistentIpPopupClose);
			persistentIpAddressPopup.removeEventListener(SystemConfigServiceEvent.ALLOCATE_PERSISTENT_IP, dispatch);
			persistentIpAddressPopup = null;
			if ((event != null) && (event.parameters != null)) {
				var pg:ProcessGroup = view.processGroupParams.getItemAt(event.parameters.row) as ProcessGroup;
				pg.configPersistentIPAddress = (event.parameters.value as String);
				view.processGroupParams.refresh();
			}
		}
		
