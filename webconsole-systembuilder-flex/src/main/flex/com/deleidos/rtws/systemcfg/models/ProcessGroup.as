		private function decodePermission(permissionString:String):Boolean {
			return (permissionString.toLowerCase() == "true");
		}
		
		public function setConfigurationPermissions(configPermissions:Object):void {
			_volumeParamsConfigurable = decodePermission(configPermissions[ProcessGroupConfig.CONFIG_VOLUME_SIZE]);
			_minMaxConfigurable = decodePermission(configPermissions[ProcessGroupConfig.CONFIG_MIN_MAX]);
			_instanceSizeConfigurable = decodePermission(configPermissions[ProcessGroupConfig.CONFIG_INSTANCE_SIZE]);
			_persistentIPConfigurable = decodePermission(configPermissions[ProcessGroupConfig.CONFIG_PERSISTENT_IP]);
			_jmsPersistConfigurable   = decodePermission(configPermissions[ProcessGroupConfig.CONFIG_JMS_PERSISTENCE]);
			_scalingConfigurable      = decodePermission(configPermissions[ProcessGroupConfig.CONFIG_SCALING]);
			if ( !StringUtils.isBlank(configPermissions[ProcessGroupConfig.DEFAULT_NUM_INSTANCES]) ) { 
				_defaultNumInstances = parseInt(configPermissions[ProcessGroupConfig.DEFAULT_NUM_INSTANCES]);
			}
			
			if ( !StringUtils.isBlank(configPermissions[ProcessGroupConfig.ENFORCE_ODD_COUNT]) ) { 
				_oddNumInstances = decodePermission(configPermissions[ProcessGroupConfig.ENFORCE_ODD_COUNT]);
			}
			
			if ( !StringUtils.isBlank(configPermissions[ProcessGroupConfig.LINEAR_SCALING]) ) { 
				_linearScale = decodePermission(configPermissions[ProcessGroupConfig.LINEAR_SCALING]);
			}
		}
		
		public function fieldConfigurable(field:String):Boolean {
			if ((field == "configVolumeCount") ||
					 (field == "configVolumeSize")) {
				return _volumeParamsConfigurable;
			}
			else if (field == "configPersistentIPAddress") {
				return _persistentIPConfigurable;
			}
			else if (field == "configInstanceSize") {
				return _instanceSizeConfigurable;
			}
			else if ((field == "configMinCount") ||
				     (field == "configMaxCount")) {
				return _minMaxConfigurable;
			}
			else if ((field == "configScaling") ||
				     (field == "configAllocationLimit") ||
					 (field == "configDeallocationLimit")) {
				return _scalingConfigurable;
			}
			else if (field == "configJmsPersistence") {
				return _jmsPersistConfigurable;
			}
			return true;
		}

