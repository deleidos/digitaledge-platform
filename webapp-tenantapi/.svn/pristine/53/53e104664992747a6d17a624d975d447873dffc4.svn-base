	/**
	 * Send a command to the gateway to retrieve all security groups associated with
	 * a account returned in json format.
	 * 
	 * Invokes the gatewayapi REST service:
	 * 		http://<host>:<port>/json/security/groups/all/<tms-account-id>
	 */
	public JSONArray getSecurityGroups(
			Integer accountId, 
			String region, 
			String tmsAccountId) throws GatewayApiException {

		try {
			String processGroupConfigs = RestClientManager.getProcessGroupConfigClient().retrieveAllAsString();
			
			WebResource res = buildGatewayApiEndpoint(accountId, region);
			res = res.path("json").path("process").path("group")
				.path("config").path("update");
			
			Form f = new Form();
			f.add("processGroupConfigs", processGroupConfigs);
			res.post(f);
			
			res = buildGatewayApiEndpoint(accountId, region);
			res = res.path("json").path("security").path("groups").path("all").path(tmsAccountId);
			String result = res.get(String.class);

			return JSONArray.fromObject(result);
		} catch (Exception ex) {
			String message = String.format("Failed to retrieve security groups. Message: %s", ex.getMessage());
			logger.error(message, ex);
			throw new GatewayApiException(message, ex);
		}

	}

