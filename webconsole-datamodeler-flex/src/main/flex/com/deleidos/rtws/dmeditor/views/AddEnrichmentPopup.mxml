				 xmlns:fx="http://ns.adobe.com/mxml/2009"
			   xmlns:s="library://ns.adobe.com/flex/spark"
			   xmlns:mx="library://ns.adobe.com/flex/mx"
			   xmlns:tenantutils="com.deleidos.rtws.commons.tenantutils.view.*"
			   xmlns:rtwsCommonComps="com.deleidos.rtws.commons.view.component.*"
			   minWidth="500" minHeight="420"
			   creationComplete="titlewindow1_creationCompleteHandler(event)"
			   defaultButton="{okButton}" title="Add Enrichment">
	
	<rtwsCommonComps:states>
		<s:State id="noOtherParamsState" name="rtws_noOtherParams" />
		<s:State id="parameterizedEnrichmentState" name="rtws_genericEnrichment" stateGroups="rtws_parameterizedGroup" />
		<s:State id="dimTableEnrichmentState" name="rtws_dimTableEnrichment" stateGroups="rtws_parameterizedGroup" />
	</rtwsCommonComps:states>
	
	<fx:Declarations>
		<s:RadioButtonGroup id="filterEnrichmentDataRadioBtnGroup" selectedValue="{false}" />
	</fx:Declarations>
	
	<s:HGroup width="100%" horizontalAlign="center">
		<rtwsCommonComps:StatusMessageDisplay statusMsg="{_currStatusMsg}" width="75%" />	
	</s:HGroup>
	
	<s:Form width="100%">
		<s:FormItem label="Enrichment:" width="100%">
			<s:layout>
				<s:HorizontalLayout verticalAlign="middle" />
			</s:layout>
			<s:DropDownList id="enrichDropDown" width="100%"
											change="enrichDropDown_changeHandler(event)"
											dataProvider="{enrichNameList}" />
			<s:Button id="selectEnrichButton" label="Details >>"
								click="selectEnrichButton_clickHandler(event)" />	
		</s:FormItem>
	</s:Form>
	
	<s:VGroup width="100%" height="100%" gap="-1" alpha="1">
		<s:TabBar styleName="fileFolder" dataProvider="{enrichmentCfgTabs}" depth="1" alpha="1" />
		<mx:ViewStack id="enrichmentCfgTabs" width="100%" height="100%" creationPolicy="all"
									styleName="fileFolderTabsContainer" depth="0">
			<s:NavigatorContent width="100%" height="100%" label="Input">
				<s:Form width="100%" height="100%">
					<s:layout>
						<s:FormLayout gap="5" />
					</s:layout>
					<s:FormItem label="Input Model Field(s):" width="100%">
						<s:VGroup width="100%" height="100%">
							<s:HGroup width="100%" verticalAlign="middle">
								<s:TextInput id="inputFieldText" width="100%" />
								<s:Button id="selectInputFieldButton" label="Browse >>"
													click="selectInputFieldButton_clickHandler(event)" />	
							</s:HGroup>
							<s:CheckBox id="remInputCheckbox" label="Remove after Enrichment"
													toolTip="If checked removes the input fields from the final record after enrichment." />	
						</s:VGroup>
					</s:FormItem>
					<s:HGroup width="100%">
						<s:FormHeading label="Additional Parameter(s):" />
						<s:Spacer width="100%" />
						<rtwsCommonComps:StyleableIconButton
							styleName='{"toolBarButton" + (StringUtils.isNotBlank(TableManager.ICON_STYLE_NAME) ? (" " + TableManager.ICON_STYLE_NAME) : "")}'
							label="Manage Tables ..."
							toolTip="Manage you Dimension Tables"
							includeIn="rtws_dimTableEnrichment"
							click="onTableMgrClick();" />
					</s:HGroup>
					<tenantutils:ParameterGrid id="otherParamsGrid" includeIn="rtws_parameterizedGroup" 
											   width="100%" height="100%" dataProvider="{customParams}" editable="true"
											   gridItemEditorSessionStart="otherParamsGrid_gridItemEditorSessionStartHandler(event)" />
					<s:Label text="Not Applicable" includeIn="rtws_noOtherParams" />
				</s:Form>
			</s:NavigatorContent>
			<s:NavigatorContent width="100%" height="100%" label="Output">
				<s:Form width="100%" height="100%">
					<s:layout>
						<s:FormLayout gap="15" />
					</s:layout>
					<s:FormItem label="Destination Input Model Field:" width="100%">
						<s:layout>
							<s:VerticalLayout gap="10" />
						</s:layout>
						<s:HGroup width="100%">
							<s:TextInput id="outputFieldText" width="100%"
										 toolTip="Output field to which the enrichment result is placed."
										 focusOut="outputFieldText_focusOutHandler(event)"/>
							<s:Button id="selectOutputFieldButton" label="Browse >>"
												click="selectOutputFieldButton_clickHandler(event)" />
						</s:HGroup>
						<s:CheckBox id="overrideCheckbox" label="Overwrite Existing Data, if needed"
												toolTip="Replace data already stored in the specified output field, if applicable." />
					</s:FormItem>
					<s:FormItem label="Data Options:" width="100%">
						<s:layout>
							<s:VerticalLayout gap="10" />
						</s:layout>
						<s:RadioButton group="{filterEnrichmentDataRadioBtnGroup}" value="{false}" label="Include Entire Enrichment Record" selected="true"
													 toolTip="All data from the Enrichment will be stored in the specified Dest. Input Model Field" />
						<s:RadioButton group="{filterEnrichmentDataRadioBtnGroup}" value="{true}" label="Filter Enrichment Record"
													 toolTip="Provide a JSONPath expression to filter the enrichment data that is stored in Dest. Input Model Field" />
						<s:HGroup width="100%">
							<s:Spacer width="15" />
							<s:TextInput id="extractPathText" enabled="{filterEnrichmentDataRadioBtnGroup.selectedValue == true}"
													 width="100%" toolTip="Specifies a single field of the enrichment data, rather than the entire output." />
						</s:HGroup>
					</s:FormItem>
				</s:Form>
			</s:NavigatorContent>
		</mx:ViewStack>
	</s:VGroup>
	
	<rtwsCommonComps:controlBarContent>
		<s:Button label="OK" height="100%"
							enabled="{(enrichDropDown.selectedItem != null &amp;&amp; StringUtils.isNotBlank(outputFieldText.text))}"
							click="ok_clickHandler(event)" id="okButton" />
		<s:Button label="Cancel" height="100%" click="cancel_clickHandler(event)" id="cancelButton" />		
	</rtwsCommonComps:controlBarContent>
	
	<fx:Script>
		<![CDATA[
			import com.deleidos.rtws.commons.model.status.StatusMessage;
			import com.deleidos.rtws.commons.model.status.StatusType;
			import com.deleidos.rtws.commons.tenantutils.utils.tmsappsuite.TableManager;
			import com.deleidos.rtws.commons.util.StateUtils;
			import com.deleidos.rtws.commons.util.StringUtils;
			import com.deleidos.rtws.commons.util.validation.ValidationUtils;
			import com.deleidos.rtws.dmeditor.events.PopupEvent;
			import com.deleidos.rtws.dmeditor.models.EnrichmentModel;
			import com.deleidos.rtws.dmeditor.utils.XMLUtilities;
			
			import flash.net.navigateToURL;
			
			import mx.collections.ArrayCollection;
			import mx.collections.HierarchicalCollectionView;
			import mx.collections.HierarchicalData;
			import mx.collections.XMLListCollection;
			import mx.events.CloseEvent;
			import mx.events.FlexEvent;
			import mx.managers.PopUpManager;
			import mx.utils.ObjectUtil;
			import mx.validators.Validator;
			
			import spark.collections.Sort;
			import spark.collections.SortField;
			import spark.components.gridClasses.DefaultGridItemEditor;
			import spark.events.GridItemEditorEvent;
			import spark.events.IndexChangeEvent;
			
			private static const DIM_PARAM_NAME_PATTERN:RegExp = /^.*table.*$/i;
			
			private static const SIMPLE_JSON_PATH_PATTERN:RegExp = /^\s*([^\]\[.\\\/\s\x22,]+\s*(\[\s*\d+\s*\])?)(\s*[.]\s*([^\]\[.\\\/\s\x22,]+(\s*\[\s*\d+\s*])?))*\s*$/;
			
			[Bindable] private var _currStatusMsg:StatusMessage = null;
			
			[Bindable] public var enrichNameList:ArrayCollection;
			
			[Bindable] public var customParams:ArrayCollection;
			
			public var enrichFullList:ArrayCollection;
			public var inputFieldSource:XMLListCollection;
			public var outputFieldSource:XMLListCollection;
			
			public var nestedEvent:Event;
			
			public var initialEnrichment:Object = null;
			private var selectedEnrichment:Object = null;
			
			private function allCustomParamsNull():Boolean {
				var allNull:Boolean = true;
				for each (var nvPair:Object in customParams.source) {
					allNull &&= StringUtils.isBlank(nvPair.value);
				}
				return allNull;
			}
			
			/**
			 * This function checks that all the wildcarded array references in each input field
			 * has a matching wildcard in the output field. If this is not the case, ingest will
			 * not know how to "fill in" the indexes at runtime.
			 */
			protected function wildcardArrayReferencesValid(outputField:String, inputFields:String):Boolean {
				var inputFieldsArray:Array = inputFields.split(EnrichmentModel.INPUT_FIELD_SEPARATOR_PATTERN);
				var outputFieldCompare:String = outputField.replace(/\[\*\]/g,"[]");
				for each (var inputField:String in inputFieldsArray) {
					var lastPatternIndex:int = -1;
					var nextIndex:int = 0;
					// Find the array wildcards until there are no more
					while (true) {
						var arrayPatIndex:int =
							Math.max(inputField.indexOf("[]",nextIndex), inputField.indexOf("[*]",nextIndex));
						
						if (arrayPatIndex < 0) {
							break;
						}
						lastPatternIndex = arrayPatIndex+1;
						nextIndex += arrayPatIndex+1;
					}
					// If the input field has an array index, and the output field has an array index, they must match
					if ((lastPatternIndex >= 0) && (outputFieldCompare.indexOf("[]") >= 0)) {
						// Validate that the portion of the input field containing the array wildcards
						// matches the same portion in the output field. If not, the array reference is
						// not valid.
						var inputFieldCompare:String = inputField.replace(/\[\*\]/g,"[]");
						inputFieldCompare = inputFieldCompare.substring(0,lastPatternIndex);
						if (inputFieldCompare != outputFieldCompare.substring(0,lastPatternIndex)) {
							return false;
						}
					}
				}
				return true;
			}
			
			protected function ok_clickHandler(event:MouseEvent):void
			{
				var validationErrorMsgs:Array = new Array();
				
				if( enrichDropDown.selectedItem == null)
				{
					validationErrorMsgs.push("Please select an Enrichment");
				}
				if(StringUtils.isBlank(outputFieldText.text))
				{
					validationErrorMsgs.push("Please choose a Destination Input Model Field");
				}
				// Should this be removed?
				if(hasCustomParameters())
				{
					if(allCustomParamsNull())
					{
						validationErrorMsgs.push("One or more Additional Parameters are missing");
					}					
				}
				if(this.filterEnrichmentDataRadioBtnGroup.selectedValue == true && StringUtils.isBlank(extractPathText.text))
				{
					validationErrorMsgs.push("Please provide an expression to filter the enrichment record.");
				}
				if(this.filterEnrichmentDataRadioBtnGroup.selectedValue == true && !SIMPLE_JSON_PATH_PATTERN.test(extractPathText.text))
				{
					validationErrorMsgs.push("Filter enrichment record value must contain a valid JSON path"); 
				}
				if (!wildcardArrayReferencesValid(outputFieldText.text, inputFieldText.text)) {
					validationErrorMsgs.push("Wildcarded array references (indicated by [] or [*]) in one or more of the input fields " +
						                     "do not match those used in the output field. They must match if wildcards are to be used.");					
				}
				
				if(validationErrorMsgs.length > 0)
				{
					var validationErrorMsg:String = "";
					for(var index:int=0; index < validationErrorMsgs.length; index++)
					{
						if(index > 0)
						{
							validationErrorMsg += "\n";
						}
						validationErrorMsg += validationErrorMsgs[index];
					}
					
					var statusMsg:StatusMessage = new StatusMessage(StatusType.ERROR, validationErrorMsg);
					statusMsg.userDismissible = true;
					_currStatusMsg = statusMsg;
				}
				else
				{
					var parameters:Object = (initialEnrichment == null) ? (new Object()) : initialEnrichment;
					parameters.enrichName = enrichDropDown.selectedItem as String;
					parameters.inputFields = inputFieldText.text;
					parameters.outputField = outputFieldText.text;
					parameters.removeInput = (remInputCheckbox.selected ? "Yes" : "No");
					parameters.override    = (overrideCheckbox.selected ? "Yes" : "No");
					parameters.extractPath = ((filterEnrichmentDataRadioBtnGroup.selectedValue as Boolean) ? extractPathText.text : "");
					parameters.paramsArray = customParams.source;
					
					dispatchEvent(new PopupEvent(PopupEvent.ENRICH_ADDUPDATE_DONE, nestedEvent, parameters));
				}
			}
			
			protected function cancel_clickHandler(event:MouseEvent):void
			{
				dispatchEvent(new PopupEvent(PopupEvent.ENRICH_ADDUPDATE_DONE, null, null));
			}
			
			protected function updateEnrichmentInfo(name:String):void {
				for each (var enrichment:Object in enrichFullList) {
					if (name == enrichment.enrichName) {
						selectedEnrichment = enrichment;
						
						enrichDropDown.toolTip = enrichment.enrichDescription;
						inputFieldText.toolTip = enrichment.inputFieldDescription;

						var paramsArray:Array;
						if ((initialEnrichment != null) && (initialEnrichment.enrichName == name)) {
							// Get parameters from the passed in enrichment
							paramsArray = initialEnrichment.paramsArray;
						}
						else {
							// Get the parameters from the enrichment itself
							paramsArray = enrichment.customParamsArray;
						}
						
						// Clone the array
						var paramsArrayCopy:Array = ObjectUtil.copy(paramsArray) as Array;
						customParams = new ArrayCollection(paramsArrayCopy);
						var sort:Sort = new Sort();
						sort.fields = [new SortField("name",false)];
						customParams.sort = sort;
						customParams.refresh();							
						
						if(customParams.length > 0)
						{
							
							var isDimTableEnrichment:Boolean = false;
							
							var currParam:Object = null;
							var currParamName:String = null;
							for(var index:int=0; index < customParams.length; index++)
							{
								currParam = customParams[index];
								if(currParam != null && currParam.hasOwnProperty("name"))
								{
									currParamName = (currParam["name"] as String);
								}
								
								if(currParamName != null && DIM_PARAM_NAME_PATTERN.test(currParamName))
								{
									isDimTableEnrichment = true;
									break;
								}
							}
							
							if(isDimTableEnrichment)
							{
								this.currentState = dimTableEnrichmentState.name;
							}
							else
							{
								this.currentState = parameterizedEnrichmentState.name;
							}
						}
						else
						{
							this.currentState = noOtherParamsState.name;
						}
												
						break;
					}
				}
			}
			
			protected function enrichDropDown_changeHandler(event:IndexChangeEvent):void
			{
				updateEnrichmentInfo(enrichDropDown.selectedItem);
			}
			
			//********** Popup: Select an enrichment from a picklist *************** 

			private var selectEnrichmentPopup:EnrichmentPickListPopup;
			
			protected function selectEnrichButton_clickHandler(event:MouseEvent):void
			{
				selectEnrichmentPopup = new EnrichmentPickListPopup();
				selectEnrichmentPopup.nestedEvent = null;
				selectEnrichmentPopup.enrichmentList = enrichFullList;
				selectEnrichmentPopup.addEventListener(PopupEvent.ENRICH_PICK_LIST_DONE, handleSelectEnrichmentDone);
				selectEnrichmentPopup.addEventListener(CloseEvent.CLOSE, handleSelectEnrichmentClose );
				PopUpManager.addPopUp(selectEnrichmentPopup, parent, true);
				PopUpManager.centerPopUp(selectEnrichmentPopup);
			}
			
			protected function handleSelectEnrichmentClose( event:CloseEvent):void {
				PopUpManager.removePopUp(selectEnrichmentPopup);
				handleSelectEnrichmentDone(null);
			}
			
			protected function handleSelectEnrichmentDone(event:PopupEvent):void {
				selectEnrichmentPopup.removeEventListener(PopupEvent.ENRICH_PICK_LIST_DONE, handleSelectEnrichmentDone);
				selectEnrichmentPopup.removeEventListener(CloseEvent.CLOSE, handleSelectEnrichmentClose );
				if ((event != null) && (event.parameters != null)) {
					enrichDropDown.selectedItem = event.parameters.enrichName;
					updateEnrichmentInfo(event.parameters.enrichName);
				}
			}

			//********* Popup: Select the input field(s) for the enrichment ***************
			
			private var selectModelPopup:ModelFieldSelectionPopup;
			
			protected function selectInputFieldButton_clickHandler(event:MouseEvent):void
			{
				selectModelPopup = new ModelFieldSelectionPopup();
				var hd : HierarchicalData = new HierarchicalData(inputFieldSource);
				selectModelPopup.dataProvider = new HierarchicalCollectionView(hd);
				selectModelPopup.fieldSource = inputFieldSource;
				selectModelPopup.inputFields = null;
				selectModelPopup.addEventListener(PopupEvent.ENRICH_GET_INPUT_DONE, handleSelectInputFieldDone);
				selectModelPopup.addEventListener(CloseEvent.CLOSE, handleSelectInputFieldClose );
				selectModelPopup.setup(false, true, PopupEvent.ENRICH_GET_INPUT_DONE,
					"Input fields: Select one or more fields for enrichment input.");
				PopUpManager.addPopUp(selectModelPopup, parent, true);
				PopUpManager.centerPopUp(selectModelPopup);
			}
			
			protected function handleSelectInputFieldClose( event:CloseEvent):void {
				PopUpManager.removePopUp(selectModelPopup);
				handleSelectInputFieldDone(null);
			}
			
			protected function handleSelectInputFieldDone(event:PopupEvent):void {
				selectModelPopup.removeEventListener(PopupEvent.ENRICH_GET_INPUT_DONE, handleSelectInputFieldDone);
				selectModelPopup.removeEventListener(CloseEvent.CLOSE, handleSelectInputFieldClose );
				if ((event != null) && (event.parameters != null)) {
					inputFieldText.text = event.parameters as String;
				}
			}

			//********* Popup: Select the output field for the enrichment ****************
			
			protected function selectOutputFieldButton_clickHandler(event:MouseEvent):void
			{
				selectModelPopup = new ModelFieldSelectionPopup();
				var source:XMLListCollection = new XMLListCollection(outputFieldSource.copy());
				var hd : HierarchicalData = new HierarchicalData(source);
				selectModelPopup.dataProvider = new HierarchicalCollectionView(hd);
				selectModelPopup.fieldSource = source;
				selectModelPopup.inputFields = inputFieldText.text; 
				selectModelPopup.addEventListener(PopupEvent.ENRICH_GET_OUTPUT_DONE, handleSelectOutputFieldDone);
				selectModelPopup.addEventListener(CloseEvent.CLOSE, handleSelectOutputFieldClose );
				selectModelPopup.setup(true, false, PopupEvent.ENRICH_GET_OUTPUT_DONE,
					"Output field: Select one field or add a new field for enrichment output.");
				PopUpManager.addPopUp(selectModelPopup, parent, true);
				PopUpManager.centerPopUp(selectModelPopup);
			}
			
			protected function handleSelectOutputFieldClose( event:CloseEvent):void {
				PopUpManager.removePopUp(selectModelPopup);
				handleSelectOutputFieldDone(null);
			}
			
			protected function handleSelectOutputFieldDone(event:PopupEvent):void {
				selectModelPopup.removeEventListener(PopupEvent.ENRICH_GET_OUTPUT_DONE, handleSelectOutputFieldDone);				
				selectModelPopup.removeEventListener(CloseEvent.CLOSE, handleSelectOutputFieldClose );
				if ((event != null) && (event.parameters != null)) {
					outputFieldText.text = event.parameters as String;
				}
			}

			protected function titlewindow1_creationCompleteHandler(event:FlexEvent):void
			{
				if (initialEnrichment != null) {
					enrichDropDown.selectedItem = initialEnrichment.enrichName;
					inputFieldText.text = initialEnrichment.inputFields;
					outputFieldText.text = initialEnrichment.outputField;
					remInputCheckbox.selected = (initialEnrichment.removeInput == "Yes");
					overrideCheckbox.selected = (initialEnrichment.override == "Yes");
					if(StringUtils.isNotBlank(initialEnrichment.extractPath))
					{
						filterEnrichmentDataRadioBtnGroup.selectedValue = true;
						extractPathText.text = initialEnrichment.extractPath;
					}
					else
					{
						filterEnrichmentDataRadioBtnGroup.selectedValue = false;
					}
					
					updateEnrichmentInfo(initialEnrichment.enrichName);					
				}
				
				focusManager.setFocus(enrichDropDown);
			}
			
			/**
			 * If a validator is defined on the parameter, create and attach it to the default item editor.
			 */
			protected function otherParamsGrid_gridItemEditorSessionStartHandler(event:GridItemEditorEvent):void
			{
				var statusMsg:StatusMessage = null;
				otherParamsGrid.setupCell(event,null);
				if (otherParamsGrid.validatorErrorMessage != null) {
					statusMsg = new StatusMessage(StatusType.WARN, "Validator error: " + otherParamsGrid.validatorErrorMessage);
					statusMsg.userDismissible = true;
					_currStatusMsg = statusMsg;
				}
			}
			
			private function onTableMgrClick():void
			{
				navigateToURL(TableManager.buildDefaultUrlRequest());
			}
			
			private function hasCustomParameters():Boolean
			{
				return StateUtils.isStateNameInGroup(this, currentState, "rtws_parameterizedGroup");
			}
			
			protected function outputFieldText_focusOutHandler(event:FocusEvent):void
			{
				if (StringUtils.isNotBlank(outputFieldText.text)) {
					var path:String = outputFieldText.text;
					if (StringUtils.contains(path,".")) {
						var parent:String = StringUtils.beforeLast(path, ".");
						if (XMLUtilities.findField(inputFieldSource.source, parent) == null) {
							var statusMsg:StatusMessage = new StatusMessage(StatusType.WARN,
								"Note that the path '" + parent + "' specified for the output field does not exist in the Input Model. " +
								"For this to work this field MUST be provided some other way, for example from a previous enrichment or from an array." );
							statusMsg.userDismissible = true;
							_currStatusMsg = statusMsg;						
						}
					}
				}
			}
			
