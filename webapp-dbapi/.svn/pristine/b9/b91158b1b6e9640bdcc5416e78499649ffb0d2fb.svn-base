	private static String removeQuotes(String s) {
		// state machine that removes quoted substrings from this string.
		// define quoted substrings as any string that starts and ends with a
		// single quote ( ' )
		// a single quote can be escaped by prepending it with another single
		// quote ( '' )
		boolean inStr = false;
		int startUnquotedSection = 0;
		StringBuilder b = new StringBuilder();
		int pos = 0;
		while (pos < s.length()) {
			if (s.charAt(pos) == '\'' && pos < (s.length() - 1)
					&& s.charAt(pos + 1) == '\'') {
				pos++;// double-quoted, so it can be ignored
			} else if (s.charAt(pos) == '\'') {
				// it's a tic that's not single escaped
				if (inStr) {
					// end of a quoted string that should be removed
					startUnquotedSection = pos + 1;
				} else {
					// start of a quoted section - add the previous part to the
					// string
					b.append(s.substring(startUnquotedSection, pos));
					startUnquotedSection = pos;
				}
				inStr = !inStr;
			}

			pos++;
		}
		b.append(s.substring(startUnquotedSection, pos));
		System.out.println();
		System.out.println("in:  " + s);
		System.out.println("out: " + b.toString());
		return b.toString();
	}

	private static void validateIdentifierOrString(String operand)
			throws SQLException {
		validateIdentifier(operand.replaceAll("^'", "").replaceAll("'$", "")
				.replaceAll(" ", "").replaceAll("\\%", "").replaceAll("%", ""));
	}

	/**
	 * Return a Set of vetted, valid table permissions requested by the provided
	 * requestedTablePermissions.
	 * 
	 * @param requestedTablePermissions
	 *            A Set of permissions to be supported (All or 1 or more valid
	 *            table permissions)
	 * @param failOnInvalidPermission
	 *            a flag to indicate if execution should halt and null should be
	 *            returned if an invalid permission is encountered
	 * @return A Set of vetted, table permissions; or null if the request is
	 *         invalid
	 */
	public static Set<String> parseTablePermissions(
			Set<String> requestedTablePermissions,
			boolean failOnInvalidPermission) {
		Set<String> result = null;

		if (requestedTablePermissions != null) {
			// Allow an empty return set, this may be valid in some cases
			result = new HashSet<String>();

			String currValidTblPermisison = null;
			for (String currRequestedPermission : requestedTablePermissions) {
				currValidTblPermisison = parseTablePermission(currRequestedPermission);
				if (currValidTblPermisison == null) {
					if ("ALL".equalsIgnoreCase(currRequestedPermission)) {
						result = new HashSet<String>();
						result.addAll(TABLE_PERMISSIONS);
						break;
					} else if (failOnInvalidPermission) {
						result = null;
						break;
					}
				} else {
					result.add(currValidTblPermisison);
				}
			}
		}

		return result;
	}

	/**
	 * Returns the proper, supported Table permission name matching the provided
	 * value, or null
	 * 
	 * @param permission
	 * @return the proper, supported Table permission name if one can be found;
	 *         null otherwise
	 */
	public static String parseTablePermission(String permission) {
		String result = null;

		if (permission != null) {
			int index = TABLE_PERMISSIONS.indexOf(permission.trim()
					.toUpperCase());
			if (index >= 0) {
				result = TABLE_PERMISSIONS.get(index);
			}
		}

		return result;
	}

	public static final boolean isValidTablePermission(String permission) {
		return (parseTablePermission(permission) != null);
	}

	public static void validateColJSON(JSONObject colDef) throws SQLException {
		// TODO Auto-generated method stub
		String colName = colDef.getString("column_name");
		validateIdentifier(colName);
		String colType = colDef.getString("type").toUpperCase();
		validateType(colType);
		if (colDef.containsKey("precision")) {
			String colPrecision = colDef.getString("precision");
			// two types of precision here: a number, or a number, a comma, and
			// another number
			String[] nums = colPrecision.split(",");
			if (nums.length < 1 || nums.length > 2)
				throw new SQLException("Invalid precision value.");
			for (int i = 0; i < nums.length; i++) {
				String num = nums[i].trim();
				try {
					Integer.parseInt(num);
				} catch (Exception e) {
					throw new SQLException("Invalid precision value.");
				}
			}
			if (!needsPrecision(colType))
				throw new SQLException(
						"Precision value received, but type does not take precision.");
		}
		if(colDef.containsKey("default_value"))
			validateDefaultValue(colDef.getJSONObject("default_value"));
				
	}

	public static void validateAlterColJSON(JSONObject alterCol)
			throws SQLException {
		if (alterCol.containsKey("rename"))
			validateIdentifier(alterCol.getString("rename"));
		if (alterCol.containsKey("setnullable"))
			try {
				alterCol.getBoolean("setnullable");
			} catch (Exception e) {
				// not a boolean value
				throw new SQLException(
						"value for 'setnullable' is not valid - must be boolean true or false, or the strings \"true\" or \"false\".");
			}
		if (alterCol.containsKey("set_type")) {
			// altering type, and maybe precision
			String type = alterCol.getString("set_type");
			validateType(type);
			if (needsPrecision(type)) {
				// need precision
				if (alterCol.containsKey("set_precision")) {
					// need precision, have it
					// success case
				} else {
					// need precision, don't have it
					throw new SQLException("The argument set_type (" + type
							+ ") requires a precision (set_precision)");
				}
			} else {
				// don't need precision
				if (alterCol.containsKey("set_precision")) {
					// don't need, have
					throw new SQLException(
							"set_precision was called with type "
									+ type
									+ " but that type does not require a precision.");
				} else {
					// don't need, don't have
					// success case
				}
			}
		} else {
			if (alterCol.containsKey("set_precision")) {
				// no type value, but a precision, throw an error
				throw new SQLException(
						"set_precision is not a valid argument to alter-column if set_type is not also sent.");
			}
		}
		if(alterCol.containsKey("default_value"))
			validateDefaultValue(alterCol.getJSONObject("default_value"));

	}

	private static void validateDefaultValue(JSONObject defVal) throws SQLException{
		
		if(defVal.isNullObject() || JSONNull.getInstance().equals(defVal)) {
			// null is valid.  This means no default value specified.
			return;
		}
		
		if(defVal.containsKey("mode")){
			String mode = defVal.getString("mode");
			if(mode.equalsIgnoreCase("null"))
				return;//valid
			else if(mode.equalsIgnoreCase("value") || mode.equalsIgnoreCase("val")){
				//set value - need contents of value key
				if(!defVal.containsKey("value"))
					throw new SQLException("No 'value' key present in defaultValue entry.  Needed for mode 'value'.");
			}else if(mode.equalsIgnoreCase("sequence") || mode.equalsIgnoreCase("seq")){
				//sequence value - need contents of value key
				if(!defVal.containsKey("value")){
					throw new SQLException("No 'value' key present in defaultValue entry.  Needed for mode 'sequence'.");
				}
			}else{
				throw new SQLException("Unknown mode for default value statement.  Must be one of \"null\",\"value\",\"val\",\"sequence\",\"seq\" (case insensitive).");
			}
		}else
			throw new SQLException("No Mode present in default value statement.");
		
	}

	public static void validateIndexJSON(String jsondef) throws SQLException {
		JSONObject obj = JSONObject.fromObject(jsondef);
		if (!obj.containsKey("isUnique"))
			throw new SQLException("must specify if an index is a unique");
		if (!obj.containsKey("name"))
			throw new SQLException("Index requires a name to be supplied");
		validateIdentifier(obj.getString("name"));
		if (!obj.containsKey("columns"))
			throw new SQLException(
					"Index requires an array of columns to be supplied");
		JSONArray arr = obj.getJSONArray("columns");
		for (int i = 0; i < arr.size(); i++)
			validateIdentifier(arr.getString(i));
	}

	private static boolean needsPrecision(String type) {
		return (StringUtils.isNotBlank(type) && precNeededDTypes.contains(type
				.toUpperCase()));
	}

	public static void validateType(String inType) throws SQLException {
		if (StringUtils.isBlank(inType)
				|| !dTypes.contains(inType.toUpperCase())) {
			throw new SQLException("Type " + inType
					+ " is not a valid H2 type.");
		}
	}

