<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>dist-boot</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}/src/main/script/boot</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>**/rtws*.sh</include>
				<include>**/rtws*.py</include>
				<include>**/rtws*.xml</include>
				<include>**/rtws*.pl</include>
				<include>**/rtws*.txt</include>
				<include>**/.s3cfg</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/main/script/templates</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>