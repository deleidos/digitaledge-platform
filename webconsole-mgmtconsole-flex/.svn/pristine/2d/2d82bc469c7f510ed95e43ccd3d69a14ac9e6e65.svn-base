		}
		
		protected function handleCloseButton(event:MouseEvent):void
		{
			closeView();
		}
		
		protected function requestLogData(start:Number, end:Number):void {
			view.retrievingLabel.visible = view.inlineSpinner.visible = true;
			view.firstButton.enabled = false;
			view.lastButton.enabled = false;
			view.instanceListingTree.enabled = false;
			view.logListingTree.enabled = false;
			view.findTextInput.enabled = false;
			view.searchForwardButton.enabled = false;
			
			startTime = getTimer();
			
			var retrieveLogEvent:LogEvent =
				new LogEvent( LogEvent.RETRIEVE_LOG_BY_PROXY,
					{"proxyhost":this.masterDns, "targethost":this.instanceDns, "filepath":this.selectedFilePath,
					 "start" : start.toString(), "end" : end.toString()});
			
			dispatch(retrieveLogEvent);
		}
		
		protected function handleVerticalScrollChangeEvent(event:Event):void {
			if ((!allLinesRetrieved) && (!view.inlineSpinner.visible)) {
				var vscroll:VScrollBar = event.currentTarget as VScrollBar;
				var start:Number;
				var end:Number;				
				var eventQueue:Array;
				var successEvents:Array;
				var errorEvents:Array;
				
				if ((vscroll.value == 0) && (retrieveDirection == BACKWARD)) {
					end = totalLines - totalLinesRetrieved - 1;
					start = Math.max(0, end - MAX_LINES) + 1;
					requestLogData(start, end);
				}
				else if ((vscroll.value == vscroll.maximum) && (retrieveDirection == FORWARD)) {
					start = totalLinesRetrieved+1;
					end = start + MAX_LINES - 1;
					requestLogData(start, end);
				}				
			}
		}
		
		protected function handleFindTextInputChangeEvent(event:TextOperationEvent):void {
			view.message = null;
			lastSearchPosition = -1;			
		}
		
		protected function handleFindTextEnterKeyEvent(event:FlexEvent):void {
			handleSearchForwardButton(null);
		}
		
		protected function handleFindTextFocusInEvent(event:FocusEvent):void {
			// trace("text focus in");
			view.findTextInput.selectAll();			
		}
		
		protected function handleSearchForwardButton(event:MouseEvent):void {
			var search:String = view.findTextInput.text;
			var anchor:int = view.contentTextArea.text.indexOf(search, lastSearchPosition+1);
			if (anchor < 0) {
				view.message = StatusMessageFactory.createWarnMessage("'" + search + "' not found.");				
			}
			else {
				view.contentTextArea.setFocus();
				view.contentTextArea.scrollToRange(anchor, anchor+(search.length));
				view.contentTextArea.selectRange(anchor, anchor+(search.length));
				lastSearchPosition = anchor;
				// view.contentTextArea.validateNow();
			}
		}
		
		private function populateInstanceListingTree():void 
		{
			var instanceListingData:ArrayCollection = new ArrayCollection();
			
			var pgs:ArrayCollection = view.system.groups;
			
			for (var i:int = 0; i < pgs.length; i++) {
				var pg:ProcessGroup = pgs[i];
				
				var group:Object = new Object();
				group["label"] = pg.groupName;
				group["tooltip"] = pg.groupName;
				
				var instances:ArrayCollection = new ArrayCollection();
				
				var processes:ArrayCollection = pg.processes;
				for (var j:int = 0; j < processes.length; j++) {
					var process:Process = processes[j];
					
					var instance:Object = new Object();
					instance["label"] = process.id;
					instance["tooltip"] = process.persistentDnsName;
					
					instances.addItem(instance);
				}
				
				group["children"] = instances;
				
				instanceListingData.addItem(group);
			}

			view.instanceListingData = instanceListingData;
			
			if (pgs.length == 0) {
				view.message = StatusMessageFactory.createErrorMessage("There are no instances available for this system.");				
			}
		}
		
		private function closeView():void 
		{
			PopUpManager.removePopUp(view);
			mediatorMap.removeMediator(this);	
		}
	}
