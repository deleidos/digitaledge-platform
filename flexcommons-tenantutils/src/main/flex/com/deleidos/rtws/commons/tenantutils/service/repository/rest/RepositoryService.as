		public function deleteCommonFile(deleteDto:DeleteCommonRepoFileDto, opTrackingToken:Object=null):void
		{
			if(deleteDto == null || deleteDto.path == null || deleteDto.path.length == 0)
			{
				throw new ArgumentError("Invalid delete common repo file request");
			}
			
			if(deleteDto.directory)
			{
				var unsupportedOpEvent:DeleteRepoFileStatusEvent = new DeleteRepoFileStatusEvent(
					DeleteRepoFileStatusEvent.DELETE_COMMON_FILE, OperationStatusEvent.SUB_TYPE_FAILURE,
					opTrackingToken, "Unsupported Operation: Delete Common Folder");
				unsupportedOpEvent.deleteDto = deleteDto;
				
				this.dispatch(unsupportedOpEvent);
			}
			else
			{
				var ctx:RepoServiceOpContext = new RepoServiceOpContext();
				ctx.opType = RepoServiceOpContext.DELETE_COMMON_FILE;
				ctx.opTrackingToken = opTrackingToken;
				ctx.origDto = deleteDto;
				
				var url:String = "/json/common";
				
				var filename:String = (deleteDto.path.getItemAt(deleteDto.path.length - 1) as String);
				if(StringUtils.isBlank(filename))
				{
					throw new ArgumentError("filename is invalid");
				}
				url += "/" + encodeURIComponent(filename);
				
				var currPathSegment:String = null;
				for(var index:int=0; index < (deleteDto.path.length - 1); index++)
				{
					currPathSegment = (deleteDto.path.getItemAt(index) as String);
					if(StringUtils.isBlank(currPathSegment))
					{
						throw new ArgumentError("path is invalid");
					}
					url += "/" + encodeURIComponent(StringUtil.trim(currPathSegment));
				}
				
				this.remove(url, null, ctx);
			}
		}
		
		public function deleteTenantFile(deleteDto:DeleteTenantRepoFileDto, opTrackingToken:Object=null):void
		{
			if(deleteDto == null || deleteDto.path == null || deleteDto.path.length == 0)
			{
				throw new ArgumentError("Invalid delete common tenant file request");
			}
			
			var ctx:RepoServiceOpContext = new RepoServiceOpContext();
			ctx.opType = RepoServiceOpContext.DELETE_TENANT_FILE;
			ctx.opTrackingToken = opTrackingToken;
			ctx.origDto = deleteDto;
			
			var url:String = "/json/content/delete";
			
			var pathLoopBounds:int = -1;
			if(deleteDto.directory)
			{
				url += "/path";
				
				pathLoopBounds = deleteDto.path.length;
			}
			else
			{
				var filename:String = (deleteDto.path.getItemAt(deleteDto.path.length - 1) as String);
				if(StringUtils.isBlank(filename))
				{
					throw new ArgumentError("filename is invalid");
				}
				url += "/" + encodeURIComponent(filename);
				
				pathLoopBounds = (deleteDto.path.length - 1);
			}
			
			url += "/" + (deleteDto.privateStorage ? "private" : "public");
			
			var currPathSegment:String = null;
			for(var index:int=0; index < pathLoopBounds; index++)
			{
				currPathSegment = (deleteDto.path.getItemAt(index) as String);
				if(StringUtils.isBlank(currPathSegment))
				{
					throw new ArgumentError("path is invalid");
				}
				url += "/" + encodeURIComponent(StringUtil.trim(currPathSegment));
			}
			
			var params:Object = {
				userId: (StringUtils.isNotBlank(deleteDto.tenantId) ? deleteDto.tenantId : userModel.tenantId)
			};
			
			this.remove(url, params, ctx);
		}
		
		override protected function handleFailure(event:FaultEvent, context:Object):void
		{
			var serviceCtx:RepoServiceOpContext = (context as RepoServiceOpContext);
			if(serviceCtx == null || StringUtils.isBlank(serviceCtx.opType))
			{
				throw new ArgumentError("Invalid Service Context");
			}
			
			var failureMsg:String = null;
			
			if(event != null && event.fault != null)
			{
				failureMsg = event.fault.faultString;
			}
			
			var eventToDispatch:Event = null;
			switch(serviceCtx.opType)
			{
				case RepoServiceOpContext.LIST_COMMON_CONTENTS:
				{
					if(StringUtils.isBlank(failureMsg))
					{
						failureMsg = "List Repo Common Contents Call Failed";
					}
					eventToDispatch = new ListRepoContentsStatusEvent(
						ListRepoContentsStatusEvent.LIST_COMMON_CONTENTS, OperationStatusEvent.SUB_TYPE_FAILURE,
						serviceCtx.opTrackingToken, failureMsg);
					break;
				}
				case RepoServiceOpContext.LIST_TENANT_CONTENTS:
				{
					if(StringUtils.isBlank(failureMsg))
					{
						failureMsg = "List Repo Tenant Contents Call Failed";
					}
					eventToDispatch = new ListRepoContentsStatusEvent(
						ListRepoContentsStatusEvent.LIST_TENANT_CONTENTS, OperationStatusEvent.SUB_TYPE_FAILURE,
						serviceCtx.opTrackingToken, failureMsg);
					break;
				}
				case RepoServiceOpContext.MK_COMMON_DIRS:
				{
					if(StringUtils.isBlank(failureMsg))
					{
						failureMsg = "Make Directory(ies) Call Failed";
					}
					eventToDispatch = new MkRepoDirsStatusEvent(
						MkRepoDirsStatusEvent.MK_COMMON_DIRS, OperationStatusEvent.SUB_TYPE_FAILURE,
						serviceCtx.opTrackingToken, failureMsg);
					MkRepoDirsStatusEvent(eventToDispatch).queryDto = (serviceCtx.origDto as RepoQueryDto);
					break;
				}
				case RepoServiceOpContext.MK_TENANT_DIRS:
				{
					if(StringUtils.isBlank(failureMsg))
					{
						failureMsg = "Make Tenant Directory(ies) Call Failed";
					}
					eventToDispatch = new MkRepoDirsStatusEvent(
						MkRepoDirsStatusEvent.MK_TENANT_DIRS, OperationStatusEvent.SUB_TYPE_FAILURE,
						serviceCtx.opTrackingToken, failureMsg);
					MkRepoDirsStatusEvent(eventToDispatch).queryDto = (serviceCtx.origDto as RepoQueryDto);
					break;
				}
				case RepoServiceOpContext.DELETE_COMMON_FILE:
				{
					if(StringUtils.isBlank(failureMsg))
					{
						failureMsg = "Delete Common File/Folder Call Failed";
					}
					eventToDispatch = new DeleteRepoFileStatusEvent(
						DeleteRepoFileStatusEvent.DELETE_COMMON_FILE, OperationStatusEvent.SUB_TYPE_FAILURE,
						serviceCtx.opTrackingToken, failureMsg);
					DeleteRepoFileStatusEvent(eventToDispatch).deleteDto = (serviceCtx.origDto as IDeleteRepoFileDto);
					break;
				}
				case RepoServiceOpContext.DELETE_TENANT_FILE:
				{
					if(StringUtils.isBlank(failureMsg))
					{
						failureMsg = "Make Tenant File/Folder Call Failed";
					}
					eventToDispatch = new DeleteRepoFileStatusEvent(
						DeleteRepoFileStatusEvent.DELETE_TENANT_FILE, OperationStatusEvent.SUB_TYPE_FAILURE,
						serviceCtx.opTrackingToken, failureMsg);
					DeleteRepoFileStatusEvent(eventToDispatch).deleteDto = (serviceCtx.origDto as IDeleteRepoFileDto);
					break;
				}
				default:
				{
					throw new ArgumentError("Unknown Service Op Type");
					break;
				}
			}
			
			if(eventToDispatch != null)
			{
				this.dispatch(eventToDispatch);
			}
		}
		
		override protected function handleSuccess(serviceResultEvent:ResultEvent, context:Object):void
		{
			var serviceCtx:RepoServiceOpContext = (context as RepoServiceOpContext);
			if(serviceCtx == null || StringUtils.isBlank(serviceCtx.opType))
			{
				throw new ArgumentError("Invalid Service Context");
			}
			
			var eventToDispatch:Event = null;
			switch(serviceCtx.opType)
			{
				case RepoServiceOpContext.LIST_COMMON_CONTENTS:
				{
					try
					{
						var commonDirContents:ArrayList = RepoServiceMarshaller.parseRepoPathContents(serviceResultEvent, true);
						
						eventToDispatch = new ListRepoContentsStatusEvent(
							ListRepoContentsStatusEvent.LIST_COMMON_CONTENTS,
							OperationStatusEvent.SUB_TYPE_SUCCESS, serviceCtx.opTrackingToken);
						ListRepoContentsStatusEvent(eventToDispatch).queryDto = (serviceCtx.origDto as TenantRepoQueryDto);
						ListRepoContentsStatusEvent(eventToDispatch).contents = commonDirContents;
					}
					catch(parseError:ParseError)
					{
						eventToDispatch = new ListRepoContentsStatusEvent(
							ListRepoContentsStatusEvent.LIST_COMMON_CONTENTS, OperationStatusEvent.SUB_TYPE_FAILURE,
							serviceCtx.opTrackingToken, parseError.message);
					}
					
					break;
				}
				case RepoServiceOpContext.LIST_TENANT_CONTENTS:
				{
					try
					{
						var tenantDirContents:ArrayList = RepoServiceMarshaller.parseRepoPathContents(serviceResultEvent, true);
						
						eventToDispatch = new ListRepoContentsStatusEvent(
							ListRepoContentsStatusEvent.LIST_TENANT_CONTENTS,
							OperationStatusEvent.SUB_TYPE_SUCCESS, serviceCtx.opTrackingToken);
						ListRepoContentsStatusEvent(eventToDispatch).queryDto = (serviceCtx.origDto as TenantRepoQueryDto);
						ListRepoContentsStatusEvent(eventToDispatch).contents = tenantDirContents;
					}
					catch(parseError:ParseError)
					{
						eventToDispatch = new ListRepoContentsStatusEvent(
							ListRepoContentsStatusEvent.LIST_TENANT_CONTENTS, OperationStatusEvent.SUB_TYPE_FAILURE,
							serviceCtx.opTrackingToken, parseError.message);
					}
					
					break;
				}
				case RepoServiceOpContext.MK_COMMON_DIRS:
				{
					eventToDispatch = new MkRepoDirsStatusEvent(
						MkRepoDirsStatusEvent.MK_COMMON_DIRS, OperationStatusEvent.SUB_TYPE_SUCCESS,
						serviceCtx.opTrackingToken);
					MkRepoDirsStatusEvent(eventToDispatch).queryDto = (serviceCtx.origDto as RepoQueryDto);
					break;
				}
				case RepoServiceOpContext.MK_TENANT_DIRS:
				{
					eventToDispatch = new MkRepoDirsStatusEvent(
						MkRepoDirsStatusEvent.MK_TENANT_DIRS, OperationStatusEvent.SUB_TYPE_SUCCESS,
						serviceCtx.opTrackingToken);
					MkRepoDirsStatusEvent(eventToDispatch).queryDto = (serviceCtx.origDto as RepoQueryDto);
					break;
				}
				case RepoServiceOpContext.DELETE_COMMON_FILE:
				{
					eventToDispatch = new DeleteRepoFileStatusEvent(
						DeleteRepoFileStatusEvent.DELETE_COMMON_FILE, OperationStatusEvent.SUB_TYPE_SUCCESS,
						serviceCtx.opTrackingToken);
					DeleteRepoFileStatusEvent(eventToDispatch).deleteDto = (serviceCtx.origDto as IDeleteRepoFileDto);
					break;
				}
				case RepoServiceOpContext.DELETE_TENANT_FILE:
				{
					eventToDispatch = new DeleteRepoFileStatusEvent(
						DeleteRepoFileStatusEvent.DELETE_TENANT_FILE, OperationStatusEvent.SUB_TYPE_SUCCESS,
						serviceCtx.opTrackingToken);
					DeleteRepoFileStatusEvent(eventToDispatch).deleteDto = (serviceCtx.origDto as IDeleteRepoFileDto);
					break;
				}
				default:
				{
					throw new ArgumentError("Unknown Service Op Type");
					break;
				}
			}
			
			if(eventToDispatch != null)
			{
				this.dispatch(eventToDispatch);
			}
		}
	}
	
