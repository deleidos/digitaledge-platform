	/**
	 * Creates a sequence in the database that backs alertsapi. The sequence
	 * will start at value 0 and will increment by 1.
	 * 
	 * @param schema
	 *            the schema in which to place the sequence, e.g. "APPLICATION"
	 *            or "PUBLIC"
	 * @param sequenceName
	 *            name of the sequence to create
	 * @return success or failure indication
	 */
	public boolean createSequence(String schema, String sequenceName) {
		boolean result = false;

		try {

			WebResource resource = getClient().resource(DBAPI_BASE_URL);
			resource = resource.path("json/count")
					.path(DB_HOST)
					.path("sequences")
					.path(sequenceName);

			Form f = new Form();
			f.add("schema", schema);
			String response = resource.type(MediaType.APPLICATION_FORM_URLENCODED_TYPE)
					.put(String.class, f);

			// Check response and build appropriate return value
			JSONObject jsonResp = JSONObject.fromObject(response);
			if (jsonResp.has("Operation Status")) {
				if ("FAILED".equals(jsonResp.getString("Operation Status"))) {
					throw new RestClientException("Create sequence failed - " + jsonResp.getString("Message"));
				}
			}

			result = true;
			logger.info(String.format("Created sequence %s.%s", schema, sequenceName));
		}
		catch (UniformInterfaceException uie) {
			ClientResponse cr = uie.getResponse();
			logger.warn("Received [" + cr.getStatus() + "] response from DB - " + uie.getMessage());
		}
		catch (JSONException je) {
			logger.warn("Malformed JSON from DB - " + je.toString());
		}
		catch (Throwable e) {
			logger.error(e);
		}

		return result;
	}

	/**
	 * Creates a table in the database that backs alertsapi. The table must be
	 * in the list of tables that this class knows about, so that th proper
	 * table structure can be created.
	 * 
	 * @param schema
	 *            the schema in which to place the table, e.g. "APPLICATION" or
	 *            "PUBLIC"
	 * @param tableName
	 *            name of the table to create
	 * @return success or failure indication
	 */
	public boolean createTable(String schema, String tableName) {
		boolean result = false;

		try {

			String json = tableJsonMap.get(tableName);
			if (json == null) {
				throw new RestClientException("No clue how to build table " + tableName);
			}

			WebResource resource = getClient().resource(DBAPI_BASE_URL);
			resource = resource.path("json/alter/createTable")
					.path(DB_HOST)
					.path(schema)
					.path(tableName);

			Form f = new Form();
			f.add("jsondef", json.toString());
			String response = resource.type(MediaType.APPLICATION_FORM_URLENCODED_TYPE)
					.put(String.class, f);
			System.out.println(response);

			// Check response and build appropriate return value
			JSONObject jsonResp = JSONObject.fromObject(response);
			if (jsonResp.has("Operation Status")) {
				if ("FAILED".equals(jsonResp.getString("Operation Status"))) {
					throw new RestClientException("Create table failed - " + jsonResp.getString("Message"));
				}
			}

			result = true;
			logger.info(String.format("Created table %s.%s", schema, tableName));
		}
		catch (UniformInterfaceException uie) {
			ClientResponse cr = uie.getResponse();
			logger.warn("Received [" + cr.getStatus() + "] response from DB - " + uie.getMessage());
		}
		catch (JSONException je) {
			logger.warn("Malformed JSON from DB - " + je.toString());
		}
		catch (Throwable e) {
			logger.error(e);
		}

		return result;		
	}

	public void verifyAlertsapiSchemaDefinition()
			throws RestClientException {

		List<SchemaDefinition> definitions = new ArrayList<SchemaDefinition>();
		definitions.addAll(existingTables());
		definitions.addAll(existingSequences());

		boolean nf_seq = false;
		boolean nf_table = false;
		boolean nfu_table = false;
		boolean nfw_table = false;
		boolean ag_table = false;
		for (SchemaDefinition def : definitions) {
			if (def.getType() == SchemaDefinition.SEQUENCE_TYPE) {
				if (ALERTS_SCHEMA.equals(def.getSchema()) && FILTER_SEQUENCE.equals(def.getValue())) {
					nf_seq = true;
				}
			}
			else if (def.getType() == SchemaDefinition.TABLE_TYPE) {
				if (ALERTS_SCHEMA.equals(def.getSchema()) && FILTER_TABLE.equals(def.getValue())) {
					nf_table = true;
				}
				if (ALERTS_SCHEMA.equals(def.getSchema()) && USERS_TABLE.equals(def.getValue())) {
					nfu_table = true;
				}
				if (ALERTS_SCHEMA.equals(def.getSchema()) && WATCHLIST_TABLE.equals(def.getValue())) {
					nfw_table = true;
				}
				if (ALERTS_SCHEMA.equals(def.getSchema()) && ALERTVIZ_TABLE.equals(def.getValue())) {
					ag_table = true;
				}
			}
		}

		if ( ! nf_table ) {
			createTable(ALERTS_SCHEMA, FILTER_TABLE);
		}
		if ( ! nfu_table ) {
			createTable(ALERTS_SCHEMA, USERS_TABLE);
		}
		if ( ! nfw_table ) {
			createTable(ALERTS_SCHEMA, WATCHLIST_TABLE);
		}
		if ( ! ag_table ) {
			createTable(ALERTS_SCHEMA, ALERTVIZ_TABLE);
		}
		if ( ! nf_seq ) {
			if ( ! nf_table && ! nfu_table && ! nfw_table ) {
				createSequence(ALERTS_SCHEMA, FILTER_SEQUENCE);
			}
			else {
				logger.fatal(String.format("Alertsapi database tables exist but required sequence %s.%s does not! You must fix this by hand and set the correct starting sequence number!!", ALERTS_SCHEMA, FILTER_SEQUENCE));
				throw new RestClientException("Database tables do not exist");
			}
		}
	}

	private class SchemaDefinition {
		static final int TABLE_TYPE = 1;
		static final int SEQUENCE_TYPE = 2;

		private int type;
		private String schema;
		private String value;

		public int getType() {
			return type;
		}
		public void setType(int type) {
			this.type = type;
		}

		public String getSchema() {
			return schema;
		}
		public void setSchema(String schema) {
			this.schema = schema;
		}

		public String getValue() {
			return value;
		}
		public void setValue(String value) {
			this.value = value;
		}
	}
