	public String getCSVFile(String key) {
		String result = null;
		
		InputStream stream = null;
		try{
			stream = UploadManager.INSTANCE.getUploadFileAsStream(key);
		
		
		// Not throwing an exception if null for historical API Reasons
		
		if(stream != null)
		{
			try
			{
				result = IOUtils.toString(stream);
			}
			catch (IOException ioException)
			{
				log.error("Failed to write the uploaded file to a string for import to the DB.", ioException);
				result = null;
			}
		}
		
		return result;
		}finally{
			if(stream!=null)
				try {
					stream.close();
				} catch (IOException e) {}//guess not...
		}
	}
	
	public InputStream getCsvStream(String key) {
		InputStream result = UploadManager.INSTANCE.getUploadFileAsStream(key);
		
		if(result == null)
		{
			String userErrorMsg = "Unknown key: " + (key == null ? "null" : ("'" + key + "'"));
			
			throw new WebApplicationException(RestResponseUtils.buildDefaultSimpleErrorResponse(Response.Status.BAD_REQUEST, userErrorMsg));
		}
		
		return result;
	}

	private static String getDefaultOwner(String db, String schema, String table) {
		String result = null;

		if (isDimensionTable(db, schema, table)) {
			result = RTWS_DB_DIM_USER_NAME;
		} else if (isApplicationTable(db, schema, table)) {
			result = RTWS_DB_APP_USER_NAME;
		}

		return result;
	}

