		/**
		 * Every time a new system configuration is loaded we'll create a
		 * dictionary of datasink data models. When the data models are later
		 * added it will remove it from this dictionary. Once this dictionary
		 * is empty than we can start the add model and remove model logic.
		 */
		private function setSysLoadedDatasinkDataModels():void {
			for each (var ds:Datasink in datasinkModel.selectedDatasinks.source) {
				for (var i:int = 0; i < ds.dataModels.length; i++) {
					var dm:Object = ds.dataModels.getItemAt(i);
					if (dm.model != null) {
						onSysCfgLoadedDatasinkDataModels[dm.model] = true;
					}
				}
			}
		}
		
