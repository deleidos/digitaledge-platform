		JSONObject results = new JSONObject();
		results.put("Operation Status", "Completed");
		results.put("Message", successMsg);
		return results;
	}

	public static DataSource getDataSource(String ip) {
		RtwsConfig conf = RtwsConfig.getInstance();

		JdbcDataSource src = new JdbcDataSource();
		src.setPassword(conf.getString(saPassword));
		src.setUser(conf.getString(saUsername, "sa"));
		src.setURL(connectionStringStart + ip + connectionStringEnd);
		return src;
	}

	public static JSONObject createEmptySelect() {
		JSONObject o = new JSONObject();
		JSONArray empty = new JSONArray();
		o.put("result", empty);
		o.put("Rows Returned", 0);
		return o;
	}

	public static boolean TypeGetAsString(int columnType) {
		for (int i = 0; i < getAsStringTypes.length; i++)
			if (getAsStringTypes[i] == columnType)
				return true;
		return false;
	}

}
