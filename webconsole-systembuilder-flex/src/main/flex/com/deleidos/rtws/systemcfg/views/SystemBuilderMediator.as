	public class SystemBuilderMediator extends Mediator
	{
		[Inject] public var view:SystemBuilder
		[Inject] public var userModel:IUser;
		[Inject] public var tenantAccountAccessTable:TenantAccountAccess;
		[Inject] public var iaasAccountsTable:IaasAccounts;

		[Inject] public var datasinkModel:DatasinkModel;
		[Inject] public var transportModel:TransportModel;
		[Inject] public var sysPropModel:SystemPropertiesModel;
		[Inject] public var webappModel:WebappModel;
		[Inject] public var processGroupModel:ProcessGroupModel;
		[Inject] public var configListModel:ConfigListModel;
		[Inject] public var systemListModel:SystemListModel;
		
		public function SystemBuilderMediator()
		{
			super();
		}
		
		override public function onRegister():void
		{
			super.onRegister();
			
			// Startup Event Listeners
			eventMap.mapListener(eventDispatcher, BatchOperationStatusEvent.BATCH_OPERATION, onStartupBatchStatusEvent);
			eventMap.mapListener(eventDispatcher, PopupEvent.MESSAGE_BEGIN, handleMessageBegin);
			eventMap.mapListener(eventDispatcher, PopupEvent.MESSAGE_END, handleMessageEnd);
	
			eventMap.mapListener(eventDispatcher, PopupEvent.PROGRESS_BAR_POPUP_BEGIN, handleProgressPopupBegin);
			eventMap.mapListener(eventDispatcher, PopupEvent.PROGRESS_BAR_POPUP_UPDATE, handleProgressPopupUpdate);
			eventMap.mapListener(eventDispatcher, PopupEvent.PROGRESS_BAR_POPUP_END, handleProgressPopupEnd);
			
			eventMap.mapListener(eventDispatcher, PopupEvent.OPEN_EXISTING_CONFIG_BEGIN, handleOpenExistingConfigBegin);
			eventMap.mapListener(eventDispatcher, SystemConfigServiceEvent.SYSTEM_CONFIG_SAVED, handleSystemSaved);
			
			eventMap.mapListener(eventDispatcher, PopupEvent.SELECT_CONFIG_VERSION_BEGIN, handleSelectConfigVersionBegin);
			
			eventMap.mapListener(view, SystemConfigServiceEvent.NEW_SYSTEM_CONFIG, redispatch);
			eventMap.mapListener(view, SystemConfigServiceEvent.SAVE_SYSTEM_CONFIG, handleSaveSystemConfig);
			eventMap.mapListener(view, ModelServiceEvent.LOAD_TENANT_SYSTEMS, redispatch);
		}
		
		override public function onRemove():void
		{
			super.onRemove();
			
			// Startup Event Listeners
			eventMap.unmapListener(eventDispatcher, BatchOperationStatusEvent.BATCH_OPERATION, onStartupBatchStatusEvent);
		}
		
		protected function handleSaveSystemConfig(event:SystemConfigServiceEvent):void {
			dispatch(event);
		}
		
		protected function handleSystemSaved(event:SystemConfigServiceEvent):void {
			var msg:StatusMessage;
			msg = new StatusMessage(StatusType.SUCCESS, "System Built and Saved.");
			dispatch(new PopupEvent(PopupEvent.MESSAGE_BEGIN, msg, null));											
			// Alert.show("System configuration saved.", "Success!");
		}
		
		protected function redispatch(event:Event):void {
			dispatch(event);
		}
		
		/********************** Open or new Popup ****************************/
		
		protected var openOrNewPopup:OpenOrNewPopup;
		
		/********************** Select existing configuration popup ****************************/
		
		protected var selectConfigPopup:SelectConfigurationPopup;
		
		protected function handleOpenExistingConfigBegin(event:PopupEvent):void {
			selectConfigPopup = new SelectConfigurationPopup();
			selectConfigPopup.popupTitle = "Select system domain to open:";
			selectConfigPopup.labelField = null;
			
			var sortedSysCfgs:Array = null;			
			if(systemListModel.systemList != null)
			{
				var sysCfgs:Array = new Array();
				
				var currSysCfg:System = null;
				var currSysDomain:String = null;
				for(var index:int=0; index < systemListModel.systemList.length; index++)
				{
					currSysCfg = systemListModel.systemList.getItemAt(index) as System;
					if(StringUtils.isNotBlank(currSysCfg.domain))
					{
						sysCfgs.push(currSysCfg.domain);
					}
				}
				
				if(sysCfgs.length > 0)
				{
					sysCfgs.sort(compareSystemDomains);
					sortedSysCfgs = sysCfgs;
				}
			}
			selectConfigPopup.configData = new ArrayList(sortedSysCfgs);
			selectConfigPopup.completionEvent = new PopupEvent(PopupEvent.OPEN_EXISTING_CONFIG_END, null, null);
			selectConfigPopup.addEventListener(PopupEvent.OPEN_EXISTING_CONFIG_END, handleOpenExistingConfigEnd);
			selectConfigPopup.addEventListener(CloseEvent.CLOSE, handleOpenExistingConfigClose);
			
			sizeSelectConfigPopup(selectConfigPopup);
			
			PopUpManager.addPopUp(selectConfigPopup, contextView, true);
			PopUpManager.centerPopUp(selectConfigPopup);			
		}
		
		private function sizeSelectConfigPopup(popup:SelectConfigurationPopup):void
		{
			var prefSize:Rectangle = null;
			
			try {
				var minBounds:Rectangle = new Rectangle(0, 0, popup.minWidth, popup.minHeight);
				var maxBounds:Rectangle = new Rectangle(0, 0, 800, 600);
				prefSize = LayoutUtils.calculateAppRelativeSize(33, NaN, minBounds, maxBounds, true, true);
			} catch (error:Error) {
				prefSize = null;
			}
			
			if (prefSize != null) {
				popup.width = prefSize.width;
				popup.height = prefSize.height;
			}
		}
		
		private function compareSystemDomains(obj1:Object, obj2:Object):int
		{
			return ObjectUtil.stringCompare(obj1 as String, obj2 as String, true);
		}
		
		protected function handleOpenExistingConfigClose(event:CloseEvent):void {
			PopUpManager.removePopUp(selectConfigPopup);
			handleOpenExistingConfigEnd(null);
		}
		
		protected function handleOpenExistingConfigEnd(event:PopupEvent):void {
			selectConfigPopup.removeEventListener(PopupEvent.OPEN_EXISTING_CONFIG_END, handleOpenExistingConfigEnd);
			selectConfigPopup.removeEventListener(CloseEvent.CLOSE, handleOpenExistingConfigClose);
			if ((event != null) && (event.parameters != null)) {
				var systemDomain:String = event.parameters as String;
				
				var selectConfigVersionEvent:PopupEvent =
					new PopupEvent(PopupEvent.SELECT_CONFIG_VERSION_BEGIN,
						systemDomain,
						null);
				
				var loadSystemConfigVersions:SystemConfigServiceEvent =
					new SystemConfigServiceEvent(SystemConfigServiceEvent.LOAD_CONFIG_VERSIONS,
						systemDomain,
						selectConfigVersionEvent);
				
				dispatch(loadSystemConfigVersions);
			}
		}
		
		/********************** Select configuration version popup ****************************/
		
		private function doLoadSystemConfig(domain:String, version:String):void {
			var configToLoad:Object = new Object();
			configToLoad.domain = domain;
			configToLoad.version = version;				
			var loadSystemConfigEvent:SystemConfigServiceEvent =
				new SystemConfigServiceEvent(SystemConfigServiceEvent.LOAD_SYSTEM_CONFIG, configToLoad, null);
			dispatch(loadSystemConfigEvent);
		}
		
		protected function handleSelectConfigVersionBegin(event:PopupEvent):void {
			if (configListModel.configList.length == 1) {
				// If there is only one config in the list, just load it without bothering to ask the user.
				doLoadSystemConfig(event.parameters as String, configListModel.configList.getItemAt(0) as String);
			}
			else {
				// Otherewise, ask them for which one they want
				selectConfigPopup = new SelectConfigurationPopup();
				selectConfigPopup.popupTitle = "Select configuration version:";
				selectConfigPopup.labelField = null;
				selectConfigPopup.configData = configListModel.configList;
				selectConfigPopup.completionEvent = new PopupEvent(PopupEvent.SELECT_CONFIG_VERSION_END, null, event);
				selectConfigPopup.addEventListener(PopupEvent.SELECT_CONFIG_VERSION_END, handleSelectConfigVersionEnd);
				selectConfigPopup.addEventListener(CloseEvent.CLOSE, handleSelectConfigVersionClose);
				
				sizeSelectConfigPopup(selectConfigPopup);
				
				PopUpManager.addPopUp(selectConfigPopup, contextView, true);
				PopUpManager.centerPopUp(selectConfigPopup);
			}
		}
		
		protected function handleSelectConfigVersionClose(event:CloseEvent):void {
			PopUpManager.removePopUp(selectConfigPopup);
			handleOpenExistingConfigEnd(null);			
		}
		
		protected function handleSelectConfigVersionEnd(event:PopupEvent):void {
			selectConfigPopup.removeEventListener(PopupEvent.SELECT_CONFIG_VERSION_END, handleSelectConfigVersionEnd);
			selectConfigPopup.removeEventListener(CloseEvent.CLOSE, handleSelectConfigVersionClose);
			if ((event != null) && (event.parameters != null)) {
				var startEvent:PopupEvent = event.nestedEvent as PopupEvent;
				doLoadSystemConfig(startEvent.parameters as String, event.parameters as String);
			}
		}
		
		/********************** Message Popup ****************************/
		
		protected var messageStack:Stack = new Stack();
		
		protected function handleMessageBegin(event:PopupEvent):void {
			SpinnerPopup.destroySpinnerPopup();
			var messagePopup:MessagePopup = new MessagePopup();
			
			var statusMsg:StatusMessage = event.parameters as StatusMessage;
			if ((statusMsg.type == StatusType.PROGRESS) || (statusMsg.type == StatusType.FATAL))
				messagePopup.currentState = "showNone";
			else
				messagePopup.currentState = "showOk";
			
			messagePopup.message = statusMsg;
			messagePopup.nestedEvent = event.nestedEvent;
			messagePopup.addEventListener(PopupEvent.MESSAGE_END, handleMessageEnd);
			messagePopup.addEventListener(CloseEvent.CLOSE, handleMessageClose);
			PopUpManager.addPopUp(messagePopup, contextView, true);
			PopUpManager.centerPopUp(messagePopup);
			messageStack.push(messagePopup);
		}
		
		protected function handleMessageClose(event:CloseEvent):void {
			handleMessageEnd(null);
		}
		
		protected function handleMessageEnd(event:PopupEvent):void {
			view.canBuildSystemNow = true;
			var messagePopup:MessagePopup = messageStack.pop() as MessagePopup;
			messagePopup.removeEventListener(PopupEvent.MESSAGE_END, handleMessageEnd);
			messagePopup.removeEventListener(CloseEvent.CLOSE, handleMessageClose);
			PopUpManager.removePopUp(messagePopup);
			if ((event != null) && (event.nestedEvent != null)) {
				dispatch(event.nestedEvent);
			}
		}
		
		/********************** Progress Bar ****************************/
		
		protected var progressPopup:ProgressPopup;
		
		protected function handleProgressPopupBegin(event:PopupEvent):void {
			progressPopup = new ProgressPopup();
			progressPopup.progressLabel = event.parameters as String;
			PopUpManager.addPopUp(progressPopup, contextView, true);
			PopUpManager.centerPopUp(progressPopup);
		}
		
		protected function handleProgressPopupUpdate(event:PopupEvent):void {
			if (progressPopup != null) {
				var value:Number = event.parameters as Number;
				progressPopup.setProgress(value);
			}
		}
		
		protected function handleProgressPopupEnd(event:PopupEvent):void {
			PopUpManager.removePopUp(progressPopup);
			progressPopup = null;
			if (event.nestedEvent != null) {
				dispatch(event.nestedEvent);
			}
		}
		
		/* ==============================================
		* App Launch Support
		* ============================================== */
		
		private function onStartupBatchStatusEvent(event:BatchOperationStatusEvent):void
		{
			if(event == null || StringUtil.stringHasValue(event.subType) == false || SystemBuilder.STARTUP_TRACKING_TOKEN !== event.trackingToken)
			{
				return;
			}
			
			var isStartupComplete:Boolean = false;
			var newViewState:String = null;
			
			if(OperationStatusEvent.SUB_TYPE_SUCCESS == event.subType)
			{
				isStartupComplete = true;
				newViewState = "editState";

				var dbhostString:String = FlexGlobals.topLevelApplication.parameters.dbhost;
				
				var setupErrors:int = 0;
				setupErrors += datasinkModel.setup();
				setupErrors += transportModel.setup();
				setupErrors += webappModel.setup();
				
				var accountIds:ArrayList = tenantAccountAccessTable.lookupByTenantId(userModel.tenantId);
				var msg:StatusMessage;
				if (accountIds.length == 0) {
					msg = new StatusMessage(StatusType.FATAL,"The user "+userModel.username+" has no account access.");
					dispatch(new PopupEvent(PopupEvent.MESSAGE_BEGIN, msg, null));			
				}
				else if (accountIds.length == 1) {
					// Initialize to use the user's account
					var accountObj:Object = accountIds.getItemAt(0);
					var accountId:String = accountObj.toString();
					var account:Object = iaasAccountsTable.lookupByAccountId(accountId);
					var serviceProvider:String = account[IaasAccounts.IAAS_SERVICE_NAME];
					var keypairName:String = account[IaasAccounts.KEYPAIR_NAME];
					
					try {
						sysPropModel.setup(accountId, serviceProvider, keypairName);

						if (datasinkModel.unconfiguredDatasinks.length > 0) {
							msg = new StatusMessage(StatusType.INFO,
								"There are new datasink(s) detected that have not been configured. Use the Setup button under 'Data Sinks' to configure them.");
							dispatch(new PopupEvent(PopupEvent.MESSAGE_BEGIN, msg, null));									
						}
						else if (setupErrors == 0) {
							// Popup open or new at this point
							openOrNewPopup = new OpenOrNewPopup();
							PopUpManager.addPopUp(openOrNewPopup, contextView, true);
							PopUpManager.centerPopUp(openOrNewPopup);
							mediatorMap.createMediator(openOrNewPopup);
						}
					}
					catch (exception:Error) {
						msg = new StatusMessage(StatusType.FATAL,"Startup error: " + exception.message);
						dispatch(new PopupEvent(PopupEvent.MESSAGE_BEGIN, msg, null));									
					}
				}
				else {
					// TODO: Someday: Allow them to choose whcih account to use
					msg = new StatusMessage(StatusType.FATAL,"More than one account is authorizeed for user "+userModel.username);
					dispatch(new PopupEvent(PopupEvent.MESSAGE_BEGIN, msg, null));			
				}
				trace("Startup Complete");
			}
			else if(OperationStatusEvent.SUB_TYPE_FAILURE == event.subType)
			{
				isStartupComplete = true;
				newViewState = "launchState";
			}
			else if(OperationStatusEvent.SUB_TYPE_PROGRESS == event.subType)
			{
				newViewState = "launchState";
			}
			
			if(isStartupComplete)
			{
				this.eventMap.unmapListener(eventDispatcher, BatchOperationStatusEvent.BATCH_OPERATION, onStartupBatchStatusEvent);
			}
			
			if(view != null)
			{
				view.currentState = newViewState;
			}
		}
	}
