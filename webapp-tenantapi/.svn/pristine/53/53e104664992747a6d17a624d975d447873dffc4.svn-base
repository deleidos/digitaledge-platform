	/**
	 * Send a command to the gateway to delete a single security group rule.
	 * 
	 * Invokes the gatewayapi REST service:
	 * 		http://<host>:<port>/json/security/group/delete/rule/<group-name>/<protocol>/<from-port>/<to-port>/<source>
	 */
	public void deleteFirewallRule(
			Integer accountId, 
			String region, 
			String groupName, 
			String protocol, 
			String fromPort, 
			String toPort, 
			String source) throws GatewayApiException {

		try {
			WebResource res = buildGatewayApiEndpoint(accountId, region);
			res = res.path("json").path("security").path("group").path("delete")
				.path("rule").path(groupName).path(protocol).path(fromPort)
				.path(toPort).path(URLEncoder.encode(source, "UTF-8"));

			res.delete();
		} catch (Exception ex) {
			String message = String.format("Failed to delete firewall rule. Message: %s", ex.getMessage());
			logger.error(message, ex);
			throw new GatewayApiException(message, ex);
		}
		
	}
	
	/**
	 * Send a command to the gateway to retrieve cluster information for a given account and domains.
	 * 
	 * Invokes the gatewayapi REST service:
	 * 		http://<host>:<port>/json/systems/all?domains=<domains>
	 */
	public String getClusters(
			Integer accountId, 
			String domains) throws GatewayApiException {

		try {
			AccountEntry entry = CacheManager.getTenantAccountCache().get(accountId);
			GatewayAccount gateway = entry.getGatewayAccount();

			WebResource res = buildGatewayApiEndpoint(gateway.getPublicDns());
			res = res.path("json").path("systems").path("all").queryParam("domains", domains);
			return res.get(String.class);
		} catch (Exception ex) {
			String message = String.format("Failed to retrieve clusters for domains '%s'. Message: %s", domains, ex.getMessage());
			logger.error(message, ex);
			throw new GatewayApiException(message, ex);
		}

	}
	
