package com.deleidos.rtws.tc.views
{
	import com.deleidos.rtws.commons.model.auth.IUser;
	import com.deleidos.rtws.commons.model.auth.Role;
	import com.deleidos.rtws.commons.model.status.StatusMessage;
	import com.deleidos.rtws.tc.events.ActionEvent;
	import com.deleidos.rtws.tc.events.ApplicationEvent;
	import com.deleidos.rtws.tc.events.RepositoryEvent;
	import com.deleidos.rtws.tc.events.ScheduleEvent;
	import com.deleidos.rtws.tc.events.SystemEvent;
	import com.deleidos.rtws.tc.events.SystemsEvent;
	import com.deleidos.rtws.tc.models.ProcessGroup;
	import com.deleidos.rtws.tc.models.ScheduleModel;
	import com.deleidos.rtws.tc.models.System;
	import com.deleidos.rtws.tc.utils.NotificationEventBuilder;
	import com.deleidos.rtws.tc.utils.StatusMessageFactory;
	import com.deleidos.rtws.tc.utils.SystemUtilities;
	import com.deleidos.rtws.tc.utils.ViewUtilities;
	import com.deleidos.rtws.tc.views.popups.AddPeriodicTaskView;
	import com.deleidos.rtws.tc.views.popups.ConfirmationView;
	import com.deleidos.rtws.tc.views.popups.ProcessGroupView;
	
	import flash.events.MouseEvent;
	import flash.utils.Dictionary;
	
	import mx.collections.ArrayCollection;
	import mx.effects.effectClasses.ZoomInstance;
	import mx.managers.PopUpManager;
	import mx.utils.ObjectUtil;
	
	import org.robotlegs.mvcs.Mediator;
	
	import spark.events.GridSelectionEvent;

	public class SystemViewMediator extends Mediator
	{
		[Inject] public var view:SystemView;
		[Inject] public var userModel:IUser;
		[Inject] public var scheduleModel:ScheduleModel;
		
		private var system:System;
		
		public override function onRegister():void 
		{
			eventMap.mapListener(eventDispatcher, SystemEvent.SELECTED_SYSTEM, handleSelectedSystemEvent);
			eventMap.mapListener(eventDispatcher, SystemsEvent.RETRIEVE_ALL_SUCCESS, handleSystemsEventRetrieveAll);
			eventMap.mapListener(eventDispatcher, RepositoryEvent.RETRIEVE_SYSTEM_VERSIONS_FOR_VIEW_SUCCESS, handleRetrieveSystemVersionsSuccessEvent);
			eventMap.mapListener(eventDispatcher, RepositoryEvent.RETRIEVE_SYSTEM_VERSIONS_FOR_VIEW_ERROR, handleRetrieveSystemVersionsErrorEvent);
			eventMap.mapListener(eventDispatcher, ScheduleEvent.RETRIEVE_JOBS_SUCCESS, handleRetrieveJobsSuccessEvent);
			eventMap.mapListener(eventDispatcher, ScheduleEvent.RETRIEVE_JOBS_ERROR, handleRetrieveJobsErrorEvent);
			eventMap.mapListener(eventDispatcher, SystemEvent.DELETE_SUCCESS, handleDeleteSystemSuccess);
			eventMap.mapListener(eventDispatcher, SystemEvent.DOESNT_EXIST, handleDoesntExistEvent);
			eventMap.mapListener(eventDispatcher, SystemEvent.SET_IN_PROGRESS, handleSetInProgressEvent);
			eventMap.mapListener(eventDispatcher, SystemEvent.RETRIEVE_ALL_SCHEDULES_SUCCESS, handleRetrieveAllSchedulesSuccessEvent);
			eventMap.mapListener(eventDispatcher, RepositoryEvent.DELETE_SYSTEM_VERSION_FAILED, handleDeleteSystemVersionFailedEvent);
			
			view.addEventListener(ActionEvent.DELETE, handleDeleteAction);
			view.addPeriodicTaskButton.addEventListener(MouseEvent.CLICK, handleAddPeriodicTask);
			view.deletePeriodicTaskButton.addEventListener(MouseEvent.CLICK, handleDeletePeriodicTask);
			
			view.systemDataGrid.addEventListener(MouseEvent.DOUBLE_CLICK, handleProcessGroupDoubleClickEvent);
			view.periodicTaskDataGrid.addEventListener(GridSelectionEvent.SELECTION_CHANGE, handlePeriodicTaskGridSelectionEvent);
			
			view.applyScheduleButton.addEventListener(MouseEvent.CLICK, handleApplyScheduleTask);
			
			if (userModel.isUserInRole(new Role("ROLE_ADMIN"))) {
				view.currentState = view.admin.name;
			} else {
				view.currentState = view.tenant.name;
			}
		}
		
		protected function handleSelectedSystemEvent(event:SystemEvent):void
		{
			if (event.parameters.system == null) {
				resetView();
				return;
			}
			
			view.addPeriodicTaskButton.enabled = true;
			view.deletePeriodicTaskButton.enabled = false;
			view.configVersionDataProvider.removeAll();
			view.periodicTaskDataProvider.removeAll();
			
			system = System(event.parameters.system);
			
			view.title = "Selected System: " + system.name;
			
			if (system.state == SystemUtilities.STATE_ERROR) {
				view.pgMessage = StatusMessageFactory.createErrorMessage(system.statusMsg, true);
			} else if (system.state == SystemUtilities.STATE_WARNING) {
				view.pgMessage = StatusMessageFactory.createWarnMessage(system.statusMsg, true);
			} else {
				if (system.statusMsg != null) {
					view.pgMessage = StatusMessageFactory.createInfoMessage(system.statusMsg, true);
				} else {
					view.pgMessage = null;
				}
			}
			
			system.groups.refresh();
			
			view.processGroupDataProvider = system.groups;
			
			if (! userModel.isUserInRole(new Role("ROLE_ADMIN"))) {
				if (system.state != SystemUtilities.STATE_DELETING) {
					dispatch(new RepositoryEvent(RepositoryEvent.RETRIEVE_SYSTEM_VERSIONS_FOR_VIEW, {"domain" : system.name}));
					
					if(event.parameters.userInitiated == true) {
						dispatch(new SystemEvent(SystemEvent.RETRIEVE_ALL_SCHEDULES, {"domain" : system.name}));
					}
				}
				else {
					view.schedulingGroup.visible = false;
				}
				
			
				if (system.state == SystemUtilities.STATE_OK ||
					system.state == SystemUtilities.STATE_WARNING) {
					dispatch(new ScheduleEvent(ScheduleEvent.RETRIEVE_JOBS, {"domain" : system.name}));
				}
			}
		}
		
		protected function handleSystemsEventRetrieveAll(event:SystemsEvent):void
		{
			if (this.system == null) {
				resetView();
			}
		}
		
		protected function handleDeleteAction(event:ActionEvent):void
		{
			if (event.parameters.version != null) {
				if (view.configVersionDataProvider.length == 1) {
					var popup:ConfirmationView = new ConfirmationView();
					
					popup.event = new SystemEvent(SystemEvent.DELETE_SYSTEM, {"system" : system});
					popup.message = StatusMessageFactory.createWarnMessage("Removing the last configuration will delete the system. Do you want to continue?");
					
					PopUpManager.addPopUp(popup, contextView, true);
					PopUpManager.centerPopUp(popup);
					
					mediatorMap.createMediator(popup);
				} else {
					var eventQueue:Array = new Array();
					eventQueue.push(new RepositoryEvent(RepositoryEvent.DELETE_SYSTEM_VERSION, {"domain" : system.name, "version" : event.parameters.version}));
			
					var successEvents:Array = new Array();
					successEvents.push(RepositoryEvent.DELETE_SYSTEM_VERSION_SUCCESS);
			
					var errorEvents:Array = new Array();
					errorEvents.push(RepositoryEvent.DELETE_SYSTEM_VERSION_ERROR);
					
					var onCompleteEvent:RepositoryEvent =  new RepositoryEvent(RepositoryEvent.RETRIEVE_SYSTEM_VERSIONS_FOR_VIEW, {"domain" : system.name});
			
					var onErrorEvent:RepositoryEvent = new RepositoryEvent(RepositoryEvent.DELETE_SYSTEM_VERSION_FAILED, 
																			{"domain" : system.name, "version" : event.parameters.version});
					
					ViewUtilities.dispatchProcessingView(mediatorMap, contextView, eventQueue, successEvents, errorEvents, true, onCompleteEvent, onErrorEvent);
				}
			}
		}
		
		protected function handleAddPeriodicTask(event:MouseEvent):void
		{
			var popup:AddPeriodicTaskView = new AddPeriodicTaskView();
			
			var processGroups:ArrayCollection = new ArrayCollection();
			if (this.system.groups.length > 0) {
				processGroups.addItem("*");
				for (var i:int = 0; i < this.system.groups.length; i++) {
					var processGroup:ProcessGroup = ProcessGroup(this.system.groups.getItemAt(i));
					processGroups.addItem(processGroup.groupName);
				}
			}
			
			if (processGroups.length > 0) {
				popup.title = "Add Periodic Task";
				popup.domain = this.system.name;
				popup.processGroups = processGroups;
			
				PopUpManager.addPopUp(popup, contextView, true);
				PopUpManager.centerPopUp(popup);
			
				mediatorMap.createMediator(popup);
			} else {
				dispatch(NotificationEventBuilder.buildWarnMessage("Add Periodic Task", "No procecss groups are available."));
			}
		}
		
		protected function handleDeletePeriodicTask(event:MouseEvent):void
		{
			if (view.periodicTaskDataGrid.selectedItem == null) {
				dispatch(NotificationEventBuilder.buildErrorMessage("Delete Periodic Task", "Please select a periodic task to delete!"));
			} else {
				var periodicTask:Object = view.periodicTaskDataGrid.selectedItem;
				
				var eventQueue:Array = new Array();
				eventQueue.push(new ScheduleEvent(ScheduleEvent.DELETE_JOB, {"jobId" : periodicTask["jobId"]}));
				
				var successEvents:Array = new Array();
				successEvents.push(ScheduleEvent.DELETE_JOB_SUCCESS);
				
				var errorEvents:Array = new Array();
				errorEvents.push(ScheduleEvent.DELETE_JOB_ERROR);
				
				var onCompleteEvent:ApplicationEvent = NotificationEventBuilder.buildSuccessMessage("Delete Periodic Task", 
					"Successfully deleted periodic task.", new ScheduleEvent(ScheduleEvent.RETRIEVE_JOBS, {"domain" : system.name}));
				var onErrorEvent:ApplicationEvent = NotificationEventBuilder.buildErrorMessage("Delete Periodic Task", 
					"Failed to delete periodic task.");
				
				var popup:ConfirmationView = new ConfirmationView();
				
				popup.popup = ViewUtilities.buildProcessingView(eventQueue, successEvents, errorEvents, false, onCompleteEvent, onErrorEvent);
				popup.message = StatusMessageFactory.createWarnMessage("Are you sure you want to delete the selected periodic task?");
				
				PopUpManager.addPopUp(popup, contextView, true);
				PopUpManager.centerPopUp(popup);
				
				mediatorMap.createMediator(popup);
			}
		}
		
		protected function handleProcessGroupDoubleClickEvent(event:MouseEvent):void
		{
			if (view.systemDataGrid.selectedItem != null && view.systemDataGrid.selectedItem is ProcessGroup) {
				var pg:ProcessGroup = ProcessGroup(view.systemDataGrid.selectedItem);
				
				var pgView:ProcessGroupView = new ProcessGroupView();
			
				pgView.title = "System: " + system.name + " | Process Group: " + pg.groupName;
				pgView.domain = system.name;
				pgView.processGroup = pg;
			
				PopUpManager.addPopUp(pgView, contextView, true);
				PopUpManager.centerPopUp(pgView);
			
				mediatorMap.createMediator(pgView);
			}
		}
		
		protected function handlePeriodicTaskGridSelectionEvent(event:GridSelectionEvent):void
		{
			view.deletePeriodicTaskButton.enabled = true;
		}
		
		protected function handleRetrieveSystemVersionsSuccessEvent(event:RepositoryEvent):void
		{
			if (this.system != null) {
				var configVersions:ArrayCollection = new ArrayCollection();
			
				if (event.parameters.versions != null && event.parameters.versions.length > 0) {
					for (var i:int = 0; i < event.parameters.versions.length; i++) {
						var version:String = event.parameters.versions[i].version;
					
						var configVersion:Object = new Object();
						configVersion["version"] = version;

						if (this.system.configVersion == version) {
							if (this.system.state != SystemUtilities.STATE_NEW &&
								this.system.state != SystemUtilities.STATE_DOWN) {
								configVersion["active"] = true;
							} else {
								configVersion["active"] = false;
							}
						} else {
							configVersion["active"] = false;
						}
					
						configVersions.addItem(configVersion);
					}
				}
			
				view.configVersionDataProvider = configVersions;
			}
		}
		
		protected function handleRetrieveSystemVersionsErrorEvent(event:RepositoryEvent):void
		{
			view.configMessage = StatusMessageFactory.createErrorMessage("Failed to retrieve system configurations.");
		}
		
		protected function handleRetrieveJobsSuccessEvent(event:ScheduleEvent):void
		{
			if (this.system != null) {
				view.periodicTaskDataProvider = event.parameters.jobs;
			}
		}
		
		protected function handleRetrieveJobsErrorEvent(event:ScheduleEvent):void
		{
			view.periodicTaskMessage = StatusMessageFactory.createErrorMessage("Failed to retrieve periodic tasks.");
		}
		
		protected function handleDeleteSystemSuccess(event:SystemEvent):void
		{
			view.configVersionDataProvider.removeAll();
		}
		
		protected function handleDoesntExistEvent(event:SystemEvent):void
		{
			if (system != null && system.name == event.parameters.domain) {
				resetView();
			}
		}
		
		protected function handleSetInProgressEvent(event:SystemEvent):void
		{
			if (event.parameters != null && event.parameters.system != null) {
				var inProgressSystem:System = System(event.parameters.system);
				
				if (this.system.name == inProgressSystem.name) {
					for (var i:int = 0; i < view.configVersionDataProvider.length; i++) {
						var configVersion:Object = view.configVersionDataProvider.getItemAt(i);
						
						if (configVersion["version"] == system.configVersion) {
							configVersion["active"] = true;
						} else {
							configVersion["active"] = false;
						}
					}
					
					view.configVersionDataProvider.refresh();
				}
			}
		}

		protected function handleDeleteSystemVersionFailedEvent(event:RepositoryEvent):void
		{
			var errorMessage:String = "System " + event.parameters.domain + " configuration version " + event.parameters.version +
										" is part of a system chain. Please remove system from chain before deleting.";
			
			dispatch(
					NotificationEventBuilder.buildErrorMessage("Error", errorMessage));
		}
		
		protected function handleRetrieveAllSchedulesSuccessEvent(event:SystemEvent):void
		{
			// Deep copy the configVersionDataProvider.  This is done to limit refreshing the config version
			// drop down list to only occur when the schedules are actually retrieved rather than updating
			// the list whenever the configVersionDataProvider is modified.
            var configVersionDataProviderClone:ArrayCollection = new ArrayCollection();
            for(var i:int = 0; i < view.configVersionDataProvider.length; i++){
                configVersionDataProviderClone.addItem(ObjectUtil.copy(view.configVersionDataProvider.getItemAt(i).version));
            }
			
			view.schedulingConfigVersionDropDownList.dataProvider = configVersionDataProviderClone;
			view.schedulingConfigVersionDropDownList.selectedIndex = 0;
			if(scheduleModel.configVersion != null)
			{
				for(var i:int = 0; i < configVersionDataProviderClone.length; i++)
				{
					var configVersion:String = configVersionDataProviderClone.getItemAt(i) as String;
					
					if(configVersion == scheduleModel.configVersion)
					{
						view.schedulingConfigVersionDropDownList.selectedIndex = i;
						break;
					}
				}
			}
			
			view.startSystemCronSelector.resetView();
			if(scheduleModel.startCron != null)
			{
				view.startSystemCronSelector.setCronString(scheduleModel.startCron);
				view.startSystemCronSelector.setEnabled(true);
			}
			
			view.stopSystemCronSelector.resetView();
			if(scheduleModel.stopCron != null)
			{
				view.stopSystemCronSelector.setCronString(scheduleModel.stopCron);
				view.stopSystemCronSelector.setEnabled(true);
			}
			
			view.schedulingGroup.visible = true;
		}
		
		protected function handleApplyScheduleTask(event:MouseEvent):void
		{
			var cfgVersion:String = view.schedulingConfigVersionDropDownList.selectedItem;
			var startCron:String = (view.startSystemCronSelector.isEnabled()) ? 
										(view.startSystemCronSelector.getCronString()) :
										("") ;
			var stopCron:String = (view.stopSystemCronSelector.isEnabled()) ? 
										(view.stopSystemCronSelector.getCronString()) :
										("") ;
			
			var eventQueue:Array = new Array();
			eventQueue.push(new SystemEvent(SystemEvent.ADD_SCHEDULE, 
							{"domain" : system.name, "cfgVersion" : cfgVersion, "startSchedule" : startCron, "stopSchedule" : stopCron}));
		
			var successEvents:Array = new Array();
			successEvents.push(SystemEvent.ADD_SCHEDULE_SUCCESS);
		
			var errorEvents:Array = new Array();
			errorEvents.push(SystemEvent.ADD_SCHEDULE_ERROR);
		
			var onCompleteEvent:ApplicationEvent = NotificationEventBuilder.buildSuccessMessage("Apply Schedule Task", 
													"Successfully applied schedule.");
			var onErrorEvent:ApplicationEvent = NotificationEventBuilder.buildErrorMessage("Apply Schedule Task", 
													"Failed to apply schedule.");
			
			ViewUtilities.dispatchProcessingView(mediatorMap, contextView, eventQueue, successEvents, errorEvents, false, onCompleteEvent, onErrorEvent);
		}
		
		protected function resetView():void 
		{
			this.system = null;
			view.title = "Selected System: none";
			view.pgMessage = null;
			view.configMessage = null;
			view.periodicTaskMessage = null;
			view.processGroupDataProvider = new ArrayCollection();
			view.configVersionDataProvider = new ArrayCollection();
			view.periodicTaskDataProvider = new ArrayCollection();
			resetScheduling();
		}
		
		protected function resetScheduling():void
		{
			view.schedulingGroup.visible = false;
			
			view.startSystemCronSelector.resetView();
			view.stopSystemCronSelector.resetView();
		}
	}
}